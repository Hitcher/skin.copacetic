<includes>

	<include name="Notification_Widget">
		<param name="visible" default="true"/>
		<param name="width" default="100%"/>
		<param name="top" default="0"/>
		<param name="height" default="180"/>
		<param name="label_width" default="600"/>
		<param name="align" default="right"/>
		<param name="background_visible" default="!$EXP[Music_Player_IsVisible]"/>
		<param name="content_visible" default="!Window.IsVisible(extendedprogressdialog)"/>
		<param name="label_padding" default="-30"/>
		<param name="label_scroll" default="false"/>
		<param name="label_1" default="$INFO[Control.GetLabel(401)]"/>
		<param name="label_2" default="$INFO[Control.GetLabel(402)]"/>
		<param name="center_label_visible" default="false"/>
		<param name="left_label_visible" default="false"/>
		<param name="right_label_visible" default="false"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<control type="group">
					<visible>![Window.Next(home) | Window.Next(videos) | Window.Next(music) | Window.Next(programs) | Window.Next(pictures) | Window.Next(visualisation)]</visible>
					<include>Music_Player_Content_Fade_Animation</include>
					<control type="grouplist">
						<visible>!$EXP[ContainerSwitching] + !$EXP[OpaqueDialog_IsVisible] + !$EXP[TransparentDialog_IsVisible]</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<width>$PARAM[width]</width>
						<top>$PARAM[top]</top>
						<height>$PARAM[height]</height>
						<itemgap>0</itemgap>
						<orientation>horizontal</orientation>
						<align>$PARAM[align]</align>
						<usecontrolcoords>true</usecontrolcoords>

						<!-- Left Label -->
						<control type="group">
							<animation effect="slide" end="-600,0" time="0" condition="$EXP[Music_Player_HasFocus] + [Window.IsVisible(Home) | $EXP[Background_IsFanart] | $EXP[InfoDialog_IsVisible]]">Conditional</animation>
							<visible>$PARAM[left_label_visible]</visible>
							<height>$PARAM[height]</height>
							<width>$PARAM[label_width]</width>
							<control type="group">
								<visible>$PARAM[content_visible]</visible>
								<include>Notification_Label_Fade_Animation</include>
								<include content="Music_Player_Label_Template">
									<param name="padding" value="$PARAM[label_padding]"/>
									<param name="group_align" value="center"/>
									<param name="label_align" value="right"/>
									<param name="label_1" value="$PARAM[label_1]"/>
									<param name="label_2" value="$PARAM[label_2]"/>
									<param name="title_label_scroll" value="$PARAM[label_scroll]"/>
								</include>
							</control>
						</control>

						<!-- Main -->
						<control type="group">
							<width>$PARAM[height]</width>
							<height>$PARAM[height]</height>
							<!-- Background -->
							<control type="group">
								<animation effect="slide" start="0,0" end="0,-10" time="0" condition="!$EXP[Music_Player_HasFocus] + String.IsEqual(Window(home).Property(GridView_Row),0) +  [[$EXP[GridView_Display_IsFanart] + String.IsEqual(Window(home).Property(GridView_Column),2)] | [[$EXP[GridView_Display_IsPosters] | $EXP[GridView_Display_IsSquare]] + String.IsEqual(Window(home).Property(GridView_Column),4)]]">Conditional</animation>
								<visible>$PARAM[background_visible]</visible>
								<control type="image">
									<texture colordiffuse="$VAR[Notification_Widget_Background_Color]">views/white_100.png</texture>
									<aspectratio>scale</aspectratio>
								</control>
								<!-- Gridview shadow -->
								<control type="group">
									<visible>!$EXP[Music_Player_HasFocus] + String.IsEqual(Window(home).Property(GridView_Row),0) +  [[$EXP[GridView_Display_IsFanart] + String.IsEqual(Window(home).Property(GridView_Column),2)] | [[$EXP[GridView_Display_IsPosters] | $EXP[GridView_Display_IsSquare]] + String.IsEqual(Window(home).Property(GridView_Column),4)]]</visible>
									<control type="image">
										<bottom>0</bottom>
										<height>120</height>
										<texture colordiffuse="$VAR[Dropshadow_Diffuse]">views/dropshadow_top_120.png</texture>
										<aspectratio>stretch</aspectratio>
									</control>
								</control>
							</control>
							<!-- Busy Spinner -->
							<control type="image">
								<visible>[Window.IsVisible(notification) | Window.IsVisible(extendedprogressdialog)] + !Window.IsVisible(volumebar) + !$EXP[Music_Player_HasFocus]</visible>
								<include>Content_Fade_Animation</include>
								<centerleft>50%</centerleft>
								<centertop>50%</centertop>
								<width>60</width>
								<height>60</height>
								<texture colordiffuse="$VAR[Notification_Icon_Color]">dialogs/busy.png</texture>
								<animation effect="rotate" start="0" end="-360" center="auto" time="1800" loop="true" tween="cubic" easing="out" condition="true">Conditional</animation>
							</control>
							<!-- Volume Progress Bar -->
							<control type="group">
								<visible>Window.IsVisible(volumebar) + !$EXP[Music_Player_HasFocus]</visible>
								<include>Notification_Label_Fade_Animation</include>
								<animation effect="rotate" center="auto" end="90" time="0" condition="true" reversible="false">Conditional</animation>
								<control type="progress">
									<visible>!Player.Muted</visible>
									<centerleft>50%</centerleft>
									<centertop>50%</centertop>
									<width>120</width>
									<height>30</height>
									<info>player.volume</info>
									<reveal>true</reveal>
									<texturebg colordiffuse="$VAR[Volume_Background_Color]">views/white_100.png</texturebg>
									<midtexture colordiffuse="$VAR[Volume_Focus_Color]">views/white_100.png</midtexture>
								</control>
								<control type="image">
									<visible>Player.Muted</visible>
									<centerleft>50%</centerleft>
									<centertop>50%</centertop>
									<width>120</width>
									<height>30</height>
									<texture colordiffuse="$VAR[Volume_Background_Color]">views/white_100.png</texture>
								</control>
								<control type="group">
									<visible>Player.Muted</visible>
									<centerleft>50%</centerleft>
									<centertop>50%</centertop>
									<width>60</width>
									<height>60</height>
									<include content="Cross_focused">
										<param name="color" value="$VAR[Volume_Focus_Color]"/>
									</include>
								</control>
							</control>
							<!-- Center Label -->
							<control type="group">
								<left>0</left>
								<right>0</right>
								<bottom>20</bottom>
								<visible>$PARAM[center_label_visible]</visible>
								<include content="Music_Player_Label_Template">
									<param name="group_align" value="right"/>
									<param name="label_align" value="left"/>
									<param name="title_label_scroll" value="true"/>
									<param name="label_1" value="$PARAM[label_1]"/>
									<param name="label_2" value="$PARAM[label_2]"/>
									<param name="text_color" value="$VAR[Light_Color]"/>
								</include>
							</control>
						</control>

						<!-- Right Label -->
						<control type="group">
							<visible>$PARAM[right_label_visible]</visible>
							<height>$PARAM[height]</height>
							<width>$PARAM[label_width]</width>
							<control type="group">
								<visible>$PARAM[content_visible]</visible>
								<include>Notification_Label_Fade_Animation</include>
								<include content="Music_Player_Label_Template">
									<param name="padding" value="$PARAM[label_padding]"/>
									<param name="group_align" value="center"/>
									<param name="label_align" value="left"/>
									<param name="label_1" value="$PARAM[label_1]"/>
									<param name="label_2" value="$PARAM[label_2]"/>
									<param name="title_label_scroll" value="$PARAM[label_scroll]"/>
								</include>
							</control>
						</control>

					</control>
				</control>
			</control>
		</definition>
	</include>

	<include name="Shared_Dialog_Layouts">
		<param name="type" default="Music_Player"/>
		<param name="visible" default="true"/>
		<param name="content_visible" default="![Window.IsVisible(volumebar) | Window.IsVisible(notification) | Window.IsVisible(extendedprogressdialog)]"/>
		<param name="label_1" default="$INFO[MusicPlayer.Title]"/>
		<param name="label_2" default="$INFO[MusicPlayer.Artist]"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<!-- Mini player -->
				<control type="group">
					<visible>$EXP[InfoDialog_IsVisible] | ![[$EXP[ListView_Display_IsThumbnails] | [$EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off] + $EXP[Music_Player_IsVisible]] | $EXP[StripView_IsVisible] | $EXP[GridView_IsVisible]] + !$EXP[InfoDialog_IsVisible]]</visible>
					<visible>!Window.IsVisible(visualisation)</visible>
					<animation effect="slide" end="30,0" time="0" condition="!$EXP[Music_Player_HasFocus]">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="align" value="right"/>
						<param name="background_visible" value="false"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_width" value="600"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
				<!-- Visualisation -->
				<control type="group">
					<visible>Window.IsVisible(visualisation)</visible>
					<animation effect="slide" end="-60,0" time="0" condition="true">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="align" value="right"/>
						<param name="background_visible" value="false"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_width" value="600"/>
						<param name="label_padding" value="30"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
				<!-- List Thumbnails -->
				<control type="group">
					<visible>$EXP[ListView_Display_IsThumbnails] + !$EXP[InfoDialog_IsVisible]</visible>
					<animation effect="slide" end="-60,0" time="0" condition="true">Conditional</animation>
					<animation effect="slide" end="0,900" time="0" condition="$EXP[Square_Containers]">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="align" value="right"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="progress_top" value="174"/>
						<param name="label_padding" value="30"/>
						<param name="label_width" value="960"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
				<!-- Showcase -->
				<control type="group">
					<visible>$EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off] + $EXP[Music_Player_IsVisible] + !$EXP[InfoDialog_IsVisible]</visible>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[ShowcaseView_Display_IsPosters]"/>
						<param name="height" value="360"/>
						<param name="align" value="left"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_padding" value="30"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="center_label_visible" value="true"/>
					</include>
				</control>
				<!-- Strip -->
				<control type="group">
					<visible>$EXP[StripView_IsVisible] + !$EXP[InfoDialog_IsVisible]</visible>
					<animation effect="slide" end="-570,0" time="0" condition="$EXP[StripView_Display_IsSquare]">Conditional</animation>
					<animation effect="slide" end="-75,0" time="0" condition="$EXP[StripView_Display_IsSquare] + $EXP[StripView_Details_Off]">Conditional</animation>
					<animation effect="slide" end="-80,0" time="0" condition="$EXP[StripView_Display_IsPosters]">Conditional</animation>
					<animation effect="slide" end="-80,0" time="0" condition="$EXP[StripView_Display_IsFanart]">Conditional</animation>
					<animation effect="slide" end="-320,0" time="0" condition="$EXP[StripView_Display_IsFanart] + $EXP[StripView_Details_Off]">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[StripView_Display_IsPosters]"/>
						<param name="height" value="240"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_padding" value="30"/>
						<param name="label_width" value="1360"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[StripView_Display_IsSquare]"/>
						<param name="height" value="240"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_padding" value="30"/>
						<param name="label_width" value="1035"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[StripView_Display_IsFanart] + $EXP[StripView_Details_Off]"/>
						<param name="height" value="240"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_padding" value="30"/>
						<param name="label_width" value="1227"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[StripView_Display_IsFanart] + !$EXP[StripView_Details_Off]"/>
						<param name="height" value="240"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_padding" value="30"/>
						<param name="label_width" value="1600"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
				<!-- Grid -->
				<control type="group">
					<visible>$EXP[GridView_IsVisible] + !$EXP[InfoDialog_IsVisible]</visible>
					<animation effect="slide" end="-60,0" time="0" condition="true" reversible="false">Conditional</animation>
					<animation effect="slide" end="-12,0" time="0" condition="$EXP[GridView_Display_IsFanart]" reversible="false">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[GridView_IsVisible]"/>
						<param name="height" value="180"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_padding" value="30"/>
						<param name="label_width" value="900"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
			</control>
		</definition>
	</include>

	<include name="Notification_Dialog_Layouts">
		<param name="type" default="Notification"/>
		<param name="visible" default="![$EXP[Music_Player_IsVisible] | Window.IsVisible(volumebar)]"/>
		<param name="background_visible" default="false"/>
		<param name="label_padding" default="-30"/>
		<param name="content_visible" default="!Window.IsVisible(extendedprogressdialog)"/>
		<param name="label_1" default="$INFO[Control.GetLabel(401)]"/>
		<param name="label_2" default="$INFO[Control.GetLabel(402)]"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<!-- Generic -->
				<control type="group">
					<visible>![[$EXP[ListView_Display_IsThumbnails] | [$EXP[ShowcaseView_IsVisible] + !$EXP[Background_IsFanart]] | $EXP[GridView_IsVisible]] + !$EXP[InfoDialog_IsVisible]]</visible>
					<animation effect="slide" end="30,0" time="0" condition="true">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="!$EXP[ListView_Display_IsThumbnails] + ![$EXP[ShowcaseView_IsVisible] + !$EXP[Background_IsFanart]] + !$EXP[GridView_IsVisible]"/>
						<param name="align" value="right"/>
						<param name="background_visible" value="$PARAM[background_visible]"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_width" value="720"/>
						<param name="label_padding" value="$PARAM[label_padding]"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
				<!-- List -->
				<control type="group">
					<visible>$EXP[ListView_Display_IsThumbnails] + !$EXP[InfoDialog_IsVisible]</visible>
					<animation effect="slide" end="30,0" time="0" condition="true">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[ListView_Display_IsThumbnails]"/>
						<param name="background_visible" value="$PARAM[background_visible]"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_width" value="960"/>
						<param name="label_padding" value="$PARAM[label_padding]"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
				<!-- Showcase -->
				<control type="group">
					<visible>$EXP[ShowcaseView_IsVisible] + !$EXP[Background_IsFanart] + !$EXP[InfoDialog_IsVisible]</visible>
					<animation effect="slide" end="30,0" time="0" condition="true">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[ShowcaseView_Display_IsSquare]"/>
						<param name="background_visible" value="$PARAM[background_visible]"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_width" value="630"/>
						<param name="label_padding" value="$PARAM[label_padding]"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="$EXP[ShowcaseView_Display_IsPosters]"/>
						<param name="background_visible" value="$PARAM[background_visible]"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_width" value="1020"/>
						<param name="label_padding" value="$PARAM[label_padding]"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
				<!-- Grid -->
				<control type="group">
					<visible>$EXP[GridView_IsVisible] + !$EXP[InfoDialog_IsVisible]</visible>
					<animation effect="slide" end="30,0" time="0" condition="true">Conditional</animation>
					<include content="$PARAM[type]_Widget">
						<param name="visible" value="true"/>
						<param name="background_visible" value="$PARAM[background_visible]"/>
						<param name="content_visible" value="$PARAM[content_visible]"/>
						<param name="label_width" value="900"/>
						<param name="label_padding" value="$PARAM[label_padding]"/>
						<param name="label_1" value="$PARAM[label_1]"/>
						<param name="label_2" value="$PARAM[label_2]"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
			</control>
		</definition>
	</include>

</includes>
