<includes>

	<include name="Music_Player_Buttons">
		<definition>
			<control type="panel" id="91100">
				<width>180</width>
				<height>120</height>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) +  Control.IsVisible(9090)">9090</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + Control.IsVisible(9080)">9080</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + Control.IsVisible(9070)">9070</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + !Control.IsVisible(9070) + Control.IsVisible(9060)">9060</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + !Control.IsVisible(9070) + !Control.IsVisible(9060) + Control.IsVisible(9050)">9050</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + !Control.IsVisible(9070) + !Control.IsVisible(9060) + !Control.IsVisible(9050) + Control.IsVisible(9040)">9040</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + !Control.IsVisible(9070) + !Control.IsVisible(9060) + !Control.IsVisible(9050) + !Control.IsVisible(9040) + Control.IsVisible(9030)">9030</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + !Control.IsVisible(9070) + !Control.IsVisible(9060) + !Control.IsVisible(9050) + !Control.IsVisible(9040) + !Control.IsVisible(9030) + Control.IsVisible(9020)">9020</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + !Control.IsVisible(9070) + !Control.IsVisible(9060) + !Control.IsVisible(9050) + !Control.IsVisible(9040) + !Control.IsVisible(9030) + !Control.IsVisible(9020) + Control.IsVisible(9010)">9010</onup>
				<onup condition="Window.IsVisible(home) + !Window.IsVisible(favourites) + !Control.IsVisible(9090) + !Control.IsVisible(9080) + !Control.IsVisible(9070) + !Control.IsVisible(9060) + !Control.IsVisible(9050) + !Control.IsVisible(9040) + !Control.IsVisible(9030) + !Control.IsVisible(9020) + !Control.IsVisible(9010)">9000</onup>
				<ondown condition="Window.IsVisible(home)">9000</ondown>
				<onback condition="Window.IsVisible(home)">9000</onback>
				<onback condition="$EXP[ListView_IsVisible]">50</onback>
				<onleft condition="$EXP[ListView_IsVisible]">50</onleft>
				<onright condition="$EXP[ListView_IsVisible] + Integer.IsLessOrEqual(Container.NumItems,11)">SetFocus(3000,0)</onright>
				<onright condition="$EXP[ListView_IsVisible] + Integer.IsGreater(Container.NumItems,12)">61</onright>
				<onback condition="$EXP[BillboardView_IsVisible]">501</onback>
				<onup condition="$EXP[BillboardView_IsVisible]">SetFocus(3000,0)</onup>
				<ondown condition="$EXP[BillboardView_IsVisible]">501</ondown>
				<onback condition="$EXP[ShowcaseView_IsVisible]">502</onback>
				<onup condition="$EXP[ShowcaseView_IsVisible]">SetFocus(3000,0)</onup>
				<ondown condition="$EXP[ShowcaseView_IsVisible]">502</ondown>
				<onback condition="$EXP[StripView_IsVisible]">504</onback>
				<onup condition="$EXP[StripView_IsVisible]">SetFocus(3000,0)</onup>
				<ondown condition="$EXP[StripView_IsVisible]">504</ondown>
				<onback condition="$EXP[GridView_IsVisible]">505</onback>
				<onleft condition="$EXP[GridView_IsVisible]">505</onleft>
				<onright condition="$EXP[GridView_Display_IsFanart] + Integer.IsGreater(Container.NumItems,3)">61</onright>
				<onright condition="$EXP[GridView_Display_IsPosters] + Integer.IsGreater(Container.NumItems,5)">61</onright>
				<onright condition="$EXP[GridView_Display_IsSquare] + Integer.IsGreater(Container.NumItems,10)">61</onright>
				<onright condition="$EXP[GridView_Display_IsFanart] + Integer.IsLessorEqual(Container.NumItems,3)">SetFocus(3000,0)</onright>
				<onright condition="$EXP[GridView_Display_IsPosters] + Integer.IsLessorEqual(Container.NumItems,5)">SetFocus(3000,0)</onright>
				<onright condition="$EXP[GridView_Display_IsSquare] + Integer.IsLessorEqual(Container.NumItems,10)">SetFocus(3000,0)</onright>
				<onback condition="Window.IsVisible(favourites)">450</onback>
				<onleft condition="Window.IsVisible(favourites)">450</onleft>
				<onright condition="Window.IsVisible(favourites)">450</onright>>
				<onunfocus>ClearProperty(Music_Player_Controls,home)</onunfocus>
				<scrolltime>0</scrolltime>
				<itemlayout width="60" height="60"/>
				<focusedlayout width="60" height="60">
					<control type="button">
						<visible allowhiddenfocus="true">false</visible>
						<onfocus>SetProperty(Music_Player_Controls,$INFO[Container(91100).ListItem.Label],home)</onfocus>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>Previous</label>
						<onclick>PlayerControl(Previous)</onclick>
					</item>
					<item>
						<label>Pause</label>
						<onclick>PlayerControl(Play)</onclick>
					</item>
					<item>
						<label>Next</label>
						<onclick>PlayerControl(Next)</onclick>
					</item>
					<item>
						<label>Album</label>
						<onclick>ActivateWindow(music,musicdb://artists/?artist=$INFO[MusicPlayer.Artist])</onclick>
					</item>
					<item>
						<label>Stop</label>
						<onclick>PlayerControl(Stop)</onclick>
						<onclick condition="Window.IsVisible(home)">SetFocus(9000)</onclick>
						<onclick condition="Window.IsVisible(favourites)">SetFocus(450)</onclick>
						<onclick condition="$EXP[ListView_IsVisible]">SetFocus(50)</onclick>
						<onclick condition="$EXP[BillboardView_IsVisible]">SetFocus(501)</onclick>
						<onclick condition="$EXP[ShowcaseView_IsVisible]">SetFocus(502)</onclick>
						<onclick condition="$EXP[StripView_IsVisible]">SetFocus(504)</onclick>
						<onclick condition="$EXP[GridView_IsVisible]">SetFocus(505)</onclick>
					</item>
					<item>
						<label>Fullscreen</label>
						<onclick>ActivateWindow(visualisation)</onclick>
					</item>
				</content>
			</control>
		</definition>
	</include>

	<include name="Music_Player_Button_Template">
		<param name="visible" default="true"/>
		<param name="focused"/>
		<param name="icon"/>
		<param name="left"/>
		<param name="top"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<left>$PARAM[left]</left>
				<top>$PARAM[top]</top>
				<width>60</width>
				<height>60</height>
				<control type="image">
					<visible>!$PARAM[focused]</visible>
					<texture colordiffuse="$VAR[Light_Color]">osd/icon_$PARAM[icon]_unfocused.png</texture>
				</control>
				<control type="group">
					<visible>$PARAM[focused]</visible>
					<control type="image">
						<texture colordiffuse="$VAR[Light_Color]">osd/icon_$PARAM[icon]_focused.png</texture>
					</control>
				</control>
			</control>
		</definition>
	</include>

	<include name="Music_Player_Label_Template">
		<param name="visible" default="false"/>
		<param name="padding" default="30"/>
		<param name="group_align" default="center"/>
		<param name="label_align" default="left"/>
		<param name="label_1" default="$INFO[MusicPlayer.Title]"/>
		<param name="label_2" default="$INFO[MusicPlayer.Artist]"/>
		<param name="title_label_scroll" default="false"/>
		<param name="info_label_scroll" default="false"/>
		<param name="text_color" default="$VAR[Notification_Widget_Label_Color]"/>
		<definition>
			<control type="grouplist">
				<animation effect="slide" start="0,0" end="0,-30"  condition="$EXP[StripView_Display_IsPosters] + [Window.IsVisible(1100) | Window.IsVisible(volumebar)]">Conditional</animation>
				<left>$PARAM[padding]</left>
				<right>$PARAM[padding]</right>
				<orientation>vertical</orientation>
				<align>$PARAM[group_align]</align>
				<itemgap>0</itemgap>
				<control type="label">
					<visible>String.IsEmpty(Window(home).Property(Music_Player_Controls))</visible>
					<include>Content_Fade_Animation</include>
					<height>55</height>
					<label>$PARAM[label_1]</label>
					<font>Breadcrumb_Title_Label</font>
					<textcolor>$PARAM[text_color]</textcolor>
					<align>$PARAM[label_align]</align>
					<scroll>$PARAM[title_label_scroll]</scroll>
					<scrollsuffix> / </scrollsuffix>
				</control>
				<control type="label">
					<visible>String.IsEmpty(Window(home).Property(Music_Player_Controls))</visible>
					<include>Content_Fade_Animation</include>
					<height>40</height>
					<label>$PARAM[label_2]</label>
					<font>Breadcrumb_Info_Label</font>
					<textcolor>$PARAM[text_color]</textcolor>
					<align>$PARAM[label_align]</align>
					<scroll>$PARAM[info_label_scroll]</scroll>
					<scrollsuffix> / </scrollsuffix>
				</control>
				<control type="label">
					<visible>!String.IsEmpty(Window(home).Property(Music_Player_Controls))</visible>
					<animation effect="slide" end="60" time="0" condition="!String.IsEmpty(Window(home).Property(Music_Player_Controls)) + Window.IsVisible(home) + Window.IsVisible(volumebar)" reversible="false">Conditional</animation>
					<include>Content_Fade_Animation</include>
					<height>55</height>
					<label>$VAR[Music_Player_Label]</label>
					<font>Breadcrumb_Title_Label</font>
					<textcolor>$PARAM[text_color]</textcolor>
					<align>$PARAM[label_align]</align>
				</control>
			</control>
		</definition>
	</include>

	<include name="Music_Player_Widget">
		<param name="visible" default="true"/>
		<param name="width" default="100%"/>
		<param name="top" default="0"/>
		<param name="height" default="180"/>
		<param name="label_width" default="1740"/>
		<param name="align" default="right"/>
		<param name="background_visible" default="true"/>
		<param name="content_visible" default="![Window.IsVisible(volumebar) | Window.IsVisible(notification) | Window.IsVisible(extendedprogressdialog)]"/>
		<param name="progress_info" default="Player.Progress"/>
		<param name="progress_side" default="0"/>
		<param name="progress_top" default="0"/>
		<param name="progress_height" default="6"/>
		<param name="label_padding" default="30"/>
		<param name="title_label_scroll" default="true"/>
		<param name="label_1" default="$INFO[MusicPlayer.Title]"/>
		<param name="label_2" default="$INFO[MusicPlayer.Artist]"/>
		<param name="center_label_visible" default="false"/>
		<param name="left_label_visible" default="false"/>
		<param name="right_label_visible" default="false"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<control type="group">
					<visible>!$EXP[ContainerSwitching]</visible>
					<include>Content_Fade_Animation</include>
					<control type="group">
						<visible>!$EXP[OpaqueDialog_IsVisible]</visible>
						<include>My_Window_Fade_Animation</include>
						<control type="grouplist">
							<visible>!$EXP[TransparentDialog_IsVisible]</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<width>$PARAM[width]</width>
							<top>$PARAM[top]</top>
							<height>$PARAM[height]</height>
							<itemgap>0</itemgap>
							<orientation>horizontal</orientation>
							<align>$PARAM[align]</align>
							<usecontrolcoords>true</usecontrolcoords>

							<!--Left Label-->
							<control type="group">
								<height>$PARAM[height]</height>
								<width>$PARAM[label_width]</width>
								<visible>$PARAM[left_label_visible]</visible>
								<control type="group">
									<visible>![Window.Next(home) | Window.Next(videos) | Window.Next(music) | Window.Next(programs) | Window.Next(pictures) | Window.Next(visualisation)] + !$EXP[ContainerSwitching] + !$EXP[OpaqueDialog_IsVisible]</visible>
									<include>Music_Player_Content_Fade_Animation</include>
									<control type="group">
										<animation effect="slide" end="-60,0" time="0" condition="!String.IsEmpty(Window(home).Property(Music_Player_Controls)) + [$EXP[Background_IsFanart] | ![Window.IsMedia | Window.IsVisible(visualisation)]]">Conditional</animation>
										<visible>$PARAM[content_visible]</visible>
										<include>Notification_Label_Fade_Animation</include>
										<include content="Music_Player_Label_Template">
											<param name="padding" value="$PARAM[label_padding]"/>
											<param name="group_align" value="center"/>
											<param name="label_align" value="right"/>
											<param name="label_1" value="$PARAM[label_1]"/>
											<param name="label_2" value="$PARAM[label_2]"/>
											<param name="title_label_scroll" value="$PARAM[title_label_scroll]"/>
										</include>
									</control>
								</control>
							</control>

							<!--Widget-->
							<control type="group">
								<width>$PARAM[height]</width>
								<height>$PARAM[height]</height>
								<!--ARTWORK-->
								<control type="group">
									<visible>![Window.Next(home) | Window.Next(videos) | Window.Next(music) | Window.Next(programs) | Window.Next(pictures) | Window.Next(visualisation)] + !$EXP[OpaqueDialog_IsVisible]</visible>
									<include>Music_Player_Artwork_Fade_Animation</include>
									<visible>$PARAM[background_visible]</visible>
									<!--Album Cover-->
									<control type="image">
										<texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
										<aspectratio>scale</aspectratio>
									</control>
									<control type="image">
										<texture colordiffuse="$VAR[Home_Artwork_Diffuse]" fallback="fallback.png">$INFO[Player.Art(album.thumb)]</texture>
										<aspectratio>scale</aspectratio>
									</control>
									<!--Shadow for Gridview-->
									<control type="group">
										<visible>![$EXP[GridView_Display_IsFanart] + Integer.IsLessOrEqual(Window(home).Property(GridView_NumItems),3)]</visible>
										<visible>![[$EXP[GridView_Display_IsSquare] | $EXP[GridView_Display_IsPosters]] + Integer.IsLessOrEqual(Window(home).Property(GridView_NumItems),5)]</visible>
										<visible>$EXP[GridView_IsVisible] + !$EXP[TransparentDialog_IsVisible] + !String.IsEqual(Window(home).Property(Scrollbars),true)</visible>
										<include>Artwork_Fade_Animation</include>
										<control type="image">
											<visible>[$EXP[GridView_Display_IsFanart] + String.IsEqual(Window(home).Property(GridView_Position),2)] | [[$EXP[GridView_Display_IsPosters] | $EXP[GridView_Display_IsSquare]] + String.IsEqual(Window(home).Property(GridView_Position),4)]</visible>
											<bottom>0</bottom>
											<height>120</height>
											<texture colordiffuse="$VAR[Artwork_Dropshadow]">views/dropshadow_top_120.png</texture>
											<aspectratio>stretch</aspectratio>
										</control>
									</control>
								</control>
								<!--CONTENT-->
								<control type="group">
									<visible>![Window.Next(home) | Window.Next(videos) | Window.Next(music) | Window.Next(programs) | Window.Next(pictures) | Window.Next(visualisation)] + !$EXP[ContainerSwitching] + !$EXP[OpaqueDialog_IsVisible]</visible>
									<include>Music_Player_Content_Fade_Animation</include>
									<!--Music Player Controls-->
									<control type="group">
										<visible>!String.IsEmpty(Window(home).Property(Music_Player_Controls))</visible>
										<include>Content_Fade_Animation</include>
										<width>180</width>
										<height>120</height>
										<centerleft>50%</centerleft>
										<centertop>50%</centertop>
										<include content="Music_Player_Button_Template">
											<param name="focused" value="String.IsEqual(Window(home).Property(Music_Player_Controls),Previous)"/>
											<param name="icon" value="Previous"/>
											<param name="left" value="0"/>
											<param name="top" value="0"/>
										</include>
										<include content="Music_Player_Button_Template">
											<param name="visible" value="!Player.Paused"/>
											<param name="focused" value="String.IsEqual(Window(home).Property(Music_Player_Controls),Pause) + !Player.Paused"/>
											<param name="icon" value="Pause"/>
											<param name="left" value="60"/>
											<param name="top" value="0"/>
										</include>
										<include content="Music_Player_Button_Template">
											<param name="visible" value="Player.Paused"/>
											<param name="focused" value="String.IsEqual(Window(home).Property(Music_Player_Controls),Pause) + Player.Paused"/>
											<param name="icon" value="Play"/>
											<param name="left" value="60"/>
											<param name="top" value="0"/>
										</include>
										<include content="Music_Player_Button_Template">
											<param name="focused" value="String.IsEqual(Window(home).Property(Music_Player_Controls),Next)"/>
											<param name="icon" value="Next"/>
											<param name="left" value="120"/>
											<param name="top" value="0"/>
										</include>
										<include content="Music_Player_Button_Template">
											<param name="focused" value="String.IsEqual(Window(home).Property(Music_Player_Controls),Album)"/>
											<param name="icon" value="Album"/>
											<param name="left" value="0"/>
											<param name="top" value="60"/>
										</include>
										<include content="Music_Player_Button_Template">
											<param name="focused" value="String.IsEqual(Window(home).Property(Music_Player_Controls),Stop)"/>
											<param name="icon" value="Stop"/>
											<param name="left" value="60"/>
											<param name="top" value="60"/>
										</include>
										<include content="Music_Player_Button_Template">
											<param name="focused" value="String.IsEqual(Window(home).Property(Music_Player_Controls),Fullscreen)"/>
											<param name="icon" value="Fullscreen"/>
											<param name="left" value="120"/>
											<param name="top" value="60"/>
										</include>
									</control>
									<!--Other Furniture-->
									<control type="group">
										<visible>$PARAM[content_visible]</visible>
										<include>Notification_Label_Fade_Animation</include>
										<!--Now Playing animation-->
										<control type="group">
											<visible>String.IsEmpty(Window(home).Property(Music_Player_Controls))</visible>
			
											<centerleft>50%</centerleft>
											<centertop>50%</centertop>
											<width>120</width>
											<height>120</height>
											<include content="Now_Playing_Visualization_Fill">
												<param name="color" value="$VAR[Now_Playing_Color]"/>
											</include>
										</control>
										<!--Progress Bar-->
										<control type="progress">
											<visible>$PARAM[background_visible]</visible>
											<left>$PARAM[progress_side]</left>
											<right>$PARAM[progress_side]</right>
											<top>$PARAM[progress_top]</top>
											<height>$PARAM[progress_height]</height>
											<info>$PARAM[progress_info]</info>
											<texturebg colordiffuse="$VAR[Light_Color]">views/white_20.png</texturebg>
											<lefttexture></lefttexture>
											<midtexture colordiffuse="$VAR[Light_Color]">views/white_100.png</midtexture>
											<righttexture></righttexture>
											<overlaytexture></overlaytexture>
										</control>
										<!--Center Label-->
										<control type="group">
											<left>0</left>
											<right>0</right>
											<bottom>20</bottom>
											<visible>$PARAM[center_label_visible]</visible>
											<include content="Music_Player_Label_Template">
												<param name="group_align" value="right"/>
												<param name="label_align" value="left"/>
												<param name="title_label_scroll" value="true"/>
												<param name="label_1" value="$PARAM[label_1]"/>
												<param name="label_2" value="$PARAM[label_2]"/>
												<param name="text_color" value="$VAR[Light_Color]"/>
											</include>
										</control>
									</control>
								</control>
							</control>

							<!--Right Label-->
							<control type="group">
								<height>$PARAM[height]</height>
								<width>$PARAM[label_width]</width>
								<visible>$PARAM[right_label_visible]</visible>
								<control type="group">
									<visible>![Window.Next(home) | Window.Next(videos) | Window.Next(music) | Window.Next(programs) | Window.Next(pictures) | Window.Next(visualisation)] + !$EXP[ContainerSwitching] + !$EXP[OpaqueDialog_IsVisible]</visible>
									<include>Music_Player_Content_Fade_Animation</include>
									<control type="group">
										<visible>$PARAM[content_visible]</visible>
										<include>Notification_Label_Fade_Animation</include>
										<include content="Music_Player_Label_Template">
											<param name="padding" value="$PARAM[label_padding]"/>
											<param name="group_align" value="center"/>
											<param name="label_align" value="left"/>
											<param name="label_1" value="$PARAM[label_1]"/>
											<param name="label_2" value="$PARAM[label_2]"/>
											<param name="title_label_scroll" value="$PARAM[title_label_scroll]"/>
										</include>
									</control>
								</control>
							</control>

						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>

	<include name="Notification_Widget">
		<param name="visible" default="true"/>
		<param name="width" default="100%"/>
		<param name="top" default="0"/>
		<param name="height" default="180"/>
		<param name="label_width" default="1740"/>
		<param name="align" default="right"/>
		<param name="background_visible" default="!Window.IsVisible(1100)"/>
		<param name="content_visible" default="!Window.IsVisible(extendedprogressdialog)"/>
		<param name="label_padding" default="30"/>
		<param name="label_scroll" default="true"/>
		<param name="label_1" default="$INFO[Control.GetLabel(401)]"/>
		<param name="label_2" default="$INFO[Control.GetLabel(402)]"/>
		<param name="center_label_visible" default="false"/>
		<param name="left_label_visible" default="false"/>
		<param name="right_label_visible" default="false"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<control type="group">
					<visible>!$EXP[ContainerSwitching]</visible>
					<include>Content_Fade_Animation</include>
					<control type="group">
						<visible>!$EXP[OpaqueDialog_IsVisible]</visible>
						<include>My_Window_Fade_Animation</include>
						<control type="grouplist">
							<visible>!$EXP[TransparentDialog_IsVisible]</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<width>$PARAM[width]</width>
							<top>$PARAM[top]</top>
							<height>$PARAM[height]</height>
							<itemgap>0</itemgap>
							<orientation>horizontal</orientation>
							<align>$PARAM[align]</align>
							<usecontrolcoords>true</usecontrolcoords>

							<!--Left Label-->
							<control type="group">
								<height>$PARAM[height]</height>
								<width>$PARAM[label_width]</width>
								<visible>$PARAM[left_label_visible]</visible>
								<control type="group">
									<animation effect="slide" end="-60,0" time="0" condition="!String.IsEmpty(Window(home).Property(Music_Player_Controls)) + [$EXP[Background_IsFanart] | ![Window.IsMedia | Window.IsVisible(visualisation)]]">Conditional</animation>
