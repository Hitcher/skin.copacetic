										<width>120</width>
										<height>30</height>
										<texture colordiffuse="$VAR[Light_Color]">views/white_20.png</texture>
									</control>
									<control type="group">
										<visible>Player.Muted</visible>
										<centerleft>50%</centerleft>
										<centertop>50%</centertop>
