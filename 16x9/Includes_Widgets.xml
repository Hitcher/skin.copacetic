			</include>
		</control>
		<control type="group">
			<visible>!Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<control type="group">
				<visible>Control.HasFocus(90$PARAM[widget_position]0)</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard)" content="BillboardView_Details"/>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase)" content="ShowcaseView_Details"/>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Strip)" content="StripView_Details"/>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Grid)" content="GridView_Details"/>
				<control type="group">
					<animation effect="slide" start="0" end="0,677" time="0" condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart)">Conditional</animation>
					<animation effect="slide" start="0" end="0,690" time="0" condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)">Conditional</animation>
					<animation effect="slide" start="0" end="0,780" time="0" condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Posters)">Conditional</animation>
					<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Grid)" content="Breadcrumb_Label">
						<param name="title_label" value="$VAR[Title_Label]"/>
						<param name="info_label" value="/ $VAR[Info_Label]"/>
					</include>
				</control>
			</control>
			<control type="group">
				<visible>Control.HasFocus(90$PARAM[widget_position]0)</visible>
				<animation effect="slide" start="0" end="720" time="0" condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase)">Conditional</animation>
				<animation effect="slide" start="0" end="360" time="0" condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase) + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)">Conditional</animation>
				<include content="Breadcrumb_Label">
					<param name="title_label" value="$PARAM[widget_header]"/>
					<param name="info_label" value="$INFO[Container(90$PARAM[widget_position]0).CurrentItem, / ,]$INFO[Container(90$PARAM[widget_position]0).NumItems,/]"/>
				</include>
			</control>
		</control>
		<control type="label" id="918">
			<visible>false</visible>
			<label>$VAR[Widget$PARAM[widget_position]_Thumbnail(-1)Content]</label>
		</control>
		<control type="label" id="919">
