<includes>

	<include name="Container_Content_Path">
		<param name="limit" default="20"/>
		<definition>
			<content target="$PARAM[target]" sortby="$PARAM[sortby]" sortorder="$PARAM[sortorder]" limit="$PARAM[limit]">$PARAM[content]</content>
		</definition>
	</include>

	<include name="MostPlayed_Content_Path">
		<definition>
			<content target="music" sortby="playcount" sortorder="ascending" limit="10">musicdb://songs/</content>
		</definition>
	</include>

	<include name="Widget_List">
		<param name="min_items"/>
		<param name="widget_type"/>
		<param name="id"/>
		<param name="focus_button" default="HiddenFocusButton"/>
		<param name="use_custom_content" default="true"/>
		<param name="use_custom_click" default="false"/>
		<param name="click_action" default="Blank"/>
		<definition>
			<control type="fixedlist" id="$PARAM[id]">
				<visible>Integer.IsGreater(Container($PARAM[id]).NumItems,$PARAM[min_items]) | Container($PARAM[id]).IsUpdating</visible>
				<onfocus>SetProperty(HomeWidget,$PARAM[id],home)</onfocus>
				<onunfocus condition="!String.IsEmpty(window(home).property(HomeWidget))">ClearProperty(HomeWidget,home)</onunfocus>
				<onfocus>SetProperty(Focused_Button,False,movieinformation)</onfocus>
				<onunfocus>ClearProperty(Focused_Button,movieinformation)</onunfocus>
				<onfocus>SetProperty(Focused_Button,False,musicinformation)</onfocus>
				<onunfocus>ClearProperty(Focused_Button,musicinformation)</onunfocus>
				<onfocus>SetProperty(Focused_Button,False,addoninformation)</onfocus>
				<onunfocus>ClearProperty(Focused_Button,addoninformation)</onunfocus>
				<viewtype label="widgetlist">list</viewtype>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<include condition="$PARAM[use_custom_click]">ClickAction_$PARAM[click_action]</include>
				<include>$PARAM[widget_type]_Navigation</include>
				<focusedlayout>
					<include>$PARAM[focus_button]</include>
					<include condition="Skin.HasSetting(Multiart_Slideshow)" content="Multiart_Resetter"/>
					<include condition="Skin.HasSetting(Multiart_Slideshow)" content="Multiart_Setter"/>
				</focusedlayout>
				<itemlayout/>
				<include condition="$PARAM[use_custom_content]" content="Container_Content_Path">
					<param name="target" value="$PARAM[target]"/>
					<param name="sortby" value="$PARAM[sortby]"/>
					<param name="sortorder" value="$PARAM[sortorder]"/>
					<param name="content" value="$PARAM[content]"/>
					<param name="limit" value="$PARAM[limit]"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="Widget_Template">
		<param name="use_custom_content" default="true"/>
		<param name="use_custom_click" default="false"/>
		<param name="click_action" default="Blank"/>
