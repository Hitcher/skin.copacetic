<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- mediasource -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<!-- Delay content on Load -->
		<include content="Delay_Content_Load">
			<param name="id" value="9001"/>
			<param name="time" value="360"/>
			<param name="target_id" value="SetFocus(11)"/>
		</include>

		<!-- Hidden controls -->
		<control type="button" id="11">
			<include>Hidden_Button</include>
			<onleft>18</onleft>
			<onright>13</onright>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">Control.Move(10,-1)</onup>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">SetFocus(10)</onup>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">SetFocus(11)</onup>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">Control.Move(10,1)</ondown>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">SetFocus(10)</ondown>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">SetFocus(11)</ondown>
			<ondown condition="String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">12</ondown>
		</control>
		<control type="button" id="13">
			<include>Hidden_Button</include>
			<onleft>11</onleft>
			<onright>14</onright>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">Control.Move(10,-1)</onup>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">SetFocus(10)</onup>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">SetFocus(13)</onup>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">Control.Move(10,1)</ondown>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">SetFocus(10)</ondown>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">SetFocus(13)</ondown>
			<ondown condition="String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">12</ondown>
		</control>
		<control type="button" id="14">
			<include>Hidden_Button</include>
			<onleft>13</onleft>
			<onright>19</onright>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">Control.Move(10,-1)</onup>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">SetFocus(10)</onup>
			<onup condition="!String.IsEmpty(Container(10).ListItemNoWrap(-1).Label)">SetFocus(14)</onup>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">Control.Move(10,1)</ondown>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">SetFocus(10)</ondown>
			<ondown condition="!String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">SetFocus(14)</ondown>
			<ondown condition="String.IsEmpty(Container(10).ListItemNoWrap(1).Label)">12</ondown>
		</control>

		<control type="group">
			<visible>!Window.IsVisible(filemanager)</visible>
			<include>DialogFanartSlideshow</include>
		</control>

		<control type="group">
			<visible>![Window.IsVisible(shutdownmenu) | Window.IsVisible(sliderdialog) | Window.IsVisible(selectdialog) | Window.IsVisible(filebrowser) | Window.IsVisible(subtitlesearch) | Window.IsVisible(virtualkeyboard)]</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<control type="group">
				<visible>!Control.HasFocus(9001)</visible>
				<include>Content_Fade_Animation</include>

				<include content="Breadcrumb_Label">
					<param name="title_label_id" value="2"/>
				</include>

				<include content="Transparent_Dialog_Panel">
					<param name="top" value="180"/>
					<param name="bottom" value="180"/>
				</include>

				<!-- Divider and secondary list scrollbar -->
				<control type="group">
					<animation effect="slide" end="0,-105" time="0" condition="true">Conditional</animation>
					<include content="Dialog_Divider_With_Scrollbar">
						<param name="left" value="360"/>
						<param name="height" value="270"/>
						<param name="scrollbarvisible" value="Control.HasFocus(10) | Control.HasFocus(11) | Control.HasFocus(13) | Control.HasFocus(14)"/>
						<param name="scrollbaralignleft" value="true"/>
					</include>
				</control>

				<control type="list" id="10">
					<visible allowhiddenfocus="true">true</visible>
					<width>1200</width>
					<centerleft>50%</centerleft>
					<top>300</top>
					<height>270</height>
					<pagecontrol>60</pagecontrol>
					<itemlayout width="1200" height="90">
						<control type="label">
							<textoffsetx>60</textoffsetx>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>$VAR[Unfocused_Color]</textcolor>
							<aligny>center</aligny>
						</control>
					</itemlayout>
					<focusedlayout width="1200" height="90">
						<control type="button">
							<visible allowhiddenfocus="true">false</visible>
							<onfocus>SetFocus(11)</onfocus>
						</control>
						<control type="label">
							<textoffsetx>60</textoffsetx>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>$VAR[Unfocused_Color]</textcolor>
							<selectedcolor>$VAR[Light_Color]</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
							<aligny>center</aligny>
						</control>
						<control type="image">
							<visible>Control.HasFocus(11) | Control.HasFocus(13) | Control.HasFocus(14)</visible>
							<width>100%</width>
							<bottom>0</bottom>
							<height>1</height>
							<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
						</control>
						<control type="group">
							<visible>!Control.HasFocus(12) + !Control.HasFocus(18) + !Control.HasFocus(19)</visible>
							<animation effect="slide" end="90" time="0" condition="Integer.IsLessOrEqual(Container(10).NumItems,1)">Conditional</animation>
							<height>90</height>
							<right>0</right>
							<width>270</width>
							<include content="Button_Template">
								<param name="buttonid" value="11"/>
								<param name="left" value="0"/>
								<param name="width" value="90"/>
								<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
								<param name="focusedcolor" value="$VAR[Light_Color]"/>
								<param name="texture" value="Browse"/>
							</include>
							<include content="Button_Template">
								<param name="buttonid" value="13"/>
								<param name="left" value="90"/>
								<param name="width" value="90"/>
								<param name="rotated" value="false"/>
								<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
								<param name="focusedcolor" value="$VAR[Light_Color]"/>
								<param name="texture" value="Plus"/>
							</include>
							<include content="Button_Template">
								<param name="buttonid" value="14"/>
								<param name="left" value="180"/>
								<param name="width" value="90"/>
								<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
								<param name="focusedcolor" value="$VAR[Light_Color]"/>
								<param name="texture" value="Cross"/>
							</include>
						</control>
					</focusedlayout>
			</control>

			<control type="edit" id="12">
				<top>690</top>
				<height>90</height>
				<centerleft>50%</centerleft>
				<width>1200</width>
				<hinttext>1022</hinttext>
				<onup>11</onup>
				<onright>19</onright>
				<onleft>18</onleft>
			</control>

			<include content="Button_Group_Template">
				<param name="ondown" value="11"/>
				<param name="onup" value="12"/>
				<param name="onleft" value="12"/>
				<param name="onright" value="12"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="19"/>
				<param name="button2" value="true"/>
				<param name="button2id" value="18"/>
			</include>

		</control>
	</control>

	</controls>
</window>
