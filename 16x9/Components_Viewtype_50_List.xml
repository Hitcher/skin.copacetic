			<param name="width" value="$PARAM[width]"/>
			<param name="height" value="$PARAM[height]"/>
			<param name="art_icon" value="$PARAM[art_icon]"/>
			<param name="art_diffuse" value="$PARAM[art_diffuse]"/>
