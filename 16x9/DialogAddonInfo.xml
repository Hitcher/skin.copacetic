<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addoninformation -->
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload condition="!String.Contains(Control.GetLabel(13),*) | String.IsEmpty(Skin.String(AutoUpdate))">Skin.SetString(AutoUpdate,off)</onload>
	<onunload>ClearProperty(AddonDetails,home)</onunload>
	<controls>
		<!-- Hidden Button -->
		<control id="13" type="radiobutton">
			<visible>Control.IsEnabled(13)</visible>
		</control>
		<control type="group">

			<control type="group">
				<left>50</left>
				<left>1132</left>
				<width>860</width>
				<!-- Heading -->
				<control type="grouplist">
					<top>50</top>
					<height>210</height>
					<align>right</align>
					<orientation>vertical</orientation>
					<control type="textbox">
						<height max="210">auto</height>
						<font>Med60</font>
						<textcolor>$VAR[TextColor]</textcolor>
						<label>[UPPERCASE]$INFO[ListItem.AddonName][/UPPERCASE]</label>
					</control>
				</control>
				<!-- Details Line 1 -->
				<control type="label">
					<top>345</top>
					<width>78%</width>
					<height>36</height>
					<font>Med36</font>
					<textcolor>$VAR[TextColor]</textcolor>
					<label>[UPPERCASE]$INFO[ListItem.AddonType]$INFO[ListItem.AddonCreator, | ][/UPPERCASE]</label>
				</control>
				<!-- Details Line 2 -->
				<control type="label">
					<top>388</top>
					<height>66</height>
					<aligny>top</aligny>
					<font>Light33</font>
					<textcolor>$VAR[TextColor]</textcolor>
					<wrapmultiline>true</wrapmultiline>
					<label>Version $INFO[ListItem.AddonVersion]</label>
				</control>
				<!-- Plot -->
				<control type="textbox">
					<top>479</top>
					<height>195</height>
					<font>Light27</font>
					<label>$INFO[ListItem.AddonDescription]</label>
					<textcolor>$VAR[TextColor]</textcolor>
					<autoscroll delay="10000" time="2000" repeat="12000">True</autoscroll>
				</control>
				<!-- Button grouplist -->
				<control type="grouplist" id="9000">
					<bottom>50</bottom>
					<width>1720</width>
					<height>75</height>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<onup>Close</onup>
					<ondown>Close</ondown>
					<orientation>horizontal</orientation>
					<!-- Launch Addon Button -->
					<control type="button" id="12">
						<include>DialogButton</include>
						<label>518</label>
						<visible>Control.IsEnabled(12)</visible>
					</control>
					<!-- Configure Addon Button -->
					<control type="button" id="9">
						<include>DialogButton</include>
						<label>24020</label>
						<visible>Control.IsEnabled(9)</visible>
					</control>
					<!-- Update Addon Button -->
					<control type="button" id="8">
						<include>DialogButton</include>
						<label>24069</label>
						<visible>Control.IsEnabled(8)</visible>
					</control>
					<!-- Install/UnInstall Addon button -->
					<control type="button" id="6">
						<include>DialogButton</include>
						<label>24022</label>
						<visible>Control.IsEnabled(6)</visible>
					</control>
					<!-- Enable/Disable Addon button -->
					<control type="button" id="7">
						<include>DialogButton</include>
						<label>24021</label>
						<visible>Control.IsEnabled(7)</visible>
					</control>
					<!-- Auto-update button Button -->
					<control type="button" id="20">
						<include>DialogButton</include>
						<label>$VAR[AutoUpdate]</label>
						<onclick>SetFocus(13)</onclick>
						<onclick>Select</onclick>
						<onclick>SetFocus(20)</onclick>
						<onclick condition="String.Contains(Skin.String(AutoUpdate),off)">Skin.SetString(AutoUpdate,on)</onclick>
						<onclick condition="String.Contains(Skin.String(AutoUpdate),on)">Skin.SetString(AutoUpdate,off)</onclick>
					</control>
				</control>
			</control>
			<!-- Image -->
			<control type="group">
				<!-- Viewtype_50_List -->
				<control type="group">
					<left>1362</left>
					<top>348</top>
					<width>640</width>
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>385</width>
						<height>385</height>
						<fadetime>80</fadetime>
						<aspectratio align="right">scale</aspectratio>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>405</width>
						<height>405</height>
						<texture colordiffuse="$VAR[TextColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
