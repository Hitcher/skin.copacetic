<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1105">
	<!-- Visible condition -->
	<visible>$EXP[TransparentDialog_IsVisible] | [VideoPlayer.IsFullscreen + [Player.Paused | Window.IsVisible(videoosd) | Window.IsVisible(fullscreeninfo)]]</visible>
	<!-- Exclusions -->
	<visible>!$EXP[Infoscreen_IsVisible]</visible>
	<visible>!String.IsEqual(Window(home).Property(OptionsMenu),Active)</visible>
	<visible>!$EXP[Background_IsFanart]</visible>
	<visible>![Window.IsVisible(addonbrowser) + Window.IsVisible(selectdialog)]</visible>
	<visible>![Window.IsVisible(home) + String.IsEmpty(Window(home).Property(Home_Widget))]</visible>
	<include content="WindowOpenClose_Fade_Animation" />
	<zorder>0</zorder>
	<controls>
		<include content="Transparent_Dialog_Background" />
	</controls>
</window>