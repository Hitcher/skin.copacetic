<includes>

	<include name="Secondary_List">
		<param name="left" default="0"/>
		<param name="top" default="1080"/>
		<param name="width" default="720"/>
		<param name="height" default="1080"/>
		<param name="visible" default="false"/>
		<param name="layout" default="720x1080"/>
		<definition>
			<control type="group">
				<visible>!$EXP[OptionsSwitching] + !$EXP[ContainerSwitching] + !$EXP[OpaqueDialog_IsVisible] + !$EXP[Music_Player_HasFocus]</visible>
				<include>Artwork_Fade_Animation</include>
				<control type="fixedlist" id="4501">
					<animation effect="slide" start="0" end="0,-$PARAM[height]" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + [[$EXP[ListView_Display_IsThumbnails] + !Container.Content(artists)] | $EXP[BillboardView_IsVisible] | $EXP[ShowcaseView_IsVisible] | $EXP[StripView_IsVisible]]">Conditional</animation>
					<animation effect="slide" start="0" end="$PARAM[width],0" time="0" condition="$EXP[ListView_Display_IsThumbnails] + [Control.HasFocus(4501) | $EXP[Secondary_List_ContainerSwitching]] + Container.Content(artists)">Conditional</animation>
					<animation effect="slide" start="0" end="-$PARAM[width],0" time="360" reversible="true" tween="sine" easing="inout" condition="$EXP[ListView_Display_IsThumbnails] + Control.HasFocus(4501) + Container.Content(artists)">Conditional</animation>
					<animation effect="slide" start="0,0" end="$PARAM[width],-$PARAM[height]" time="0" condition="$EXP[ListView_Display_IsBackground]">Conditional</animation>
					<animation effect="slide" start="0" end="-$PARAM[width],0" reversible="true" time="360" tween="sine" easing="inout"  condition="Control.HasFocus(4501) + $EXP[ListView_Display_IsBackground]">Conditional</animation>

					<animation effect="slide" start="0,0" end="360,0" time="360" tween="sine" easing="inout" reversible="true" condition="Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>
					<animation effect="slide" start="0,0" end="320,0" time="0" condition="$EXP[StripView_Display_IsFanart] + !$EXP[StripView_Details_Off]">Conditional</animation>
					<animation effect="slide" start="0,0" end="75,0" time="0" condition="$EXP[StripView_Display_IsSquare] + !$EXP[StripView_Details_Off]">Conditional</animation>
					<animation effect="slide" start="0,0" end="0,240" time="0" condition="$EXP[StripView_IsVisible] + !Control.HasFocus(4501) + !$EXP[Secondary_List_ContainerSwitching]">Conditional</animation>
					<visible>Skin.HasSetting(Secondary_List_Enabled) + !$EXP[ContentSwitching] + !$EXP[Scrollbar_HasFocus]</visible>
					<visible>$PARAM[visible]</visible>
					<include>Secondary_List_Navigation</include>
					<preloaditems>2</preloaditems>
					<left>$PARAM[left]</left>
					<top>$PARAM[top]</top>
					<width>$PARAM[width]</width>
					<height>$PARAM[height]</height>
					<orientation>vertical</orientation>
					<scrolltime tween="sine" easing="inout">360</scrolltime>
					<include>$PARAM[layout]_Layout</include>
					<content target="$VAR[Secondary_List_Target]" sortby="$VAR[Secondary_List_Sort]" sortorder="$VAR[Secondary_List_Sort_Order]">$INFO[ListItem.FolderPath]</content>
				</control>
				<control type="button" id="4502">
					<visible allowhiddenfocus="true">false</visible>
					<onfocus>SetFocus(4503)</onfocus>
				</control>
				<control type="button" id="4503">
					<visible allowhiddenfocus="true">false</visible>
					<animation effect="slide" end="0,0" time="360">Focus</animation>
					<onfocus>SetFocus(4501,0,absolute)</onfocus>
					<onfocus>SetFocus(50)</onfocus>
				</control>
				<control type="button" id="4504">
					<visible allowhiddenfocus="true">false</visible>
					<onfocus>SetFocus(4505)</onfocus>
				</control>
				<control type="button" id="4505">
					<visible allowhiddenfocus="true">false</visible>
					<animation effect="slide" end="0,0" time="360">Focus</animation>
					<onfocus>SetFocus(4501,0,absolute)</onfocus>
					<onfocus>SetFocus(61)</onfocus>
				</control>
				<control type="button" id="4506">
					<visible allowhiddenfocus="true">false</visible>
					<onfocus>SetFocus(4507)</onfocus>
				</control>
				<control type="button" id="4507">
					<visible allowhiddenfocus="true">false</visible>
			 		<animation effect="slide" end="0,0" time="360">Focus</animation>
					<onfocus>SetFocus(4501,0,absolute)</onfocus>
					<onfocus>SetFocus(3000,0)</onfocus>
				</control>
			</control>
		</definition>
	</include>


	<include name="Secondary_List_Icon">
		<control type="group">
			<control type="image">
				<animation effect="fadediffuse" end="ff808080" time="0" condition="$EXP[ListView_Display_IsBackground] | $EXP[BillboardView_IsVisible] | [$EXP[ShowcaseView_IsVisible] + $EXP[ShowcaseView_Details_Overlay_IsVisible] + !$EXP[Secondary_List_NowPlaying]]">Conditional</animation>
				<animation effect="fadediffuse" end="ff555555" time="0" condition="$EXP[Secondary_List_NowPlaying] + [$EXP[ShowcaseView_IsVisible] | $EXP[StripView_IsVisible]]">Conditional</animation>
				<texture background="true">$VAR[Thumbnail(0)Content]</texture>
				<aspectratio>scale</aspectratio>
			</control>
			<include>Secondary_List_Now_Playing</include>
		</control>
	</include>

	<include name="Secondary_List_Layout">
		<param name="width" default="1080"/>
		<param name="height" default="720"/>
		<definition>
			<itemlayout width="$PARAM[width]" height="$PARAM[height]">
				<include>Secondary_List_Icon</include>
			</itemlayout>
			<focusedlayout width="$PARAM[width]" height="$PARAM[height]">
				<control type="group">
					<animation effect="fade" delay="360" start="100" end="0" time="360" tween="sine" easing="inout" reversible="true" condition="String.IsEqual(Window(home).Property(OptionsMenu),Active)">Conditional</animation>
					<control type="group">
						<visible>![Control.HasFocus(50) | Control.HasFocus(501) | Control.HasFocus(502) | Control.HasFocus(504)]</visible>
						<include>HiddenFocusButton</include>
						<include>Secondary_List_Icon</include>
					</control>
				</control>
			</focusedlayout>
		</definition>
	</include>

	<include name="Secondary_List_Now_Playing">
		<control type="group">
			<visible>$EXP[Secondary_List_NowPlaying] + [$EXP[ShowcaseView_IsVisible] | $EXP[StripView_IsVisible]]</visible>
			<include content="Now_Playing_Icon">
				<param name="size" value="Large"/>
				<param name="color" value="$VAR[Light_Color]"/>
			</include>
		</control>
	</include>

	<include name="Hidden_Layout">
		<itemlayout/>
		<focusedlayout/>
	</include>

	<include name="720x1080_Layout">
		<include content="Secondary_List_Layout">
			<param name="width" value="720"/>
			<param name="height" value="1080"/>
		</include>
	</include>

	<include name="1080x1080_Layout">
		<include content="Secondary_List_Layout">
			<param name="width" value="1080"/>
			<param name="height" value="1080"/>
		</include>
	</include>

	<include name="1920x1080_Layout">
		<include content="Secondary_List_Layout">
			<param name="width" value="1920"/>
			<param name="height" value="1080"/>
		</include>
	</include>

	<include name="720x720_Layout">
		<include content="Secondary_List_Layout">
			<param name="width" value="720"/>
			<param name="height" value="720"/>
		</include>
	</include>

	<include name="480x720_Layout">
		<include content="Secondary_List_Layout">
			<param name="width" value="480"/>
			<param name="height" value="720"/>
		</include>
	</include>

	<include name="1120x630_Layout">
		<include content="Secondary_List_Layout">
			<param name="width" value="1120"/>
			<param name="height" value="630"/>
		</include>
	</include>

	<include name="630x630_Layout">
		<include content="Secondary_List_Layout">
			<param name="width" value="630"/>
			<param name="height" value="630"/>
		</include>
	</include>

</includes>
