<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- script-skinshortcuts -->
	<defaultcontrol always="true">10</defaultcontrol>
	<include>FullscreenDimensions</include>
	<include>My_Window_Fade_Animation</include>
	<controls>

		<control type="image">
			<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
		</control>

		<!-- Heading -->
		<control type="label" id="500">
			<left>150</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
		</control>

		<!-- Move down -->
		<control type="button" id="304">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<font></font>
			<onleft>noop</onleft>
			<onright>303</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>

		<!-- Move up -->
		<control type="button" id="303">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<font></font>
			<onleft>304</onleft>
			<onright>9000</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>

		<!-- Left list -->
		<control type="list" id="211">
			<left>150</left>
			<top>228</top>
			<width>360</width>
			<height>660</height>
			<onleft>noop</onleft>
			<onright>304</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<itemlayout width="360" height="66">
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>

			<focusedlayout width="360" height="66">
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<scroll>true</scroll>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(211)">Conditional</animation>
				</control>
				<control type="image">
					<left>290</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowDownNF.png</texture>
					<visible>!Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>325</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowUpNF.png</texture>
					<visible>!Control.HasFocus(303)</visible>
				</control>
				<control type="image">
					<left>290</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowDownFO.png</texture>
					<visible>Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>325</left>
					<width>35</width>
					<height>66</height>
					<texture>common/ArrowUpFO.png</texture>
					<visible>Control.HasFocus(303)</visible>
				</control>
			</focusedlayout>

		</control>

		<!-- Right grouplist -->
		<control type="grouplist" id="9000">
			<left>600</left>
			<top>228</top>
			<width>1200</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>303</onleft>
			<onright>noop</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<!-- Change shortcut -->
			<control type="button" id="401">
				<width>1200</width>
				<height>66</height>
				<label>$ADDON[script.skinshortcuts 32048]</label>
			</control>

			<!-- Change label -->
			<control type="button" id="305">
				<width>1200</width>
				<height>66</height>
				<label>$ADDON[script.skinshortcuts 32025]</label>
				<label2>$INFO[Container(211).ListItem.Label]</label2>
			</control>

			<!-- Change background -->
			<control type="button" id="310">
				<width>1200</width>
				<height>66</height>
				<label>$ADDON[script.skinshortcuts 32045]</label>
				<label2>$INFO[Container(211).ListItem.Property(Background)]</label2>
			</control>

			<!-- Change action -->
			<control type="button" id="307">
				<width>1200</width>
				<height>66</height>
				<label>$ADDON[script.skinshortcuts 32027]</label>
				<label2>$INFO[Container(211).ListItem.Property(displaypath)]</label2>
			</control>

			<!-- Edit sub menu -->
			<control type="button" id="405">
				<width>1200</width>
				<height>66</height>
				<label>$ADDON[script.skinshortcuts 32072]</label>
				<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
			</control>

			<!-- Remove -->
			<control type="button" id="302">
				<width>1200</width>
				<height>66</height>
				<label></label>
			</control>

			<!-- Add item -->
			<control type="button" id="301">
				<width>1200</width>
				<height>66</height>
				<label>$ADDON[script.skinshortcuts 32000]</label>
			</control>

		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9001">
			<left>600</left>
			<top>926</top>
			<width>1620</width>
			<itemgap>0</itemgap>
			<onleft>303</onleft>
			<onright>noop</onright>
			<onup>9000</onup>
			<ondown>noop</ondown>
			<orientation>horizontal</orientation>

			<!-- OK Button -->
			<control type="button" id="10">
				<width>200</width>
				<label>186</label>
				<onback condition="String.IsEqual(Window.Property(groupname),mainmenu)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu)</onback>
				<onclick condition="String.IsEqual(Window.Property(groupname),mainmenu)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu)</onclick>
				<onclick>Close</onclick>
			</control>

			<!-- Reset -->
			<control type="button" id="308">
				<width>400</width>
				<label>$ADDON[script.skinshortcuts 32028]</label>
			</control>

			<!-- Reset all -->
			<control type="button" id="999">
				<width>400</width>
				<onclick>RunScript(script.skinshortcuts,type=resetall)</onclick>
				<label>$ADDON[script.skinshortcuts 32037]</label>
			</control>

		</control>

	</controls>

</window>
