<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- script-skinshortcuts -->
	<defaultcontrol always="true">304</defaultcontrol>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Breadcrumb_Label">
				<param name="title_label_id" value="500"/>
			</include>

			<include content="Transparent_Dialog_Panel">
				<param name="colordiffuse" value="$VAR[Dark_Grey_Color]"/>
				<param name="left" value="120"/>
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<!-- Hidden controls -->
			<control type="button" id="304">
				<include>Hidden_Button</include>
				<onleft>10</onleft>
				<onright>303</onright>
				<onup>Control.Move(211,-1)</onup>
				<ondown>Control.Move(211,1)</ondown>
			</control>
			<control type="button" id="303">
				<include>Hidden_Button</include>
				<onleft>304</onleft>
				<onright>301</onright>
				<onup>Control.Move(211,-1)</onup>
				<ondown>Control.Move(211,1)</ondown>
			</control>
			<control type="button" id="301">
				<include>Hidden_Button</include>
				<onleft>303</onleft>
				<onright>9001</onright>
				<onup>Control.Move(211,-1)</onup>
				<ondown>Control.Move(211,1)</ondown>
			</control>

			<!-- Left list -->
			<control type="list" id="211">
				<left>120</left>
				<width>600</width>
				<height>630</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<onright>304</onright>
				<onleft>10</onleft>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout width="600" height="90">
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="600" height="90">
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<textcolor>$VAR[Settings_Grouplist_Label_Color]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<left>60</left>
						<height>1</height>
						<bottom>0</bottom>
						<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
					</control>
					<control type="group">
						<centertop>50%</centertop>
						<height>60</height>
						<left>390</left>
						<width>120</width>
						<include content="ButtonLayout">
							<param name="buttonid" value="304"/>
							<param name="left" value="0"/>
							<param name="width" value="60"/>
							<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
							<param name="unfocusedtexture" value="Down_Arrow_Unfocused"/>
							<param name="focusedcolor" value="$VAR[Light_Color]"/>
							<param name="focusedtexture" value="Down_Arrow_Focused_Large"/>
						</include>
						<include content="ButtonLayout">
							<param name="buttonid" value="303"/>
							<param name="left" value="60"/>
							<param name="width" value="60"/>
							<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
							<param name="unfocusedtexture" value="Up_Arrow_Unfocused"/>
							<param name="focusedcolor" value="$VAR[Light_Color]"/>
							<param name="focusedtexture" value="Up_Arrow_Focused_Large"/>
						</include>
						<include content="ButtonLayout">
							<param name="buttonid" value="301"/>
							<param name="left" value="120"/>
							<param name="width" value="60"/>
							<param name="rotated" value="false"/>
							<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
							<param name="unfocusedtexture" value="Cross_Unfocused"/>
							<param name="focusedcolor" value="$VAR[Light_Color]"/>
							<param name="focusedtexture" value="Cross_Focused_Large"/>
						</include>
					</control>
				</focusedlayout>
			</control>


			<include content="DialogDivider">
				<param name="left" value="719"/>
				<param name="height" value="630"/>
			</include>

			<!-- Sub list scrollbar -->
			<include content="Settings_Scrollbar">
				<param name="visible" value="Control.HasFocus(211) | Control.HasFocus(301) | Control.HasFocus(303) | Control.HasFocus(304)"/>
				<param name="left" value="716"/>
			</include>

			<!-- Right grouplist -->
			<control type="grouplist" id="9001">
				<right>60</right>
				<left>720</left>
				<height>630</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<onleft>301</onleft>
				<onright>308</onright>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<itemgap>0</itemgap>
				<align>top</align>
				<!-- Change shortcut -->
				<control type="button" id="401">
					<label>$ADDON[script.skinshortcuts 32048]</label>
				</control>
				<!-- Change label -->
				<control type="button" id="305">
					<label>$ADDON[script.skinshortcuts 32025]</label>
					<label2>$INFO[Container(211).ListItem.Label]</label2>
				</control>
				<!-- Change action -->
				<control type="button" id="307">
					<label>$ADDON[script.skinshortcuts 32027]</label>
					<label2>$INFO[Container(211).ListItem.Property(displaypath)]</label2>
				</control>
				<!-- Remove -->
				<control type="button" id="302">
					<label></label>
				</control>
			</control>

			<include content="ButtonGroup">
				<param name="onleft" value="9001"/>
				<param name="onright" value="304"/>
				<param name="onup" value="302"/>
				<param name="ondown" value="401"/>
				<param name="icons" value="true"/>
				<!-- Restore -->
				<param name="button1" value="true"/>
				<param name="button1id" value="308"/>
				<param name="button1texture" value="Shift"/>
				<!-- Reset -->
				<param name="button2" value="true"/>
				<param name="button2id" value="999"/>
				<param name="button2onclick" value="RunScript(script.skinshortcuts,type=resetall)"/>
				<param name="button2texture" value="Refresh"/>
				<!-- Save and Close -->
				<param name="button3" value="true"/>
				<param name="button3id" value="10"/>
				<param name="button3onclick" value="RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu)"/>
				<param name="button3onclick2" value="Close"/>
				<param name="button3texture" value="Check"/>
			</include>

		</control>
	</controls>
</window>
