<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="List_View">
		<param name="id" default="50"/>
		<param name="viewtype_label" default="List"/>
		<definition>
			<!--ART (Background)-->
			<control type="group">
				<include>FullscreenDimensions</include>
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + $EXP[$PARAM[viewtype_label]View_Display_IsBackground] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Fade_Animation</include>
				<include content="ListIcon">
					<param name="unfocusedoverlay" value="![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(LIstItem.Art(thumb))]"/>
				</include>
				<include content="Artwork_Transition_Fade">
					<param name="targetid" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
				</include>
			</control>
			<!--ART (Thumbnails)-->
			<control type="group">
				<left>0</left>
				<top>0</top>
				<width>720</width>
				<height>100%</height>
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + $EXP[$PARAM[viewtype_label]View_Display_IsThumbnails] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Fade_Animation</include>
				<!--Static-->
				<control type="group">
					<visible>!$EXP[ContentSwitching]</visible>
					<include content="ListIcon">
						<param name="aspectratio" value="scale"/>
						<param name="showgradient" value="!Container.Content(sets)"/>
						<param name="visible" value="$EXP[Poster_Containers]"/>
					</include>
					<include content="ListIcon">
						<param name="top" value="180"/>
						<param name="height" value="720"/>
						<param name="aspectratio" value="scale"/>
						<param name="visible" value="$EXP[Square_Containers]"/>
					</include>
					<include content="ListIcon">
						<param name="aspectratio" value="keep"/>
						<param name="visible" value="![$EXP[Poster_Containers] | $EXP[Square_Containers]]"/>
					</include>
				</control>
				<!--Scrolling-->
				<include content="Artwork_Transition_Fade">
					<param name="targetid" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="aspectratio" value="scale"/>
					<param name="showgradient" value="!Container.Content(sets)"/>
					<param name="unfocusedoverlay" value="false"/>
					<param name="visible" value="$EXP[Poster_Containers]"/>
				</include>
				<include content="Artwork_Transition_Fade">
					<param name="targetid" value="$PARAM[id]"/>
					<param name="top" value="180"/>
					<param name="height" value="720"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="aspectratio" value="scale"/>
					<param name="unfocusedoverlay" value="false"/>
					<param name="visible" value="$EXP[Square_Containers]"/>
				</include>
				<include content="Artwork_Transition_Fade">
					<param name="id" value="50991"/>
					<param name="targetid" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="aspectratio" value="keep"/>
					<param name="unfocusedoverlay" value="false"/>
					<param name="visible" value="![$EXP[Poster_Containers] | $EXP[Square_Containers]]"/>
				</include>
			</control>
			<!--DETAILS-->
			<control type="group">
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Content_Fade_Animation</include>
				<control type="group">
					<visible>![$EXP[TransparentDialog_IsVisible] | Control.HasFocus(60)]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<include content="Breadcrumb_Label"/>
				</control>
				<control type="group">
					<visible>![$EXP[ContentSwitching] | $EXP[TransparentDialog_IsVisible] | Control.HasFocus(60)]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<control type="group">
						<visible>!$EXP[ContentSwitching]</visible>
						<include content="MediaFlags"/>
						<control type="group">
							<animation effect="slide" end="-600,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
							<include content="ProgressBar"/>
						</control>
					</control>
					<!--DETAILS (Background)-->
					<control type="grouplist">
						<left>120</left>
						<top>510</top>
						<width>1740</width>
						<height>60</height>
						<itemgap>12</itemgap>
						<orientation>horizontal</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<visible>$EXP[$PARAM[viewtype_label]View_Display_IsBackground] + $EXP[$PARAM[viewtype_label]View_Details_Info_IsVisible] + !$EXP[ContentSwitching]</visible>
						<!--Title Gap-->
						<control type="label">
							<width max="1200">auto</width>
							<height>60</height>
							<aligny>center</aligny>
							<font>List_Title_Focused</font>
							<textcolor>$VAR[Blank]</textcolor>
							<label>$VAR[Title]</label>
						</control>
						<!--Abbreviated Details-->
						<control type="label">
							<width>468</width>
							<top>25</top>
							<height>35</height>
							<font>List_Info</font>
							<textcolor>$VAR[ListFocusColor]</textcolor>
							<label>$VAR[TitleInfo,/ ]</label>
							<aligny>center</aligny>
						</control>
					</control>
					<!--DETAILS (Thumbnails)-->
					<control type="grouplist">
						<left>840</left>
						<top>510</top>
						<width>1020</width>
						<height>60</height>
						<itemgap>12</itemgap>
						<orientation>horizontal</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<visible>$EXP[$PARAM[viewtype_label]View_Display_IsThumbnails] + $EXP[$PARAM[viewtype_label]View_Details_Info_IsVisible] + !$EXP[ContentSwitching]</visible>
						<!--Title Gap-->
						<control type="label">
							<width max="900">auto</width>
							<height>60</height>
							<aligny>center</aligny>
							<font>List_Title_Focused</font>
							<textcolor>$VAR[Blank]</textcolor>
							<label>$VAR[Title]</label>
						</control>
						<!--Abbreviated Details-->
						<control type="label">
							<width>120</width>
							<top>25</top>
							<height>35</height>
							<font>List_Info</font>
							<textcolor>$VAR[ListFocusColor]</textcolor>
							<label>$VAR[TitleInfo,/ ]</label>
							<aligny>center</aligny>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>

	<include name="List_Container">
		<param name="id" default="50"/>
		<param name="viewtype_label" default="List"/>
		<definition>
			<control type="group">
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Content_Fade_Animation</include>
				<control type="group">
					<visible>!$EXP[TransparentDialog_IsVisible]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<animation effect="slide" end="720,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
					<include content="Common_List">
						<param name="id" value="$PARAM[id]"/>
						<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					</include>
				</control>
			</control>
		</definition>
	</include>

</includes>
