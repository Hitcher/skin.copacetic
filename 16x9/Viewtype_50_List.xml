<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_50_List">
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<!-- List -->
			<control type="fixedlist" id="50">
				<left>50</left>
				<top>144</top>
				<width>1820</width>
				<height>896</height>
				<onup>50</onup>
				<ondown>50</ondown>
				<onleft>3000</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<focusposition>6</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="inout">200</scrolltime>
				<include>MediaInfoHideAnimation</include>
				<itemlayout height="59" width="1820">
					<control type="label">
						<width>910</width>
						<height>59</height>
						<font>Thin48</font>
						<align>right</align>
						<textcolor>$VAR[TextColor]</textcolor>
						<label>$VAR[ListLabelNF]</label>
					</control>
					<control type="image">
						<left>922</left>
						<top>15</top>
						<width>36</width>
						<height>30</height>
						<texture colordiffuse="$VAR[TextColor]">views/watched_tick_nf.png</texture>
						<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="1820">
					<control type="button">
						<visible>false</visible>
						<onfocus>SetProperty(CurrentView,50,home)</onfocus>
					</control>
					<control type="label">
						<width>910</width>
						<height>70</height>
						<font>Med60</font>
						<align>right</align>
						<scroll>true</scroll>
						<textcolor>$VAR[TextColor]</textcolor>
						<label>$VAR[ListLabelFO]</label>
					</control>
					<control type="image">
						<left>922</left>
						<top>20</top>
						<width>36</width>
						<height>30</height>
						<texture colordiffuse="$VAR[TextColor]">views/watched_tick_fo.png</texture>
						<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
					</control>
					<control type="label">
						<left>955</left>
						<width>870</width>
						<height>70</height>
						<font>Thin48</font>
						<textcolor>$VAR[TextColor]</textcolor>
						<label>  $VAR[InfoList]</label>
						<visible>!Window.IsVisible(contextmenu) + !SubString(ListItem.Icon,Default) + !Container.Content(episodes) + !Control.HasFocus(3000) + !Container.OnNext + !Container.OnPrevious</visible>
						<animation effect="fade" start="0" end="100" time="200" delay="800">Visible</animation>
					</control>
				</focusedlayout>
			</control>
			<!-- Episode Icon -->
			<control type="group">
				<left>1130</left>
				<top>360</top>
				<width>640</width>
				<visible>!SubString(ListItem.Icon,Default) + !Window.IsVisible(movieinformation) + [Container.Content(episodes) | Window.IsVisible(pictures)]</visible>
				<control type="image">
					<left>10</left>
					<top>10</top>
					<width>620</width>
					<height>340</height>
					<fadetime>80</fadetime>
					<aspectratio align="right">scale</aspectratio>
					<texture>$INFO[Container(50).ListItem.Icon]</texture>
				</control>
				<include>WatchedIndicator</include>
				<control type="image">
					<width>640</width>
					<height>360</height>
					<texture colordiffuse="$VAR[TextColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
				</control>
				<control type="label">
					<right>0</right>
					<top>386</top>
					<width>640</width>
					<height>36</height>
					<font>Light36</font>
					<align>right</align>
					<textcolor>$VAR[TextColor]</textcolor>
					<label>$VAR[InfoList]</label>
					<visible>Container.Content(episodes)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>