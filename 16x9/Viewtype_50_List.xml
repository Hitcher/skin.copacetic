<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ListView_Display">
		<param name="id" default="50"/>
		<param name="artwork_icon" default="Thumbnail"/>
		<definition>
			<control type="group">
				<visible>$EXP[ListView_IsVisible] + !$EXP[OpaqueDialog_IsVisible]</visible>
				<include>Viewtype_Fade_Animation</include>

				<control type="group">
					<visible>$EXP[ListView_Display_IsThumbnails] + !$EXP[OptionsSwitching]</visible>
					<include>Artwork_Fade_Animation</include>
					<include content="Transparent_Dialog_Panel">
						<param name="colordiffuse" value="$VAR[Dark_Grey_Color]"/>
						<param name="visible" value="$EXP[Poster_Containers] | $EXP[Square_Containers]"/>
						<param name="left" value="720"/>
						<param name="top" value="180"/>
						<param name="bottom" value="180"/>
					</include>
					<include content="Transparent_Dialog_Panel">
						<param name="colordiffuse" value="$VAR[Dark_Grey_Color]"/>
						<param name="visible" value="![$EXP[Poster_Containers] | $EXP[Square_Containers]]"/>
						<param name="top" value="180"/>
						<param name="bottom" value="180"/>
					</include>
				</control>

				<!--BACKGROUND ART-->
				<control type="group">
					<visible>$EXP[ListView_Display_IsBackground] + !$EXP[OptionsSwitching]</visible>
					<include>Artwork_Fade_Animation</include>
					<include content="Artwork_Transition_Fade">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
						<param name="fallback"/>
						<param name="artworkmask" value="true"/>
					</include>
				</control>

				<!--THUMBNAIL ART-->
				<control type="group">
					<visible>$EXP[ListView_Display_IsThumbnails] + !$EXP[OptionsSwitching]</visible>
					<include>Artwork_Fade_Animation</include>
					<control type="group">
						<width>720</width>
						<!--Posters-->
						<control type="group">
								<include content="Artwork_Transition_Fade">
								<param name="visible" value="$EXP[Poster_Containers] | [Window.IsVisible(videoplaylist) + String.IsEqual(ListItem.DBType,movie)]"/>
								<param name="target_id" value="$PARAM[id]"/>
								<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
								<param name="fallback"/>
								<param name="showgradient" value="!Container.Content(sets)"/>
							</include>
						</control>
						<!--Square/Other-->
						<control type="group">
							<top>180</top>
							<height>720</height>
							<include content="Artwork_Transition_Fade">
								<param name="visible" value="$EXP[Square_Containers]"/>
								<param name="target_id" value="$PARAM[id]"/>
								<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
								<param name="fallback"/>
							</include>
							<include content="Artwork_Transition_Fade">
								<param name="visible" value="![$EXP[Poster_Containers] | $EXP[Square_Containers] | [Window.IsVisible(videoplaylist) + String.IsEqual(ListItem.DBType,movie)]]"/>
								<param name="target_id" value="$PARAM[id]"/>
								<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
								<param name="aspectratio" value="keep"/>
							</include>
						</control>
					</control>
				</control>

				<!--Hide Artwork during viewtype transition-->
				<control type="group">
					<visible>Window.IsVisible(1117)</visible>
					<include>ViewtypeSwitching_Cover_Fade_Animation</include>
					<include>CustomViewsBackground</include>
				</control>
				<!--Hide Artwork during container content transition-->
				<control type="group">
					<visible>$EXP[ListView_IsVisible] + $EXP[ContainerSwitching]</visible>
					<include>ContainerSwitching_Cover_Fade_Animation</include>
					<include>CustomViewsBackground</include>
				</control>

				<!--BREADCRUMB-->
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="Breadcrumb_Label">
						<param name="label_color" value="$VAR[View_Furniture_Color]"/>
					</include>
				</control>

				<!--INFO-->
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60) + !$EXP[OpaqueDialog_IsVisible]</visible>
					<include>Delayed_Content_Fade_Animation</include>

					<control type="group">
						<visible>!$EXP[Secondary_List_ContainerSwitching] + !$EXP[Secondary_List_ContentSwitching] + [!Window.IsVisible(1121) | Control.HasFocus($PARAM[id])]</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<include content="MediaFlags"/>
						<control type="group">
							<animation effect="slide" end="-600,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
							<include content="ProgressBar"/>
						</control>
					</control>

					<control type="group">
						<visible>!Control.HasFocus(4501) + !$EXP[Secondary_List_ContainerSwitching]</visible>
						<include>Delayed_Content_Fade_Animation</include>

						<!--Background-->
						<control type="grouplist">
							<visible>$EXP[ListView_Display_IsBackground] + $EXP[ListView_Details_Info_IsVisible]</visible>
							<left>120</left>
							<top>510</top>
							<width>1680</width>
							<height>60</height>
							<itemgap>12</itemgap>
							<orientation>horizontal</orientation>
							<usecontrolcoords>true</usecontrolcoords>
							<!--Title Gap-->
							<control type="label">
								<width max="1200">auto</width>
								<height>60</height>
								<aligny>center</aligny>
								<font>List_Title_Focused</font>
								<textcolor>$VAR[Blank_Color]</textcolor>
								<label>$VAR[Title_Label]</label>
							</control>
							<!--Abbreviated Details-->
							<control type="label">
								<width>480</width>
								<top>22</top>
								<height>35</height>
								<font>List_Info</font>
								<textcolor>$VAR[Light_Color]</textcolor>
								<label>$VAR[Info_Label,/ ]</label>
								<aligny>center</aligny>
							</control>
						</control>

						<!--Thumbnails-->
						<control type="grouplist">
							<visible>$EXP[ListView_Display_IsThumbnails] + !Container.Content(artists) + $EXP[ListView_Details_Info_IsVisible]</visible>
							<left>840</left>
							<top>510</top>
							<width>990</width>
							<height>60</height>
							<itemgap>12</itemgap>
							<orientation>horizontal</orientation>
							<usecontrolcoords>true</usecontrolcoords>
							<!--Title Gap-->
							<control type="label">
								<width max="780">auto</width>
								<height>60</height>
								<aligny>center</aligny>
								<font>List_Title_Focused</font>
								<textcolor>$VAR[Blank_Color]</textcolor>
								<label>$VAR[Title_Label]</label>
							</control>
							<!--Abbreviated Details-->
							<control type="label">
								<width>180</width>
								<top>22</top>
								<height>35</height>
								<font>List_Info</font>
								<textcolor>$VAR[Light_Color]</textcolor>
								<label>$VAR[Info_Label,/ ]</label>
								<aligny>center</aligny>
							</control>
						</control>
					</control>

					<!--Secondary List-->
					<control type="group">
						<animation effect="slide" end="720,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
						<visible>Control.HasFocus(4501) + !Window.IsVisible(1121) + ![$EXP[ListView_Display_IsBackground] + $EXP[Secondary_List_ContentSwitching]]</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<width>1680</width>
						<height>70</height>
						<top>510</top>
						<control type="group">
							<width>120</width>
							<height>100%</height>
							<top>-5</top>
							<visible>$EXP[Secondary_List_NowPlaying_External]</visible>
							<include content="Now_Playing_Visualization_Fill">
								<param name="color" variable="$VAR[Light_Color]"/>
							</include>
						</control>
						<control type="group">
							<visible>!$EXP[Secondary_List_NowPlaying_External]</visible>
							<visible>String.IsEqual(Container(4501).ListItem.Overlay,OverlayWatched.png)</visible>
							<width>120</width>
							<height>60</height>
							<top>0</top>
							<include content="Check_Focused">
								<param name="color" value="$VAR[Light_Color]"/>
							</include>
						</control>
						<control type="grouplist">
							<width>100%</width>
							<left>120</left>
							<height>100%</height>
							<itemgap>12</itemgap>
							<orientation>horizontal</orientation>
							<usecontrolcoords>true</usecontrolcoords>
							<control type="label">
								<visible>$EXP[ListView_Display_IsBackground]</visible>
								<width max="1200">auto</width>
								<height>60</height>
								<aligny>center</aligny>
								<font>List_Title_Focused</font>
								<textcolor>$VAR[Light_Color]</textcolor>
								<label>$VAR[Title_Label]</label>
							</control>
							<control type="label">
								<visible>$EXP[ListView_Display_IsThumbnails]</visible>
								<width max="780">auto</width>
								<height>60</height>
								<aligny>center</aligny>
								<font>List_Title_Focused</font>
								<textcolor>$VAR[Light_Color]</textcolor>
								<label>$VAR[Title_Label]</label>
							</control>
							<control type="label">
								<width max="480">auto</width>
								<top>22</top>
								<height>35</height>
								<font>List_Info</font>
								<textcolor>$VAR[Light_Color]</textcolor>
								<label>$VAR[Info_Label]</label>
								<aligny>center</aligny>
							</control>
						</control>
					</control>
				</control>
			</control>

		</definition>
	</include>

	<include name="ListView_Container">
		<definition>
			<control type="group">
				<animation effect="slide" end="720,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
				<visible>Control.IsVisible(50)</visible>
				<include content="Common_List"/>
			</control>


		</definition>
	</include>

</includes>
