<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ListView_Container">
		<include content="Viewtype_Display_Template">
			<param name="viewtype_label" value="List" />
			<param name="media_view" value="true" />
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible] + !Window.IsVisible(pictureinfo) + !Control.HasFocus(3100)</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<control type="fixedlist" id="50">
					<animation effect="slide" end="720,0" time="0" condition="$EXP[ListView_Display_IsThumbnails] + !Window.Is(videoplaylist)">Conditional</animation>
					<viewtype label="List">list</viewtype>
					<centertop>50%</centertop>
					<height>610</height>
					<focusposition>5</focusposition>
					<preloaditems>2</preloaditems>
					<pagecontrol>60</pagecontrol>
					<orientation>vertical</orientation>
					<include content="List_Navigation" />
					<scrolltime tween="sine" easing="inout">360</scrolltime>
					<itemlayout height="55" width="720">
						<include content="Common_List_Unfocused" />
					</itemlayout>
					<focusedlayout height="60" width="1680" condition="$EXP[ListView_Display_IsBackground] + !$EXP[ListView_Details_Info_IsVisible]">
						<include content="Common_List_Focused">
							<param name="label_maxwidth" value="1680" />
							<param name="icon_slide" value="-780" />
						</include>
					</focusedlayout>
					<focusedlayout height="60" width="1200" condition="$EXP[ListView_Display_IsBackground] + $EXP[ListView_Details_Info_IsVisible]">
						<include content="Common_List_Focused">
							<param name="label_maxwidth" value="1200" />
							<param name="icon_slide" value="-540" />
						</include>
					</focusedlayout>
					<focusedlayout height="60" width="990" condition="$EXP[ListView_Display_IsThumbnails] + [!$EXP[ListView_Details_Info_IsVisible] | Container.Content(files)] + !Window.Is(videoplaylist)">
						<include content="Common_List_Focused">
							<param name="label_maxwidth" value="990" />
							<param name="icon_slide" value="-435" />
						</include>
					</focusedlayout>
					<focusedlayout height="60" width="780" condition="$EXP[ListView_Display_IsThumbnails] + $EXP[ListView_Details_Info_IsVisible] + !Container.Content(files) + !Window.Is(videoplaylist)">
						<include content="Common_List_Focused">
							<param name="label_maxwidth" value="780" />
							<param name="icon_slide" value="-330" />
						</include>
					</focusedlayout>
				</control>
			</control>
		</include>
	</include>

	<include name="ListView_Display">
		<param name="id" default="50" />
		<param name="art_icon" default="Thumbnail" />
		<definition>
			<include content="Viewtype_Display_Template">
				<param name="visible" value="!$EXP[ContainerSwitching] + !$EXP[OptionsSwitching]" />
				<param name="viewtype_label" value="List" />
				<param name="media_view" value="true" />
				<include content="Transparent_Dialog_Panel">
					<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(mediafilter) + !Window.Is(videoplaylist)" />
					<param name="colordiffuse" value="$VAR[Dark_Grey_Color]" />
					<include content="Visible_Fade_Animation" />
					<animation effect="zoom" start="60,180,1800,720" end="720,180,1140,720" time="0" condition="$EXP[Poster_Containers] | $EXP[Square_Containers]">Conditional</animation>
				</include>
				<include content="Artwork_Transition_Fade" condition="Window.Is(videos)">
					<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + $EXP[Poster_Containers]" />
					<param name="target_id" value="$PARAM[id]" />
					<param name="width" value="720" />
					<param name="art_icon" value="$PARAM[art_icon]" />
					<param name="fallback" value="views/dark_grey_100.png" />
					<param name="progress_overlay" value="true" />
				</include>
				<include content="Artwork_Transition_Fade" condition="Window.Is(music) | Window.Is(addonbrowser) | Window.Is(musicplaylist)">
					<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + $EXP[Square_Containers]" />
					<param name="width" value="720" />
					<param name="height" value="720" />
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
					<param name="fallback" value="views/dark_grey_100.png" />
				</include>
				<include content="Simple_ListIcon">
					<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + !$EXP[Poster_Containers] + !$EXP[Square_Containers]" />
					<param name="width" value="720" />
					<param name="texture" value="$VAR[Thumbnail(0)Content]" />
					<param name="align" value="right" />
					<param name="aspectratio" value="keep" />
					<param name="fallback" value="views/dark_grey_100.png" />
					<param name="fadetime" value="360" />
				</include>
				<include content="Artwork_Transition_Fade" condition="!Window.Is(addonbrowser) + !Window.Is(pictures)">
					<param name="visible" value="$EXP[ListView_Display_IsBackground] | Window.Is(videoplaylist)" />
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
					<param name="fallback" value="views/dark_grey_100.png" />
				</include>
			</include>
			<include content="Viewtype_Details_Template">
				<param name="viewtype_label" value="List" />
				<include content="Progress" condition="Window.Is(videos)">
					<param name="id" value="$PARAM[id]" />
					<animation effect="slide" end="-600,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
				</include>
				<include content="Breadcrumb_Label" condition="!Window.Is(pictures)">
					<param name="visible" value="[$EXP[ListView_Display_IsBackground] + Container.Content(seasons)] | Container.Content(episodes) | Container.Content(albums) | Container.Content(songs) | [Container.Content(actors) + !String.IsEmpty(ListItem.Appearances)] | [Container.Content(files) + !String.IsEmpty(ListItem.Art(poster))]" />
					<param name="label_color" value="$VAR[Flag_Color]" />
				</include>
				<include content="Common_List_Info_Label">
					<param name="visible" value="[$EXP[ListView_Display_IsBackground] + $EXP[ListView_Details_Info_IsVisible]] | Window.Is(videoplaylist)" />
					<param name="left" value="120" />
					<param name="width" value="1680" />
					<param name="hiddenlabelmaxwidth" value="1200" />
					<param name="infolabelwidth" value="480" />
				</include>
				<include content="Common_List_Info_Label">
					<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + $EXP[ListView_Details_Info_IsVisible] + [![Container.Content(artists) | Container.Content(files) | Window.Is(videoplaylist)] | Control.HasFocus(3100)]" />
					<param name="left" value="840" />
					<param name="width" value="990" />
					<param name="hiddenlabelmaxwidth" value="780" />
					<param name="infolabelwidth" value="480" />
				</include>
			</include>
		</definition>
	</include>

</includes>