<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ListView_Display">
		<param name="id" default="50"/>
		<param name="art_icon" default="Thumbnail"/>
		<definition>
			<control type="group">
				<visible>$EXP[ListView_IsVisible] + !$EXP[OptionsSwitching] + !$EXP[ContainerSwitching]</visible>
				<include>Content_Fade_Animation</include>
				<!-- Thumbnail Artwork -->
				<control type="group">
					<visible>$EXP[ListView_Display_IsThumbnails]</visible>
					<include>Content_Fade_Animation</include>
					<!-- Panel -->
					<control type="group">
						<visible>!Window.IsVisible(virtualkeyboard) + !Window.IsVisible(mediafilter)</visible>
						<include>Content_Fade_Animation</include>
						<include content="Transparent_Dialog_Panel">
							<animation effect="zoom" start="60,180,1800,720" end="720,180,1140,720" time="0" condition="[!Window.Is(videoplaylist) + [$EXP[Poster_Containers] | $EXP[Square_Containers]]] | [Window.Is(videoplaylist) + String.IsEqual(ListItem.DBType,movie)]">Conditional</animation>
							<param name="colordiffuse" value="$VAR[Dark_Grey_Color]"/>
							<param name="top" value="180"/>
							<param name="bottom" value="180"/>
						</include>
					</control>
					<control type="group">
						<width>720</width>
						<height>1080</height>
						<!-- Posters -->
						<include condition="Window.Is(videos)" content="Artwork_Transition_Fade">
							<param name="visible" value="[!Window.Is(videoplaylist) + $EXP[Poster_Containers]] | [Window.Is(videoplaylist) + String.IsEqual(ListItem.DBType,movie)]"/>
							<param name="target_id" value="$PARAM[id]"/>
							<param name="art_icon" value="$PARAM[art_icon]"/>
							<param name="fallback" value="fallback/fallback-poster.png"/>
							<param name="progress_overlay" value="true"/>
						</include>
						<!-- Mixed / Other -->
						<include content="SimpleListIcon">
							<param name="visible" value="![Window.Is(videoplaylist) + String.IsEqual(ListItem.DBType,movie)] + ![!Window.Is(videoplaylist) + [$EXP[Poster_Containers] | $EXP[Square_Containers]]]"/>
							<param name="texture" value="$VAR[Thumbnail(0)Content]"/>
							<param name="align" value="right"/>
							<param name="aspectratio" value="keep"/>
							<param name="fallback" value="fallback/fallback-square.png"/>
							<param name="fadetime" value="360"/>
						</include>
						<!-- Square/Other -->
						<control type="group">
							<height>720</height>
							<centertop>50%</centertop>
							<include condition="Window.Is(music) | Window.Is(addonbrowser)" content="Artwork_Transition_Fade">
								<param name="visible" value="$EXP[Square_Containers]"/>
								<param name="target_id" value="$PARAM[id]"/>
								<param name="art_icon" value="$PARAM[art_icon]"/>
								<param name="fallback" value="fallback/fallback-square.png"/>
							</include>
						</control>
					</control>
				</control>
				<!-- Background Artwork -->
				<control type="group">
					<visible>$EXP[ListView_Display_IsBackground]</visible>
					<include>Content_Fade_Animation</include>
					<include condition="!Window.Is(addonbrowser) + !Window.Is(pictures)" content="Artwork_Transition_Fade">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="art_icon" value="$PARAM[art_icon]"/>
						<param name="fallback" value="fallback/fallback-fanart.png"/>
					</include>
				</control>
			</control>
			<!-- Details -->
			<control type="group">
				<visible>$EXP[ListView_IsVisible]</visible>
				<include condition="Window.Is(videos)" content="Progress">
					<param name="id" value="$PARAM[id]"/>
					<animation effect="slide" end="-600,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
				</include>
				<!-- Breadcrumb -->
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[TransparentDialog_IsVisible] + !$EXP[Scrollbar_HasFocus] + !Window.IsVisible(pictureinfo) + ![Container.Content(files) + !String.IsEmpty(ListItem.Art(poster))]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="Breadcrumb_Label">
						<param name="bar" value="!Container.Content(movies) + !Container.Content(sets) + !Container.Content(tvshows) + !Container.Content(images) + !Container.Content(artists) + ![$EXP[ListView_Display_IsThumbnails] + Container.Content(seasons)] + ![Container.Content(actors) + String.IsEmpty(ListItem.Appearances)] + !Container.Content()"/>
						<param name="label_color" value="$VAR[Flag_Color]"/>
					</include>
				</control>
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !$EXP[Scrollbar_HasFocus] + !$EXP[InfoDialog_IsVisible] + !Window.IsVisible(pictureinfo)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<control type="group">
						<visible>![Control.HasFocus(4501) + Window.IsVisible(1121)] + !$EXP[Secondary_List_ContainerSwitching] + ![$EXP[ListView_Display_IsBackground] + $EXP[Secondary_List_ContentSwitching]]</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<!-- Background info -->
						<include content="Common_List_Info_Label">
							<param name="visible" value="$EXP[ListView_Display_IsBackground] + $EXP[ListView_Details_Info_IsVisible]"/>
							<param name="left" value="120"/>
							<param name="width" value="1680"/>
							<param name="hiddenlabelmaxwidth" value="1200"/>
							<param name="infolabelwidth" value="480"/>
						</include>
						<!-- Thumbnails info -->
						<include content="Common_List_Info_Label">
							<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + [!Container.Content(artists) | Control.HasFocus(4501)] + $EXP[ListView_Details_Info_IsVisible] + !Container.Content(files)"/>
							<param name="left" value="840"/>
							<param name="width" value="990"/>
							<param name="hiddenlabelmaxwidth" value="780"/>
							<param name="infolabelwidth" value="480"/>
						</include>
					</control>
				</control>
			</control>
		</definition>
	</include>

	<include name="ListView_Container">
		<definition>
			<control type="group">
				<visible>$EXP[ListView_IsVisible]</visible>
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[TransparentDialog_IsVisible] + !$EXP[InfoDialog_IsVisible] + !Control.HasFocus(4501) + !Window.IsVisible(pictureinfo)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<control type="fixedlist" id="50">
						<animation effect="slide" end="720,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
						<viewtype label="List">list</viewtype>
						<visible allowhiddenfocus="true">true</visible>
						<left>0</left>
						<width>100%</width>
						<centertop>50%</centertop>
						<height>610</height>
						<focusposition>5</focusposition>
						<include>List_Navigation</include>
						<preloaditems>2</preloaditems>
						<pagecontrol>60</pagecontrol>
						<orientation>vertical</orientation>
						<scrolltime tween="sine" easing="inout">360</scrolltime>
						<itemlayout height="55" width="720">
							<include content="Common_List_Unfocused"/>
						</itemlayout>
						<focusedlayout height="60" width="1680" condition="$EXP[ListView_Display_IsBackground] + !$EXP[ListView_Details_Info_IsVisible]">
							<include content="Common_List_Focused">
								<param name="labelmaxwidth" value="1680"/>
							</include>
						</focusedlayout>
						<focusedlayout height="60" width="1200" condition="$EXP[ListView_Display_IsBackground] + $EXP[ListView_Details_Info_IsVisible]">
							<include content="Common_List_Focused">
								<param name="labelmaxwidth" value="1200"/>
							</include>
						</focusedlayout>
						<focusedlayout height="60" width="990" condition="[$EXP[ListView_Display_IsThumbnails] + [!$EXP[ListView_Details_Info_IsVisible] | Container.Content(files)]]">
							<include content="Common_List_Focused">
								<param name="labelmaxwidth" value="990"/>
							</include>
						</focusedlayout>
						<!-- Thumbnails + Details -->
						<focusedlayout height="60" width="780" condition="$EXP[ListView_Display_IsThumbnails] + $EXP[ListView_Details_Info_IsVisible] + !Container.Content(files)">
							<include content="Common_List_Focused">
								<param name="labelmaxwidth" value="780"/>
							</include>
						</focusedlayout>
					</control>
					<control type="label" id="5020">
						<visible>false</visible>
						<label>$VAR[Thumbnail(-1)Content]</label>
					</control>
					<control type="label" id="5021">
						<visible>false</visible>
						<label>$VAR[Thumbnail(0)Content]</label>
					</control>
					<control type="label" id="5022">
						<visible>false</visible>
						<label>$VAR[Thumbnail(1)Content]</label>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>
