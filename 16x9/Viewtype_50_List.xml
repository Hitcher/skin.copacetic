<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ListView_Display">
		<param name="id" default="50"/>
		<param name="viewtype_label" default="List"/>
		<definition>
			<!--ART (Background)-->
			<control type="group">
				<include>FullscreenDimensions</include>
				<visible>$EXP[$PARAM[viewtype_label]View_Display_IsBackground] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Fade_Animation</include>
				<include content="ListIcon">
					<param name="unfocusedoverlay" value="true"/>
				</include>
				<include content="Artwork_Transition_Fade">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
				</include>
			</control>
			<!--ART (Thumbnails)-->
			<control type="group">
				<left>0</left>
				<top>0</top>
				<width>720</width>
				<height>100%</height>
				<visible>$EXP[$PARAM[viewtype_label]View_Display_IsThumbnails] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Fade_Animation</include>
				<!--Static/Scroll for files view-->
				<include content="ListIcon">
					<param name="aspectratio" value="keep"/>
					<param name="visible" value="Container.Content(files)"/>
					<param name="fadetime" value="360"/>
				</include>
				<!--Static-->
				<control type="group">
					<visible>!$EXP[ContentSwitching]</visible>
					<include content="ListIcon">
						<param name="aspectratio" value="scale"/>
						<param name="showgradient" value="!Container.Content(sets)"/>
						<param name="visible" value="$EXP[Poster_Containers]"/>
					</include>
					<include content="ListIcon">
						<param name="top" value="180"/>
						<param name="height" value="720"/>
						<param name="aspectratio" value="scale"/>
						<param name="visible" value="$EXP[Square_Containers]"/>
					</include>
					<include content="ListIcon">
						<param name="aspectratio" value="keep"/>
						<param name="visible" value="![$EXP[Poster_Containers] | $EXP[Square_Containers] | Container.Content(files)]"/>
					</include>
				</control>
				<!--Scrolling-->
				<include content="Artwork_Transition_Fade">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="aspectratio" value="scale"/>
					<param name="showgradient" value="!Container.Content(sets)"/>
					<param name="unfocusedoverlay" value="false"/>
					<param name="visible" value="$EXP[Poster_Containers]"/>
				</include>
				<include content="Artwork_Transition_Fade">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="top" value="180"/>
					<param name="height" value="720"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="aspectratio" value="scale"/>
					<param name="unfocusedoverlay" value="false"/>
					<param name="visible" value="$EXP[Square_Containers]"/>
				</include>
				<include content="Artwork_Transition_Fade">
					<param name="id" value="50991"/>
					<param name="target_id" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="aspectratio" value="keep"/>
					<param name="unfocusedoverlay" value="false"/>
					<param name="visible" value="![$EXP[Poster_Containers] | $EXP[Square_Containers] | Container.Content(files)]"/>
				</include>
			</control>
			<!--DETAILS-->
			<control type="group">
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Content_Fade_Animation</include>
				<control type="group">
					<visible>![$EXP[TransparentDialog_IsVisible] | Control.HasFocus(60)]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<include content="Breadcrumb_Label">
						<param name="visible" value="!$EXP[$PARAM[viewtype_label]View_Details_Off]"/>
					</include>
				</control>
				<control type="group">
					<visible>![$EXP[ContentSwitching] | $EXP[TransparentDialog_IsVisible] | Control.HasFocus(60)]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<control type="group">
						<visible>!$EXP[ContentSwitching]</visible>
						<include content="MediaFlags"/>
						<control type="group">
							<animation effect="slide" end="-600,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
							<include content="ProgressBar"/>
						</control>
					</control>
					<!--DETAILS (Background)-->
					<control type="grouplist">
						<left>120</left>
						<top>510</top>
						<width>1740</width>
						<height>60</height>
						<itemgap>12</itemgap>
						<orientation>horizontal</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<visible>$EXP[$PARAM[viewtype_label]View_Display_IsBackground] + $EXP[$PARAM[viewtype_label]View_Details_Info_IsVisible] + !$EXP[ContentSwitching]</visible>
						<!--Title Gap-->
						<control type="label">
							<width max="1200">auto</width>
							<height>60</height>
							<aligny>center</aligny>
							<font>List_Title_Focused</font>
							<textcolor>$VAR[Blank]</textcolor>
							<label>$VAR[Title_Label]</label>
						</control>
						<!--Abbreviated Details-->
						<control type="label">
							<width>468</width>
							<top>23</top>
							<height>35</height>
							<font>List_Info</font>
							<textcolor>$VAR[ListFocusColor]</textcolor>
							<label>$VAR[Info_Label,/ ]</label>
							<aligny>center</aligny>
						</control>
					</control>
					<!--DETAILS (Thumbnails)-->
					<control type="grouplist">
						<left>840</left>
						<top>510</top>
						<width>1020</width>
						<height>60</height>
						<itemgap>12</itemgap>
						<orientation>horizontal</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<visible>$EXP[$PARAM[viewtype_label]View_Display_IsThumbnails] + !Container.Content(artists) + $EXP[$PARAM[viewtype_label]View_Details_Info_IsVisible] + !$EXP[ContentSwitching]</visible>
						<!--Title Gap-->
						<control type="label">
							<width max="900">auto</width>
							<height>60</height>
							<aligny>center</aligny>
							<font>List_Title_Focused</font>
							<textcolor>$VAR[Blank]</textcolor>
							<label>$VAR[Title_Label]</label>
						</control>
						<!--Abbreviated Details-->
						<control type="label">
							<width>120</width>
							<top>23</top>
							<height>35</height>
							<font>List_Info</font>
							<textcolor>$VAR[ListFocusColor]</textcolor>
							<label>$VAR[Info_Label,/ ]</label>
							<aligny>center</aligny>
						</control>
					</control>
				</control>
			</control>
			<!--Music Player-->
			<control type="group">
				<include content="Now_Playing_Music_Widget">
					<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + $EXP[Square_Containers]"/>
					<param name="right" value="1740"/>
					<param name="top" value="900"/>
					<param name="width" value="180"/>
					<param name="center_label_visible" value="false"/>
					<param name="right_label_visible" value="true"/>
				</include>
				<control type="group">
					<animation effect="slide" end="-180,0" time="180" tween="sine" easing="out" condition="Window.IsVisible(shutdownmenu)" reversible="true">Conditional</animation>
					<include content="Now_Playing_Music_Widget">
						<param name="visible" value="[$EXP[ListView_Display_IsThumbnails] + !$EXP[Square_Containers]] | $EXP[ListView_Display_IsBackground]"/>
						<param name="width" value="180"/>
						<param name="center_label_visible" value="false"/>
						<param name="left_label_visible" value="true"/>
					</include>
				</control>
			</control>
		</definition>
	</include>

	<include name="ListView_Container">
		<param name="id" default="50"/>
		<param name="viewtype_label" default="List"/>
		<definition>
			<control type="group">
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Content_Fade_Animation</include>
				<control type="group">
					<visible>!$EXP[TransparentDialog_IsVisible]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<animation effect="slide" end="720,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
					<include content="Common_List">
						<param name="id" value="$PARAM[id]"/>
						<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					</include>
				</control>
			</control>
		</definition>
	</include>

</includes>
