				<control type="textbox" id="30">
					<visible>true</visible>
					<width>1140</width>
					<left>660</left>
					<height>630</height>
					<centertop>50%</centertop>
					<aligny>left</aligny>
					<font>Description</font>
					<textcolor>$VAR[Privacy_Policy_Color]</textcolor>
					<pagecontrol>61</pagecontrol>
					<autoscroll delay="5000" repeat="7500" time="5000">!Control.HasFocus(61)</autoscroll>
				</control>

				<control type="scrollbar" id="61">
					<visible allowhiddenfocus="true">Control.HasFocus(61) | Control.IsVisible(30)</visible>
