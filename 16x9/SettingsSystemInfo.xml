							<onclick>SetFocus(500)</onclick>
							<texturefocus/>
							<label>13281</label>
						</control>
						<!-- PVR -->
						<control type="button" id="99">
							<onclick>SetFocus(500)</onclick>
							<texturefocus/>
							<label>19191</label>
						</control>
						<!-- Privacy Policy -->
						<control type="button" id="100">
							<label>12389</label>
							<texturefocus/>
							<onclick>SetFocus(61)</onclick>
							<onright>SetFocus(61)</onright>
						</control>
					</control>
					<control type="image">
						<animation effect="slide" end="0,90" time="0" reversible="false" condition="Container(50).Position(1)">Conditional</animation>
						<animation effect="slide" end="0,180" time="0" reversible="false" condition="Container(50).Position(2)">Conditional</animation>
						<animation effect="slide" end="0,270" time="0" reversible="false" condition="Container(50).Position(3)">Conditional</animation>
						<animation effect="slide" end="0,360" time="0" reversible="false" condition="Container(50).Position(4)">Conditional</animation>
						<animation effect="slide" end="0,450" time="0" reversible="false" condition="Container(50).Position(5)">Conditional</animation>
						<animation effect="slide" end="0,540" time="0" reversible="false" condition="Container(50).Position(6)">Conditional</animation>
						<left>60</left>
						<height>1</height>
						<top>314</top>
						<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
					</control>
				</control>

				<!-- Sub list -->
				<control type="grouplist" id="500">
					<width>1260</width>
					<left>570</left>
					<height>630</height>
					<centertop>50%</centertop>
					<itemgap>0</itemgap>
