			<control type="group">
				<visible>!Control.HasFocus(3000010)</visible>
				<include>Delayed_Content_Fade_Animation</include>

				<!-- Main list -->
				<control type="group">
					<left>90</left>
					<width>480</width>
					<control type="grouplist" id="50">
						<height>630</height>
						<centertop>50%</centertop>
						<align>top</align>
						<scrolltime tween="sine" easing="inout">360</scrolltime>
						<onleft>30000</onleft>
						<onright>SetFocus(500)</onright>
						<orientation>vertical</orientation>
						<itemgap>0</itemgap>
						<orientation>vertical</orientation>
						<!-- Summary -->
						<control type="button" id="95">
							<onclick>SetFocus(500)</onclick>
							<texturefocus/>
							<label>20037</label>
						</control>
						<!-- Storage -->
						<control type="togglebutton" id="94">
							<onclick>SetFocus(500)</onclick>
