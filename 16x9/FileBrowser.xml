<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- filebrowser -->
	<defaultcontrol always="true">450</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(shutdownmenu)</visible>
			<include>Content_Delayed_Fade_Animation</include>

			<include>Transparent_Dialog_Panel</include>

			<include content="Breadcrumb_Label">
				<param name="visible" value="true"/>
				<param name="title_label_id" value="411"/>
				<param name="label_color" value="$VAR[Primary_Color]"/>
			</include>

			<include content="Description_Label">
				<param name="id" value="412"/>
			</include>

			<include content="SimpleListIcon">
				<param name="top" value="180"/>
				<param name="width" value="720"/>
				<param name="height" value="720"/>
				<param name="fallback" value=""/>
				<param name="align" value="right"/>
				<param name="aspectratio" value="keep"/>
			</include>

			<include content="Simple_List">
				<param name="id" value="450"/>
			</include>

			<include content="Simple_List">
				<param name="id" value="451"/>
			</include>

			<include content="ButtonGroup">
				<param name="visible" value="!Window.IsVisible(favourites)"/>
				<param name="onleft" value="450"/>
				<param name="onup" value="450"/>
				<param name="button1id" value="415"/>
				<param name="button1unfocused" value="Cross_Unfocused"/>
				<param name="button1focused" value="Cross_Focused_Large"/>
				<param name="button1rotated" value="false"/>
				<param name="button2id" value="416"/>
				<param name="button2unfocused" value="Mirrored_Unfocused"/>
				<param name="button2focused" value="Mirrored_Focused_Large"/>
				<param name="button3id" value="414"/>
				<param name="button4id" value="413"/>
				<param name="buttonsvisible" value="true"/>
			</include>

		</control>
	</controls>
</window>
