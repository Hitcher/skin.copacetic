<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Billboard_Container">
		<param name="type" default="list"/>
		<param name="id" default="501"/>
		<param name="viewtype_label" default="Billboard"/>
		<param name="viewtype" default="wide"/>
		<param name="orientation" default="horizontal"/>
		<definition>
			<control type="group">
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible]</visible>
				<include content="Custom_List">
					<param name="type" value="$PARAM[type]"/>
					<param name="id" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="viewtype" value="$PARAM[viewtype]"/>
					<param name="visible" value="true"/>
					<param name="orientation" value="$PARAM[orientation]"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="Billboard_View">
		<param name="id" default="501"/>
		<param name="viewtype_label" default="Billboard"/>
		<definition>
			<!--ART-->
			<control type="group">
				<include>FullscreenDimensions</include>
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Fade_Animation</include>
				<include content="ListIcon">
					<param name="unfocusedoverlay" value="![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(LIstItem.Art(thumb))]"/>
				</include>
				<include content="Artwork_Transition_Fade">
					<param name="targetid" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
				</include>
			</control>
			<!--DETAILS-->
			<control type="group">
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Content_Fade_Animation</include>
				<control type="group">
					<visible>![$EXP[ContentSwitching] | $EXP[TransparentDialog_IsVisible] | Control.HasFocus(60)]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<control type="group">
						<visible>!$EXP[ContentSwitching]</visible>
						<include content="MediaFlags"/>
						<include content="ProgressBar"/>
						<include content="CommonDetails"/>
						<!--NowPlaying-->
						<control type="group">
							<animation effect="slide" end="0,-16" time="0" condition="$EXP[$PARAM[viewtype_label]View_Details_Info_IsVisible]">Conditional</animation>
							<include content="NowPlayingVisualization_Fill">
								<param name="visible" value="$EXP[StandardViews_NowPlaying_Small] + $EXP[$PARAM[viewtype_label]View_Details_NowPlaying_Left_IsVisible]"/>
								<param name="top" value="480"/>
							</include>
						</control>
						<control type="group">
							<animation effect="slide" end="-180,0" time="0" condition="[$EXP[$PARAM[viewtype_label]View_Flags_Studio] + !String.IsEqual(Control.GetLabel(914),flags/blank.png)] | [$EXP[$PARAM[viewtype_label]View_Flags_Rating] + !String.IsEqual(Control.GetLabel(915),flags/blank.png)]">Conditional</animation>
							<animation effect="slide" end="-180,0" time="0" condition="$EXP[$PARAM[viewtype_label]View_Flags_All] + [[!String.IsEqual(Control.GetLabel(914),flags/blank.png) + String.IsEqual(Control.GetLabel(915),flags/blank.png)] | [String.IsEqual(Control.GetLabel(914),flags/blank.png) + !String.IsEqual(Control.GetLabel(915),flags/blank.png)]]">Conditional</animation>
							<animation effect="slide" end="-360,0" time="0" condition="$EXP[$PARAM[viewtype_label]View_Flags_All] + !String.IsEqual(Control.GetLabel(914),flags/blank.png) + !String.IsEqual(Control.GetLabel(915),flags/blank.png)">Conditional</animation>
							<include content="NowPlayingVisualization_Fill">
								<param name="visible" value="$EXP[StandardViews_NowPlaying_Small] + !$EXP[$PARAM[viewtype_label]View_Details_NowPlaying_Left_IsVisible]"/>
								<param name="left" value="1740"/>
								<param name="top" value="900"/>
								<param name="width" value="180"/>
								<param name="height" value="180"/>
								<param name="charttop" value="112"/>
								<param name="itemgap" value="6"/>
								<param name="barwidth" value="16"/>
								<param name="barheight1" value="540"/>
								<param name="barheight2" value="1200/"/>
								<param name="barheight3" value="800"/>
								<param name="pausewidth" value="14"/>
								<param name="pauseheight" value="800"/>
								<param name="pauseshift" value="-4"/>
							</include>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>
