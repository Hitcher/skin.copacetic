<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="BillboardView_Container">
		<control type="group">
			<visible>$EXP[BillboardView_IsVisible]</visible>
			<include content="Custom_List">
				<param name="visible" value="$EXP[View_Containers] + !Container.Content(albums)"/>
				<param name="type" value="list"/>
				<param name="id" value="501"/>
				<param name="viewtype_label" value="Billboard"/>
				<param name="viewtype" value="wide"/>
				<param name="orientation" value="horizontal"/>
			</include>
		</control>
	</include>

	<include name="BillboardView_Display">
		<param name="id" default="501"/>
		<param name="artwork_icon" default="Thumbnail"/>
		<param name="media_view" default="true"/>
		<param name="widget_view" default="false"/>
		<param name="widget_position"/>
		<definition>

			<control type="group">
				<visible>$EXP[BillboardView_IsVisible] + !$EXP[OpaqueDialog_IsVisible]</visible>
				<include condition="$PARAM[media_view]" content="Viewtype_Fade_Animation"/>

				<!--ART-->
				<control type="group">
					<visible>!$EXP[OptionsSwitching]</visible>
					<include>Artwork_Fade_Animation</include>
					<include condition="$PARAM[media_view]" content="Artwork_Transition_Fade">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
						<param name="fallback" default=""/>
						<param name="artworkmask" value="true"/>
					</include>
					<include condition="$PARAM[widget_view] + Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard)" content="Artwork_Transition_Fade">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
						<param name="fallback" default=""/>
						<param name="artworkmask" value="true"/>
					</include>
				</control>

				<!--MASK-->
				<control type="group">
					<visible>$PARAM[media_view]</visible>
					<!--Hide Artwork during viewtype transition-->
					<control type="group">
						<visible>Window.IsVisible(1118)</visible>
						<include>ViewtypeSwitching_Cover_Fade_Animation</include>
						<include>CustomViewsBackground</include>
					</control>
					<!--Hide Artwork during container content transition-->
					<control type="group">
						<visible>$EXP[BillboardView_IsVisible] + $EXP[ContainerSwitching]</visible>
						<include>ContainerSwitching_Cover_Fade_Animation</include>
						<include>CustomViewsBackground</include>
					</control>
				</control>

			</control>
		</definition>
	</include>

	<include name="BillboardView_Details">
		<param name="id" default="501"/>
		<definition>
			<control type="group">
				<visible>$EXP[BillboardView_IsVisible] + !$EXP[OpaqueDialog_IsVisible]</visible>
				<include>Viewtype_Fade_Animation</include>
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="MediaFlags"/>
					<control type="group">
						<visible>!$EXP[Secondary_List_ContainerSwitching] + !$EXP[Secondary_List_ContentSwitching] + ![Control.HasFocus(4501) + Window.IsVisible(1121)]</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<include content="ProgressBar"/>
						<include content="Common_Details"/>
						<!--NowPlaying-->
						<control type="group">
							<control type="group">
								<width>120</width>
								<height>120</height>
								<centertop>50%</centertop>
								<animation effect="slide" end="0,-16" time="0" condition="$EXP[BillboardView_Details_Info_IsVisible]">Conditional</animation>
								<include content="Now_Playing_Visualization_Fill">
									<param name="visible" value="$EXP[StandardViews_NowPlaying] + $EXP[BillboardView_Details_NowPlaying_Left_IsVisible]"/>
									<param name="bottom" value="10"/>
								</include>
							</control>
							<control type="group">
								<width>180</width>
								<height>180</height>
								<left>1740</left>
								<top>900</top>
								<animation effect="slide" end="-180,0" time="0" condition="[$EXP[BillboardView_Flags_Studio] + !String.IsEqual(Control.GetLabel(914),flags/blank.png)] | [$EXP[BillboardView_Flags_Rating] + !String.IsEqual(Control.GetLabel(915),flags/blank.png)]">Conditional</animation>
								<animation effect="slide" end="-180,0" time="0" condition="$EXP[BillboardView_Flags_All] + [[!String.IsEqual(Control.GetLabel(914),flags/blank.png) + String.IsEqual(Control.GetLabel(915),flags/blank.png)] | [String.IsEqual(Control.GetLabel(914),flags/blank.png) + !String.IsEqual(Control.GetLabel(915),flags/blank.png)]]">Conditional</animation>
								<animation effect="slide" end="-360,0" time="0" condition="$EXP[BillboardView_Flags_All] + !String.IsEqual(Control.GetLabel(914),flags/blank.png) + !String.IsEqual(Control.GetLabel(915),flags/blank.png)">Conditional</animation>
								<include content="Now_Playing_Visualization_Fill">
									<param name="visible" value="$EXP[StandardViews_NowPlaying] + !$EXP[BillboardView_Details_NowPlaying_Left_IsVisible]"/>
								</include>
							</control>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>
