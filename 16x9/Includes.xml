	<include name="Object_Include">
			<nested />
	</include>

	<include name="Blank_Include">
		<control type="group"/>
	</include>

	<include name="Hidden_Components">
		<control type="group">
			<visible>false</visible>
			<nested/>
		</control>
	</include>

	<include name="Hidden_Button">
		<font></font>
		<textoffsetx></textoffsetx>
		<textcolor></textcolor>
		<focusedcolor></focusedcolor>
		<invalidcolor></invalidcolor>
		<disabledcolor></disabledcolor>
		<texturenofocus></texturenofocus>
		<texturefocus></texturefocus>
	</include>

	<include name="Hidden_Control">
		<animation effect="slide" end="-1920,-1080" time="0" condition="true">Conditional</animation>
		<top>-100</top>
		<left>-100</left>
		<width>10</width>
		<height>10</height>
	</include>

	<include name="Busy_Spinner">
		<param name="visible"/>
		<param name="size" default="90"/>
		<param name="color" default="$VAR[Primary_Color]"/>
		<definition>
			<control type="image">
				<visible>$PARAM[visible]</visible>
				<include content="Visible_Fade_Animation"/>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>$PARAM[size]</width>
				<height>$PARAM[size]</height>
				<texture colordiffuse="$PARAM[color]">views/dialogs/busy.png</texture>
				<animation effect="rotate" start="0" end="-360" center="auto" time="1800" loop="true" tween="cubic" easing="out" condition="true">Conditional</animation>
				<nested/>
			</control>
		</definition>
	</include>

	<include name="Focus_Setter">
		<param name="id" default="9001"/>
		<param name="time" default="0"/>
		<param name="target_id"/>
		<definition>
			<control type="button" id="$PARAM[id]">
				<visible allowhiddenfocus="true">false</visible>
				<animation effect="slide" end="0,0" time="$PARAM[time]" reversible="false">Focus</animation>
				<onfocus>$PARAM[target_id]</onfocus>
				<onright>$PARAM[target_id]</onright>
				<onleft>$PARAM[target_id]</onleft>
				<ontop>$PARAM[target_id]</ontop>
				<onbottom>$PARAM[target_id]</onbottom>
				<nested/>
			</control>
		</definition>
	</include>

	<include name="Light_Theme_Background">
		<param name="visible" default="true"/>
		<definition>
			<control type="group">
				<nested/>
				<visible>Skin.String(Theme,Light)</visible>
				<visible>$PARAM[visible]</visible>
				<include content="WindowOpenClose_Fade_Animation"/>
				<include content="VisibleHidden_Fade_Animation"/>
				<control type="image">
					<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<height>50%</height>
					<texture colordiffuse="$VAR[Light_Grey_Color]">views/gradient_light-background.png</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="Home_Fanart_Slideshow">
    <control type="list" id="12340">
      <include>Hidden_Control</include>
      <content sortby="random">$VAR[Home_Slideshow_Path]</content>
      <autoscroll time="7000">true</autoscroll> <!-- Time to show each image, in milliseconds -->
      <itemlayout/>
      <focusedlayout/>
    </control>
    <control type="image">
      <animation effect="fade" start="0" end="100" time="360" delay="1800" tween="sine" easing="inout" reversible="true">Visible</animation>
      <texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
    </control>
    <control type="multiimage">
			<include content="Ken_Burns_Effect_Animation"/>
      <imagepath colordiffuse="$VAR[Home_Artwork_Diffuse]" background="true">$VAR[Home_Slideshow_Source]</imagepath>
      <aspectratio>scale</aspectratio>
      <timeperimage>7000</timeperimage>
      <fadetime>360</fadetime>
      <randomize>true</randomize>
    </control>
	</include>

	<include name="Home_Clearlogo">
		<control type="button" id="9500">
			<visible allowhiddenfocus="true">false</visible>
			<onclick>SetFocus(9000)</onclick>
			<onup>SetFocus(9000)</onup>
			<ondown>SetFocus(9000)</ondown>
			<onleft>SetFocus(9000)</onleft>
			<onright>SetFocus(9000)</onright>
			<onback>SetFocus(9000)</onback>
		</control>
		<control type="image">
			<visible>Skin.HasSetting(Home_Screensaver_Enabled)</visible>
			<visible>[String.IsEmpty(Container(9000).ListItem.Property(background)) | [Skin.HasSetting(Home_Background_Override_Enabled) + Skin.String(Home_Background_Override)]]</visible>
			<visible>Control.HasFocus(9500) + !$EXP[TransparentDialog_IsVisible]</visible>
			<include content="WindowOpenClose_Fade_Delayed_Animation"/>
			<left>60</left>
			<centertop>75%</centertop>
			<width>560</width>
			<height>237</height>
			<aspectratio>keep</aspectratio>
			<texture background="true">$INFO[Container(12340).ListItem.Art(clearlogo)]</texture>
			<fadetime>360</fadetime>
		</control>
	</include>

	<include name="Global_Fanart_Slideshow">
		<param name="visible" default="true"/>
		<param name="content_source" default="Global"/>
		<param name="texture_path" default="$VAR[Dialog_Slideshow_Source]"/>
		<definition>
			<control type="group">
				<visible>!VideoPlayer.IsFullscreen + !Skin.HasSetting(Global_Fanart_Slideshow_Disabled)</visible>
				<visible>$PARAM[visible]</visible>
				<include content="VisibleHidden_Fade_Animation"/>
				<control type="list" id="12342">
					<include>Hidden_Control</include>
					<include content="$PARAM[content_source]_Fanart_Slideshow_Content"/>
					<autoscroll time="7000">true</autoscroll>
					<itemlayout />
					<focusedlayout />
				</control>
				<control type="videowindow">
					<include>Hidden_Control</include>
				</control>
				<include condition="Skin.String(Theme,Light)" content="Fanart_Slideshow_Backing">
					<param name="visible" value="Integer.IsGreater(Container(12342).NumItems,0)"/>
				</include>
				<include condition="$EXP[Settings_IsVisible] + !Skin.HasSetting(Global_Fanart_Slideshow_Disabled)" content="Fanart_Slideshow_Multiart">
					<param name="colordiffuse" value="$VAR[Dialogs_Artwork_Diffuse]"/>
					<param name="texture_path" value="$PARAM[texture_path]"/>
					<param name="fadetime" value="0"/>
				</include>
				<include content="Fanart_Slideshow_Multiart">
					<param name="colordiffuse" value="$VAR[Dialogs_Artwork_Diffuse]"/>
					<param name="texture_path" value="$PARAM[texture_path]"/>
					<param name="fadetime" value="180"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="Global_Fanart_Slideshow_Content">
		<content sortby="random" limit="5">videodb://movies/titles/</content>
		<content sortby="random" limit="5">videodb://tvshows/titles/</content>
		<content sortby="random" limit="5">videodb://movies/titles/</content>
		<content sortby="random" limit="5">videodb://tvshows/titles/</content>
	</include>

	<include name="Music_Fanart_Slideshow_Content">
		<content sortby="random" limit="25">musicdb://artists/</content>
	</include>

	<include name="Clock">
		<param name="visible" default="true"/>
		<param name="size" default="180"/>
		<param name="right" default="0"/>
		<param name="backgroundcolor" default="$VAR[Blank_Color]"/>
		<param name="textcolor" default="$VAR[Light_Color]"/>
		<definition>
			<control type="group">
				<visible>![$EXP[Music_Player_IsVisible] | Window.IsVisible(volumebar) | Window.IsVisible(notification) | Window.IsVisible(extendedprogressdialog)] | Window.IsVisible(shutdownmenu)</visible>
				<include content="VisibleHidden_Fade_Animation"/>
				<control type="group">
					<visible>$PARAM[visible]</visible>
					<right>$PARAM[right]</right>
					<top>0</top>
					<width>$PARAM[size]</width>
					<height>$PARAM[size]</height>
					<include content="Visible_Fade_Delayed_Animation"/>
					<control type="image">
						<texture colordiffuse="$PARAM[backgroundcolor]">views/white_100.png</texture>
					</control>
					<control type="grouplist">
						<left>15</left>
						<right>15</right>
						<centertop>50%</centertop>
						<height>70</height>
						<align>center</align>
						<itemgap>3</itemgap>
						<orientation>horizontal</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<control type="label">
							<width>auto</width>
							<height>70</height>
							<font>List_Title_Focused</font>
							<align>right</align>
							<aligny>center</aligny>
							<textcolor>$PARAM[textcolor]</textcolor>
							<label>$INFO[System.Time(hh)]</label>
						</control>
						<control type="label">
							<width>auto</width>
							<height>55</height>
							<top>13</top>
							<font>Main_Menu_unfocused</font>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>$PARAM[textcolor]</textcolor>
							<label>$INFO[System.Time(mm)]</label>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>
