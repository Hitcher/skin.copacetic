<?xml version="1.0" encoding="UTF-8"?>
<window>
	<include>Busy_Dialog_Fade_Animation</include>
	<controls>

		<control type="group">
			<include>FullscreenDimensions</include>
			<control type="group">
				<include>DialogBackground</include>
			</control>
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>90</width>
				<height>90</height>
				<texture colordiffuse="$VAR[PrimaryColor]">views/busy.png</texture>
				<animation effect="rotate" start="0" end="-360" center="auto" time="1800" loop="true" tween="cubic" easing="out" condition="true">Conditional</animation>
			</control>
		</control>

	</controls>
</window>
