<includes>
  <include name="Trailer_Autoplay_Function">
    <control type="group">
      <visible>String.IsEqual(Window(home).Property(Trailer_Autoplay),true)</visible>
      <control type="image">
        <visible>Player.HasVideo</visible>
        <texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
      </control>
      <control type="videowindow"/>
      <!-- Fade-in mask for Trailer videowindow -->
      <control type="image">
        <visible>!Player.HasVideo</visible>
        <animation effect="fade" start="100" end="0" time="360" delay="1440" tween="sine" easing="inout" reversible="false">Hidden</animation>
        <texture colordiffuse="$VAR[Secondary_Color]">views/white_100.png</texture>
      </control>
    </control>
  </include>
</includes>
