<includes>
  <include name="Trailer_Autoplay_Function">
    <control type="group">
      <visible>String.IsEqual(Window(home).Property(Trailer_Autoplay),true) + !$EXP[GridView_IsVisible]</visible>
      <control type="videowindow"/>
      <!-- Details gradient -->
      <control type="image">
        <visible>!$EXP[ListView_IsVisible]</visible>
        <visible>![$EXP[ShowcaseView_IsVisible] + $EXP[ShowcaseView_Details_Off]]</visible>
        <visible>![$EXP[StripView_IsVisible] + $EXP[StripView_Details_Off]]</visible>
        <visible>![$EXP[StripView_IsVisible] + $EXP[StripView_Details_Title] + !$EXP[StripView_Details_Logo_IsOn]]</visible>
        <width>1440</width>
        <height>100%</height>
        <aspectratio>stretch</aspectratio>
        <texture colordiffuse="$VAR[Dark_Color]" flipx="true">views/dropshadow_left_120.png</texture>
      </control>
      <!-- Fade-in mask for Trailer videowindow -->
      <control type="image">
        <visible>!Player.HasVideo</visible>
        <animation effect="fade" start="100" end="0" time="360" delay="1440" tween="sine" easing="inout" reversible="false">Hidden</animation>
        <texture colordiffuse="$VAR[Secondary_Color]">views/white_100.png</texture>
      </control>
    </control>
  </include>
</includes>
