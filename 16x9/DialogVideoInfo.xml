<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- movieinformation -->
	<include content="movieinformation_OnLoadUnload"/>
	<defaultcontrol always="true">9001</defaultcontrol>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include content="WindowOpenClose_Fade_Delayed_Long_Animation"/>
	<controls>
		<!-- Focus setter to ensure widget scrollbar displays correctly -->
		<include content="Focus_Setter">
			<param name="target_id" value="SetFocus(8)"/>
		</include>
		<include content="Infoscreen_Header_Template">
			<param name="windowname" value="movieinformation"/>
			<include content="Infoscreen_Header">
				<param name="visible" value="!String.IsEqual(Window(movieinformation).Property(Focused_Button),$LOCALIZE[207]) + !Control.HasFocus(10) + !Control.HasFocus(11) + !Control.HasFocus(7) + !String.IsEqual(Window(movieinformation).Property(Focused_Button),$LOCALIZE[184])"/>
				<param name="left" value="120"/>
				<param name="right" value="120"/>
				<param name="align" value="center"/>
			</include>
			<include content="Infoscreen_Plot">
				<param name="visible" value="String.IsEqual(Window(movieinformation).Property(Focused_Button),$LOCALIZE[207])"/>
				<param name="left" value="240"/>
				<param name="right" value="240"/>
				<param name="align" value="center"/>
				<param name="font" value="Plot_Fullscreen"/>
			</include>
			<include content="Infoscreen_Stars">
				<param name="visible" value="Control.HasFocus(7) | Control.HasFocus(5003) | Control.HasFocus(5004)"/>
				<param name="itemgap" value="30"/>
				<param name="starheight" value="90"/>
			</include>
			<include content="Infoscreen_Artwork">
				<param name="visible" value="String.IsEqual(Window(movieinformation).Property(Focused_Button),$LOCALIZE[13511])"/>
			</include>
		</include>
		<include content="Infoscreen_Furniture_Template">
			<include condition="String.IsEqual(ListItem.DBType,tvshow) + String.IsEqual(ListItem.Label,ListItem.TVShowTitle) + Integer.IsGreater(ListItem.Property(UnwatchedEpisodes),0)" content="Infoscreen_Widget_8010_NextUp"/>
			<include condition="[String.IsEqual(ListItem.DBType,tvshow) + String.IsEqual(Container.FolderName,ListItem.TVShowTitle)] | String.IsEqual(ListItem.DBType,episode)" content="Infoscreen_Widget_8010_Episodes"/>
			<include condition="String.IsEqual(ListItem.DBType,movie)" content="Infoscreen_Widget_8010_MovieSet"/>
			<include condition="[String.IsEqual(ListItem.DBType,tvshow) + String.IsEqual(ListItem.Label,ListItem.TVShowTitle)] | String.IsEqual(ListItem.DBType,episode)" content="Infoscreen_Widget_8020_Seasons"/>
			<include condition="!String.IsEqual(ListItem.DBType,set)" content="Infoscreen_Widget_50_Cast"/>
			<include condition="String.IsEqual(ListItem.DBType,set)" content="Infoscreen_Widget_50_Set"/>
			<include condition="!String.IsEqual(ListItem.DBType,set)" content="Infoscreen_Widget_8030_ActorCredits"/>
			<include condition="String.IsEqual(ListItem.DBType,movie)" content="Infoscreen_Widget_8050_DirectorCredits"/>
			<include condition="!String.IsEqual(ListItem.DBType,set)" content="Infoscreen_Widget_8060_StudioCredits"/>
			<include condition="!String.IsEqual(ListItem.DBType,set)" content="Infoscreen_Widget_8070_Similar"/>
			<include content="DialogVideoInfo_Scrollbar"/>
		</include>
	</controls>
</window>
