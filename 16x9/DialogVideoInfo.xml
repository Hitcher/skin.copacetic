<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- movieinformation -->
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>

	<controls>

		<!--Delay on Load-->
		<control type="button" id="9001">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus>SetFocus(65002,0,absolute)</onfocus>
		</control>
		<control type="group" id="9002">
			<visible>Control.HasFocus(9001)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!--On Previous Delay-->
		<control type="group" id="5001">
			<visible>Container(8010).OnPrevious</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!--On Next Delay-->
		<control type="group" id="5002">
			<visible>Container(8010).OnNext</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!--Hidden buttons-->
		<control type="group">
			<visible allowhiddenfocus="true">false</visible>
			<!--Play/Browse-->
			<control type="togglebutton" id="8">
				<label>208</label>
				<altlabel>1024</altlabel>
				<usealttexture>Listitem.DBType(tvshow) | Listitem.DBType(season)</usealttexture>
			</control>
			<!-- Trailer Button -->
			<control type="button" id="11">
				<visible>!String.IsEmpty(ListItem.Trailer)</visible>
				<label>$LOCALIZE[20410]</label>
			</control>
			<!-- Plot Button-->
			<control type="button" id="98">
				<label>$LOCALIZE[32123]</label>
			</control>
			<control type="button" id="99">
				<onclick>SetFocus(65002)</onclick>
				<onback>65002</onback>
				<onup>65002</onup>
				<ondown>65002</ondown>
				<onleft>65002</onleft>
				<onright>65002</onright>
			</control>
			<!-- Same Director Button-->
			<control type="button" id="13">
				<label>More</label>
			</control>
			<!-- Rating Button-->
			<control type="button" id="7">
				<label>$LOCALIZE[32124]</label>
			</control>
			<!-- Refresh Button -->
			<control type="button" id="6">
				<label>$LOCALIZE[184]</label>
			</control>
			<!-- Art Button -->
			<control type="button" id="10">
				<label>$LOCALIZE[31142]</label>
			</control>
		</control>

		<!--Hidden List -->
		<control type="list" id="65002">
			<viewtype label="535">list</viewtype>
			<width>600</width>
			<onback>65005</onback>
			<ondown>8010</ondown>
			<visible allowhiddenfocus="true">false</visible>
			<orientation>horizontal</orientation>
			<itemlayout width="100"/>
			<focusedlayout width="100"/>
			<content>
				<item>
					<onclick>SendClick(8)</onclick>
					<label>$INFO[Control.GetLabel(8)]</label>
					<visible>Control.IsVisible(8)</visible>
				</item>
				<item>
					<onclick>SendClick(11)</onclick>
					<label>$INFO[Control.GetLabel(11)]</label>
					<visible>Control.IsVisible(11)</visible>
				</item>
				<item>
					<onclick>SetFocus(99)</onclick>
					<label>$INFO[Control.GetLabel(98)]</label>
					<visible>Control.IsVisible(98)</visible>
				</item>
				<item>
					<onclick>SendClick(7)</onclick>
					<label>$INFO[Control.GetLabel(7)]</label>
					<visible>Control.IsVisible(7)</visible>
				</item>
				<item>
					<onclick>SendClick(6)</onclick>
					<label>$INFO[Control.GetLabel(6)]</label>
				</item>
				<item>
					<onclick>SendClick(10)</onclick>
					<label>$INFO[Control.GetLabel(10)]</label>
				</item>
			</content>
		</control>


		<!--BACKGROUND-->
		<control type="group">
			<control type="image">
				<aspectratio>scale</aspectratio>
				<texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
			</control>
			<control type="image">
				<visible>Control.HasFocus(65002)</visible>
				<include>Dialog_Fade_Animation</include>
				<aspectratio>scale</aspectratio>
				<texture colordiffuse="$VAR[Info_Artwork_Diffuse]" fallback="fallback.png" background="true">$VAR[Dialog_Info_Background]</texture>
			</control>
			<control type="image">
				<visible>Control.HasFocus(99) | Control.HasFocus(60)</visible>
				<include>Dialog_Fade_Animation</include>
				<aspectratio>scale</aspectratio>
				<texture colordiffuse="$VAR[Info_Plot_Artwork_Diffuse]" fallback="fallback.png" background="true">$VAR[Dialog_Info_Background]</texture>
			</control>
		</control>

		<!--PLOT VIEW-->
		<control type="group">
			<visible>!Control.IsVisible(9002) + [Control.HasFocus(99) | Control.HasFocus(60)] + Window.IsActive(movieinformation)</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible]</visible>
				<include>Content_Fade_Animation</include>
				<control type="textbox" id="4">
					<height>780</height>
					<width>1440</width>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<aligny>center</aligny>
					<align>left</align>
					<font>Plot</font>
					<label>$VAR[Plot_Label]</label>
					<textcolor>$VAR[Primary_Color]</textcolor>
					<pagecontrol>60</pagecontrol>
					<autoscroll delay="5000" repeat="7500" time="5000">!Control.HasFocus(60)</autoscroll>
				</control>
				<control type="scrollbar" id="60">
					<right>27</right>
					<bottom>180</bottom>
					<width>6</width>
					<height>720</height>
					<onleft>99</onleft>
					<onright>99</onright>
					<onback>65002</onback>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<texturesliderbackground colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturesliderbackground>
					<texturesliderbar colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturesliderbar>
					<texturesliderbarfocus colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</texturesliderbarfocus>
					<textureslidernib></textureslidernib>
					<textureslidernibfocus></textureslidernibfocus>
					<include>Scrollbar_Fade_Animation</include>
				</control>
			</control>
		</control>

		<!--MAIN CONTENT-->
		<control type="group">
			<visible>!Control.IsVisible(9002) + !Control.HasFocus(99) + !Control.HasFocus(60) + Window.IsActive(movieinformation)</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible]</visible>
				<include>Content_Fade_Animation</include>

				<!--Dummy Horizontal List-->
				<include content="DummyHorizontalList">
					<param name="dummyid" value="65003"/>
					<param name="hiddenid" value="65002"/>
					<param name="top" value="810"/>
				</include>

				<control type="grouplist">
					<left>120</left>
					<top>120</top>
					<width>1680</width>
					<height>652</height>
					<orientation>vertical</orientation>
					<align>left</align>
					<usecontrolcoords>true</usecontrolcoords>
					<!--Title-->
					<control type="group">
						<top>0</top>
						<height>219</height>
						<control type="grouplist">
							<orientation>vertical</orientation>
							<align>right</align>
							<control type="textbox">
								<width>100%</width>
								<height max="219">auto</height>
								<align>center</align>
								<font>Billboard_Title</font>
								<textcolor>$VAR[Primary_Color]</textcolor>
								<label>$VAR[Title_Label]</label>
							</control>
						</control>
					</control>
					<!--Details-->
					<control type="label">
						<top>0</top>
						<width>100%</width>
						<height>35</height>
						<font>Billboard_Info</font>
						<textcolor>$VAR[Primary_Color]</textcolor>
						<label>$VAR[Dialog_Info_Label]</label>
						<align>center</align>
					</control>
					<!-- Star Rating -->
					<control type="group">
						<visible>!ListItem.DBType(season) + !ListItem.DBType(artist)</visible>
						<top>20</top>
						<centerleft>50%</centerleft>
						<width>185</width>
						<height>30</height>
						<control type="image">
							<width>100%</width>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[Accent_Color]">$VAR[StarRating_Label]</texture>
						</control>
					</control>
					<!--Flags-->
					<control type="grouplist">
						<visible>Window.IsActive(movieinformation)</visible>
						<top>0</top>
						<width>100%</width>
						<height>180</height>
						<orientation>horizontal</orientation>
						<align>center</align>
						<!--Studio-->
						<include content="FlagLayout">
							<param name="id" value="920"/>
							<param name="content" value="$VAR[Studio_Label]"/>
						</include>
						<!--Rating-->
						<include content="FlagLayout">
							<param name="id" value="921"/>
							<param name="content" value="$VAR[MPAA_Label]"/>
						</include>
						<!--Video Source-->
						<include content="FlagLayout">
							<param name="id" value="922"/>
							<param name="content" value="$VAR[VideoSource_Label]"/>
						</include>
						<!--Video Codec-->
						<include content="FlagLayout">
							<param name="id" value="923"/>
							<param name="content" value="$VAR[VideoCodec_Label]"/>
						</include>
						<!--Audio Source-->
						<include content="FlagLayout">
							<param name="id" value="924"/>
							<param name="content" value="$VAR[AudioCodec_Label]"/>
						</include>
					</control>
				</control>
			</control>

			<include content="Info_Widget_Seasons"/>

		</control>

		</controls>
		</window>
