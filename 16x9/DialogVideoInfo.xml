<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- movieinformation -->
	<onload>SetProperty(ResetScroll," ")</onload>
	<defaultcontrol always="true">9001</defaultcontrol>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<!--Hidden path checkers-->
		<control type="image" id="920">
			<visible>false</visible>
			<texture>$VAR[Studio_Label]</texture>
		</control>
		<control type="image" id="921">
			<visible>false</visible>
			<texture>$VAR[MPAA_Label]</texture>
		</control>
		<control type="image" id="922">
			<visible>false</visible>
			<texture>$VAR[VideoSource_Label]</texture>
		</control>
		<control type="image" id="923">
			<visible>false</visible>
			<texture>$VAR[VideoCodec_Label]</texture>
		</control>
		<control type="image" id="924">
			<visible>false</visible>
			<texture>$VAR[AudioCodec_Label]</texture>
		</control>

		<!--Delay on Load-->
		<control type="button" id="9001">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus>SetFocus(8)</onfocus>
		</control>
		<control type="group" id="9002">
			<visible>Control.HasFocus(9001)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!--On Previous Delay-->
		<control type="group" id="5001">
			<visible>Container(8010).OnPrevious</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!--On Next Delay-->
		<control type="group" id="5002">
			<visible>Container(8010).OnNext</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!-- Background -->
		<control type="image">
			<aspectratio>scale</aspectratio>
			<texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
		</control>
		<control type="image">
			<aspectratio>scale</aspectratio>
			<texture colordiffuse="$VAR[Info_Artwork_Diffuse]" background="true">$VAR[Dialog_Info_Background]</texture>
		</control>

		<!-- Content -->
		<control type="group">
			<visible>!Control.IsVisible(9002) + Window.IsActive(movieinformation)</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible]</visible>
				<include>Content_Fade_Animation</include>

				<include content="Breadcrumb_Label">
					<param name="title_label" value="$INFO[Window(movieinformation).Property(Focused_Button),‹ ,  ›]"/>
					<param name="label_color" value="$VAR[Light_Color]"/>
					<param name="info_label_visible" value="false"/>
				</include>

				<include content="Info_Dialog_Header">
					<param name="visible" value="!Control.HasFocus(99) + !Control.HasFocus(60)"/>
					<param name="left" value="120"/>
					<param name="right" value="120"/>
					<param name="align" value="center"/>
				</include>
				<include content="Info_Dialog_Plot">
					<param name="visible" value="Control.HasFocus(99) | Control.HasFocus(60)"/>
					<param name="left" value="120"/>
					<param name="right" value="120"/>
					<param name="align" value="center"/>
					<param name="font" value="Plot_Fullscreen"/>
				</include>

				<include condition="String.IsEqual(ListItem.DBType,set)" content="Simple_List">
					<param name="id" value="50"/>
					<param name="visible" value="Control.HasFocus(50) | Control.HasFocus(98)"/>
					<param name="animation" value="Delayed_Content_Fade_Animation"/>
					<param name="left" value="720"/>
					<param name="nowplayingvisible" value="true"/>
					<param name="labelleft" value="120"/>
					<param name="label" value="$INFO[ListItem.Label]"/>
					<param name="labelmaxwidth" value="960"/>
					<param name="selectedcolor" value="$VAR[Light_Color]"/>
				</include>

				<!-- Button group -->
				<control type="grouplist" id="65000">
					<visible>Window.IsVisible(movieinformation)</visible>
					<include>Dialog_Fade_Animation</include>
					<centerleft>50%</centerleft>
					<bottom>60</bottom>
					<width>420</width>
					<height>60</height>
					<orientation>horizontal</orientation>
					<align>center</align>
					<itemgap>0</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="togglebutton" id="8">
						<include>Hidden_Button</include>
						<description>Play/Browse</description>
						<label>208</label>
						<altlabel>1024</altlabel>
						<font></font>
						<width>60</width>
						<height>60</height>
						<!-- <texturefocus colordiffuse="$VAR[Light_Color]">osd/icon_Play_focused.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_Play_unfocused.png</texturenofocus>
						<alttexturefocus colordiffuse="$VAR[Light_Color]">osd/icon_Forward_focused.png</alttexturefocus>
						<alttexturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_Forward_unfocused.png</alttexturenofocus>
						<usealttexture>String.IsEqual(Listitem.DBType,tvshow) | String.IsEqual(Listitem.DBType,season)</usealttexture> -->
						<onfocus condition="![String.IsEqual(Listitem.DBType,tvshow) | String.IsEqual(Listitem.DBType,season)]">SetProperty(Focused_Button,$LOCALIZE[208],movieinformation)</onfocus>
						<onfocus condition="[String.IsEqual(Listitem.DBType,tvshow) | String.IsEqual(Listitem.DBType,season)]">SetProperty(Focused_Button,$LOCALIZE[1024],movieinformation)</onfocus>
						<ondown>8010</ondown>
					</control>
					<control type="button" id="98">
						<include>Hidden_Button</include>
						<visible>String.IsEqual(Listitem.DBType,set)</visible>
						<!-- <include content="Icon_Button">
							<param name="description" value="Tracklist/Discography"/>
							<param name="icon" value="Album"/>
						</include> -->
						<onfocus>SetProperty(ResetScroll," ")</onfocus>
						<onfocus>SetProperty(Focused_Button,Setlist,movieinformation)</onfocus>
						<ondown>SetFocus(50)</ondown>
						<onclick>SetFocus(50)</onclick>
						<ondown>8010</ondown>
					</control>
					<control type="button" id="99">
						<include>Hidden_Button</include>
						<visible>!String.IsEmpty(Control.GetLabel(916)) + !String.IsEqual(ListItem.DBType,season)</visible>
						<!-- <include content="Icon_Button">
							<param name="description" value="Plot"/>
							<param name="icon" value="Plot"/>
						</include> -->
						<onunfocus>SetProperty(ResetScroll,"")</onunfocus>
						<onfocus>SetProperty(Focused_Button,$LOCALIZE[207],movieinformation)</onfocus>
						<onclick condition="Container(4).HasNext | Container(4).HasPrevious">SetFocus(60)</onclick>
						<ondown condition="Container(4).HasNext | Container(4).HasPrevious">SetFocus(60)</ondown>
						<ondown>8010</ondown>
					</control>
					<control type="button" id="11">
						<include>Hidden_Button</include>
						<!-- <include content="Icon_Button">
							<param name="description" value="Trailer button"/>
							<param name="icon" value="Trailer"/>
						</include> -->
						<onfocus>SetProperty(ResetScroll," ")</onfocus>
						<onfocus>SetProperty(Focused_Button,$LOCALIZE[20410],movieinformation)</onfocus>
						<visible>!String.IsEmpty(ListItem.Trailer)</visible>
						<ondown>8010</ondown>
					</control>
					<control type="button" id="7">
						<include>Hidden_Button</include>
						<!-- <include content="Icon_Button">
							<param name="description" value="User rating"/>
							<param name="icon" value="Bookmarks"/>
						</include> -->
						<visible>!String.IsEqual(ListItem.DBType,set)</visible>
						<onfocus>SetProperty(ResetScroll," ")</onfocus>
						<onfocus>SetProperty(Focused_Button,$LOCALIZE[563],movieinformation)</onfocus>
						<ondown>8010</ondown>
					</control>
					<control type="button" id="6">
						<include>Hidden_Button</include>
						<!-- <include content="Icon_Button">
							<param name="description" value="Refresh button"/>
							<param name="icon" value="Refresh"/>
						</include> -->
						<visible>!String.IsEqual(ListItem.DBType,set)</visible>
						<onfocus>SetProperty(ResetScroll," ")</onfocus>
						<onfocus>SetProperty(Focused_Button,$LOCALIZE[184],movieinformation)</onfocus>
						<ondown>8010</ondown>
					</control>
					<control type="button" id="10">
						<include>Hidden_Button</include>
						<!-- <include content="Icon_Button">
							<param name="description" value="Choose art"/>
							<param name="icon" value="Menu"/>
						</include> -->
						<onfocus>SetProperty(ResetScroll," ")</onfocus>
						<onfocus>SetProperty(Focused_Button,$LOCALIZE[13511],movieinformation)</onfocus>
						<ondown>8010</ondown>
					</control>

				</control>
			</control>
		</control>

		<include content="Info_Widget_Seasons"/>

	</controls>
</window>
