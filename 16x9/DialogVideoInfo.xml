			<control type="group">
				<visible>!Window.IsVisible(selectdialog)</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<include condition="!String.IsEqual(ListItem.DBType,set)" content="Info_Widget_Cast"/>
