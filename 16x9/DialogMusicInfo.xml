<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicinformation -->
	<include content="movieinformation_OnLoadUnload" />
	<defaultcontrol always="true">4010</defaultcontrol>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include content="WindowOpenClose_Fade_Delayed_Animation" />
	<controls>
		<include content="Infoscreen_Header_Template">
			<param name="windowname" value="musicinformation" />
			<param name="visible" value="![Window.Is(songinformation) + Window.IsActive(musicinformation)]" />
			<param name="default_control" value="SetFocus(97)" />
			<include content="Infoscreen_Header" condition="String.IsEqual(ListItem.DBType,artist)">
				<param name="visible" value="Control.HasFocus(97)" />
				<param name="left" value="120" />
				<param name="right" value="120" />
				<param name="align" value="center" />
			</include>
			<include content="Infoscreen_Header" condition="!String.IsEqual(ListItem.DBType,artist)">
				<param name="visible" value="Control.HasFocus(97)" />
				<param name="left" value="780" />
				<param name="right" value="120" />
				<param name="align" value="left" />
			</include>
			<include content="Infoscreen_Plot" condition="String.IsEqual(ListItem.DBType,album)">
				<param name="visible" value="String.IsEqual(Window($PARAM[windowname]).Property(Focused_Button),$LOCALIZE[183]) + !Control.HasFocus(3100)" />
				<param name="left" value="780" />
				<param name="right" value="120" />
				<param name="align" value="left" />
				<param name="font" value="Plot_Panel" />
			</include>
			<include content="Infoscreen_Plot" condition="String.IsEqual(ListItem.DBType,artist)">
				<param name="visible" value="String.IsEqual(Window($PARAM[windowname]).Property(Focused_Button),$LOCALIZE[21887])" />
				<param name="left" value="240" />
				<param name="right" value="240" />
				<param name="align" value="center" />
				<param name="font" value="Plot_Fullscreen" />
			</include>
			<include content="Simple_List" condition="String.IsEqual(ListItem.DBType,album)">
				<param name="id" value="3100" />
				<param name="visible" value="Control.HasFocus(3100)" />
				<param name="left" value="720" />
				<param name="width" value="1080" />
				<param name="label_left" value="120" />
				<param name="label_maxwidth" value="960" />
				<param name="icon_slide" value="-480" />
				<param name="label" value="$INFO[ListItem.Label]" />
				<param name="selectedcolor" value="$VAR[Light_Color]" />
				<include content="Visible_Fade_Delayed_Animation" />
				<content>musicdb://albums/$INFO[ListItem.DBID]/</content>
			</include>
			<include content="Infoscreen_Stars" condition="!String.IsEqual(ListItem.DBType,artist)">
				<param name="visible" value="Control.HasFocus(7) | Control.HasFocus(4021) | Control.HasFocus(4022)" />
				<param name="itemgap" value="30" />
				<param name="starheight" value="60" />
			</include>
			<control type="textbox">
				<visible>Control.HasFocus(12) + String.IsEqual(ListItem.DBType,album)</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<width>1680</width>
				<centerleft>50%</centerleft>
				<height max="146">auto</height>
				<centertop>50%</centertop>
				<font>Billboard_Title</font>
				<textcolor>$VAR[Light_Color]</textcolor>
				<label>$INFO[ListItem.Artist]</label>
				<align>left</align>
			</control>
			<control type="label">
				<visible>Control.HasFocus(12) + String.IsEqual(ListItem.DBType,song)</visible>
				<width>1440</width>
				<centerleft>50%</centerleft>
				<height>52</height>
				<top>964</top>
				<font>Strip_Title</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
				<label>$INFO[ListItem.Album]</label>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
			</control>
		</include>
		<include content="Infoscreen_Furniture_Template">
			<include content="Infoscreen_Widget_3201_MostPlayed" condition="!String.IsEqual(ListItem.DBType,album)" />
			<include content="Infoscreen_Widget_3202_Discography" />
			<include content="Infoscreen_Widget_3207_SimilarArtists" condition="String.IsEqual(ListItem.DBType,artist)" />
			<include content="Infoscreen_Widget_3207_SimilarAlbums" condition="!String.IsEqual(ListItem.DBType,artist)" />
			<include content="DialogMusicInfo_Scrollbar" />
		</include>
	</controls>
</window>