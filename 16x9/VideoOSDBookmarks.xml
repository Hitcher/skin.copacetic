						<left>6</left>
						<top>6</top>
						<width>312</width>
						<height>176</height>
						<aspectratio aligny="top">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>190</top>
						<width>304</width>
						<height>44</height>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
						<label>$INFO[ListItem.Label] / $INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>

				<focusedlayout height="290" width="324">
					<control type="image">
						<width>324</width>
						<height>242</height>
						<texture border="1">old_osd/OSDBack.png</texture>
					</control>
					<control type="image">
						<width>324</width>
						<height>242</height>
						<texture border="1">old_osd/OSDBack.png</texture>
					</control>
					<control type="image">
						<left>6</left>
						<top>6</top>
						<width>312</width>
						<height>176</height>
						<aspectratio aligny="top">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>190</top>
						<width>304</width>
						<height>44</height>
						<textcolor>$VAR[FocusedColor]</textcolor>
						<label>$INFO[ListItem.Label] / $INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>

			</control>

			<include content="ButtonGroup">
				<param name="onup" value="11"/>
				<param name="buttonsvisible" value="false"/>
				<param name="button1visible" value="true"/>
				<param name="button1id" value="2"/>
				<param name="button1label" value="$LOCALIZE[31530]"/>
				<param name="button2visible" value="true"/>
				<param name="button2id" value="3"/>
				<param name="button2label" value="$LOCALIZE[31531]"/>
				<param name="button3visible" value="true"/>
