			<control type="list" id="11">
				<left>150</left>
				<top>610</top>
				<width>1620</width>
				<height>290</height>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<ondown>9000</ondown>
				<onup>noop</onup>
				<orientation>horizontal</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout height="290" width="324">
