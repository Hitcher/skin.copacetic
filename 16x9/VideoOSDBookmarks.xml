<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videobookmarks -->
	<defaultcontrol always="true">4010</defaultcontrol>
	<include content="WindowOpenClose_Fade_Delayed_Animation" />
	<controls>


		<!-- Delay content on Load -->
		<control type="button" id="4010">
			<animation effect="slide" end="0,0" time="540" reversible="false">Focus</animation>
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Integer.IsGreater(Container(11).CurrentItem,1)">Control.Move(11,$INFO[Container(11).CurrentItem,-])</onfocus>
			<onfocus condition="Integer.IsGreater(Container(11).CurrentItem,1)">Control.Move(11,1)</onfocus>
			<onfocus condition="Integer.IsGreater(Container(11).NumItems,0)">SetFocus(11)</onfocus>
			<onfocus condition="Integer.IsEqual(Container(11).NumItems,0)">SetFocus(2)</onfocus>
		</control>


		<include content="Custom_List">
			<param name="type" value="fixedlist" />
			<param name="visible" value="true" />
			<param name="id" value="11" />
			<param name="viewtype_label" value="VideoBookmarks" />
			<param name="viewtype" value="wrap" />
			<param name="orientation" value="horizontal" />
		</include>

		<control type="group">
			<visible>![Window.IsVisible(shutdownmenu) | Window.IsVisible(sliderdialog) | Window.IsVisible(selectdialog) | Window.IsVisible(filebrowser) | Window.IsVisible(subtitlesearch) | Window.IsVisible(virtualkeyboard)]</visible>
			<include content="Visible_Fade_Delayed_Animation" />

			<include content="Transparent_Dialog_Panel">
				<param name="left" value="0" />
				<param name="right" value="0" />
				<param name="top" value="540" />
				<param name="bottom" value="0" />
			</include>

			<control type="group">
				<visible>!$EXP[Hidden_Focus_Setter] + Integer.IsGreater(Container(11).NumItems,0)</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<animation effect="slide" start="0" end="0,234" time="0" condition="true">Conditional</animation>
				<include content="GridView_Art_Fanart">
					<param name="target_id" value="11" />
					<param name="art_icon" value="Thumbnail" />
				</include>
				<control type="group">
					<animation effect="slide" start="0" end="12,677" time="0" condition="true">Conditional</animation>
					<include content="Breadcrumb_Label">
						<param name="bar" value="false" />
						<param name="title_label" value="$INFO[Container(11).ListItem.Label]" />
						<param name="info_label" value="$INFO[Container(11).ListItem.Label2,$LOCALIZE[31116] ]" />
						<param name="label_color" value="$VAR[Light_Color]" />
					</include>
				</control>
			</control>

			<control type="group">
				<visible>!$EXP[Hidden_Focus_Setter]</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<include content="Button_Group_Template">
					<param name="right" value="72" />
					<param name="onup" value="11" />
					<param name="onleft" value="11" />
					<param name="include_textures" value="false" />
					<param name="include_labels" value="true" />
					<param name="show_labels" value="true" />
					<param name="button1" value="true" />
					<param name="button1_id" value="2" />
					<param name="button1_label" value="$LOCALIZE[31530]" />
					<param name="button2" value="true" />
					<param name="button2_id" value="3" />
					<param name="button2_label" value="$LOCALIZE[31531]" />
					<param name="button3" value="true" />
					<param name="button3_id" value="4" />
					<param name="button3_label" value="$LOCALIZE[31532]" />
				</include>
			</control>

		</control>
	</controls>
</window>