<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Infoscreen_Menu">
		<definition>
			<control type="grouplist" id="65000">
				<centerleft>50%</centerleft>
				<bottom>60</bottom>
				<width>420</width>
				<height>60</height>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<include condition="Window.Is(movieinformation)" content="movieinformation_Menu_Content"/>
			</control>
		</definition>
	</include>

	<include name="Infoscreen_Flag_Template">
		<param name="id"/>
		<param name="texture"/>
		<param name="colordiffuse" default="$VAR[Light_Color]"/>
		<definition>
			<control type="group">
				<visible>!String.IsEqual(Control.GetLabel($PARAM[id]),flags/blank.png)</visible>
				<width>180</width>
				<height>180</height>
				<control type="image" id="$PARAM[id]">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>90</width>
					<height>60</height>
					<aspectratio>keep</aspectratio>
					<texture fallback="flags/blank.png" colordiffuse="$PARAM[colordiffuse]">$PARAM[texture]</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="Infoscreen_Flags_Layout">
		<param name="VideoSource_condition" default="!String.IsEqual(ListItem.DBType,set) + !String.IsEqual(ListItem.DBType,tvshow) + !String.IsEqual(ListItem.DBType,episode)"/>
		<param name="VideoCodec_condition" default="!String.IsEqual(ListItem.DBType,set) + !String.IsEqual(ListItem.DBType,tvshow) + !String.IsEqual(ListItem.DBType,episode)"/>
		<param name="AudioCodec_condition" default="!String.IsEqual(ListItem.DBType,set) + !String.IsEqual(ListItem.DBType,tvshow) + !String.IsEqual(ListItem.DBType,episode)"/>
		<definition>
			<control type="grouplist">
				<width>100%</width>
				<height>180</height>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>0</itemgap>
				<include content="Infoscreen_Flag_Template">
					<param name="id" value="920"/>
					<param name="texture" value="$VAR[Studio_Flag]"/>
				</include>
				<include content="Infoscreen_Flag_Template">
					<param name="id" value="921"/>
					<param name="texture" value="$VAR[MPAA_Flag]"/>
				</include>
				<include condition="$PARAM[VideoSource_condition]" content="Infoscreen_Flag_Template">
					<param name="id" value="922"/>
					<param name="texture" value="$VAR[VideoSource_Flag]"/>
				</include>
				<include condition="!String.IsEqual(ListItem.DBType,set) + !String.IsEqual(ListItem.DBType,tvshow) + !String.IsEqual(ListItem.DBType,episode)" content="Infoscreen_Flag_Template">
					<param name="id" value="923"/>
					<param name="texture" value="$VAR[VideoCodec_Flag]"/>
				</include>
				<include condition="!String.IsEqual(ListItem.DBType,set) + !String.IsEqual(ListItem.DBType,tvshow) + !String.IsEqual(ListItem.DBType,episode)" content="Infoscreen_Flag_Template">
					<param name="id" value="924"/>
					<param name="texture" value="$VAR[AudioCodec_Flag]"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="Infoscreen_Stars_Layout">
		<param name="align"/>
		<definition>
			<control type="grouplist">
				<top>15</top>
				<centerleft>50%</centerleft>
				<height>30</height>
				<orientation>horizontal</orientation>
				<align>$PARAM[align]</align>
				<control type="image">
					<width>182</width>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$VAR[Star_Color]">$VAR[StarRating_Label]</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="Infoscreen_Description_Layout">
		<control type="textbox">
			<top>60</top>
			<height max="206">auto</height>
			<font>Body</font>
			<textcolor>$VAR[Light_Color]</textcolor>
			<label>$INFO[ListItem.AddonDescription]</label>
			<align>left</align>
			<autoscroll delay="5000" time="1500" repeat="2000">true</autoscroll>
		</control>
	</include>

	<include name="Infoscreen_Header">
		<param name="visible"/>
		<param name="left"/>
		<param name="right"/>
		<param name="align"/>
			<definition>
				<control type="grouplist">
					<visible>$PARAM[visible]</visible>
					<include content="Visible_Fade_Delayed_Animation"/>
					<left>$PARAM[left]</left>
					<right>$PARAM[right]</right>
					<centertop>50%</centertop>
					<height>720</height>
					<orientation>vertical</orientation>
					<align>center</align>
					<usecontrolcoords>true</usecontrolcoords>
					<itemgap>0</itemgap>
					<!-- Title -->
					<control type="textbox">
						<width>100%</width>
						<height max="280">auto</height>
						<align>$PARAM[align]</align>
						<font>Billboard_Title</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Title_Label]</label>
					</control>
					<!-- Details -->
					<control type="textbox">
						<top>0</top>
						<width>100%</width>
						<height max="90">auto</height>
						<font>Dialog_Info_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Dialog_Info_Label]</label>
						<align>$PARAM[align]</align>
					</control>
					<include condition="!Window.Is(addoninformation) + !String.IsEqual(ListItem.DBType,set) + !String.IsEqual(ListItem.DBType,artist)" content="Infoscreen_Stars_Layout">
						<param name="align" value="$PARAM[align]"/>
					</include>
					<include condition="Window.Is(movieinformation)" content="Infoscreen_Flags_Layout"/>
					<include condition="Window.Is(addoninformation)" content="Infoscreen_Description_Layout"/>
				</control>
			</definition>
		</include>

		<include name="Infoscreen_Plot">
			<param name="visible"/>
			<param name="left"/>
			<param name="right"/>
			<param name="align"/>
			<param name="font"/>
			<definition>
				<control type="group">
					<visible>$PARAM[visible]</visible>
					<include content="Visible_Fade_Delayed_Animation"/>
					<!-- Hidden Label empty checker -->
					<control type="label" id="916">
						<visible>false</visible>
						<label>$VAR[Plot_Label]</label>
					</control>
					<control type="textbox" id="4">
						<height>600</height>
						<left>$PARAM[left]</left>
						<right>$PARAM[right]</right>
						<centertop>50%</centertop>
						<align>$PARAM[align]</align>
						<aligny>center</aligny>
						<font>$PARAM[font]</font>
						<label>$VAR[Plot_Label]$INFO[Window(musicinformation).Property(ResetScroll)]</label>
						<textcolor>$VAR[Light_Color]</textcolor>
						<pagecontrol>60</pagecontrol>
						<autoscroll>false</autoscroll>
					</control>
					<control type="scrollbar" id="60">
						<visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
						<include content="Scrollbar_Fade_Animation"/>
						<right>27</right>
						<bottom>180</bottom>
						<width>6</width>
						<height>720</height>
						<onup>65000</onup>
						<onleft condition="Window.IsVisible(movieinformation)">8</onleft>
						<onleft condition="!Window.IsVisible(movieinformation)">97</onleft>
						<onright condition="Window.IsVisible(movieinformation) + !String.IsEmpty(ListItem.Trailer)">11</onright>
						<onright condition="Window.IsVisible(movieinformation) + String.IsEmpty(ListItem.Trailer) + !String.IsEqual(ListItem.DBType,set)">7</onright>
						<onright condition="Window.IsVisible(movieinformation) + String.IsEmpty(ListItem.Trailer) + String.IsEqual(ListItem.DBType,set)">6</onright>
						<onright condition="String.IsEqual(ListItem.DBType,album)">98</onright>
						<onright condition="String.IsEqual(ListItem.DBType,song)">7</onright>
						<onright condition="String.IsEqual(ListItem.DBType,artist)">10</onright>
						<onback>65000</onback>
						<showonepage>false</showonepage>
						<orientation>vertical</orientation>
						<texturesliderbackground colordiffuse="$VAR[Scroll_Widget_Background_Color]">views/white_100.png</texturesliderbackground>
						<texturesliderbarfocus colordiffuse="$VAR[Scroll_Widget_Focused_Color]">views/white_100.png</texturesliderbarfocus>
					</control>
				</control>
			</definition>
		</include>

		<include name="Infoscreen_Stars">
			<control type="button" id="5003">
				<visible allowhiddenfocus="true">false</visible>
				<onfocus>IncreaseRating</onfocus>
				<onfocus>SetFocus(7)</onfocus>
			</control>
			<control type="button" id="5004">
				<visible allowhiddenfocus="true">false</visible>
				<onfocus>DecreaseRating</onfocus>
				<onfocus>SetFocus(7)</onfocus>
			</control>
			<control type="grouplist">
				<visible>$PARAM[visible]</visible>
				<include content="Visible_Fade_Delayed_Animation"/>
				<animation effect="slide" end="330,0" time="0" condition="Window.Is(songinformation) | String.IsEqual(ListItem.DBType,album)" reversible="false">Conditional</animation>
				<width>364</width>
				<centerleft>50%</centerleft>
				<height>360</height>
				<centertop>50%</centertop>
				<orientation>vertical</orientation>
				<align>center</align>
				<itemgap>$PARAM[itemgap]</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="image">
					<animation effect="zoom" center="auto" start="130" end="100" time="360" tween="back" easing="out" condition="!Control.HasFocus(5003)" reversible="false">Conditional</animation>
					<animation effect="slide" end="0,7" time="360" tween="back" easing="out" condition="!Control.HasFocus(5003)" reversible="false">Conditional</animation>
					<width>60</width>
					<centerleft>50%</centerleft>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">dialogs/icon_arrow_focused.png</texture>
				</control>
				<control type="image">
					<height>$PARAM[starheight]</height>
					<centerleft>50%</centerleft>
					<visible>!ListItem.DBType(season) + !ListItem.DBType(artist)</visible>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$VAR[Star_Color]">$VAR[StarRating_Label]</texture>
				</control>
				<control type="image">
					<visible>!String.IsEmpty(ListItem.UserRating)</visible>
					<animation effect="rotate" center="auto" end="180" time="0" condition="true" reversible="false">Conditional</animation>
					<animation effect="zoom" center="auto" start="130" end="100" time="360" tween="back" easing="out" condition="!Control.HasFocus(5004)" reversible="false">Conditional</animation>
					<animation effect="slide" end="0,7" time="360" tween="back" easing="out" condition="!Control.HasFocus(5004)" reversible="false">Conditional</animation>
					<width>60</width>
					<centerleft>50%</centerleft>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">dialogs/icon_arrow_focused.png</texture>
				</control>
				<control type="image">
					<visible>String.IsEmpty(ListItem.UserRating)</visible>
					<width>60</width>
					<centerleft>50%</centerleft>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">flags/blank.png</texture>
				</control>
			</control>
		</include>

		<include name="Infoscreen_Artwork_Icon">
			<param name="top"/>
			<param name="height"/>
			<param name="width"/>
			<param name="texture"/>
			<param name="dropshadow_condition"/>
			<definition>
				<control type="group">
					<top>$PARAM[top]</top>
					<height>$PARAM[height]</height>
					<width>$PARAM[width]</width>
					<control type="image">
						<texture background="true">$PARAM[texture]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<include condition="$PARAM[dropshadow_condition]" content="DropShadow">
						<param name="height" value="100%"/>
						<param name="flipx" value="true"/>
					</include>
				</control>
		</definition>
		</include>

		<include name="Infoscreen_Artwork_Layout">
			<control type="grouplist">
				<centertop>50%</centertop>
				<centerleft>50%</centerleft>
				<height>594</height>
				<width>1920</width>
				<orientation>horizontal</orientation>
				<align>center</align>
				<usecontrolcoords>true</usecontrolcoords>
				<itemgap>0</itemgap>
				<!-- Position 1 -->
				<include condition="!String.IsEmpty(ListItem.Art(fanart))" content="Simple_ListIcon">
					<param name="width" value="1056"/>
					<param name="height" value="594"/>
					<param name="texture" value="$INFO[ListItem.Art(fanart)]"/>
					<param name="fallback" value=""/>
				</include>
				<!-- Position 2 -->
				<include condition="Window.Is(movieinformation) + !String.IsEmpty(ListItem.Art(poster))" content="Infoscreen_Artwork_Icon">
					<param name="width" value="320"/>
					<param name="top" value="57"/>
					<param name="height" value="480"/>
					<param name="texture" value="$INFO[ListItem.Art(poster)]"/>
					<param name="dropshadow_condition" value="!String.IsEmpty(ListItem.Art(fanart))"/>
				</include>
				<include condition="!Window.Is(movieinformation) + !String.IsEmpty(ListItem.Art(thumb))" content="Infoscreen_Artwork_Icon">
					<param name="width" value="504"/>
					<param name="top" value="45"/>
					<param name="height" value="504"/>
					<param name="texture" value="$INFO[ListItem.Art(thumb)]"/>
					<param name="dropshadow_condition" value="!String.IsEmpty(ListItem.Art(fanart))"/>
				</include>
				<!-- Position 3 -->
				<include condition="Window.Is(movieinformation) + !String.IsEmpty(ListItem.Art(keyart))"  content="Infoscreen_Artwork_Icon">
					<param name="width" value="260"/>
					<param name="top" value="102"/>
					<param name="height" value="390"/>
					<param name="texture" value="$INFO[ListItem.Art(keyart)]"/>
					<param name="dropshadow_condition" value="!String.IsEmpty(ListItem.Art(fanart)) | !String.IsEmpty(ListItem.Art(poster))"/>
				</include>
				<!-- Position 4 -->
				<include condition="Window.Is(movieinformation) + !String.IsEmpty(ListItem.Art(square))"  content="Infoscreen_Artwork_Icon">
					<param name="width" value="284"/>
					<param name="top" value="155"/>
					<param name="height" value="284"/>
					<param name="texture" value="$INFO[ListItem.Art(square)]"/>
					<param name="dropshadow_condition" value="!String.IsEmpty(ListItem.Art(fanart)) | !String.IsEmpty(ListItem.Art(poster)) | !String.IsEmpty(ListItem.Art(keyart))"/>
				</include>
			</control>
		</include>

		<include name="Infoscreen_Artwork">
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<visible>![Window.IsVisible(selectdialog) | Window.IsVisible(filebrowser)]</visible>
				<include content="Visible_Fade_Delayed_Animation"/>
				<include content="Transparent_Dialog_Panel"/>
				<include condition="String.IsEqual(ListItem.DBType,episode) | [String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(poster))]" content="Simple_ListIcon">
					<param name="left" value="420"/>
					<param name="top" value="235"/>
					<param name="width" value="1080"/>
					<param name="height" value="610"/>
					<param name="fallback" value=""/>
				</include>
				<include condition="!String.IsEqual(ListItem.DBType,episode) + ![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(poster))]" content="Infoscreen_Artwork_Layout"/>
			</control>
		</include>

		<include name="Fullscreen_Info">
			<!-- Hidden Label/flag checkers -->
			<control type="label" id="916">
				<visible>false</visible>
				<label>$VAR[Plot_Label]</label>
			</control>
			<control type="label" id="917">
				<visible>false</visible>
				<label>$VAR[Info_Label]</label>
			</control>
			<control type="grouplist">
				<visible>!$EXP[TransparentDialog_IsVisible] + !Window.IsVisible(playerprocessinfo)</visible>
				<include content="Visible_Fade_Delayed_Animation"/>
				<width>1560</width>
				<centerleft>50%</centerleft>
				<height>100%</height>
				<orientation>vertical</orientation>
				<align>center</align>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<!-- Logo -->
				<control type="image">
					<visible>![String.IsEmpty(VideoPlayer.Art(clearlogo-aligned)) + String.IsEmpty(VideoPlayer.Art(clearlogo))]</visible>
					<width>560</width>
					<height>237</height>
					<aspectratio>keep</aspectratio>
					<texture background="true">$VAR[Logo_Path]</texture>
				</control>
				<!-- Title -->
				<control type="textbox">
					<visible>String.IsEmpty(VideoPlayer.Art(clearlogo-aligned)) + String.IsEmpty(VideoPlayer.Art(clearlogo))</visible>
					<height max="146">auto</height>
					<font>Billboard_Title</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<label>$VAR[Title_Label]</label>
				</control>
				<!-- Info -->
				<control type="label">
					<visible>!String.IsEmpty(Control.GetLabel(917))</visible>
					<top>0</top>
					<height max="35">auto</height>
					<font>Billboard_Info</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<label>$VAR[Info_Label]</label>
				</control>
				<!-- Plot -->
				<control type="textbox">
					<visible>!String.IsEmpty(Control.GetLabel(916))</visible>
					<top>60</top>
					<height max="103">auto</height>
					<font>Body</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<label>$VAR[Plot_Label]</label>
					<autoscroll delay="5000" time="1500" repeat="2000">true</autoscroll>
				</control>
				<!-- Flags -->
				<control type="grouplist">
					<top>60</top>
					<width>100%</width>
					<height>180</height>
					<orientation>horizontal</orientation>
					<align>center</align>
					<include content="Infoscreen_Flag_Template">
						<param name="id" value="920"/>
						<param name="texture" value="$VAR[Studio_Flag]"/>
					</include>
					<include content="Infoscreen_Flag_Template">
						<param name="id" value="921"/>
						<param name="texture" value="$VAR[MPAA_Flag]"/>
					</include>
					<include content="Infoscreen_Flag_Template">
						<param name="id" value="922"/>
						<param name="texture" value="$VAR[VideoSource_Flag]"/>
					</include>
					<include content="Infoscreen_Flag_Template">
						<param name="id" value="923"/>
						<param name="texture" value="$VAR[VideoCodec_Flag]"/>
					</include>
					<include content="Infoscreen_Flag_Template">
						<param name="id" value="924"/>
						<param name="texture" value="$VAR[AudioCodec_Flag]"/>
					</include>
				</control>
			</control>
		</include>

</includes>
