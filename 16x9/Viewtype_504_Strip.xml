<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="StripView_Container">
		<control type="group">
			<visible>$EXP[StripView_IsVisible]</visible>
			<include content="Custom_List">
				<param name="type" value="fixedlist"/>
				<param name="visible" value="$EXP[View_Containers]"/>
				<param name="id" value="504"/>
				<param name="viewtype_label" value="Strip"/>
				<param name="viewtype" value="wrap"/>
				<param name="orientation" value="horizontal"/>
			</include>
		</control>
	</include>

	<include name="StripView_Display">
		<param name="id" default="504"/>
		<param name="artwork_icon" default="Thumbnail"/>
		<param name="media_view" default="true"/>
		<param name="widget_view" default="false"/>
		<param name="widget_position"/>
		<definition>

			<!--SECONDARY LIST MASK-->
			<control type="group">
				<visible>$EXP[StripView_IsVisible] + Skin.HasSetting(Secondary_List_Enabled) + $PARAM[media_view]</visible>
				<include content="CustomViewsBackground">
					<param name="visible" value="[$EXP[StripView_Display_IsFanart] | $EXP[StripView_Display_IsSquare]]"/>
					<param name="height" value="210"/>
					<param name="overlaytexture" value="views/gradient_light-background_stripview.png"/>
				</include>
				<include content="CustomViewsBackground">
					<param name="visible" value="$EXP[StripView_Display_IsPosters]"/>
					<param name="height" value="180"/>
					<param name="overlaytexture" value="views/gradient_light-background_stripview.png"/>
				</include>
			</control>

			<control type="group">
				<visible>$EXP[StripView_IsVisible] + !$EXP[OpaqueDialog_IsVisible]</visible>
				<include condition="$PARAM[media_view]" content="Viewtype_Fade_Animation"/>

				<!--ARTWORK-->
				<control type="group">
					<animation effect="slide" start="0,0" end="-80,0" time="0" condition="$EXP[StripView_Display_IsPosters]">Conditional</animation>
					<animation effect="slide" start="0,0" end="-560,0" time="0" condition="$EXP[StripView_Display_IsFanart]">Conditional</animation>
					<animation effect="slide" start="0,0" end="320,0" time="0" condition="$EXP[StripView_Display_IsFanart] + !$EXP[StripView_Details_Off]">Conditional</animation>
					<animation effect="slide" start="0,0" end="-435,0" time="0" condition="$EXP[StripView_Display_IsSquare]">Conditional</animation>
					<animation effect="slide" start="0,0" end="75,0" time="0" condition="$EXP[StripView_Display_IsSquare] + !$EXP[StripView_Details_Off]">Conditional</animation>
					<include condition="$PARAM[media_view]" content="StripView_Art_Posters">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
					<include  condition="$PARAM[media_view]" content="StripView_Art_Fanart">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
					<include  condition="$PARAM[media_view]" content="StripView_Art_Square">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
					<include condition="$PARAM[widget_view] + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="StripView_Art_Posters">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
					<include condition="$PARAM[widget_view] + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="StripView_Art_Fanart">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
					<include condition="$PARAM[widget_view] + [Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)]" content="StripView_Art_Square">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
				</control>

				<!--MASK for SECONDARY LIST-->
				<control type="group">
					<visible>$EXP[StripView_IsVisible] + Skin.HasSetting(Secondary_List_Enabled) + $PARAM[media_view]</visible>
					<control type="image">
						<visible>$EXP[StripView_Display_IsPosters]</visible>
						<height>180</height>
						<texture colordiffuse="$VAR[Secondary_Color]">views/white_100.png</texture>
					</control>
					<control type="image">
						<visible>[$EXP[StripView_Display_IsFanart] | $EXP[StripView_Display_IsSquare]]</visible>
						<height>240</height>
						<texture colordiffuse="$VAR[Secondary_Color]">views/white_100.png</texture>
					</control>
				</control>

			</control>
		</definition>
	</include>

	<include name="StripView_Details">
		<control type="group">
			<visible>$EXP[StripView_IsVisible] + !$EXP[OpaqueDialog_IsVisible]</visible>
			<include>Viewtype_Fade_Animation</include>
			<control type="group">
				<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60)</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<control type="group">
					<visible>!$EXP[Secondary_List_ContainerSwitching] + !$EXP[Secondary_List_ContentSwitching] + ![Control.HasFocus(4501) + Window.IsVisible(1121)]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="MediaFlags"/>
					<include content="Common_Details">
						<param name="viewtype_label" value="Strip"/>
						<param name="left" value="60"/>
						<param name="width" value="600"/>
						<param name="titleheight" value="315"/>
						<param name="infoheight" value="70"/>
						<param name="plotmaxheight" value="235"/>
					</include>
				</control>
				<control type="group">
					<visible>!$EXP[Secondary_List_ContainerSwitching] + !$EXP[Secondary_List_ContentSwitching] + ![Control.HasFocus(4501) + Window.IsVisible(1121)]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<!--Bottom Label-->
					<control type="label">
						<animation effect="slide" end="0,-15" time="0" condition="$EXP[StripView_Display_IsSquare] | [$EXP[StripView_Display_IsFanart] + !$EXP[StripView_Flags_IsOn]]">Conditional</animation>
						<visible>$EXP[StripView_Details_Title] + !$EXP[StripView_Details_Logo_IsOn]</visible>
						<left>240</left>
						<top>964</top>
						<width>1440</width>
						<height>52</height>
						<font>Strip_Title</font>
						<textcolor>$VAR[Primary_Color]</textcolor>
						<label>$VAR[Title_Label]</label>
						<align>center</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<scrollsuffix> / </scrollsuffix>
					</control>
					<control type="group">
						<animation effect="slide" end="0,-30" time="0" condition="$EXP[StripView_Display_IsSquare] | $EXP[StripView_Display_IsFanart]">Conditional</animation>
						<animation effect="slide" end="75,0" time="0" condition="$EXP[StripView_Display_IsSquare] + !$EXP[StripView_Details_Off]">Conditional</animation>
						<animation effect="slide" end="320,0" time="0" condition="$EXP[StripView_Display_IsFanart] + !$EXP[StripView_Details_Off]">Conditional</animation>
						<include content="ProgressBar">
							<param name="top" value="930"/>
						</include>
					</control>
				</control>
			</control>
		</control>
	</include>


</includes>
