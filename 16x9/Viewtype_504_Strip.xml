<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Strip_Container">
		<param name="type" default="fixedlist"/>
		<param name="id" default="504"/>
		<param name="viewtype_label" default="Strip"/>
		<param name="viewtype" default="wrap"/>
		<param name="orientation" default="horizontal"/>
		<definition>
			<control type="group">
				<include content="Custom_List">
					<param name="type" value="$PARAM[type]"/>
					<param name="id" value="$PARAM[id]"/>
					<param name="viewtype_label" value="$PARAM[viewtype_label]"/>
					<param name="viewtype" value="$PARAM[viewtype]"/>
					<param name="visible" value="$EXP[$PARAM[viewtype_label]View_Containers]"/>
					<param name="orientation" value="$PARAM[orientation]"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="Strip_View">
		<param name="id" default="504"/>
		<param name="viewtype_label" default="Strip"/>
		<definition>

			<!--ARTWORK-->
			<control type="group">
				<animation effect="slide" start="0,0" end="-80,0" time="0" condition="$EXP[StripView_Display_IsPosters]">Conditional</animation>
				<animation effect="slide" start="0,0" end="-560,0" time="0" condition="$EXP[StripView_Display_IsFanart]">Conditional</animation>
				<animation effect="slide" start="0,0" end="320,0" time="0" condition="$EXP[StripView_Display_IsFanart] + !$EXP[StripView_Details_Off]">Conditional</animation>
				<animation effect="slide" start="0,0" end="-435,0" time="0" condition="$EXP[StripView_Display_IsSquare]">Conditional</animation>
				<animation effect="slide" start="0,0" end="75,0" time="0" condition="$EXP[StripView_Display_IsSquare] + !$EXP[StripView_Details_Off]">Conditional</animation>
				<!--Poster-->
				<include content="StripView_Display">
					<param name="displaytype_label" value="Posters"/>
					<param name="top" value="180"/>
					<param name="item_top" value="60"/>
					<param name="item_width" value="400"/>
					<param name="item_height" value="600"/>
					<param name="focus_width" value="480"/>
					<param name="focus_height" value="720"/>
					<param name="2x_item_width" value="800"/>
					<param name="2x_item_width_plus_focus_width" value="1280"/>
					<param name="2x_item_width_minus_dropshadow_width" value="680"/>
					<param name="3x_item_width_plus_focus_width" value="1680"/>
					<param name="4x_item_width_plus_focus_width" value="2080"/>
				</include>
				<!--Fanart-->
				<include content="StripView_Display">
					<param name="displaytype_label" value="Fanart"/>
					<param name="top" value="240"/>
					<param name="item_top" value="45"/>
					<param name="item_width" value="960"/>
					<param name="item_height" value="540"/>
					<param name="focus_width" value="1120"/>
					<param name="focus_height" value="630"/>
					<param name="2x_item_width" value="1920"/>
					<param name="2x_item_width_plus_focus_width" value="3040"/>
					<param name="2x_item_width_minus_dropshadow_width" value="1800"/>
					<param name="3x_item_width_plus_focus_width" value="4000"/>
				</include>
				<!--Square-->
				<include content="StripView_Display">
					<param name="displaytype_label" value="Square"/>
					<param name="top" value="240"/>
					<param name="item_top" value="45"/>
					<param name="item_width" value="540"/>
					<param name="item_height" value="540"/>
					<param name="focus_width" value="630"/>
					<param name="focus_height" value="630"/>
					<param name="2x_item_width" value="1080"/>
					<param name="2x_item_width_plus_focus_width" value="1710"/>
					<param name="2x_item_width_minus_dropshadow_width" value="960"/>
					<param name="3x_item_width_plus_focus_width" value="2250"/>
					<param name="4x_item_width_plus_focus_width" value="2790"/>
				</include>
			</control>

			<!--DETAILS-->
			<control type="group">
				<visible>$EXP[$PARAM[viewtype_label]View_IsVisible] + !$EXP[ContainerSwitching]</visible>
				<include>View_Transition_Content_Fade_Animation</include>
				<control type="group">
					<visible>![$EXP[ContentSwitching] | $EXP[TransparentDialog_IsVisible] | Control.HasFocus(60)]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<control type="group">
						<visible>!$EXP[ContentSwitching]</visible>
						<include content="MediaFlags"/>
						<control type="group">
							<animation effect="slide" end="0,-30" time="0" condition="$EXP[StripView_Display_IsSquare] | $EXP[StripView_Display_IsFanart]">Conditional</animation>
							<animation effect="slide" end="75,0" time="0" condition="$EXP[StripView_Display_IsSquare] + !$EXP[StripView_FullWidth]">Conditional</animation>
							<animation effect="slide" end="320,0" time="0" condition="$EXP[StripView_Display_IsFanart] + !$EXP[StripView_FullWidth]">Conditional</animation>
							<include content="ProgressBar">
								<param name="top" value="930"/>
							</include>
						</control>
						<!--<include content="CommonDetails">
							<param name="viewtype" value="Showcase"/>
							<param name="left" value="960"/>
							<param name="width" value="720"/>
							<param name="labeltype" value="textbox"/>
							<param name="titleheight" value="156"/>
							<param name="titlecolor" value="$VAR[ListFocusColor]"/>
							<param name="titlealign" value="left"/>
							<param name="infogap" value="5"/>
							<param name="infoheight" value="70"/>
							<param name="plotmaxheight" value="165"/>
						</include>-->
					</control>
				</control>
			</control>

		</definition>
	</include>

</includes>
