<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!--favourites-->
	<zorder>0</zorder>
	<defaultcontrol always="true">450</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>
		<include content="Music_Player_Buttons"/>
		<control type="group">
			<visible allowhiddenfocus="true">![Window.IsVisible(shutdownmenu) | Window.IsVisible(filebrowser)]</visible>
			<include>Content_Delayed_Fade_Animation</include>
			<include>Transparent_Dialog_Panel</include>

			<include content="SimpleListIcon">
				<param name="top" value="180"/>
				<param name="width" value="720"/>
				<param name="height" value="720"/>
				<param name="align" value="right"/>
				<param name="aspectratio" value="keep"/>
			</include>

			<control type="group">
				 <visible>!Window.IsVisible(contextmenu)</visible>
				 <include>Content_Delayed_Fade_Animation</include>
				<include content="Simple_List">
					<param name="id" value="450"/>
					<param name="textcolor" value="$VAR[Light_Color]"/>
				</include>
			</control>

		</control>

	</controls>
</window>
