<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Infoscreen_Header_Template">
		<param name="windowname" />
		<param name="default_control" />
		<param name="visible" default="!$EXP[Hidden_Focus_Setter] + !$EXP[Infoscreen_Widget_HasFocus] + ![Window.Is(songinformation) + Window.IsActive(musicinformation)]" />
		<definition>
			<!-- Focus setter to ensure widget scrollbar displays correctly -->
			<include content="Focus_Setter">
				<param name="target_id" value="$PARAM[default_control]" />
			</include>
			<include content="Infoscreen_Menu" />
			<include content="User_Scroll_Delay" />
			<include content="Music_Player_Buttons" condition="Skin.HasSetting(Music_Player_Enabled)" />
			<include content="Infoscreen_Path_Tracer_Button" condition="Window.Is(movieinformation)" />
			<!-- Background -->
			<include content="Simple_ListIcon" condition="Window.Is(movieinformation) | Window.Is(musicinformation)">
				<include content="VisibleHidden_Fade_Animation" />
				<animation effect="fadediffuse" end="ff404040" time="0" condition="true">Conditional</animation> <!-- 25% alpha -->
				<animation effect="fadediffuse" end="ff9a9a9a" time="360" tween="sine" easing="inout" reversible="true" condition="String.IsEqual(Window($PARAM[windowname]).Property(Focused_Button),$LOCALIZE[207]) | String.IsEqual(Window($PARAM[windowname]).Property(Focused_Button),$LOCALIZE[21887])">Conditional</animation> <!-- 15% alpha: 60% of 25% -->
				<param name="visible" value="$PARAM[visible] + ![String.IsEqual(ListItem.DBType,album) + !Control.HasFocus(12)]" />
				<param name="texture" value="$VAR[Infoscreen_Background_Texture]" />
				<param name="fallback" value="fallback/fallback-fanart.png" />
			</include>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<include content="VisibleHidden_Fade_Animation" />
				<include content="Transparent_Dialog_Panel" condition="[Window.Is(musicinformation) + String.IsEqual(ListItem.DBType,album)] | Window.Is(songinformation)">
					<include content="VisibleHidden_Fade_Animation" />
					<param name="visible" value="!Control.HasFocus(10) + !Control.HasFocus(12)" />
					<param name="left" value="0" />
				</include>
				<include content="Simple_ListIcon" condition="[Window.Is(musicinformation) + String.IsEqual(ListItem.DBType,album)] | Window.Is(songinformation)">
					<include content="VisibleHidden_Fade_Animation" />
					<param name="visible" value="!Control.HasFocus(10) + !Control.HasFocus(12)" />
					<param name="width" value="720" />
					<param name="top" value="180" />
					<param name="height" value="720" />
					<param name="texture" value="$INFO[ListItem.Art(thumb)]" />
					<param name="fallback" value="fallback/fallback-square.png" />
				</include>
				<include content="Simple_ListIcon" condition="Window.Is(songinformation)">
					<include content="VisibleHidden_Fade_Animation" />
					<param name="visible" value="Control.HasFocus(12)" />
					<param name="left" value="600" />
					<param name="width" value="720" />
					<param name="top" value="180" />
					<param name="height" value="720" />
					<param name="texture" value="$INFO[ListItem.Art(thumb)]" />
					<param name="fallback" value="fallback/fallback-square.png" />
				</include>
			</control>
			<!-- Content -->
			<control type="group">
				<visible>$PARAM[visible] + !$EXP[TransparentDialog_IsVisible]</visible>
				<include content="Visible_Fade_Delayed_Long_Animation" />
				<include content="Breadcrumb_Label">
					<param name="bar" value="false" />
					<param name="title_label" value="$INFO[Window($PARAM[windowname]).Property(Focused_Button),$LOCALIZE[31130] ,  $LOCALIZE[31131]]" />
					<param name="label_color" value="$VAR[Breadcrumb_Label_Color]" />
					<param name="info_label_visible" value="false" />
				</include>
				<nested />
				<include content="Infoscreen_Artwork">
					<param name="visible" value="String.IsEqual(Window($PARAM[windowname]).Property(Focused_Button),$LOCALIZE[13511])" />
				</include>
			</control>
		</definition>
	</include>

	<include name="Infoscreen_Furniture_Template">
		<control type="group">
			<visible>!$EXP[Hidden_Focus_Setter]</visible>
			<include content="Visible_Fade_Delayed_Long_Animation" />
			<nested />
			<include content="Music_Player_Widget" condition="Skin.HasSetting(Music_Player_Enabled)">
				<param name="visible" value="!$EXP[TransparentDialog_IsVisible]" />
				<param name="left_label_visible" value="true" />
				<param name="background_visible" value="false" />
				<include content="Visible_Fade_Delayed_Animation" />
			</include>
			<include content="Transparent_Dialog_Background">
				<param name="visible" value="!ControlGroup(3000).HasFocus + $EXP[TransparentDialog_IsVisible]" />
				<include content="VisibleHidden_Fade_Animation" />
			</include>
		</control>
	</include>

	<include name="DialogContextMenu_Default_Template">
