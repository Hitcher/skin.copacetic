<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Player_Progress">
		<param name="left"/>
		<param name="right"/>
		<param name="bottom"/>
		<param name="height"/>
		<param name="progress_id"/>
		<param name="left_label"/>
		<param name="right_label"/>
		<param name="text_color"/>
		<definition>
			<control type="group">
				<left>$PARAM[left]</left>
				<right>$PARAM[right]</right>
				<bottom>$PARAM[bottom]</bottom>
				<height>$PARAM[height]</height>
				<!-- Cache bar -->
				<control type="progress" id="$PARAM[progress_id]">
					<centertop>50%</centertop>
					<left>$PARAM[progress_bar_padding]</left>
					<right>$PARAM[progress_bar_padding]</right>
					<height>6</height>
					<info>Player.ProgressCache</info>
					<texturebg colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturebg>
					<midtexture colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</midtexture>
				</control>
				<!-- Progress bar -->
				<control type="progress" id="$PARAM[progress_id]">
					<centertop>50%</centertop>
					<left>$PARAM[progress_bar_padding]</left>
					<right>$PARAM[progress_bar_padding]</right>
					<height>6</height>
					<info>Player.Progress</info>
					<texturebg colordiffuse="$VAR[Blank_Color]">views/white_100.png</texturebg>
					<midtexture colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</midtexture>
				</control>
				<control type="label">
					<height>100%</height>
					<width>100%</width>
					<align>left</align>
					<aligny>center</aligny>
					<label>$PARAM[left_label]</label>
					<font>Player_Time</font>
					<textcolor>$PARAM[text_color]</textcolor>
				</control>
				<control type="label">
					<height>100%</height>
					<width>100%</width>
					<align>right</align>
					<aligny>center</aligny>
					<label>$PARAM[right_label]</label>
					<font>Player_Time</font>
					<textcolor>$PARAM[text_color]</textcolor>
				</control>
			</control>
		</definition>
	</include>

	<include name="Now_Playing_Icon_Template">
		<param name="maxbarheight1" default="160"/>
		<param name="maxbarheight2" default="300"/>
		<param name="maxbarheight3" default="240"/>
		<definition>
	    <control type="group">
				<visible>$PARAM[visible]</visible>
				<visible>!$EXP[TransparentDialog_IsVisible] + !Window.IsActive(busydialog)</visible>
				<nested/>
				<width>$PARAM[width]</width>
				<height>$PARAM[width]</height>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<!-- Now playing -->
	      <control type="group">
					<visible>Player.Playing</visible>
					<control type="image">
						<animation effect="zoom" end="100, $PARAM[maxbarheight1]" center="0,$PARAM[width]" time="240" delay="111" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
						<left>$$PARAM[baredge]</left>
						<bottom>0</bottom>
						<width>$PARAM[barwidth]</width>
						<height>$PARAM[barwidth]</height>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
					<control type="image">
						<animation effect="zoom" end="100, $PARAM[maxbarheight2]" center="0,$PARAM[width]" time="240" delay="0" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
						<centerleft>50%</centerleft>
						<bottom>0</bottom>
						<width>$PARAM[barwidth]</width>
						<height>$PARAM[barwidth]</height>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
					<control type="image">
						<animation effect="zoom" end="100, $PARAM[maxbarheight3]" center="0,$PARAM[width]" time="190" delay="0" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
						<right>$$PARAM[baredge]</right>
						<bottom>0</bottom>
						<width>$PARAM[barwidth]</width>
						<height>$PARAM[barwidth]</height>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
				</control>
				<control type="group">
					<visible>Player.Paused + !Window.IsVisible(visualisation) + !VideoPlayer.IsFullscreen</visible>
					<control type="image">
						<left>$PARAM[pauseedge]</left>
						<width>$PARAM[barwidth]</width>
						<height>75%</height>
						<centertop>50%</centertop>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
					<control type="image">
						<right>$PARAM[pauseedge]</right>
						<width>$PARAM[barwidth]</width>
						<height>75%</height>
						<centertop>50%</centertop>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
				</control>
	    </control>
		</definition>
	</include>

	<include name="Now_Playing_Icon_Medium">
		<param name="visible"/>
		<param name="color"/>
		<definition>
			<include content="Now_Playing_Icon_Template">
				<param name="visible" value="$PARAM[visible]"/>
				<param name="width" value="48"/>
				<param name="barwidth" value="12"/>
				<param name="baredge" value="2"/>
				<param name="pauseedge" value="9"/>
				<param name="color" value="$PARAM[color]"/>
				<nested/>
			</include>
		</definition>
	</include>

	<include name="Now_Playing_Icon_Large">
		<param name="visible"/>
		<param name="color"/>
		<definition>
			<include content="Now_Playing_Icon_Template">
				<param name="visible" value="$PARAM[visible]"/>
				<param name="width" value="96"/>
				<param name="barwidth" value="24"/>
				<param name="baredge" value="4"/>
				<param name="pauseedge" value="18"/>
				<param name="color" value="$PARAM[color]"/>
				<nested/>
			</include>
		</definition>
	</include>

	<include name="Now_Playing_Icon">
		<param name="size" default="Medium"/>
		<param name="visible" default="true"/>
		<param name="color" default="$VAR[Common_List_Label_Color]"/>
		<definition>
			<include content="Now_Playing_Icon_$PARAM[size]">
				<param name="visible" value="$PARAM[visible]"/>
				<param name="color" value="$PARAM[color]"/>
				<nested/>
			</include>
		</definition>
	</include>

	<include name="Player_Status_Icons">
		<param name="icon_type" default="large"/>
		<param name="large_label" default="false"/>
		<param name="small_label" default="false"/>
		<param name="playicon" default="true"/>
		<param name="color" default="$VAR[Light_Color]"/>
		<definition>
			<control type="group">
				<animation effect="slide" start="0" end="0,300" time="0" condition="VideoPlayer.IsFullscreen">Conditional</animation>
				<animation effect="slide" start="0" end="0,240" time="180" tween="sine" easing="inout" reversible="true" condition="Window.IsVisible(musicosd)">Conditional</animation>
				<animation effect="slide" start="0" end="-900,0" time="0" condition="Window.Is(fullscreeninfo)">Conditional</animation>
				<visible>!Window.IsActive(busydialog)</visible>
				<include content="Visible_Fade_Animation"/>
				<control type="group">
					<width>120</width>
					<height>120</height>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<!-- Paused -->
					<control type="image">
						<visible>Player.Paused</visible>
						<visible>Window.IsVisible(visualisation) | [VideoPlayer.IsFullscreen + !Skin.HasSetting(Pause_Screen_Info_Enabled)]</visible>
						<visible>!Window.IsVisible(videoosd) + !Window.IsVisible(musicosd)</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]">osd/icon_Player.Paused_$PARAM[icon_type].png</texture>
					</control>
					<!-- Playing -->
					<control type="group">
						<visible>$PARAM[playicon]</visible>
						<visible>Player.Paused + !Window.IsVisible(videoosd) + !Window.IsVisible(musicosd) + !Skin.HasSetting(Pause_Screen_Info_Enabled)</visible>
						<animation effect="fade" start="100" end="0" time="360" delay="540" tween="sine" easing="inout">Hidden</animation>
						<control type="image">
							<visible>Player.Playing</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]">osd/icon_Player.Playing_$PARAM[icon_type].png</texture>
						</control>
					</control>
					<!-- Rewinding -->
					<control type="group">
						<visible>Player.Rewinding</visible>
						<include content="Visible_Fade_Delayed_Animation"/>
						<control type="image">
							<visible>Player.Rewinding2x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_2x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Rewinding4x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_4x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Rewinding8x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_8x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Rewinding16x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_16x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Rewinding32x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_32x_$PARAM[icon_type].png</texture>
						</control>
					</control>
					<!-- Forwarding -->
					<control type="group">
						<visible>Player.Forwarding</visible>
						<include content="Visible_Fade_Delayed_Animation"/>
						<control type="image">
							<visible>Player.Forwarding2x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_2x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Forwarding4x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_4x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Forwarding8x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_8x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Forwarding16x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_16x_$PARAM[icon_type].png</texture>
						</control>
						<control type="image">
							<visible>Player.Forwarding32x</visible>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_32x_$PARAM[icon_type].png</texture>
						</control>
					</control>
					<!-- label -->
					<control type="label">
						<visible>$PARAM[large_label] + [Player.Rewinding | Player.Forwarding]</visible>
						<include content="Visible_Fade_Delayed_Animation"/>
						<top>90</top>
						<width>auto</width>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>$PARAM[color]</textcolor>
						<font>Player_Status</font>
						<label>$VAR[Player_Status_Label]</label>
					</control>
					<control type="label">
						<visible>$PARAM[small_label] + [Player.Rewinding | Player.Forwarding]</visible>
						<include content="Visible_Fade_Delayed_Animation"/>
						<top>50</top>
						<width>auto</width>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>$PARAM[color]</textcolor>
						<font>Body</font>
						<label>$VAR[Player_Status_Label]</label>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>
