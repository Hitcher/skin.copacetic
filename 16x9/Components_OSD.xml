<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Player_Progress">
		<param name="left" />
		<param name="right" />
		<param name="bottom" />
		<param name="height" />
		<param name="progress_id" />
		<param name="left_label" />
		<param name="right_label" />
		<param name="text_color" />
		<definition>
			<control type="group">
				<left>$PARAM[left]</left>
				<right>$PARAM[right]</right>
				<bottom>$PARAM[bottom]</bottom>
				<height>$PARAM[height]</height>
				<!-- Cache bar -->
				<control type="progress" id="$PARAM[progress_id]">
					<centertop>50%</centertop>
					<left>$PARAM[progress_bar_padding]</left>
					<right>$PARAM[progress_bar_padding]</right>
					<height>6</height>
					<info>Player.ProgressCache</info>
					<texturebg colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturebg>
					<midtexture colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</midtexture>
				</control>
				<!-- Progress bar -->
				<control type="progress" id="$PARAM[progress_id]">
					<centertop>50%</centertop>
					<left>$PARAM[progress_bar_padding]</left>
					<right>$PARAM[progress_bar_padding]</right>
					<height>6</height>
					<info>Player.Progress</info>
					<texturebg colordiffuse="$VAR[Blank_Color]">views/white_100.png</texturebg>
					<midtexture colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</midtexture>
				</control>
				<control type="label">
					<height>100%</height>
					<width>100%</width>
					<align>left</align>
					<aligny>center</aligny>
					<label>$PARAM[left_label]</label>
					<font>Player_Time</font>
					<textcolor>$PARAM[text_color]</textcolor>
				</control>
				<control type="label">
					<height>100%</height>
					<width>100%</width>
					<align>right</align>
					<aligny>center</aligny>
					<label>$PARAM[right_label]</label>
					<font>Player_Time</font>
					<textcolor>$PARAM[text_color]</textcolor>
				</control>
			</control>
		</definition>
	</include>

	<include name="Paused_Icon_Template">
		<param name="visible" default="Player.Paused" />
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<nested />
				<control type="image">
					<left>$PARAM[pauseedge]</left>
					<width>$PARAM[barwidth]</width>
					<height>75%</height>
					<centertop>50%</centertop>
					<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
				</control>
				<control type="image">
					<right>$PARAM[pauseedge]</right>
					<width>$PARAM[barwidth]</width>
					<height>75%</height>
					<centertop>50%</centertop>
					<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="Now_Playing_Icon_Template">
		<param name="maxbarheight1" default="160" />
		<param name="maxbarheight2" default="300" />
		<param name="maxbarheight3" default="240" />
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<visible>!$EXP[TransparentDialog_IsVisible] + !Window.IsActive(busydialog)</visible>
				<nested />
				<width>$PARAM[width]</width>
				<height>$PARAM[width]</height>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<control type="group">
					<visible>Player.Playing</visible>
					<control type="image">
						<animation effect="zoom" end="100, $PARAM[maxbarheight1]" center="0,$PARAM[width]" time="240" delay="111" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
						<left>$$PARAM[baredge]</left>
						<bottom>0</bottom>
						<width>$PARAM[barwidth]</width>
						<height>$PARAM[barwidth]</height>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
					<control type="image">
						<animation effect="zoom" end="100, $PARAM[maxbarheight2]" center="0,$PARAM[width]" time="240" delay="0" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
						<centerleft>50%</centerleft>
						<bottom>0</bottom>
						<width>$PARAM[barwidth]</width>
						<height>$PARAM[barwidth]</height>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
					<control type="image">
						<animation effect="zoom" end="100, $PARAM[maxbarheight3]" center="0,$PARAM[width]" time="190" delay="0" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
						<right>$$PARAM[baredge]</right>
						<bottom>0</bottom>
						<width>$PARAM[barwidth]</width>
						<height>$PARAM[barwidth]</height>
						<texture colordiffuse="$PARAM[color]">views/white_100.png</texture>
					</control>
				</control>
				<include content="Paused_Icon_Template" condition="!Window.IsVisible(visualisation) + !VideoPlayer.IsFullscreen">
					<param name="pauseedge" value="$PARAM[pauseedge]" />
					<param name="barwidth" value="$PARAM[barwidth]" />
					<param name="color" value="$PARAM[color]" />
				</include>
			</control>
		</definition>
	</include>

	<include name="Now_Playing_Icon_Medium">
		<include content="Now_Playing_Icon_Template">
			<param name="visible" value="$PARAM[visible]" />
			<param name="width" value="48" />
			<param name="barwidth" value="12" />
			<param name="baredge" value="2" />
			<param name="pauseedge" value="9" />
			<param name="color" value="$PARAM[color]" />
		</include>
	</include>

	<include name="Now_Playing_Icon_Large">
		<include content="Now_Playing_Icon_Template">
			<param name="visible" value="$PARAM[visible]" />
			<param name="width" value="96" />
			<param name="barwidth" value="24" />
			<param name="baredge" value="4" />
			<param name="pauseedge" value="18" />
			<param name="color" value="$PARAM[color]" />
		</include>
	</include>

	<include name="Now_Playing_Icon">
		<param name="visible" default="true" />
		<param name="width" default="120" />
		<param name="size" default="Medium" />
		<param name="color" default="$VAR[Common_List_Label_Color]" />
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<nested />
				<width>$PARAM[width]</width>
				<height>$PARAM[width]</height>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<include content="Now_Playing_Icon_$PARAM[size]">
					<param name="visible" value="$PARAM[visible]" />
					<param name="width" value="$PARAM[width]" />
					<param name="color" value="$PARAM[color]" />
				</include>
			</control>
		</definition>
	</include>

	<include name="Paused_Icon_Medium">
		<param name="visible" default="Player.Paused" />
		<param name="color" />
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<nested />
				<width>$PARAM[width]</width>
				<height>$PARAM[width]</height>
				<include content="Paused_Icon_Template">
					<param name="barwidth" value="18" />
					<param name="pauseedge" value="10" />
					<param name="color" value="$PARAM[color]" />
					<width>64</width>
					<height>64</height>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
				</include>
			</control>
		</definition>
	</include>

	<include name="Player_Status_Icons">
		<param name="visible" default="true" />
		<param name="icon_type" default="large" />
		<param name="large_label" default="false" />
		<param name="small_label" default="false" />
		<param name="playicon" default="true" />
		<param name="color" default="$VAR[Light_Color]" />
		<definition>
			<control type="group">
				<visible>!Window.IsActive(busydialog)</visible>
				<include content="Visible_Fade_Animation" />
				<animation effect="slide" start="0" end="0,300" time="0" condition="VideoPlayer.IsFullscreen">Conditional</animation>
				<animation effect="slide" start="0" end="0,240" reversible="true" condition="Window.IsVisible(musicosd)">Conditional</animation>
				<animation effect="slide" start="0" end="-900,0" time="0" condition="Window.Is(fullscreeninfo)">Conditional</animation>
				<width>120</width>
				<height>120</height>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<!-- Paused -->
				<control type="image">
					<visible>Player.Paused</visible>
					<visible>Window.IsVisible(visualisation) | [VideoPlayer.IsFullscreen + !Skin.HasSetting(Pause_Screen_Info_Enabled)]</visible>
					<visible>!Window.IsVisible(videoosd) + !Window.IsVisible(musicosd)</visible>
					<centertop>50%</centertop>
					<centerleft>50%</centerleft>
					<texture colordiffuse="$PARAM[color]">osd/icon_Player.Paused_$PARAM[icon_type].png</texture>
				</control>
				<!-- Playing -->
				<control type="group">
					<visible>$PARAM[playicon]</visible>
					<visible>Player.Paused + !Window.IsVisible(videoosd) + !Window.IsVisible(musicosd) + !Skin.HasSetting(Pause_Screen_Info_Enabled)</visible>
					<animation effect="fade" start="100" end="0" time="360" delay="540" tween="sine" easing="inout">Hidden</animation>
					<control type="image">
						<visible>Player.Playing</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]">osd/icon_Player.Playing_$PARAM[icon_type].png</texture>
					</control>
				</control>
				<!-- Rewinding -->
				<control type="group">
					<visible>Player.Rewinding</visible>
					<include content="Visible_Fade_Delayed_Animation" />
					<control type="image">
						<visible>Player.Rewinding2x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_2x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Rewinding4x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_4x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Rewinding8x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_8x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Rewinding16x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_16x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Rewinding32x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]" flipx="true">osd/icon_Player.Forwarding_32x_$PARAM[icon_type].png</texture>
					</control>
				</control>
				<!-- Forwarding -->
				<control type="group">
					<visible>Player.Forwarding</visible>
					<include content="Visible_Fade_Delayed_Animation" />
					<control type="image">
						<visible>Player.Forwarding2x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_2x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Forwarding4x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_4x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Forwarding8x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_8x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Forwarding16x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_16x_$PARAM[icon_type].png</texture>
					</control>
					<control type="image">
						<visible>Player.Forwarding32x</visible>
						<centertop>50%</centertop>
						<centerleft>50%</centerleft>
						<texture colordiffuse="$PARAM[color]">osd/icon_Player.Forwarding_32x_$PARAM[icon_type].png</texture>
					</control>
				</control>
				<!-- label -->
				<control type="label">
					<visible>$PARAM[large_label] + [Player.Rewinding | Player.Forwarding]</visible>
					<include content="Visible_Fade_Delayed_Animation" />
					<top>90</top>
					<width>auto</width>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>$PARAM[color]</textcolor>
					<font>Player_Status</font>
					<label>$VAR[Player_Status_Label]</label>
				</control>
				<control type="label">
					<visible>$PARAM[small_label] + [Player.Rewinding | Player.Forwarding]</visible>
					<include content="Visible_Fade_Delayed_Animation" />
					<top>50</top>
					<width>auto</width>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>$PARAM[color]</textcolor>
					<font>Body</font>
					<label>$VAR[Player_Status_Label]</label>
				</control>
			</control>

		</definition>
	</include>

	<include name="seekbar_Video">
		<control type="group">
			<visible>VideoPlayer.IsFullscreen + !Window.IsVisible(playerprocessinfo) + !Window.IsVisible(videobookmarks)</visible>
			<!-- progress -->
			<control type="group">
				<visible>Player.Seeking | Player.Rewinding | Player.Forwarding | Player.HasPerformedSeek(3) | [Window.IsVisible(videoosd) + !System.IdleTime(3)] | [Player.Paused + !System.IdleTime(3)] | Window.IsVisible(fullscreeninfo)</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<control type="group">
					<visible>![Player.Paused + Skin.HasSetting(Player_Progress_Disabled)]</visible>
					<include content="Player_Progress">
						<param name="left" value="60" />
						<param name="right" value="60" />
						<param name="bottom" value="14" />
						<param name="height" value="32" />
						<param name="progress_id" value="1" />
						<param name="progress_bar_padding" value="120" />
						<param name="left_label" value="$INFO[Player.Time]" />
						<param name="right_label" value="$INFO[Player.Duration]" />
						<param name="text_color" value="$VAR[Light_Color]" />
					</include>
				</control>
			</control>
			<!-- fullscreen info -->
			<control type="group">
				<visible>Player.Paused + !Window.IsVisible(videoosd) + !Window.IsVisible(fullscreeninfo)</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<include content="Fullscreen_Info" condition="VideoPlayer.IsFullscreen + Skin.HasSetting(Pause_Screen_Info_Enabled) + Integer.IsGreater(VideoPlayer.DBID,0)" />
			</control>
			<control type="group">
				<visible>!Window.IsVisible(fullscreeninfo) + ![Skin.HasSetting(Pause_Screen_Info_Enabled) + Player.Paused]</visible>
				<!-- Breadcrumb -->
				<control type="grouplist">
					<visible>!Skin.TimerIsRunning(video_playback_label_interruptor)</visible>
					<left>60</left>
					<right>60</right>
					<top>60</top>
					<height>60</height>
					<orientation>horizontal</orientation>
					<align>left</align>
					<itemgap>12</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),2) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),8)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<top>6</top>
						<height>48</height>
						<width>6</width>
						<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
					</control>
					<control type="label">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),2) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),8)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<height>60</height>
						<width max="960">auto</width>
						<label>$VAR[Title_Breadcrumb_Label]</label>
						<font>Title_Breadcrumb_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
					<!--Label 1 -->
					<control type="label">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),2) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),5)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<width max="600">auto</width>
						<height>35</height>
						<top>16</top>
						<label>$VAR[Info_Fullscreen_Label]</label>
						<font>Info_Breadcrumb_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
					<control type="label">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),5) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),8)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<width max="600">auto</width>
						<height>35</height>
						<top>16</top>
						<label>$VAR[Info_Fullscreen_Label2]</label>
						<font>Info_Breadcrumb_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
					<!-- MPAA -->
					<control type="image">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11) + !String.IsEqual(Control.GetLabel(6304),flags/blank.png)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<top>6</top>
						<height>48</height>
						<width>6</width>
						<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
					</control>
					<control type="label">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11) + !String.IsEqual(Control.GetLabel(6304),flags/blank.png)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<width max="600">auto</width>
						<height>35</height>
						<top>16</top>
						<label>$LOCALIZE[31148]</label>
						<font>Info_Breadcrumb_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
					<control type="image">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<left>-15</left>
						<width>90</width>
						<height>60</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="$VAR[Light_Color]">$VAR[MPAA_Flag]</texture>
					</control>
					<control type="label">
						<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11)</visible>
						<include content="Video_Breadcrumb_Fade_Animation" />
						<left>-15</left>
						<width max="600">auto</width>
						<height>35</height>
						<top>16</top>
						<label>$VAR[MPAA_Description_Label]</label>
						<font>Info_Breadcrumb_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
				</control>
				<!-- Player status icons -->
				<control type="group">
					<visible>Player.Seeking | Player.Rewinding | Player.Forwarding | Player.HasPerformedSeek(3) | Player.Paused</visible>
					<include content="WindowOpenClose_Fade_Delayed_Animation" />
					<include content="Player_Status_Icons">
						<param name="large_label" value="true" />
					</include>
				</control>
			</control>
		</control>
	</include>

	<include name="seekbar_Music">
		<include content="Player_Status_Icons">
			<param name="large_label" value="true" />
			<visible>!Window.IsVisible(musicosd)</visible>
			<include content="Visible_Fade_Delayed_Animation" />
		</include>
		<include content="Player_Progress">
			<param name="left" value="60" />
			<param name="right" value="60" />
			<param name="bottom" value="14" />
			<param name="height" value="32" />
			<param name="progress_bar_padding" value="120" />
			<param name="progress_id" value="1" />
			<param name="left_label" value="$INFO[Player.Time]" />
			<param name="right_label" value="$INFO[Player.Duration]" />
			<param name="text_color" value="$VAR[Primary_Color]" />
		</include>
	</include>

</includes>