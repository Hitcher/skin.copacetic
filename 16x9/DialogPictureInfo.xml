<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pictureinfo -->
	<defaultcontrol always="true">5</defaultcontrol>
	<include>DialogZoomAnimation</include>

	<controls>

		<!-- Background -->
		<include>DialogBackgroundImage</include>

		<!-- Heading -->
		<control type="label">
			<left>150</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>List_Title_Unfocused</font>
			<label>13406</label>
		</control>

		<!-- List -->
		<control type="list" id="5">
			<left>360</left>
			<top>235</top>
			<width>1200</width>
			<height>580</height>
			<onup>noop</onup>
			<ondown>9000</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<orientation>vertical</orientation>
			<viewtype label="list">list</viewtype>
			<scrolltime tween="sine" easing="inout">240</scrolltime>

			<itemlayout width="1200" height="58">
				<control type="label">
					<width>1200</width>
					<height>58</height>
					<font>Font36</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<width>1200</width>
					<height>58</height>
					<font>Font36</font>
					<align>right</align>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</itemlayout>

			<focusedlayout width="1200" height="58">
				<control type="label">
					<width>1200</width>
					<height>58</height>
					<font>Font36</font>
					<textcolor>$VAR[FocusedColor]</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(5)">Conditional</animation>
				</control>
				<control type="label">
					<width>1200</width>
					<height>58</height>
					<font>Font36</font>
					<align>right</align>
					<textcolor>$VAR[FocusedColor]</textcolor>
					<label>$INFO[ListItem.Label2]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(5)">Conditional</animation>
				</control>
			</focusedlayout>

		</control>

		<!-- OK button -->
		<control type="button" id="9000">
			<left>150</left>
			<top>912</top>
			<width>400</width>
			<height>66</height>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<onup>5</onup>
			<ondown>noop</ondown>
			<onclick>Close</onclick>
			<label>186</label>
		</control>

	</controls>

</window>