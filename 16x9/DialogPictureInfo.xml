<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pictureinfo -->
	<defaultcontrol always="true">5</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<!-- List -->
			<control type="list" id="5">
				<viewtype label="list">list</viewtype>
				<left>780</left>
				<width>960</width>
				<centertop>50%</centertop>
				<height>500</height>
				<orientation>vertical</orientation>
				<onup>5</onup>
				<ondown>5</ondown>
				<onright>9000</onright>
				<onleft>9000</onleft>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout width="960" height="50">
					<control type="label">
						<left>60</left>
						<right>0</right>
						<height>50</height>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>240</left>
						<right>0</right>
						<align>right</align>
						<height>50</height>
						<label>$INFO[ListItem.Label2]</label>
						<scroll>false</scroll>
					</control>
				</itemlayout>
				<focusedlayout width="960" height="50">
					<control type="label">
						<left>60</left>
						<right>0</right>
						<label>$INFO[ListItem.Label]</label>
						<height>50</height>
						<textcolor>$VAR[DialogPictureInfo_Focused_Label_Color]</textcolor>
					</control>
					<control type="label">
						<left>240</left>
						<right>0</right>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
						<height>50</height>
						<textcolor>$VAR[DialogPictureInfo_Focused_Label_Color]</textcolor>
						<scroll>false</scroll>
					</control>
				</focusedlayout>
			</control>

			<include content="Dialog_Divider_With_Scrollbar">
				<param name="height" value="500"/>
				<param name="left" value="780"/>
				<param name="scrollbarvisible" value="true"/>
				<param name="scrollbaralignleft" value="true"/>
			</include>

			<include content="Button_Group_Template">
				<param name="onleft" value="5"/>
				<param name="onright" value="5"/>
				<param name="onup" value="5"/>
				<param name="ondown" value="5"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1onclick" value="Close"/>
			</include>

		</control>

	</controls>

</window>
