<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- confirmdialog,yesnodialog,okdialog,progressdialog -->
	<!--Window property to set default skin.strings via startup.xml on first load-->
	<onunload condition="String.IsEmpty(Window(Home).Property(SkinInitStarted))">ReplaceWindow(Startup.xml)</onunload>
	<defaultcontrol always="true">9000</defaultcontrol>
	<include>Dialog_Fade_Animation</include>
	<controls>
		<control type="group">
			<visible allowhiddenfocus="true">!Window.IsVisible(shutdownmenu)</visible>
			<include>Content_Fade_Animation</include>

			<include content="ButtonGroup">
				<param name="buttonsvisible" value="[String.IsEqual(Control.GetLabel(10),No) | String.IsEqual(Control.GetLabel(10),Cancel) | String.IsEqual(Control.GetLabel(11),Yes) | String.IsEqual(Control.GetLabel(11),Ok)]"/>
				<param name="button1id" value="10"/>
				<param name="button2id" value="11"/>
			</include>
			<control type="grouplist">
				<left>120</left>
				<top>60</top>
				<width>1680</width>
				<height>960</height>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<align>center</align>
				<!--Heading-->
				<control type="textbox" id="1">
					<height max="480">auto</height>
					<font>List_Title_Focused</font>
					<textcolor>$VAR[Overlay_Text_Color]</textcolor>
					<label>$INFO[Control.GetLabel(1)] $INFO[System.Progressbar,- ,%]</label>
				</control>
				<!-- Details -->
				<control type="textbox" id="9">
					<height max="480">auto</height>
					<font>List_Title_Unfocused</font>
					<textcolor>$VAR[Overlay_Text_Color]</textcolor>
				</control>
			</control>
			<!--Progress Bar-->
			<control type="progress" id="20">
				<width>360</width>
				<height>8</height>
				<left>780</left>
				<top>1047</top>
				<texturebg colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturebg>
				<lefttexture></lefttexture>
				<midtexture colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</midtexture>
				<righttexture></righttexture>
				<overlaytexture></overlaytexture>
			</control>
		</control>
	</controls>
</window>
