<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="GridView_Container">

		<control type="group">
			<visible>Control.IsVisible(505) + !$EXP[OptionsSwitching]</visible>
			<include>Content_Fade_Animation</include>
			<control type="group">
				<visible>!$EXP[ContainerSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60) + !$EXP[InfoDialog_IsVisible] + !$EXP[Music_Player_HasFocus]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Breadcrumb_Label">
					<param name="bar" value="$EXP[GridView_Details_Breadcrumb] | [!$EXP[GridView_Details_Off] + !Container.Content(movies) + !Container.Content(sets) + !Container.Content(tvshows) + !Container.Content(artists)]"/>
					<param name="visible" value="!$EXP[GridView_Details_Off]"/>
					<param name="label_color" value="$VAR[Primary_Color]"/>
				</include>
			</control>
		</control>

		<control type="group">
			<visible>Control.IsVisible(505)</visible>
			<animation effect="slide" end="592,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container.NumItems,1)">Conditional</animation>
			<animation effect="slide" end="296,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container.NumItems,2)">Conditional</animation>
			<animation effect="slide" end="0,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container.NumItems,3)">Conditional</animation>
			<animation effect="slide" end="720,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,1)">Conditional</animation>
			<animation effect="slide" end="540,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,2)">Conditional</animation>
			<animation effect="slide" end="360,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,3)">Conditional</animation>
			<animation effect="slide" end="180,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,4)">Conditional</animation>
			<animation effect="slide" end="0,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,5)">Conditional</animation>
			<animation effect="slide" end="720,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,1)">Conditional</animation>
			<animation effect="slide" end="540,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,2)">Conditional</animation>
			<animation effect="slide" end="360,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,3)">Conditional</animation>
			<animation effect="slide" end="180,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,4)">Conditional</animation>
			<animation effect="slide" end="0,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,5)">Conditional</animation>
			<!-- List -->
			<control type="panel" id="505">
				<viewtype label="Grid">icon</viewtype>
				<visible>!Container.Content() + !Container.Content(files) + !Container.Content(songs)</visible>
				<left>50</left>
				<top>180</top>
				<width>1920</width>
				<height>900</height>
				<include>Grid_Navigation</include>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<include content="GridView_Layout_Fanart">
					<param name="art_icon" value="Thumbnail"/>
				</include>
				<include content="GridView_Layout_Posters">
					<param name="art_icon" value="Thumbnail"/>
				</include>
				<include content="GridView_Layout_Square">
					<param name="art_icon" value="Thumbnail"/>
				</include>
			</control>
			<!-- Details -->
			<control type="group">
				<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60) + !$EXP[InfoDialog_IsVisible] + !$EXP[Music_Player_HasFocus]</visible>
				<animation effect="fade" start="0" end="100" time="360" delay="900" tween="sine" easing="inout" reversible="false">Visible</animation>
				<control type="label" id="505001">
					<include>Hidden_Control</include>
					<label>$VAR[Info_Label]</label>
				</control>
				<include content="GridView_Overlay">
					<param name="displaytype_label" value="Fanart"/>
					<param name="left" value="72"/>
					<param name="width" value="592"/>
					<param name="height" value="333"/>
				</include>
				<include content="GridView_Overlay">
					<param name="displaytype_label" value="Posters"/>
					<param name="left" value="60"/>
					<param name="width" value="360"/>
					<param name="height" value="540"/>
				</include>
				<include content="GridView_Overlay">
					<param name="displaytype_label" value="Square"/>
					<param name="left" value="60"/>
					<param name="width" value="360"/>
					<param name="height" value="360"/>
				</include>
			</control>
			<!-- Scrollbar -->
			<control type="group">
				<visible>!Window.Is(home) + !$EXP[InfoDialog_IsVisible] + !$EXP[TransparentDialog_IsVisible]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Scrollbars">
					<param name="right" value="27"/>
					<param name="bottom" value="180"/>
					<param name="width" value="6"/>
					<param name="height" value="720"/>
					<param name="onleft" value="62"/>
					<param name="onright" value="SetFocus(3000,0)"/>
					<param name="onup" value="60"/>
					<param name="ondown" value="60"/>
					<param name="orientation" value="vertical"/>
				</include>
			</control>
		</control>
	</include>


	<include name="GridView_Display">
		<param name="id"/>
		<param name="art_icon"/>
		<param name="widget_position"/>
		<param name="gridview_details_fade"/>
		<definition>
			<control type="group">
				<visible>$EXP[GridView_IsVisible]</visible>
				<include condition="!Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="GridView_Art_Posters">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="$PARAM[art_icon]"/>
					<param name="gridview_details_fade" value="$PARAM[gridview_details_fade]"/>
				</include>
					<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="GridView_Art_Fanart">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="$PARAM[art_icon]"/>
					<param name="gridview_details_fade" value="$PARAM[gridview_details_fade]"/>
				</include>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="GridView_Art_Square">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="$PARAM[art_icon]"/>
					<param name="gridview_details_fade" value="$PARAM[gridview_details_fade]"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="GridView_Details">
		<control type="group">
			<visible>!$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<!-- ProgressBar -->
			<!-- Fanart -->
			<control type="group">
				<visible>$EXP[GridView_Display_IsFanart]</visible>
				<include content="ProgressBar">
					<param name="left" value="188"/>
					<param name="top" value="690"/>
					<param name="unwatched_indicator_background" value="$VAR[Accent_Color]"/>
				</include>
			</control>
			<!-- Poster/Square -->
			<control type="group">
				<animation effect="slide" end="0,-90" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare]">Conditional</animation>
				<visible>$EXP[GridView_Display_IsPosters] | $EXP[GridView_Display_IsSquare]</visible>
				<include content="ProgressBar">
					<param name="left" value="120"/>
					<param name="top" value="793"/>
					<param name="width" value="240"/>
					<param name="unwatched_indicator_background" value="$VAR[Accent_Color]"/>
				</include>
			</control>
		</control>
	</include>


</includes>
