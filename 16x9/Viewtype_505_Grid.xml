<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="GridView_Container">

		<control type="group" id="505100">
			<visible>Container(505).OnScrollPrevious | Container(505).OnScrollNext</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<control type="group">
			<visible>$EXP[GridView_IsVisible] + !$EXP[OpaqueDialog_IsVisible]</visible>
			<include>Viewtype_Fade_Animation</include>
			<control type="group">
				<animation effect="slide" end="592,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container(505).NumItems,1)">Conditional</animation>
				<animation effect="slide" end="296,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container(505).NumItems,2)">Conditional</animation>
				<animation effect="slide" end="0,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container(505).NumItems,3)">Conditional</animation>
				<animation effect="slide" end="720,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container(505).NumItems,1)">Conditional</animation>
				<animation effect="slide" end="540,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container(505).NumItems,2)">Conditional</animation>
				<animation effect="slide" end="360,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container(505).NumItems,3)">Conditional</animation>
				<animation effect="slide" end="180,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container(505).NumItems,4)">Conditional</animation>
				<animation effect="slide" end="0,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container(505).NumItems,5)">Conditional</animation>
				<animation effect="slide" end="720,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container(505).NumItems,1)">Conditional</animation>
				<animation effect="slide" end="540,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container(505).NumItems,2)">Conditional</animation>
				<animation effect="slide" end="360,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container(505).NumItems,3)">Conditional</animation>
				<animation effect="slide" end="180,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container(505).NumItems,4)">Conditional</animation>
				<animation effect="slide" end="0,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container(505).NumItems,5)">Conditional</animation>
				<control type="group">
					<visible>!$EXP[OptionsSwitching]</visible>
					<include>Artwork_Fade_Animation</include>
					<!-- List -->
					<control type="panel" id="505">
						<viewtype label="Grid">icon</viewtype>
						<visible>$EXP[View_Containers]</visible>
						<left>0</left>
						<top>180</top>
						<width>1920</width>
						<height>900</height>
						<include>Grid_Navigation</include>
						<pagecontrol>60</pagecontrol>
						<preloaditems>2</preloaditems>
						<scrolltime tween="sine" easing="inout">360</scrolltime>
						<include content="GridView_Layout_Fanart">
							<param name="artwork_icon" value="Thumbnail"/>
						</include>
						<include content="GridView_Layout_Posters">
							<param name="artwork_icon" value="Thumbnail"/>
						</include>
						<include content="GridView_Layout_Square">
							<param name="artwork_icon" value="Thumbnail"/>
						</include>
					</control>
					<!-- Top Border -->
					<control type="group">
						<visible>Control.HasFocus(505) + !Control.IsVisible(505100)</visible>
						<control type="group">
							<visible>!$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60) + !Control.HasFocus(91100)</visible>
							<include>Content_Fade_Animation</include>
							<control type="image">
								<visible>[$EXP[GridView_Display_IsPosters] | $EXP[GridView_Display_IsSquare]] + Integer.IsEqual(Container(505).Row,0)</visible>
								<animation effect="slide" end="360,0" time="0" condition="Integer.IsEqual(Container(505).Column,1)" reversible="false">Conditional</animation>
								<animation effect="slide" end="720,0" time="0" condition="Integer.IsEqual(Container(505).Column,2)" reversible="false">Conditional</animation>
								<animation effect="slide" end="1080,0" time="0" condition="Integer.IsEqual(Container(505).Column,3)" reversible="false">Conditional</animation>
								<animation effect="slide" end="1440,0" time="0" condition="Integer.IsEqual(Container(505).Column,4)" reversible="false">Conditional</animation>
								<left>50</left>
								<top>170</top>
								<width>380</width>
								<height>10</height>
								<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
							</control>
							<control type="image">
								<visible>$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container(505).Row,0)</visible>
								<animation effect="slide" end="592,0" time="0" condition="Integer.IsEqual(Container(505).Column,1)" reversible="false">Conditional</animation>
								<animation effect="slide" end="1184,0" time="0" condition="Integer.IsEqual(Container(505).Column,2)" reversible="false">Conditional</animation>
								<left>62</left>
								<top>170</top>
								<width>612</width>
								<height>10</height>
								<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
							</control>
						</control>
					</control>
				</control>

				<!--Details-->
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60) + !Control.HasFocus(91100)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="GridView_Overlay">
						<param name="displaytype_label" value="Fanart"/>
						<param name="left" value="72"/>
						<param name="width" value="592"/>
						<param name="height" value="333"/>
					</include>
					<include content="GridView_Overlay">
						<param name="displaytype_label" value="Posters"/>
						<param name="left" value="60"/>
						<param name="width" value="360"/>
						<param name="height" value="540"/>
					</include>
					<include content="GridView_Overlay">
						<param name="displaytype_label" value="Square"/>
						<param name="left" value="60"/>
						<param name="width" value="360"/>
						<param name="height" value="360"/>
					</include>
				</control>
			</control>

			<!-- Breadcrumb -->
			<control type="group">
				<visible>!$EXP[ContainerSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60)</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Breadcrumb_Label">
					<param name="visible" value="!$EXP[GridView_Details_Off] + ![Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio]"/>
				</include>
			</control>

		</control>
	</include>


	<include name="GridView_Display">
		<param name="id"/>
		<param name="artwork_icon"/>
		<param name="widget_position"/>
		<param name="gridview_details_fade"/>
		<definition>
			<control type="group">
				<visible>$EXP[GridView_IsVisible]</visible>
				<include condition="!Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="GridView_Art_Posters">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					<param name="gridview_details_fade" value="$PARAM[gridview_details_fade]"/>
				</include>
					<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="GridView_Art_Fanart">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					<param name="gridview_details_fade" value="$PARAM[gridview_details_fade]"/>
				</include>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="GridView_Art_Square">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					<param name="gridview_details_fade" value="$PARAM[gridview_details_fade]"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="GridView_Details">
		<control type="group">
			<visible>!$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<!--ProgressBar-->
			<!--Fanart-->
			<control type="group">
				<visible>$EXP[GridView_Display_IsFanart]</visible>
				<include content="ProgressBar">
					<param name="left" value="188"/>
					<param name="top" value="686"/>
				</include>
			</control>
			<!--Poster/Square-->
			<control type="group">
				<animation effect="slide" end="0,-90" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare]">Conditional</animation>
				<visible>$EXP[GridView_Display_IsPosters] | $EXP[GridView_Display_IsSquare]</visible>
				<include content="ProgressBar">
					<param name="left" value="120"/>
					<param name="top" value="789"/>
					<param name="width" value="240"/>
				</include>
			</control>
		</control>
	</include>

</includes>
