<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="GridView_Container">
		<control type="group">
			<visible>Control.IsVisible(505) + !$EXP[OptionsSwitching]</visible>
			<include content="Visible_Fade_Animation" />
			<control type="group">
				<visible>!$EXP[ContainerSwitching] + !$EXP[TransparentDialog_IsVisible] + !$EXP[Scrollbar_HasFocus] + !$EXP[Infoscreen_IsVisible] + !$EXP[Music_Player_HasFocus]</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<include content="Breadcrumb_Label">
					<param name="bar" value="$EXP[GridView_Details_Breadcrumb] | [!$EXP[GridView_Details_Off] + !Container.Content(movies) + !Container.Content(sets) + !Container.Content(tvshows) + !Container.Content(artists)]" />
					<param name="visible" value="!$EXP[GridView_Details_Off]" />
					<param name="label_color" value="$VAR[Primary_Color]" />
				</include>
			</control>
		</control>
		<control type="group">
			<visible>Control.IsVisible(505)</visible>
			<animation effect="slide" end="592,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container.NumItems,1)">Conditional</animation>
			<animation effect="slide" end="296,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container.NumItems,2)">Conditional</animation>
			<animation effect="slide" end="0,193" time="0" reversible="false" condition="$EXP[GridView_Display_IsFanart] + Integer.IsEqual(Container.NumItems,3)">Conditional</animation>
			<animation effect="slide" end="720,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,1)">Conditional</animation>
			<animation effect="slide" end="540,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,2)">Conditional</animation>
			<animation effect="slide" end="360,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,3)">Conditional</animation>
			<animation effect="slide" end="180,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,4)">Conditional</animation>
			<animation effect="slide" end="0,90" time="0" reversible="false" condition="$EXP[GridView_Display_IsPosters] + Integer.IsEqual(Container.NumItems,5)">Conditional</animation>
			<animation effect="slide" end="720,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,1)">Conditional</animation>
			<animation effect="slide" end="540,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,2)">Conditional</animation>
			<animation effect="slide" end="360,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,3)">Conditional</animation>
			<animation effect="slide" end="180,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,4)">Conditional</animation>
			<animation effect="slide" end="0,180" time="0" reversible="false" condition="$EXP[GridView_Display_IsSquare] + Integer.IsEqual(Container.NumItems,5)">Conditional</animation>
			<!-- List -->
			<control type="panel" id="505">
				<viewtype label="Grid">icon</viewtype>
				<visible>!Container.Content() + !Container.Content(files) + !Container.Content(songs) + !Container.Content(playlists)</visible>
				<left>50</left>
				<top>180</top>
				<width>1920</width>
				<height>900</height>
				<onfocus condition="Skin.HasSetting(Trailer_Autoplay) + String.IsEqual(Window(home).Property(Trailer_Autoplay),true)">PlayerControl(Stop)</onfocus>
				<onfocus condition="Skin.HasSetting(Trailer_Autoplay) + String.IsEqual(Window(home).Property(Trailer_Autoplay),true)">ClearProperty(Trailer_Autoplay,home)</onfocus>
				<include>Grid_Navigation</include>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<include content="GridView_Layout_Fanart" />
				<include content="GridView_Layout_Posters" />
				<include content="GridView_Layout_Square" />
			</control>
			<!-- Details -->
			<control type="group">
				<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !$EXP[Scrollbar_HasFocus] + !$EXP[Infoscreen_IsVisible] + !$EXP[Music_Player_HasFocus]</visible>
				<animation effect="fade" start="0" end="100" time="360" delay="1200" tween="sine" easing="inout" reversible="false">Visible</animation>
				<control type="label" id="505001">
					<include>Hidden_Control</include>
					<label>$VAR[Info_Label]</label>
				</control>
				<include content="GridView_Overlay">
					<param name="displaytype_label" value="Fanart" />
					<param name="left" value="72" />
					<param name="width" value="592" />
					<param name="height" value="333" />
				</include>
				<include content="GridView_Overlay">
					<param name="displaytype_label" value="Posters" />
					<param name="left" value="60" />
					<param name="width" value="360" />
					<param name="height" value="540" />
				</include>
				<include content="GridView_Overlay">
					<param name="displaytype_label" value="Square" />
					<param name="left" value="60" />
					<param name="width" value="360" />
					<param name="height" value="360" />
				</include>
			</control>
		</control>

		<!-- Hidden GridView dropshadow checkers -->
		<control type="group" id="9601">
			<visible>!String.IsEmpty(ListItemNoWrap(1).Label)</visible>
		</control>
		<control type="group" id="9602">
			<visible>!String.IsEmpty(ListItemNoWrap(2).Label)</visible>
		</control>
		<control type="group" id="9603">
			<visible>!String.IsEmpty(ListItemNoWrap(3).Label)</visible>
		</control>
		<control type="group" id="9604">
			<visible>!String.IsEmpty(ListItemNoWrap(4).Label)</visible>
		</control>
		<control type="group" id="9605">
			<visible>!String.IsEmpty(ListItemNoWrap(5).Label)</visible>
		</control>
		<control type="group" id="9606">
			<visible>!String.IsEmpty(ListItemNoWrap(6).Label)</visible>
		</control>
		<control type="group" id="9607">
			<visible>String.IsEqual(ListItemNoWrap(-6).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9608">
			<visible>String.IsEqual(ListItemNoWrap(-5).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9609">
			<visible>String.IsEqual(ListItemNoWrap(-4).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9610">
			<visible>String.IsEqual(ListItemNoWrap(-3).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9611">
			<visible>String.IsEqual(ListItemNoWrap(-2).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9612">
			<visible>String.IsEqual(ListItemNoWrap(-1).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9613">
			<visible>String.IsEqual(ListItemNoWrap(1).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9614">
			<visible>String.IsEqual(ListItemNoWrap(2).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9615">
			<visible>String.IsEqual(ListItemNoWrap(3).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9616">
			<visible>String.IsEqual(ListItemNoWrap(4).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9617">
			<visible>String.IsEqual(ListItemNoWrap(5).Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="group" id="9618">
			<visible>String.IsEqual(ListItemNoWrap(6).Overlay,OverlayWatched.png)</visible>
		</control>
	</include>


	<include name="GridView_Display">
		<param name="id" />
		<param name="art_icon" />
		<param name="widget_position" />
		<param name="gridview_details_fade" />
		<definition>
			<include content="Viewtype_Display_Template">
				<param name="viewtype_label" value="Grid" />
				<include content="GridView_Art_Posters" condition="!Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
				</include>
				<include content="GridView_Art_Fanart" condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
				</include>
				<include content="GridView_Art_Square" condition="Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
				</include>
			</include>
		</definition>
	</include>

	<include name="Progress_Grid_Fanart">
		<param name="id" />
		<definition>
			<include content="Progress_Grid">
				<param name="id" value="$PARAM[id]" />
				<param name="left" value="188" />
				<param name="bottom" value="384" />
				<param name="unwatched_indicator_background" value="$VAR[Accent_Color]" />
				<param name="slides" value="Default" />
			</include>
		</definition>
	</include>

	<include name="Progress_Grid_Posters">
		<param name="id" />
		<definition>
			<include content="Progress_Grid">
				<param name="id" value="$PARAM[id]" />
				<param name="left" value="120" />
				<param name="bottom" value="281" />
				<param name="width" value="240" />
				<param name="unwatched_indicator_background" value="$VAR[Accent_Color]" />
				<param name="slides" value="Narrow" />
			</include>
		</definition>
	</include>

	<include name="Progress_Grid_Square">
		<param name="id" />
		<definition>
			<include content="Progress_Grid">
				<param name="id" value="$PARAM[id]" />
				<param name="left" value="120" />
				<param name="bottom" value="371" />
				<param name="width" value="240" />
				<param name="unwatched_indicator_background" value="$VAR[Accent_Color]" />
				<param name="slides" value="Narrow" />
			</include>
		</definition>
	</include>

	<include name="GridView_Details">
		<param name="id" />
		<param name="widget_position" />
		<param name="widget_display" />
		<definition>
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible]</visible>
				<include content="Visible_Fade_Delayed_Animation" />
				<include content="Breadcrumb_Label">
					<param name="bar" value="false" />
					<param name="title_label" value="$VAR[Title_Label]" />
					<param name="info_label" value="$VAR[Info_Label,$LOCALIZE[31116] ]" />
					<param name="info_label_visible" value="true" />
					<param name="label_color" value="$VAR[Primary_Color]" />
					<animation effect="slide" start="0" end="0,780" time="0" condition="String.IsEqual(Control.GetLabel(620$PARAM[widget_position]2),Posters)">Conditional</animation>
					<animation effect="slide" start="0" end="0,780" time="0" condition="Window.Is(home) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)">Conditional</animation>
					<animation effect="slide" start="0" end="0,677" time="0" condition="String.IsEqual(Control.GetLabel(620$PARAM[widget_position]2),Fanart)">Conditional</animation>
					<animation effect="slide" start="0" end="0,677" time="0" condition="Window.Is(home) + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart)">Conditional</animation>
					<animation effect="slide" start="0" end="0,690" time="0" condition="String.IsEqual(Control.GetLabel(620$PARAM[widget_position]2),Square)">Conditional</animation>
					<animation effect="slide" start="0" end="0,690" time="0" condition="Window.Is(home) + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)">Conditional</animation>
				</include>
				<include condition="Window.Is(movieinformation)" content="Progress_Grid_$PARAM[widget_display]">
					<param name="id" value="$PARAM[id]" />
				</include>
				<include condition="Window.Is(home) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart) + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)" content="Progress_Grid_Posters">
					<param name="id" value="$PARAM[id]" />
				</include>
				<include condition="Window.Is(home) + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart)" content="Progress_Grid_Fanart">
					<param name="id" value="$PARAM[id]" />
				</include>
				<include condition="Window.Is(home) + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)" content="Progress_Grid_Square">
					<param name="id" value="$PARAM[id]" />
				</include>
			</control>
		</definition>
	</include>

</includes>