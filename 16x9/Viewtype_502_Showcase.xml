<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ShowcaseView_Container">
		<control type="group">
			<visible>$EXP[ShowcaseView_IsVisible]</visible>
			<include content="Custom_List">
				<param name="visible" value="$EXP[Showcase_Containers]"/>
				<param name="type" value="fixedlist"/>
				<param name="id" value="502"/>
				<param name="viewtype_label" value="Showcase"/>
				<param name="viewtype" value="bigwrap"/>
				<param name="orientation" value="horizontal"/>
			</include>
		</control>
	</include>

	<include name="ShowcaseView_Display">
		<param name="id" default="502"/>
		<param name="artwork_icon" default="Thumbnail"/>
		<param name="media_view" default="true"/>
		<param name="widget_view" default="false"/>
		<param name="widget_position"/>
		<param name="widget_header"/>
		<definition>

			<control type="group">
				<visible>$EXP[ShowcaseView_IsVisible]</visible>
				<include>Viewtype_Fade_Animation</include>
				<animation effect="slide" start="0,0" end="360,0" time="360" tween="sine" easing="out" reversible="true" condition="Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>

				<!--ARTWORK-->
				<include condition="$PARAM[media_view]" content="ShowcaseView_Art_Posters">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
				</include>
				<include condition="$PARAM[media_view]" content="ShowcaseView_Art_Square">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
				</include>
				<control type="group">
					<visible>Control.HasFocus(90$PARAM[widget_position]0)</visible>
					<include condition="$PARAM[widget_view] + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)" content="ShowcaseView_Art_Posters">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
					<include condition="$PARAM[widget_view] + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square)" content="ShowcaseView_Art_Square">
						<param name="target_id" value="$PARAM[id]"/>
						<param name="artwork_icon" value="$PARAM[artwork_icon]"/>
					</include>
				</control>
				<!--Artwork mask under transparent dialog-->
				<control type="group">
					<visible>$PARAM[media_view]</visible>
					<control type="group">
						<visible>$EXP[TransparentDialog_IsVisible] + $EXP[ShowcaseView_IsVisible] + !$EXP[OptionsSwitching]</visible>
						<include>Options_Menu_Fade_Animation</include>
						<control type="image">
							<animation effect="zoom" end="0,0,1080,1080" time="0" condition="$EXP[ShowcaseView_Display_IsSquare]">Conditional</animation>
							<width>720</width>
							<height>1080</height>
							<texture colordiffuse="$VAR[Artwork_Mask]">views/white_100.png</texture>
							<visible>$EXP[ShowcaseView_IsVisible] + $EXP[ShowcaseView_Details_Off] + !$EXP[ShowcaseView_Details_Overlay_IsVisible]</visible>
							<include>Content_Fade_Animation</include>
						</control>
					</control>
				</control>
				<!--DETAILS-->
				<control type="group">
					<visible>$PARAM[media_view] | [$PARAM[widget_view] + Control.HasFocus(90$PARAM[widget_position]0)]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<control type="group">
						<visible>!Window.IsVisible(shutdownmenu)</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<include content="Breadcrumb_Label">
							<param name="title_label" value="$PARAM[widget_header]"/>
							<param name="info_label" value="$INFO[Container(90$PARAM[widget_position]0).CurrentItem, / ,]$INFO[Container(90$PARAM[widget_position]0).NumItems,/]"/>
						</include>
					</control>
					<control type="group">
						<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(60)</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<control type="group">
							<visible>!$EXP[ShowcaseView_Details_Off]</visible>
							<animation effect="slide" start="0,0" end="-360,0" time="360" tween="sine" easing="out" reversible="true" condition="$EXP[ShowcaseView_Display_IsPosters] + Player.HasAudio">Conditional</animation>
							<include content="MediaFlags"/>
						</control>
						<control type="group">
							<visible>!$EXP[Secondary_List_ContainerSwitching] + ![Control.HasFocus(4501) + Window.IsVisible(1121)]</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<animation effect="slide" start="0,0" end="-180,0" time="360" tween="sine" easing="out" reversible="true" condition="$EXP[ShowcaseView_Display_IsPosters] + Player.HasAudio">Conditional</animation>
							<include content="Common_Details">
								<param name="viewtype_label" value="Showcase"/>
								<param name="left" value="960"/>
								<param name="width" value="720"/>
								<param name="titleheight" value="156"/>
								<param name="infoheight" value="70"/>
								<param name="plotmaxheight" value="235"/>
							</include>
						</control>
						<control type="group">
							<visible>!$EXP[Secondary_List_ContainerSwitching] + !$EXP[Secondary_List_ContentSwitching] + [!Window.IsVisible(1121) | Control.HasFocus($PARAM[id])]</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<animation effect="slide" start="0,0" end="180,0" time="0" condition="$EXP[ShowcaseView_Display_IsSquare]">Conditional</animation>
							<include content="ProgressBar">
								<param name="left" value="180"/>
							</include>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>
