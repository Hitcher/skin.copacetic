<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ShowcaseView_Container">
		<control type="group">
			<visible>$EXP[ShowcaseView_IsVisible]</visible>
			<include content="Custom_List">
				<param name="visible" value="!Container.Content() + !Container.Content(files) + !Container.Content(episodes) + !Container.Content(songs) + !Container.Content(playlists)" />
				<param name="type" value="fixedlist" />
				<param name="id" value="502" />
				<param name="viewtype_label" value="Showcase" />
				<param name="viewtype" value="bigwrap" />
				<param name="orientation" value="horizontal" />
			</include>
		</control>
	</include>

	<include name="ShowcaseView_Display">
		<param name="id" default="502" />
		<param name="art_icon" default="Thumbnail" />
		<param name="media_view" default="true" />
		<param name="widget_view" default="false" />
		<param name="widget_position" />
		<definition>
			<include content="Viewtype_Display_Template">
				<param name="viewtype_label" value="Showcase" />
				<param name="media_view" value="$PARAM[media_view]" />
				<animation effect="slide" start="0,0" end="360,0" time="0" reversible="true" condition="$PARAM[media_view] + Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>
				<include content="ShowcaseView_Art_Posters" condition="$PARAM[media_view]">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
				</include>
				<include content="ShowcaseView_Art_Square" condition="$PARAM[media_view]">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
				</include>
				<include content="ShowcaseView_Art_Posters" condition="$PARAM[widget_view] + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
					<param name="breadcrumb_overlay" value="true" />
				</include>
				<include content="ShowcaseView_Art_Square" condition="$PARAM[widget_view] + [Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)]">
					<param name="target_id" value="$PARAM[id]" />
					<param name="art_icon" value="$PARAM[art_icon]" />
					<param name="breadcrumb_overlay" value="true" />
				</include>
			</include>
		</definition>
	</include>

	<include name="ShowcaseView_Details">
		<param name="id" default="502" />
		<param name="media_view" default="true" />
		<definition>
			<control type="group">
				<visible>$EXP[ShowcaseView_IsVisible]</visible>
				<include condition="Window.Is(videos) | Window.Is(home) | Window.Is(movieinformation)" content="Progress">
					<param name="id" value="$PARAM[id]" />
					<animation effect="slide" start="0,0" end="-600,0" time="0" condition="true">Conditional</animation>
					<animation effect="slide" start="0,0" end="360,0" time="0" reversible="true" condition="$PARAM[media_view] + Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>
					<animation effect="slide" start="0,0" end="180,0" time="0" condition="$EXP[ShowcaseView_Display_IsSquare]">Conditional</animation>
				</include>
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !$EXP[Scrollbar_HasFocus]</visible>
					<include content="Visible_Fade_Delayed_Animation" />
					<control type="group">
						<visible>![Control.HasFocus(3100) + Window.IsVisible(1121)] + !$EXP[Secondary_List_ContainerSwitching] + !$EXP[Secondary_List_ContentSwitching]</visible>
						<include content="Visible_Fade_Delayed_Animation" />
						<include content="Common_Details">
							<animation effect="slide" start="0,0" end="180,0" time="0" reversible="true" condition="$PARAM[media_view] + Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>
							<animation effect="slide" start="0,0" end="180,0" time="0" condition="$EXP[ShowcaseView_Display_IsSquare]">Conditional</animation>
							<animation effect="slide" start="0,0" end="80,0" time="0" condition="$EXP[ShowcaseView_Details_Logo_IsVisible] + !$EXP[ShowcaseView_Details_Plot_IsVisible]">Conditional</animation>
							<param name="viewtype_label" value="Showcase" />
							<param name="left" value="960" />
							<param name="width" value="720" />
							<param name="title_maxheight" value="280" />
							<param name="info_height" value="70" />
							<param name="plot_maxheight" value="235" />
						</include>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>