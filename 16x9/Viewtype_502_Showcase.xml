<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ShowcaseView_Container">
		<control type="group">
			<visible>$EXP[ShowcaseView_IsVisible]</visible>
			<include content="Custom_List">
				<param name="visible" value="!Container.Content() + !Container.Content(files) + !Container.Content(episodes) + !Container.Content(songs)"/>
				<param name="type" value="fixedlist"/>
				<param name="id" value="502"/>
				<param name="viewtype_label" value="Showcase"/>
				<param name="viewtype" value="bigwrap"/>
				<param name="orientation" value="horizontal"/>
			</include>
		</control>
	</include>

	<include name="ShowcaseView_Display">
		<param name="id" default="502"/>
		<param name="art_icon" default="Thumbnail"/>
		<param name="media_view" default="true"/>
		<param name="widget_view" default="false"/>
		<param name="widget_position"/>
		<definition>
			<control type="group">
				<visible>$EXP[ShowcaseView_IsVisible] + !$EXP[OptionsSwitching] + !$EXP[ContainerSwitching]</visible>
				<include condition="$PARAM[media_view]" content="Content_Fade_Animation"/>
				<animation effect="slide" start="0,0" end="360,0" time="0" reversible="true" condition="$PARAM[media_view] + Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>
				<!-- Artwork -->
				<include condition="$PARAM[media_view]" content="ShowcaseView_Art_Posters">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="$PARAM[art_icon]"/>
				</include>
				<include condition="$PARAM[media_view]" content="ShowcaseView_Art_Square">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="$PARAM[art_icon]"/>
				</include>
				<include condition="$PARAM[widget_view] + !Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)" content="ShowcaseView_Art_Posters">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="$PARAM[art_icon]"/>
					<param name="breadcrumb_overlay" value="true"/>
				</include>
				<include condition="$PARAM[widget_view] + [Skin.HasSetting(Widget$PARAM[widget_position]_Display_Square) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)]" content="ShowcaseView_Art_Square">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="$PARAM[art_icon]"/>
					<param name="breadcrumb_overlay" value="true"/>
				</include>
			</control>
		</definition>
	</include>

	<include name="ShowcaseView_Details">
		<param name="id" default="502"/>
		<param name="media_view" default="true"/>
		<definition>
			<control type="group">
				<visible>$EXP[ShowcaseView_IsVisible]</visible>
				<control type="group">
					<visible>!$EXP[ContainerSwitching] + !$EXP[ContentSwitching] + !$EXP[TransparentDialog_IsVisible] + !$EXP[Scrollbar_HasFocus]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<!-- Media flags -->
					<control type="group">
						<visible>!$EXP[InfoDialog_IsVisible] + !$EXP[ShowcaseView_Details_Off]</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<include content="MediaFlags"/>
					</control>
					<control type="group">
						<visible>![Control.HasFocus(4501) + Window.IsVisible(1121)] + !$EXP[Secondary_List_ContainerSwitching] + !$EXP[Secondary_List_ContentSwitching]</visible>
						<include>Delayed_Content_Fade_Animation</include>
						<!-- Common details, progress bar -->
						<control type="group">
							<animation effect="slide" start="0,0" end="360,0" time="0" reversible="true" condition="$PARAM[media_view] + Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>
							<animation effect="slide" start="0,0" end="180,0" time="0" condition="$EXP[ShowcaseView_Display_IsSquare]">Conditional</animation>
							<include condition="Window.Is(videos) | Window.Is(home) | Window.Is(movieinformation)" content="ProgressBar">
								<param name="left" value="180"/>
								<param name="id" value="$PARAM[id]"/>
							</include>
							<include condition="Skin.HasSetting(Secondary_List_Enabled) + [Window.Is(videos) | Window.Is(home)] + !$EXP[InfoDialog_IsVisible]" content="ProgressBar">
								<param name="left" value="180"/>
								<param name="id" value="4501"/>
							</include>
						</control>
						<control type="group">
							<animation effect="slide" start="0,0" end="180,0" time="0" reversible="true" condition="$PARAM[media_view] + Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio + $EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off]">Conditional</animation>
							<include content="Common_Details">
								<param name="viewtype_label" value="Showcase"/>
								<param name="left" value="960"/>
								<param name="width" value="720"/>
								<param name="titleheight" value="280"/>
								<param name="infoheight" value="70"/>
								<param name="plotmaxheight" value="235"/>
							</include>
						</control>
					</control>
				</control>
				<!-- Scrollbars-->
				<control type="group">
					<visible>!Window.IsVisible(shutdownmenu)</visible>
					<include>Content_Fade_Animation</include>
					<include condition="!Window.Is(home) + !$EXP[InfoDialog_IsVisible]" content="Scrollbars">
						<param name="visible" value="[$EXP[ShowcaseView_IsVisible] + $EXP[ShowcaseView_Details_Off]] | [$EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off] + ![Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio]]"/>
						<param name="right" value="420"/>
						<param name="bottom" value="27"/>
						<param name="width" value="1080"/>
						<param name="height" value="6"/>
						<param name="onleft" value="60"/>
						<param name="onright" value="60"/>
						<param name="onright_fallback" value="60"/>
						<param name="onup" value="62"/>
						<param name="ondown" value="63"/>
						<param name="ondown_fallback" value="SetFocus(3000,0)"/>
						<param name="orientation" value="horizontal"/>
						<animation effect="slide" end="360" time="0" condition="$EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off] + ![Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio]">Conditional</animation>
					</include>
					<include condition="!Window.Is(home) + !$EXP[InfoDialog_IsVisible]" content="Scrollbars">
						<param name="visible" value="[$EXP[ShowcaseView_Display_IsSquare] + !$EXP[ShowcaseView_Details_Off]] | [$EXP[ShowcaseView_Display_IsPosters] + !$EXP[ShowcaseView_Details_Off] + Skin.HasSetting(Music_Player_Enabled) + Player.HasAudio]"/>
						<param name="scrollbartype" value="Alt1"/>
						<param name="right" value="90"/>
						<param name="bottom" value="27"/>
						<param name="width" value="660"/>
						<param name="height" value="6"/>
						<param name="onleft" value="60"/>
						<param name="onright" value="60"/>
						<param name="onright_fallback" value="60"/>
						<param name="onup" value="62"/>
						<param name="ondown" value="63"/>
						<param name="ondown_fallback" value="SetFocus(3000,0)"/>
						<param name="orientation" value="horizontal"/>
					</include>
				</control>
			</control>
		</definition>
	</include>

</includes>
