<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- interfacesettings, mediasettings, playersettings, systemsettings, servicesettings, gamesettings, pvrsettings -->
	<include content="Object_Include" condition="Window.Is(interfacesettings)">
		<defaultcontrol always="true">300001</defaultcontrol>
	</include>
	<include content="Object_Include" condition="Window.Is(mediasettings)">
		<defaultcontrol always="true">300002</defaultcontrol>
	</include>
	<include content="Object_Include" condition="Window.Is(playersettings)">
		<defaultcontrol always="true">300003</defaultcontrol>
	</include>
	<include content="Object_Include" condition="Window.Is(systemsettings)">
		<defaultcontrol always="true">300004</defaultcontrol>
	</include>
	<include content="Object_Include" condition="Window.Is(servicesettings)">
		<defaultcontrol always="true">300005</defaultcontrol>
	</include>
	<include content="Object_Include" condition="Window.Is(gamesettings)">
		<defaultcontrol always="true">300006</defaultcontrol>
	</include>
	<include content="Object_Include" condition="Window.Is(pvrsettings)">
		<defaultcontrol always="true">300007</defaultcontrol>
	</include>
	<backgroundcolor>$VAR[Global_Fanart_Slideshow_Background_Color]</backgroundcolor>
	<include content="Settings_WindowOpenClose_Fade_Delayed_Animation"/>
	<controls>
		<!-- Background -->
		<include condition="Skin.HasSetting(Global_Fanart_Slideshow_Disabled)" content="Light_Theme_Background"/>
		<include condition="!Skin.HasSetting(Global_Fanart_Slideshow_Disabled)" content="Global_Fanart_Slideshow"/>
		<!-- Content -->
		<include content="Default_Settings_Panel_Layout">
			<param name="left_list_id" value="3"/>
			<param name="right_list_id" value="5"/>
			<param name="alt_right_condition" value="true"/>
			<!-- Left list -->
			<include content="Settings_Grouplist_Template">
				<param name="id" value="3"/>
				<param name="onleft" value="30000"/>
				<param name="onright" value="5"/>
			</include>
			<!-- Right list -->
			<include content="Settings_Grouplist_Template">
				<param name="id" value="5"/>
				<param name="onleft" value="3"/>
				<param name="onright" value="20"/>
				<param name="left" value="570"/>
				<param name="width" value="1260"/>
				<param name="height" value="632"/>
				<onback>3</onback>
				<pagecontrol>60</pagecontrol>
			</include>
			<!-- labels -->
			<control type="textbox" id="6">
				<visible>!Control.HasFocus(20)</visible>
				<include content="Visible_Fade_Delayed_Animation"/>
				<left>150</left>
				<right>240</right>
				<bottom>40</bottom>
				<height>100</height>
				<font>Description</font>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>$VAR[Settings_Label_Color]</textcolor>
			</control>
			<control type="textbox">
				<visible>Control.HasFocus(20)</visible>
				<left>120</left>
				<right>150</right>
				<bottom>30</bottom>
				<height>120</height>
				<label>$INFO[Control.GetLabel(20)]</label>
				<font>MusicPlayer_Title</font>
				<align>right</align>
				<aligny>center</aligny>
				<textcolor>$VAR[Settings_Label_Color]</textcolor>
			</control>
			<!-- Settings level button -->
			<include content="Settings_Level_Button"/>
			<!-- Default controls -->
			<control type="button" id="7"/>
			<control type="radiobutton" id="8"/>
			<control type="spincontrolex" id="9"/>
			<control type="togglebutton" id="10">
				<focusedcolor>$VAR[Settings_Grouplist_Label_Color]</focusedcolor>
				<include content="Settings_Left_List_Toggle_Button_Texture"/>
			</control>
			<control type="image" id="11">
				<height>1</height>
				<texture colordiffuse="$VAR[Blank_Color]">views/white_100.png</texture>
			</control>
			<control type="sliderex" id="13"/>
			<control type="label" id="14">
				<height>90</height>
				<textoffsetx>30</textoffsetx>
				<font>Default_Settings_Header</font>
				<textcolor>$VAR[Unfocused_Color]</textcolor>
			</control>
			<control type="colorbutton" id="15"/>
		</include>
	</controls>
</window>
