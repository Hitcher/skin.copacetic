<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload condition="Window.Previous(skinsettings)">Right</onload>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<include>DialogFanartSlideshow</include>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel"/>

			<!-- Main list -->
			<control type="grouplist" id="3">
				<left>120</left>
				<width>480</width>
				<height>540</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<onright>5</onright>
				<onleft>20</onleft>
				<orientation>vertical</orientation>
				<align>top</align>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
			</control>

			<control type="button" id="10">
				<onclick>SetFocus(5)</onclick>
				<textoffsetx>10</textoffsetx>
			</control>

			<include content="DialogDivider">
				<param name="left" value="600"/>
			</include>

			<!-- Sub list -->
			<control type="grouplist" id="5">
				<width>1200</width>
				<left>600</left>
				<height>540</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<onleft>3</onleft>
				<onback>3</onback>
				<onright>9000</onright>
				<orientation>vertical</orientation>
				<align>top</align>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
			</control>

			<control type="label" id="14">
				<height>90</height>
				<textoffsetx>20</textoffsetx>
				<font>Default_Settings_Header</font>
				<textcolor>$VAR[Settings_Unfocused_Color]</textcolor>
			</control>

			<control type="image" id="11">
				<height>1</height>
				<texture colordiffuse="$VAR[Blank_Color]">views/white_100.png</texture>
			</control>

			<control type="button" id="7"/>
			<control type="radiobutton" id="8"/>
			<control type="spincontrolex" id="9"/>
			<control type="sliderex" id="13"/>

			<!--Settings Level Panel-->
			<control type="group">
				<animation effect="slide" end="-360" time="180" tween="sine" easing="inout" reversible="true" condition="!Control.HasFocus(20)">Conditional</animation>
				<height>120</height>
				<top>60</top>
				<width>480</width>
				<control type="image">
					<centertop>50%</centertop>
					<height>120</height>
					<texture colordiffuse="$VAR[Dark_Grey_Color]">views/white_100.png</texture>
				</control>
				<control type="button" id="20">
					<left>30</left>
					<width>100%</width>
					<height>60</height>
					<centertop>50%</centertop>
					<onclick>SettingsLevelChange</onclick>
					<onright>3</onright>
					<onup>3</onup>
					<font>List_Title_Focused</font>
					<textoffsetx>0</textoffsetx>
					<textcolor>$VAR[Light_Color]</textcolor>
					<focusedcolor>$VAR[Light_Color]</focusedcolor>
					<texturefocus></texturefocus>
				</control>
			</control>

			<control type="textbox" id="6">
				<visible>!Integer.IsEqual(Container(5).CurrentItem,-1) | Control.HasFocus(30)</visible>
				<include>Content_Fade_Animation</include>
				<left>120</left>
				<bottom>70</bottom>
				<right>180</right>
				<height>102</height>
				<font>Description</font>
				<align>left</align>
			</control>

			<include content="ButtonGroup">
				<param name="onleft" value="5"/>
				<param name="onup" value="5"/>
				<param name="button1id" value="301"/>
				<param name="button1unfocused" value="Cross_Unfocused"/>
				<param name="button1focused" value="Cross_Focused_Large"/>
				<param name="button1onclick" value="Close"/>
				<param name="buttonsvisible" value="true"/>
			</include>

		</control>
	</controls>
</window>
