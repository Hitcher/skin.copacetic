<?xml version="1.0" encoding="utf-8"?>
<window>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<onload condition="Window.Previous(skinsettings)">Right</onload>
	<controls>

		<!-- Delay content on load -->
		<control type="button" id="9001">
			<visible allowhiddenfocus="true">false</visible>
			<animation effect="slide" end="0,0" time="1080" reversible="false">Focus</animation>
			<onfocus>SetFocus(3)</onfocus>
		</control>

		<include>DialogFanartSlideshow</include>

		<!-- Content -->
		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible] + !Control.HasFocus(9001)</visible>
			<include>Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel"/>

			<!-- Main list -->
			<control type="grouplist" id="3">
				<visible allowhiddenfocus="true">true</visible>
				<left>120</left>
				<width>480</width>
				<height>540</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<onright>5</onright>
				<onleft>301</onleft>
				<orientation>vertical</orientation>
				<align>top</align>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
			</control>

			<control type="button" id="10">
				<focusedcolor>$VAR[Settings_Grouplist_Label_Color]</focusedcolor>
				<texturefocus/>
			</control>

			<!-- Dummy underline for main list when unfocused -->
			<control type="image">
				<animation effect="slide" end="0,90" time="0" reversible="false" condition="Container(3).Position(1)">Conditional</animation>
				<animation effect="slide" end="0,180" time="0" reversible="false" condition="Container(3).Position(2)">Conditional</animation>
				<animation effect="slide" end="0,270" time="0" reversible="false" condition="Container(3).Position(3)">Conditional</animation>
				<animation effect="slide" end="0,360" time="0" reversible="false" condition="Container(3).Position(4)">Conditional</animation>
				<animation effect="slide" end="0,450" time="0" reversible="false" condition="Container(3).Position(5)">Conditional</animation>
				<animation effect="slide" end="0,540" time="0" reversible="false" condition="Container(3).Position(6)">Conditional</animation>
				<left>120</left>
				<width>480</width>
				<height>1</height>
				<top>359</top>
				<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
			</control>

			<include content="DialogDivider">
				<param name="left" value="599"/>
			</include>

			<!-- Sub list scrollbar -->
			<include content="Grouplist_Scrollbar">
				<param name="visible" value="ControlGroup(5).HasFocus"/>
				<param name="height" value="540"/>
			</include>

			<!-- Sub list -->
			<control type="grouplist" id="5">
				<width>1200</width>
				<left>600</left>
				<height>540</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<onleft>3</onleft>
				<onback>3</onback>
				<onright>20</onright>
				<pagecontrol>60</pagecontrol>
				<orientation>vertical</orientation>
				<align>top</align>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
			</control>

			<control type="label" id="14">
				<height>90</height>
				<textoffsetx>20</textoffsetx>
				<font>Default_Settings_Header</font>
				<textcolor>$VAR[Unfocused_Color]</textcolor>
			</control>

			<control type="image" id="11">
				<height>1</height>
				<texture colordiffuse="$VAR[Blank_Color]">views/white_100.png</texture>
			</control>

			<control type="button" id="7"/>
			<control type="radiobutton" id="8"/>
			<control type="spincontrolex" id="9"/>
			<control type="sliderex" id="13"/>

			<control type="textbox" id="6">
				<visible>!ControlGroup(9000).HasFocus</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<left>180</left>
				<right>300</right>
				<bottom>0</bottom>
				<height>240</height>
				<font>Description</font>
				<align>left</align>
				<aligny>center</aligny>
			</control>

			<control type="textbox">
				<visible>ControlGroup(9000).HasFocus</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<left>180</left>
				<right>300</right>
				<bottom>0</bottom>
				<height>240</height>
				<label>$LOCALIZE[13271] [B]$INFO[Control.GetLabel(20)][/B]</label>
				<font>Description</font>
				<align>left</align>
				<aligny>center</aligny>
			</control>

			<include content="ButtonGroup">
				<param name="onleft" value="5"/>
				<param name="onup" value="5"/>
				<param name="onright" value="3"/>
				<param name="buttonsvisible" value="true"/>
				<param name="button1visible" value="true"/>
				<param name="button1id" value="20"/>
				<param name="button1unfocused" value="Layout_Unfocused"/>
				<param name="button1focused" value="Layout_Focused_Large"/>
				<param name="button1onclick" value="SettingsLevelChange"/>
				<param name="button2visible" value="true"/>
				<param name="button2id" value="301"/>
				<param name="button2unfocused" value="Cross_Unfocused"/>
				<param name="button2focused" value="Cross_Focused_Large"/>
				<param name="button2onclick" value="Close"/>
			</include>


		</control>
	</controls>
</window>
