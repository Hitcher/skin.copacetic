<includes>

	<include name="Script_UpNext_Layout">
		<param name="breadcrumb_title_label"/>
		<param name="breadcrumb_info_label_visible" default="false"/>
		<param name="breadcrumb_info_label"/>
		<param name="show_icon" default="false"/>
		<definition>

			<control type="grouplist">
				<orientation>horizontal</orientation>
				<itemgap>0</itemgap>
				<control type="button" id="3012">
					<label>$INFO[Player.TimeRemaining(ss),in ]</label>
					<include>Hidden_Button</include>
				</control>
				<control type="button" id="3013">
					<label>$ADDON[service.upnext 30035]</label>
					<include>Hidden_Button</include>
				</control>
			</control>

			<include content="Breadcrumb_Label">
				<param name="visible" value="true"/>
				<param name="title_label" value="$PARAM[breadcrumb_title_label]"/>
				<param name="info_label_visible" value="$PARAM[breadcrumb_info_label_visible]"/>
				<param name="info_label" value="$PARAM[breadcrumb_info_label]"/>
			</include>

			<!-- Thumbnail -->
			<control type="group">
				<visible>$PARAM[show_icon]</visible>
				<width>320</width>
				<height>180</height>
				<right>0</right>
				<bottom>120</bottom>
				<control type="image">
					<animation effect="fadediffuse" end="ff555555" time="0" condition="true">Conditional</animation>
					<texture>$INFO[Window.Property(fanart)]</texture>
				</control>
				<control type="progress" id="3014">
					<bottom>0</bottom>
					<height>6</height>
					<texturebg colordiffuse="$VAR[Light_Progress_Background_Color]">views/white_100.png</texturebg>
					<lefttexture></lefttexture>
					<midtexture colordiffuse="$VAR[Light_Color]">views/white_100.png</midtexture>
					<righttexture></righttexture>
					<overlaytexture></overlaytexture>
				</control>
			</control>

			<!-- Button menu -->
			<control type="grouplist">
				<right>36</right>
				<bottom>36</bottom>
				<width>100%</width>
				<height>60</height>
				<itemgap>8</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="group">
					<animation effect="slide" start="0" end="0,5" time="0" condition="Control.HasFocus(3013)" reversible="false">Conditional</animation>
					<width>60</width>
					<height>60</height>
					<include content="ButtonLayout">
						<param name="buttonid" value="3012"/>
						<param name="width" value="60"/>
						<param name="unfocusedtexture" value="Play_Unfocused"/>
						<param name="focusedtexture" value="Play_Focused_Large"/>
					</include>
				</control>
				<control type="label">
					<left>-6</left>
					<width>auto</width>
					<visible>Control.HasFocus(3012)</visible>
					<label>$INFO[Control.GetLabel(3012)]</label>
					<font>Breadcrumb_Title_Label</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<aligny>center</aligny>
				</control>
				<control type="label">
					<left>-12</left>
					<top>20</top>
					<height>28</height>
					<width>auto</width>
					<visible>!Control.HasFocus(3012)</visible>
					<label>$INFO[Control.GetLabel(3012)]</label>
					<font>Breadcrumb_Info_Label</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<aligny>center</aligny>
				</control>
				<control type="label">
					<top>20</top>
					<height>28</height>
					<width>auto</width>
					<label>/</label>
					<font>Breadcrumb_Info_Label</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<aligny>center</aligny>
				</control>
				<control type="label">
					<width>auto</width>
					<visible>Control.HasFocus(3013)</visible>
					<label>$INFO[Control.GetLabel(3013)]</label>
					<font>Breadcrumb_Title_Label</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<aligny>center</aligny>
				</control>
				<control type="label">
					<top>20</top>
					<height>28</height>
					<width>auto</width>
					<visible>!Control.HasFocus(3013)</visible>
					<label>$INFO[Control.GetLabel(3013)]</label>
					<font>Breadcrumb_Info_Label</font>
					<textcolor>$VAR[Light_Color]</textcolor>
					<aligny>center</aligny>
				</control>
			</control>

		</definition>
	</include>

</includes>
