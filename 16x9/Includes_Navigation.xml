<includes>

	<include name="List_Navigation">
		<definition>
			<onup condition="Integer.IsGreater(Container.NumItems,1)">50</onup>
			<onup condition="Integer.IsEqual(Container.NumItems,1)">SetFocus(3000,0)</onup>
			<ondown condition="Integer.IsGreater(Container.NumItems,1)">50</ondown>
			<ondown condition="Integer.IsEqual(Container.NumItems,1)">SetFocus(3000,0)</ondown>
			<onleft condition="Integer.IsGreater(Container(4501).NumItems,0) + ![Container.Content(tvshows) + Integer.IsEqual(Container(4501).NumItems,1)]">SetFocus(4501,0)</onleft>
			<onleft condition="![Integer.IsGreater(Container(4501).NumItems,0) + ![Container.Content(tvshows) + Integer.IsEqual(Container(4501).NumItems,1)]]">SetFocus(3000,0)</onleft>
			<onright condition="Player.HasAudio">SetFocus(91100,1)</onright>
			<onright condition="!Player.HasAudio + Integer.IsGreater(Container.NumItems,12)">61</onright>
			<onright condition="!Player.HasAudio + Integer.IsLess(Container.NumItems,12)">SetFocus(3000,0)</onright>
			<onback condition="String.IsEqual(window(movieinformation).property(SentFromInfo),true)">SetFocus(5005)</onback>
		</definition>
	</include>

	<include name="Simple_List_Navigation">
		<definition>
			<onright condition="Window.IsActive(favourites) + Player.HasAudio">SetFocus(91100,1)</onright>
			<onright condition="Window.IsActive(favourites) + !Player.HasAudio">0</onright>
			<onleft condition="Window.IsActive(favourites)">0</onleft>
			<onright condition="!Window.IsActive(favourites)">9000</onright>
		</definition>
	</include>

	<include name="Secondary_List_Navigation">
		<definition>
			<onright condition="$EXP[ListView_IsVisible]">SetFocus(4502)</onright>
			<onleft condition="$EXP[ListView_IsVisible]">SetFocus(4506)</onleft>
			<onup condition="$EXP[ListView_IsVisible]">0</onup>
			<ondown condition="$EXP[ListView_IsVisible]">0</ondown>
			<onleft condition="$EXP[BillboardView_IsVisible]">SetFocus(4502)</onleft>
			<onright condition="$EXP[BillboardView_IsVisible]">SetFocus(4502)</onright>
			<onup condition="$EXP[BillboardView_IsVisible]">0</onup>
			<ondown condition="$EXP[BillboardView_IsVisible]">0</ondown>
			<onleft condition="$EXP[ShowcaseView_IsVisible]">SetFocus(4502)</onleft>
			<onright condition="$EXP[ShowcaseView_IsVisible]">SetFocus(4502)</onright>
			<onup condition="$EXP[ShowcaseView_IsVisible]">0</onup>
			<ondown condition="$EXP[ShowcaseView_IsVisible]">0</ondown>
			<onleft condition="$EXP[StripView_IsVisible]">SetFocus(4502)</onleft>
			<onright condition="$EXP[StripView_IsVisible]">SetFocus(4502)</onright>
			<onup condition="$EXP[StripView_IsVisible]">0</onup>
			<ondown condition="$EXP[StripView_IsVisible]">0</ondown>
		</definition>
	</include>

	<include name="Billboard_Navigation">
		<definition>
			<onup condition="Player.HasAudio">SetFocus(91100,1)</onup>
			<onup condition="!Player.HasAudio">SetFocus(3000,0)</onup>
			<ondown condition="Integer.IsGreater(Container(4501).NumItems,0) + ![Container.Content(tvshows) + Integer.IsEqual(Container(4501).NumItems,1)]">SetFocus(4501,0)</ondown>
			<ondown condition="![Integer.IsGreater(Container(4501).NumItems,0) + ![Container.Content(tvshows) + Integer.IsEqual(Container(4501).NumItems,1)]] + Integer.IsGreater(Container.NumItems,1)">SetFocus(61)</ondown>
			<ondown condition="![Integer.IsGreater(Container(4501).NumItems,0) + ![Container.Content(tvshows) + Integer.IsEqual(Container(4501).NumItems,1)]] + Integer.IsEqual(Container.NumItems,1)">SetFocus(3000,0)</ondown>
			<onleft condition="Integer.IsGreater(Container.NumItems,3)">501</onleft>
			<onleft condition="Integer.IsLessOrEqual(Container.NumItems,3) + Integer.IsGreater(Container.NumItems,1)">0</onleft>
			<onleft condition="Integer.IsEqual(Container.NumItems,1)">SetFocus(3000,0)</onleft>
			<onright condition="Integer.IsGreater(Container.NumItems,3)">501</onright>
			<onright condition="Integer.IsLessOrEqual(Container.NumItems,3) + Integer.IsGreater(Container.NumItems,1)">0</onright>
			<onright condition="Integer.IsEqual(Container.NumItems,1)">SetFocus(3000,0)</onright>
			<onback condition="String.IsEqual(window(movieinformation).property(SentFromInfo),true)">SetFocus(5005)</onback>
		</definition>
	</include>

