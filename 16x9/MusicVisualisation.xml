<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisation -->
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>My_Window_Fade_Animation</include>
	<controls>

		<!-- Visualisation -->
		<control type="visualisation" id="2">
			<visible>Player.HasAudio</visible>
		</control>

		<!--Breadcrumb-->
		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible] + !Player.Paused</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<include content="Breadcrumb_Label">
				<param name="visible" value="true"/>
			</include>
		</control>

		<!--Artwork-->
		<control type="group">
			<visible>Player.HasAudio</visible>
			<include>Visualization_Fade_Animation</include>
			<include content="ListIcon">
				<param name="artworkmask" value="true"/>
				<param name="left" value="540"/>
				<param name="top" value="180"/>
				<param name="width" value="840"/>
				<param name="height" value="840"/>
				<param name="bordervisible" value="true"/>
			</include>
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible] + !Player.Paused</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<control type="group">
					<top>180</top>
					<right>360</right>
					<width>180</width>
					<height>180</height>
					<include content="Clock"/>
					<visible>![Window.IsActive(volumebar) | Window.IsActive(notification) | Window.IsActive(extendedprogressdialog)]</visible>
					<animation effect="fade" start="100" end="0" time="360" delay="360" tween="sine" easing="out" reversible="false">Hidden</animation>
				</control>
			</control>
			<control type="group">
				<left>1380</left>
				<top>360</top>
				<width>360</width>
				<height>360</height>
				<include content="ListIcon">
					<param name="position" value="1"/>
					<param name="visible" value="MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)"/>
				</include>
				<include content="DropShadow">
					<param name="height" value="100%"/>
					<param name="flipx" value="true"/>
					<param name="visible" value="MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)"/>
				</include>
			</control>
		</control>

		<!--Details-->
		<control type="group">
			<visible>Player.HasAudio</visible>
			<include>Visualization_Fade_Animation</include>
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible] + !Player.Paused</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<left>540</left>
				<top>180</top>
				<width>840</width>
				<height>840</height>
				<control type="grouplist">
					<left>60</left>
					<right>60</right>
					<top>240</top>
					<bottom>240</bottom>
					<orientation>vertical</orientation>
					<align>center</align>
					<itemgap>5</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<!--Title-->
					<control type="textbox">
						<height max="200">auto</height>
						<font>List_Title_Focused</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$INFO[MusicPlayer.Title]</label>
						<align>center</align>
					</control>
					<!--Info-->
					<control type="textbox">
						<top>-10</top>
						<height max="70">auto</height>
						<font>Visualisation_Info</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$INFO[MusicPlayer.Artist]</label>
						<align>center</align>
					</control>
					<!--NowPlaying-->
					<control type="group">
						<top>-10</top>
						<centerleft>50%</centerleft>
						<width>120</width>
						<height>120</height>
						<include content="Now_Playing_Visualization_Fill">
							<param name="width" value="90"/>
							<param name="barwidth" value="18"/>
							<param name="itemgap" value="6"/>
							<param name="visible" value="Player.HasAudio"/>
							<param name="color" default="$VAR[Primary_Color]"/>
						</include>
					</control>
				</control>
				<control type="progress">
					<visible>!Window.IsVisible(musicosd)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<left>60</left>
					<right>60</right>
					<bottom>60</bottom>
					<height>6</height>
					<info>Player.Progress</info>
					<texturebg colordiffuse="$VAR[Light_Color]">views/white_20.png</texturebg>
					<lefttexture></lefttexture>
					<midtexture colordiffuse="$VAR[Light_Color]">views/white_100.png</midtexture>
					<righttexture></righttexture>
					<overlaytexture></overlaytexture>
				</control>
				<control type="grouplist">
					<left>60</left>
					<right>60</right>
					<bottom>90</bottom>
					<height>46</height>
					<orientation>vertical</orientation>
					<align>right</align>
					<itemgap>10</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<!--Time and track labels-->
					<control type="group">
						<height>30</height>
						<control type="label">
							<left>0</left>
							<width>300</width>
							<height>24</height>
							<font>Visualisation_Time</font>
							<textcolor>$VAR[Light_Color]</textcolor>
							<align>left</align>
							<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
						</control>
						<control type="label">
							<right>0</right>
							<width>300</width>
							<font>Visualisation_Time</font>
							<textcolor>$VAR[Light_Color]</textcolor>
							<align>right</align>
							<label>$INFO[MusicPlayer.PlaylistPosition,Track ]$INFO[MusicPlayer.PlaylistLength,/]</label>
						</control>
					</control>
					<!--Progressbar-->
					<control type="progress">
						<height>6</height>
						<info>Player.Progress</info>
						<texturebg colordiffuse="$VAR[Light_Color]">views/white_20.png</texturebg>
						<lefttexture></lefttexture>
						<midtexture colordiffuse="$VAR[Light_Color]">views/white_100.png</midtexture>
						<righttexture></righttexture>
						<overlaytexture></overlaytexture>
					</control>
				</control> -->
			</control>
		</control>

	</controls>
</window>
