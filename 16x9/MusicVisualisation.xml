<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisation -->
	<defaultcontrol></defaultcontrol>
	<onload condition="System.HasAddon(script.artistslideshow)">RunScript(script.artistslideshow)</onload>

	<controls>

		<!-- Visualisation -->
		<control type="visualisation" id="2">
			<include>FullscreenDimensions</include>
			<visible>Player.HasAudio</visible>
		</control>

		<control type="group">
			<visible>!Window.IsActive(seekbar) + !Window.IsActive(musicosd) + Player.ShowInfo</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>

			<!-- Player forwarding/rewinding -->
			<control type="group">
				<left>150</left>
				<top>621</top>
				<width>80</width>
				<height>60</height>
				<animation type="WindowOpen" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
					<effect type="fade" start="0" end="100" time="200"/>
				</animation>
				<animation type="WindowClose" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
					<effect type="fade" start="100" end="0" time="200"/>
				</animation>
				<visible>player.forwarding | player.rewinding | player.paused</visible>

				<!-- Background -->
				<control type="image">
					<width>80</width>
					<height>60</height>
					<texture border="1">osd/OSDBack.png</texture>
				</control>

				<!-- Status -->
				<control type="label">
					<width>80</width>
					<height>60</height>
					<font>Font36</font>
					<align>center</align>
					<label>$VAR[PlayerStatus]</label>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
				</control>

				<!-- Pause -->
				<control type="image">
					<left>10</left>
					<width>60</width>
					<height>60</height>
					<texture>osd/OSDPauseNF.png</texture>
					<visible>player.paused</visible>
				</control>

			</control>

			<!-- Player skipping -->
			<control type="group">
				<right>150</right>
				<top>621</top>
				<width>140</width>
				<height>60</height>
				<animation type="WindowOpen" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
					<effect type="fade" start="0" end="100" time="200"/>
				</animation>
				<animation type="WindowClose" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
					<effect type="fade" start="100" end="0" time="200"/>
				</animation>
				<visible>Integer.IsGreater(MusicPlayer.PlaylistLength,0)</visible>

				<!-- Background -->
				<control type="image">
					<width>140</width>
					<height>60</height>
					<texture border="1">osd/OSDBack.png</texture>
				</control>

				<!-- Status -->
				<control type="label">
					<width>140</width>
					<height>60</height>
					<font>Font27</font>
					<align>center</align>
					<label>[B]$INFO[MusicPlayer.PlaylistPosition,(,/]$INFO[MusicPlayer.PlaylistLength,,)][/B]</label>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
				</control>

			</control>

			<!-- Progress -->
			<control type="group">
				<left>150</left>
				<top>696</top>
				<width>1620</width>
				<height>60</height>
				<animation type="WindowOpen" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
					<effect type="fade" start="0" end="100" time="200"/>
				</animation>
				<animation type="WindowClose" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
					<effect type="fade" start="100" end="0" time="200"/>
				</animation>

				<!-- Background -->
				<control type="image">
					<width>1620</width>
					<height>60</height>
					<texture border="1">osd/OSDBack.png</texture>
				</control>

				<!--  Current position/Time remaining -->
				<control type="label">
					<left>20</left>
					<width>260</width>
					<height>60</height>
					<font>Font27</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
				</control>

				<!--  Progress bar -->
				<control type="progress" id="1">
					<left>280</left>
					<top>20</top>
					<width>920</width>
					<height>20</height>
					<info>Player.Progress</info>
					<texturebg border="2">osd/OSDProgressBack.png</texturebg>
					<lefttexture></lefttexture>
					<midtexture border="2">osd/OSDProgressBar.png</midtexture>
					<righttexture></righttexture>
					<overlaytexture></overlaytexture>
				</control>

				<!--  Cache bar -->
				<control type="progress" id="1">
					<left>280</left>
					<top>20</top>
					<width>920</width>
					<height>20</height>
					<info>Player.ProgressCache</info>
					<texturebg colordiffuse="00ffffff" border="2">osd/OSDProgressBack.png</texturebg>
					<lefttexture></lefttexture>
					<midtexture colordiffuse="66ffffff" border="2">osd/OSDProgressBar.png</midtexture>
					<righttexture></righttexture>
					<overlaytexture></overlaytexture>
				</control>

				<!-- Current Time/End Time -->
				<control type="label">
					<left>1001</left>
					<width>600</width>
					<height>60</height>
					<align>right</align>
					<font>Font27</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[System.Time,$LOCALIZE[142] , / ]$INFO[Player.FinishTime,$LOCALIZE[19081] ]</label>
				</control>

			</control>

			<!-- Info -->
			<control type="group">
				<left>150</left>
				<top>771</top>
				<width>1620</width>
				<height>234</height>
				<animation type="WindowOpen" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
					<effect type="fade" start="0" end="100" time="200"/>
				</animation>
				<animation type="WindowClose" condition="!Window.IsActive(seekbar)">
					<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
					<effect type="fade" start="100" end="0" time="200"/>
				</animation>

				<!-- Background -->
				<control type="image">
					<width>1620</width>
					<height>234</height>
					<texture border="1">osd/OSDBack.png</texture>
				</control>

				<!-- Title -->
				<control type="label">
					<left>20</left>
					<top>14</top>
					<width>1580</width>
					<height>48</height>
					<font>Font48</font>
					<textcolor>$VAR[FocusedColor]</textcolor>
					<label>$INFO[MusicPlayer.Title]$INFO[MusicPlayer.Album, / ]$INFO[MusicPlayer.Artist, &#8226; ]</label>
				</control>

				<!-- Plot -->
				<control type="textbox">
					<left>20</left>
					<top>87</top>
					<width>1580</width>
					<height>118</height>
					<font>Font25</font>
					<label fallback="161">$INFO[MusicPlayer.Property(Album_Description)]</label>
				</control>

			</control>

		</control>

	</controls>

</window>
