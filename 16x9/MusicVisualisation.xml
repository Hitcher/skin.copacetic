<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisation -->
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>My_Window_Fade_Animation</include>
	<controls>

		<!-- Visualisation -->
		<control type="visualisation" id="2">
			<visible>Player.HasAudio</visible>
		</control>

		<control type="group">
			<visible>Window.IsVisible(visualisation)</visible>
			<include>Visualization_Fade_Animation</include>

			<!--Artwork-->
			<include content="ListIcon">
				<param name="left" value="780"/>
				<param name="top" value="120"/>
				<param name="width" value="840"/>
				<param name="height" value="840"/>
				<param name="bordervisible" value="true"/>
			</include>
			<control type="image">
				<left>780</left>
				<top>120</top>
				<width>840</width>
				<height>840</height>
				<texture colordiffuse="$VAR[Artwork_Mask]">views/white_100.png</texture>
				<visible>Player.Paused | Player.Rewinding | Player.Forwarding | Window.IsVisible(musicosd)</visible>
				<include>Visualisation_Fade_Animation</include>
			</control>
			<control type="group">
				<left>1620</left>
				<top>300</top>
				<width>480</width>
				<height>480</height>
				<include content="ListIcon">
					<param name="position" value="1"/>
					<param name="visible" value="MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)"/>
				</include>
				<include content="DropShadow">
					<param name="height" value="100%"/>
					<param name="flipx" value="true"/>
					<param name="visible" value="MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)"/>
				</include>
				<control type="image">
					<texture colordiffuse="$VAR[Artwork_Mask]">views/white_100.png</texture>
					<visible>Player.Paused | Player.Rewinding | Player.Forwarding | Window.IsVisible(musicosd)</visible>
					<include>Visualisation_Fade_Animation</include>
				</control>
			</control>

			<!--Details-->
			<control type="group">
				<visible>!Window.IsVisible(1114) + !$EXP[TransparentDialog_IsVisible]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Breadcrumb_Label">
					<param name="label_color" value="$VAR[Primary_Color]"/>
				</include>
				<control type="grouplist">
					<left>60</left>
					<width>660</width>
					<top>240</top>
					<bottom>240</bottom>
					<orientation>vertical</orientation>
					<align>center</align>
					<itemgap>5</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<!--Title-->
					<control type="textbox">
						<height max="200">auto</height>
						<font>Showcase_Title</font>
						<textcolor>$VAR[Primary_Color]</textcolor>
						<label>$INFO[MusicPlayer.Title]</label>
					</control>
					<!--Info-->
					<control type="textbox">
						<top>-10</top>
						<height max="70">auto</height>
						<font>Showcase_Info</font>
						<textcolor>$VAR[Primary_Color]</textcolor>
						<label>[UPPERCASE]$INFO[MusicPlayer.Artist][/UPPERCASE]</label>
					</control>
				</control>
			</control>
		</control>

	</controls>
</window>
