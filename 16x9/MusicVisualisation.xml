<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisation -->
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>My_Window_Fade_Animation</include>
	<controls>

		<!-- Visualisation -->
		<control type="visualisation" id="2">
			<visible>false</visible>
		</control>

		<!-- Main artwork -->
		<include content="ListIcon">
			<param name="left" value="780"/>
			<param name="top" value="120"/>
			<param name="width" value="840"/>
			<param name="height" value="840"/>
			<param name="bordervisible" value="true"/>
		</include>
		<control type="image">
			<visible>Window.IsVisible(musicosd) | Player.Paused | Player.Rewinding | Player.Forwarding</visible>
			<include>Dialog_Fade_Animation</include>
			<left>780</left>
			<top>120</top>
			<width>840</width>
			<height>840</height>
			<texture colordiffuse="$VAR[Artwork_Mask]">views/white_100.png</texture>
		</control>

		<!-- Next up -->
		<control type="group">
			<visible>!Playlist.IsRepeatOne</visible>
			<left>1620</left>
			<top>300</top>
			<width>480</width>
			<height>480</height>
			<include content="ListIcon">
				<param name="position" value="1"/>
				<param name="visible" value="MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)"/>
			</include>
			<include content="DropShadow">
				<param name="height" value="100%"/>
				<param name="flipx" value="true"/>
				<param name="visible" value="MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)"/>
			</include>
			<control type="image">
				<visible>Window.IsVisible(musicosd) | Player.Paused | Player.Rewinding | Player.Forwarding</visible>
				<include>Dialog_Fade_Animation</include>
				<texture colordiffuse="$VAR[Artwork_Mask]">views/white_100.png</texture>
			</control>
		</control>

		<!--Details-->
		<control type="group">
			<visible>!Window.IsVisible(1123) + !$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>
			<control type="group">
				<visible>!Window.IsVisible(musicosd)</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Breadcrumb_Label">
					<param name="label_color" value="$VAR[Primary_Color]"/>
				</include>
			</control>
			<include content="Common_Details">
				<param name="viewtype_label" value="Showcase"/>
				<param name="left" value="60"/>
				<param name="width" value="660"/>
				<param name="titleheight" value="280"/>
				<param name="titlelabel" value="$INFO[MusicPlayer.Title]"/>
				<param name="infoheight" value="280"/>
				<param name="infolabel" value="[UPPERCASE]$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Year, / ]$INFO[MusicPlayer.Album, / ][/UPPERCASE]"/>
			</include>
		</control>

	</controls>
</window>
