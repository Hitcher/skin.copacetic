<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisation -->
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<onload>Skin.TimerStart(music_visualisation)</onload>
	<onunload>Skin.TimerStop(music_visualisation)</onunload>
	<include>My_Window_Fade_Animation</include>
	<controls>

		<!-- Visualisation -->
		<control type="group">
			<control type="visualisation" id="2">
				<visible>Skin.TimerIsRunning(music_visualisation) + Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(music_visualisation),1)</visible>
				<width>1920</width>
				<height>1080</height>
			</control>
			<control type="image">
				<animation effect="fadediffuse" end="80000000" time="2160" condition="Skin.TimerIsRunning(music_visualisation) + Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(music_visualisation),1)" reversible="true">Conditional</animation>
				<texture colordiffuse="$VAR[Secondary_Color]">views/white_100.png</texture>
				<width>1920</width>
				<height>1080</height>
			</control>
		</control>



		<!-- Main artwork -->
		<include content="SimpleListIcon">
			<param name="left" value="600"/>
			<param name="top" value="180"/>
			<param name="width" value="720"/>
			<param name="height" value="720"/>
			<param name="texture" value="$INFO[Player.Art(album.thumb)]"/>
		</include>
		<!-- Artwork Mask -->
		<control type="image">
			<visible>Window.IsVisible(musicosd) | Player.Paused | Player.Rewinding | Player.Forwarding</visible>
			<include>Dialog_Fade_Animation</include>
			<left>600</left>
			<top>180</top>
			<width>720</width>
			<height>720</height>
			<texture colordiffuse="$VAR[Artwork_Mask]">views/white_100.png</texture>
		</control>

		<!-- Details -->
		<control type="group">
			<visible>!Window.IsVisible(1123) + !$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>
 <!--<control type="group">
				<visible>!Window.IsVisible(musicosd)</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Breadcrumb_Label">
					<param name="label_color" value="$VAR[Primary_Color]"/>
					<param name="title_label" value="$INFO[MusicPlayer.Artist]"/>
					<param name="info_label" value="$INFO[MusicPlayer.Year,$LOCALIZE[31116] ]$INFO[MusicPlayer.Album, $LOCALIZE[31116] ]"/>
				</include>
			</control>-->
			<control type="grouplist">
				<visible>!Window.IsVisible(musicosd)</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<centertop>50%</centertop>
				<height>360</height>
				<width>480</width>
				<left>60</left>
				<orientation>vertical</orientation>
				<align>center</align>
				<itemgap>0</itemgap>
				<control type="textbox">
					<height max="80">auto</height>
					<label>$INFO[MusicPlayer.Artist]</label>
					<font>MusicPlayer_Title</font>
					<textcolor>$VAR[Primary_Color]</textcolor>
					<align>left</align>
				</control>
				<control type="textbox">
					<height max="320">auto</height>
					<label>$INFO[MusicPlayer.Year]$INFO[MusicPlayer.Album, $LOCALIZE[31116] ]</label>
					<font>MusicPlayer_Info</font>
					<textcolor>$VAR[Primary_Color]</textcolor>
					<align>left</align>
				</control>
			</control>
			<!-- Bottom label -->
			<include content="Variable_Title_Label">
				<param name="label" value="$INFO[MusicPlayer.Title]"/>
			</include>
			<!-- Next up -->
			<control type="grouplist">
				<visible>MusicPlayer.HasNext + !String.IsEmpty(MusicPlayer.offset(1).Title)</visible>
				<visible>!Window.IsVisible(volumebar)</visible>
				<include>Content_Fade_Animation</include>
				<centertop>50%</centertop>
				<height>360</height>
				<width>480</width>
				<right>60</right>
				<orientation>vertical</orientation>
				<align>center</align>
				<itemgap>0</itemgap>
				<control type="label">
					<height>40</height>
					<label>$LOCALIZE[209]</label>
					<font>MusicPlayer_Title</font>
					<textcolor>$VAR[Primary_Color]</textcolor>
					<align>right</align>
				</control>
				<control type="textbox">
					<height max="320">auto</height>
					<label>$INFO[MusicPlayer.offset(1).Title]$INFO[MusicPlayer.offset(1).Artist, $LOCALIZE[31116] ]</label>
					<font>MusicPlayer_Info</font>
					<textcolor>$VAR[Primary_Color]</textcolor>
					<align>right</align>
				</control>
			</control>
		</control>

	</controls>
</window>
