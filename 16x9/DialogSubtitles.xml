<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- subtitlesearch -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>

	<controls>

		<!-- Delay content on Load -->
		<include content="Delay_Content_Load">
			<param name="id" value="9001"/>
			<param name="time" value="360"/>
			<param name="target_id" value="SetFocus(150)"/>
		</include>

		<control type="group">
			<visible>!Control.HasFocus(9001) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<!-- Heading label -->
			<include content="Breadcrumb_Label">
				<param name="label_color" value="$VAR[Light_Color]"/>
				<param name="title_label_id" value="100"/>
				<param name="info_label_visible" value="false"/>
			</include>

			<include content="Settings_Left_List_Template">
				<param name="windowname" value="subtitlesearch"/>
				<param name="id" value="150"/>
				<param name="scrollbarid" value="60"/>
				<param name="left" value="90"/>
				<param name="width" value="540"/>
				<param name="onleft" value="301"/>
				<param name="onright" value="120"/>
				<param name="label2visible" value="false"/>
				<param name="offsetforlabel2" value="0"/>
				<param name="focusedcolor" value="$VAR[DialogSubtitles_Left_Label_Focused_Color]"/>
				<param name="dividerleft" value="630"/>
			</include>

			<include content="Settings_Right_List_Template">
				<param name="windowname" value="subtitlesearch"/>
				<param name="id" value="120"/>
				<param name="scrollbarid" value="61"/>
				<param name="right" value="90"/>
				<param name="height" value="540"/>
				<param name="width" value="1200"/>
				<param name="onleft" value="150"/>
				<param name="onright" value="160"/>
				<param name="label" value="$VAR[DialogSubtitles_Label]"/>
				<param name="label2visible" value="false"/>
				<param name="offsetforlabel2" value="0"/>
				<param name="focusedcolor" value="$VAR[DialogSubtitles_Right_Label_Focused_Color]"/>
				<param name="focusbordervisible" value="Control.HasFocus(120) | Control.HasFocus(61)"/>
				<param name="dividerleft" value="630"/>
				<animation effect="slide" end="0,45" time="0" condition="true">Conditional</animation>
			</include>

			<!-- Description label -->
			<include content="Description_Label">
				<param name="id" value="130"/>
				<param name="type" value="label"/>
				<param name="textcolor" value="$VAR[Light_Color]"/>
				<param name="label" value="$INFO[Player.Filename][CR][B]$LOCALIZE[31044][/B]"/>
			</include>

			<!-- Number label -->
			<control type="label" id="140">
				<left>660</left>
				<top>225</top>
				<width>1200</width>
				<height>90</height>
				<font>Default_Settings_Header</font>
				<textcolor>$VAR[Unfocused_Color]</textcolor>
			</control>

			<include content="Button_Group_Template">
				<param name="onleft" value="120"/>
				<param name="onup" value="120"/>
				<param name="onright" value="150"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="160"/>
				<param name="button1texture" value="Browse"/>
				<param name="button2" value="true"/>
				<param name="button2id" value="301"/>
				<param name="button2texture" value="Cross"/>
				<param name="button2onclick" value="Close"/>
			</include>

		</control>

	</controls>
</window>
