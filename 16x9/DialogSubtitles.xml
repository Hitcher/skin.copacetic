<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- subtitlesearch -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>

	<controls>

		<!-- Delay content on Load -->
		<include content="Delay_Content_Load">
			<param name="id" value="9001"/>
			<param name="time" value="360"/>
			<param name="target_id" value="SetFocus(150)"/>
		</include>

		<control type="group">
			<visible>!Control.HasFocus(9001) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<!-- Heading label -->
			<include content="Breadcrumb_Label">
				<param name="label_color" value="$VAR[Light_Color]"/>
				<param name="title_label_id" value="100"/>
				<param name="info_label_visible" value="false"/>
			</include>

			<!-- Description label -->
			<include content="Description_Label">
				<param name="id" value="130"/>
				<param name="type" value="label"/>
				<param name="textcolor" value="$VAR[Light_Color]"/>
				<param name="label" value="$INFO[Player.Filename][CR][B]$LOCALIZE[31044][/B]"/>
			</include>

			<include content="DialogDivider">
				<param name="left" value="599"/>
				<param name="height" value="630"/>
			</include>

			<include content="Settings_Scrollbar">
				<param name="visible" value="Control.HasFocus(120)"/>
				<param name="left" value="594"/>
				<param name="height" value="630"/>
			</include>

			<!-- Left list -->
			<control type="list" id="150">
				<left>120</left>
				<width>480</width>
				<height>630</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<onright>120</onright>
				<onleft>0</onleft>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout width="480" height="90">
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="480" height="90">
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<selectedcolor>$VAR[DialogSubtitles_Left_Label_Focused_Color]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
							<texture border="2,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_focused.png</texture>
					</control>
				</focusedlayout>
			</control>

			<!-- Number label -->
			<control type="label" id="140">
				<left>600</left>
				<top>225</top>
				<width>1200</width>
				<height>90</height>
				<textoffsetx>20</textoffsetx>
				<font>Default_Settings_Header</font>
				<textcolor>$VAR[Light_Color]</textcolor>
			</control>

			<!-- Subtitles List -->
			<control type="list" id="120">
				<left>600</left>
				<top>315</top>
				<width>1200</width>
				<height>540</height>
				<onleft>150</onleft>
				<onright>160</onright>
				<onup>noop</onup>
				<ondown>160</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout width="1200" height="90">
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<textcolor>$VAR[Unfocused_Color]</textcolor>
						<label>$VAR[DialogSubtitles_Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="1200" height="90">
					<control type="group">
						<control type="label">
							<textoffsetx>60</textoffsetx>
							<textcolor>$VAR[DialogSubtitles_Right_Label_Focused_Color]</textcolor>
							<label>$VAR[DialogSubtitles_Label]</label>
							<scroll>true</scroll>
							<scrollsuffix> / </scrollsuffix>
						</control>
						<control type="image">
								<visible>Control.HasFocus(120)</visible>
								<texture border="2,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_focused.png</texture>
						</control>
					</control>
				</focusedlayout>
			</control>

			<include content="ButtonGroup">
				<param name="onleft" value="120"/>
				<param name="onup" value="120"/>
				<param name="onright" value="150"/>
				<param name="buttonsvisible" value="true"/>
				<param name="button1visible" value="true"/>
				<param name="button1id" value="160"/>
				<param name="button1unfocused" value="Browse_Unfocused"/>
				<param name="button1focused" value="Browse_Focused_Large"/>
				<param name="button2visible" value="true"/>
				<param name="button2id" value="301"/>
				<param name="button2unfocused" value="Cross_Unfocused"/>
				<param name="button2focused" value="Cross_Focused_Large"/>
				<param name="button2onclick" value="Close"/>
			</include>

		</control>

	</controls>
</window>
