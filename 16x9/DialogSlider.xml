<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- sliderdialog -->
	<defaultcontrol always="true">11</defaultcontrol>
	<include content="WindowOpenClose_Fade_Delayed_Animation"/>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(shutdownmenu)</visible>
			<include content="Visible_Fade_Animation"/>
			<include content="Transparent_Dialog_Panel">
				<param name="left" value="600"/>
				<param name="right" value="600"/>
				<param name="top" value="0"/>
				<param name="bottom" value="900"/>
				<param name="colordiffuse" value="$VAR[Dark_Grey_Color]"/>
			</include>
			<control type="label">
				<centerleft>50%</centerleft>
				<width>720</width>
				<top>30</top>
				<height>33</height>
				<align>center</align>
				<font>MusicPlayer_Info</font>
				<textcolor>$VAR[Light_Color]</textcolor>
				<label>$INFO[Control.GetLabel(12)]</label>
			</control>
			<control type="grouplist">
				<width>720</width>
				<centerleft>50%</centerleft>
				<height>60</height>
				<top>60</top>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="image">
					<animation effect="rotate" center="30,30" end="90" time="0" condition="true" reversible="false">Conditional</animation>
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">dialogs/icon_arrow_focused.png</texture>
				</control>
				<control type="slider" id="11">
					<centertop>50%</centertop>
					<width>600</width>
					<height>30</height>
					<texturesliderbar colordiffuse="$VAR[DialogSlider_Bar_Color]">dialogs/dialogslider_background.png</texturesliderbar>
					<textureslidernib/>
					<textureslidernibfocus colordiffuse="$VAR[Accent_Color]">dialogs/dialogslider_nib_30.png</textureslidernibfocus>
					<orientation>horizontal</orientation>
				</control>
				<control type="image">
					<animation effect="rotate" center="30,30" end="270" time="0" condition="true" reversible="false">Conditional</animation>
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">dialogs/icon_arrow_focused.png</texture>
				</control>
			</control>
		</control>
		<include content="Hidden_Components">
			<control type="label" id="10"/>
			<control type="label" id="12"/>
		</include>
	</controls>
</window>
