<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- sliderdialog -->
	<defaultcontrol always="true">11</defaultcontrol>

	<controls>

		<!-- Hidden labels passed to Info below -->
		<control type="label" id="10">
			<font></font>
		</control>
		<control type="label" id="12">
			<font></font>
		</control>

		<control type="group">
			<centerleft>50%</centerleft>
			<top>15</top>
			<width>800</width>
			<height>180</height>
			<include>DialogZoomAnimation</include>

			<!-- Background image -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>800</width>
				<height>180</height>
				<texture border="20">dialogs/DialogBackground.png</texture>
			</control>

			<!-- Info -->
			<control type="label">
				<left>40</left>
				<top>50</top>
				<width>720</width>
				<height>33</height>
				<align>center</align>
				<scroll>true</scroll>
				<font>Font33</font>
				<textcolor>$VAR[FocusedColor]</textcolor>
				<label>$INFO[Control.GetLabel(10)] - $INFO[Control.GetLabel(12)]</label>
			</control>

			<!-- Slider -->
			<control type="slider" id="11">
				<left>40</left>
				<top>104</top>
				<width>720</width>
				<height>20</height>
				<texturesliderbar border="10,0,10,0">old_osd/OSDSliderBack.png</texturesliderbar>
				<textureslidernib border="10,0,10,0">old_osd/OSDSliderNib.png</textureslidernib>
				<textureslidernibfocus border="10,0,10,0">old_osd/OSDSliderNib.png</textureslidernibfocus>
			</control>

		</control>

	</controls>

</window>
