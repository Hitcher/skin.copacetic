<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- sliderdialog -->
	<defaultcontrol always="true">11</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<!-- Hidden labels passed to Info below -->
			<control type="label" id="10">
				<font></font>
			</control>
			<control type="label" id="12">
				<font></font>
			</control>

			<control type="group">
				<centerleft>50%</centerleft>
				<top>15</top>
				<width>800</width>
				<height>180</height>
				<include>DialogZoomAnimation</include>

				<!-- Background image -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>800</width>
					<height>180</height>
					<texture border="20">dialogs/DialogBackground.png</texture>
				</control>

				<!-- Info -->
				<control type="label">
					<left>40</left>
					<top>50</top>
					<width>720</width>
					<height>33</height>
					<align>center</align>
					<scroll>true</scroll>
					<font>Font33</font>
					<textcolor>$VAR[FocusedColor]</textcolor>
					<label>$INFO[Control.GetLabel(10)] - $INFO[Control.GetLabel(12)]</label>
				</control>

				<!-- Slider -->
				<control type="slider" id="11">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>720</width>
					<height>8</height>
					<controloffsety>11</controloffsety>
					<texturesliderbar colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</texturesliderbar>
					<textureslidernib colordiffuse="$VAR[Accent_Color]">views/Slider_Nib.png</textureslidernib>
					<textureslidernibfocus colordiffuse="$VAR[Accent_Color]">views/Slider_Nib.png</textureslidernibfocus>
				</control>
			</control>

		</control>
	</controls>
</window>
