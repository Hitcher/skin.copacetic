<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videoosd -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<onload condition="!String.IsEmpty(window(musicosd).property(MusicOSD_Controls))">ClearProperty(MusicOSD_Controls,musicosd)</onload>
	<onunload condition="!String.IsEmpty(window(musicosd).property(MusicOSD_Controls))">ClearProperty(MusicOSD_Controls,musicosd)</onunload>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<!-- Delay on Load -->
		<control type="button" id="9001">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus>SetFocus(3)</onfocus>
		</control>
		<control type="group" id="9002">
			<visible>Control.HasFocus(9001)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<control type="group">
			<visible>!Control.IsVisible(9002) + !$EXP[TransparentDialog_IsVisible]</visible>
			<include>Content_Fade_Animation</include>

			<include content="Breadcrumb_Label">
				<param name="label_color" value="$VAR[Light_Color]"/>
				<param name="title_label" value="$INFO[Window(videoosd).Property(VideoOSD_Controls)]"/>
				<param name="info_label_visible" visible="false"/>
			</include>

			<include content="Player_Status_Icons">
				<param name="large_label" value="true"/>
			</include>

			<control type="group">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>300</width>
				<height>120</height>
				<visible>!Window.IsVisible(VideoBookmarks)</visible>
				<control type="grouplist" id="9003">
					<top>0</top>
					<height>60</height>
					<orientation>horizontal</orientation>
					<align>left</align>
					<itemgap>0</itemgap>
					<control type="button" id="1">
						<include content="Icon_Button">
							<param name="description" value="Previous"/>
							<param name="icon" value="Rewind"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[210],videoosd)</onfocus>
						<onclick>PlayerControl(Previous)</onclick>
						<onup>6</onup>
						<ondown>6</ondown>
					</control>
					<control type="button" id="2">
						<include content="Icon_Button">
							<param name="description" value="Rewind"/>
							<param name="icon" value="Previous"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[31561],videoosd)</onfocus>
						<onclick>PlayerControl(Rewind)</onclick>
						<onup>7</onup>
						<ondown>7</ondown>
					</control>
					<control type="togglebutton" id="3">
						<description>Play/Pause</description>
						<width>60</width>
						<height>60</height>
						<texturefocus colordiffuse="$VAR[Light_Color]">osd/icon_Play_focused.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_Play_unfocused.png</texturenofocus>
						<usealttexture>![Player.Paused | Player.Forwarding | Player.Rewinding]</usealttexture>
						<alttexturefocus colordiffuse="$VAR[Light_Color]">osd/icon_Pause_focused.png</alttexturefocus>
						<alttexturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_Pause_unfocused.png</alttexturenofocus>
						<onfocus>SetProperty(VideoOSD_Controls,$VAR[Play_Pause_Label],videoosd)</onfocus>
						<onclick>PlayerControl(Play)</onclick>
						<onclick>SetProperty(VideoOSD_Controls,$VAR[Play_Pause_Label],videoosd)</onclick>
						<onup>8</onup>
						<ondown>8</ondown>
					</control>
					<control type="button" id="4">
						<include content="Icon_Button">
							<param name="description" value="Forward"/>
							<param name="icon" value="Next"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[31562],videoosd)</onfocus>
						<onclick>PlayerControl(Forward)</onclick>
						<onup>9</onup>
						<ondown>9</ondown>
					</control>
					<control type="button" id="5">
						<include content="Icon_Button">
							<param name="description" value="Next"/>
							<param name="icon" value="Forward"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[209],videoosd)</onfocus>
						<onclick>PlayerControl(Next)</onclick>
						<onup>10</onup>
						<ondown>10</ondown>
					</control>
				</control>
				<control type="grouplist" id="9004">
					<bottom>0</bottom>
					<height>60</height>
					<orientation>horizontal</orientation>
					<align>left</align>
					<itemgap>0</itemgap>
					<control type="button" id="6">
						<include content="Icon_Button">
							<param name="description" value="Bookmarks"/>
							<param name="icon" value="Bookmarks"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[298],videoosd)</onfocus>
						<onclick>Dialog.Close(all, true)</onclick>
						<onclick>ActivateWindow(videobookmarks)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
						<onup>1</onup>
						<ondown>1</ondown>
					</control>
					<control type="button" id="7">
						<include content="Icon_Button">
							<param name="description" value="Video OSD settings"/>
							<param name="icon" value="Settings-Video"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[10123],videoosd)</onfocus>
						<onclick>ActivateWindow(osdvideosettings)</onclick>
						<onup>2</onup>
						<ondown>2</ondown>
					</control>
					<control type="button" id="8">
						<include content="Icon_Button">
							<param name="description" value="Stop"/>
							<param name="icon" value="Stop"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[31528],videoosd)</onfocus>
						<onclick>PlayerControl(Stop)</onclick>
						<onup>3</onup>
						<ondown>3</ondown>
					</control>
					<control type="button" id="9">
						<include content="Icon_Button">
							<param name="description" value="Audio OSD Settings"/>
							<param name="icon" value="Settings-Sound"/>
						</include>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[10124],videoosd)</onfocus>
						<onclick>ActivateWindow(osdaudiosettings)</onclick>
						<onup>4</onup>
						<ondown>4</ondown>
					</control>
					<control type="button" id="10">
						<include content="Icon_Button">
							<param name="description" value="Subtitle OSD settings"/>
							<param name="icon" value="Subtitles"/>
						</include>
						<onclick>ActivateWindow(OSDSubtitleSettings)</onclick>
						<onfocus>SetProperty(VideoOSD_Controls,$LOCALIZE[10159],videoosd)</onfocus>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
						<onup>5</onup>
						<ondown>5</ondown>
					</control>
				</control>
			</control>

		</control>

	</controls>
</window>
