<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videoosd -->
	<defaultcontrol always="true">1</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>

	<controls>

		<control type="label" id="916">
			<visible>false</visible>
			<label>$VAR[VideoPlayer_Plot]</label>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Clock">
				<param name="textcolor" value="$VAR[Light_Color]"/>
			</include>

			<!--Info-->
			<control type="group">
				<visible>![Player.Forwarding | Player.Rewinding]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Common_Details">
					<param name="width" value="1560"/>
					<param name="titlelabel" value="$VAR[VideoPlayer_Title]"/>
					<param name="labeltype" value="textbox"/>
					<param name="titlescroll" value="false"/>
					<param name="titlecolor" value="$VAR[Light_Color]"/>
					<param name="infolabel" value="$VAR[VideoPlayer_Info]"/>
					<param name="infocolor" value="$VAR[Light_Color]"/>
					<param name="plotlabel" value="$VAR[VideoPlayer_Plot]"/>
					<param name="plotmaxheight" value="206"/>
					<param name="plotcolor" value="$VAR[Light_Color]"/>
				</include>
			</control>

			<!-- Controls -->
			<control type="grouplist" id="9001">
				<left>120</left>
				<right>120</right>
				<bottom>15</bottom>
				<height>60</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<onup>87</onup>
				<ondown>Close</ondown>
				<orientation>horizontal</orientation>
				<visible>!Window.IsVisible(VideoBookmarks)</visible>
				<!-- Play/Pause -->
				<control type="togglebutton" id="1">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Play_focused.png</texturefocus>
					<texturenofocus>osd/icon_Play_unfocused.png</texturenofocus>
					<usealttexture>![Player.Paused | Player.Forwarding | Player.Rewinding]</usealttexture>
					<alttexturefocus>osd/icon_Pause_focused.png</alttexturefocus>
					<alttexturenofocus>osd/icon_Pause_unfocused.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<!--Stop-->
				<control type="button" id="2">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Stop_focused.png</texturefocus>
					<texturenofocus>osd/icon_Stop_unfocused.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<!-- Skip Back -->
				<control type="button" id="3">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Rewind_focused.png</texturefocus>
					<texturenofocus>osd/icon_Rewind_unfocused.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<!-- Rewind -->
				<control type="button" id="4">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Previous_focused.png</texturefocus>
					<texturenofocus>osd/icon_Previous_unfocused.png</texturenofocus>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<!-- Fast Forward -->
				<control type="button" id="5">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Next_focused.png</texturefocus>
					<texturenofocus>osd/icon_Next_unfocused.png</texturenofocus>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<!-- Next -->
				<control type="button" id="6">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Forward_focused.png</texturefocus>
					<texturenofocus>osd/icon_Forward_unfocused.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>
				<!-- Video Settings -->
				<control type="button" id="11">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Settings-Video_focused.png</texturefocus>
					<texturenofocus>osd/icon_Settings-Video_unfocused.png</texturenofocus>
					<onclick>ActivateWindow(osdvideosettings)</onclick>
				</control>
				<!-- Audio Settings -->
				<control type="button" id="12">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Settings-Sound_focused.png</texturefocus>
					<texturenofocus>osd/icon_Settings-Sound_unfocused.png</texturenofocus>
					<onclick>ActivateWindow(osdaudiosettings)</onclick>
				</control>
				<!-- Bookmarks -->
				<control type="button" id="13">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Bookmarks_focused.png</texturefocus>
					<texturenofocus>osd/icon_Bookmarks_unfocused.png</texturenofocus>
					<onclick>ActivateWindow(videobookmarks)</onclick>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
				</control>
				<!-- Subtitles -->
				<control type="button" id="14">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/icon_Subtitles_focused.png</texturefocus>
					<texturenofocus>osd/icon_Subtitles_unfocused.png</texturenofocus>
					<onclick>ActivateWindow(OSDSubtitleSettings)</onclick>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
				</control>
			</control>

		</control>

	</controls>
</window>
