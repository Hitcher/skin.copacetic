<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- notification -->
	<controls>
		<control type="group">
			<right>0</right>
			<top>0</top>
			<width>750</width>
			<height>150</height>
			<include>DialogToastAnimation</include>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(fullscreenvideo)">Conditional</animation>
			<!-- Background image -->
			<control type="image">
				<width>750</width>
				<height>130</height>
				<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
			</control>
			<!-- Heading -->
			<control type="label" id="401">
				<left>20</left>
				<top>22</top>
				<width>570</width>
				<height>40</height>
				<scroll>true</scroll>
				<font>Light30Upper</font>
				<textcolor>$VAR[TextColor]</textcolor>
			</control>
			<!-- Details -->
			<control type="label" id="402">
				<left>20</left>
				<top>66</top>
				<width>570</width>
				<height>37</height>
				<scroll>true</scroll>
				<font>Light27</font>
				<textcolor>$VAR[TextColor]</textcolor>
			</control>
			<!-- Default image -->
			<control type="image" id="400">
				<right>20</right>
				<top>15</top>
				<width>100</width>
				<height>100</height>
			</control>
		</control>
	</controls>
</window>