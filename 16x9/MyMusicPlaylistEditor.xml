<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicplaylisteditor -->
	<onload>ClearProperty(ActiveList,musicplaylisteditor)</onload>
	<onunload>ClearProperty(ActiveList,musicplaylisteditor)</onunload>
	<views>50</views>
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>My_Window_Fade_Animation</include>
	<controls>

		<!-- Delay content on Load -->
		<include content="Delay_Content_Load">
			<param name="id" value="9001"/>
			<param name="time" value="360"/>
			<param name="target_id" value="SetFocus(50,1,absolute)"/>
		</include>

		<!-- Hidden focus setter -->
		<control type="button" id="50100">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Integer.IsGreater(Container(100).NumItems,0)">SetFocus(100)</onfocus>
			<onfocus condition="!Integer.IsGreater(Container(100).NumItems,0)">SetFocus(6)</onfocus>
		</control>
		<control type="button" id="9000100">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Integer.IsGreater(Container(100).NumItems,0)">SetFocus(100)</onfocus>
			<onfocus condition="!Integer.IsGreater(Container(100).NumItems,0)">SetFocus(50)</onfocus>
		</control>

		<!-- Hidden labels -->
		<control type="label" id="12">
			<visible>false</visible>
		</control>
		<control type="label" id="101">
			<visible>false</visible>
		</control>

		<!-- Background -->
		<control type="image">
			<fadetime>360</fadetime>
			<aspectratio>scale</aspectratio>
			<texture colordiffuse="$VAR[Home_Artwork_Diffuse]" background="true">$VAR[MusicPlaylistEditor_Background]</texture>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_ExcludingContextMenu]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<!-- Content -->
			<control type="group">
				<visible>!Control.HasFocus(9001)</visible>

				<include content="DialogDivider">
					<param name="left" value="780"/>
					<param name="height" value="630"/>
				</include>

				<include content="DialogDivider">
					<param name="left" value="1140"/>
					<param name="height" value="630"/>
				</include>

				<!-- Left Side -->
				<control type="label">
					<left>120</left>
					<width>600</width>
					<bottom>60</bottom>
					<height>60</height>
					<textcolor>$VAR[Light_Color]</textcolor>
					<aligny>center</aligny>
					<align>left</align>
					<font>Description</font>
					<label>$VAR[MusicPlaylistEditor_Directory_Label]</label>
				</control>

				<control type="group">
					<visible>![Window.IsVisible(contextmenu) + String.IsEqual(Window(musicplaylisteditor).Property(ActiveList),Right)]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="Settings_Left_List_Template">
						<param name="windowname" value="musicplaylisteditor"/>
						<param name="id" value="50"/>
						<param name="scrollbarid" value="60"/>
						<param name="dividervisible" value="false"/>
						<param name="onleft" value="8"/>
						<param name="onright" value="50100"/>
						<param name="label" value="$VAR[MusicPlaylistEditor_Override_LeftLabel]"/>
						<param name="label2" value="$VAR[MusicPlaylistEditor_Override_LeftLabel2]"/>
					</include>
				</control>

				<control type="image">
					<fadetime>180</fadetime>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>300</width>
					<height>300</height>
					<texture>$VAR[MusicPlaylistEditor_Icon]</texture>
					<aspectratio>scale</aspectratio>
				</control>

				<!-- Right Side -->
				<control type="label">
					<right>120</right>
					<width>600</width>
					<bottom>60</bottom>
					<height>60</height>
					<textcolor>$VAR[Light_Color]</textcolor>
					<aligny>center</aligny>
					<align>right</align>
					<font>Description</font>
					<label>$VAR[MusicPlaylistEditor_Playlist_Label]</label>
				</control>

				<control type="group">
					<visible>![Window.IsVisible(contextmenu) + String.IsEqual(Window(musicplaylisteditor).Property(ActiveList),Left)]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="Settings_Right_List_Template">
						<param name="windowname" value="musicplaylisteditor"/>
						<param name="id" value="100"/>
						<param name="dividervisible" value="false"/>
						<param name="scrollbarid" value="61"/>
						<param name="onleft" value="50"/>
						<param name="onright" value="6"/>
						<param name="focusbordervisible" value="Control.HasFocus(100)"/>
						<param name="label" value="$INFO[ListItem.CurrentItem,,.]$INFO[ListItem.Title, ]$INFO[ListItem.Artist, - ]"/>
						<param name="label2" value="$INFO[ListItem.Label2]"/>
					</include>
				</control>

				<include content="Button_Group_Template">
					<param name="right" value="780"/>
					<param name="onleft" value="9000100"/>
					<param name="onright" value="50"/>
					<param name="icons" value="true"/>
					<param name="button1" value="true"/>
					<param name="button1id" value="6"/>
					<param name="button1texture" value="Browse"/>
					<param name="button2" value="true"/>
					<param name="button2id" value="7"/>
					<param name="button3" value="true"/>
					<param name="button3id" value="8"/>
					<param name="button3texture" value="Refresh"/>
				</include>
			</control>
		</control>

	</controls>
</window>
