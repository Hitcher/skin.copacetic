<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicplaylisteditor -->
	<include>My_Window_Fade_Animation</include>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<controls>

		<!-- Hidden focus setter -->
		<control type="button" id="50100">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Integer.IsGreater(Container(100).NumItems,0)">SetFocus(100)</onfocus>
			<onfocus condition="!Integer.IsGreater(Container(100).NumItems,0)">SetFocus(6)</onfocus>
		</control>

		<control type="button" id="9000100">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Integer.IsGreater(Container(100).NumItems,0)">SetFocus(100)</onfocus>
			<onfocus condition="!Integer.IsGreater(Container(100).NumItems,0)">SetFocus(50)</onfocus>
		</control>

		<control type="image">
			<fadetime>360</fadetime>
			<aspectratio>scale</aspectratio>
			<texture colordiffuse="$VAR[Home_Artwork_Diffuse]" background="true">$VAR[MusicPlaylistEditor_Background]</texture>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<include content="Settings_Left_List_Template">
				<param name="windowname" value="musicplaylisteditor"/>
				<param name="id" value="50"/>
				<param name="scrollbarid" value="60"/>
				<param name="onleft" value="8"/>
				<param name="onright" value="50100"/>
				<param name="label" value="$INFO[ListItem.Label]"/>
				<param name="label2" value="$INFO[ListItem.Label2]"/>
			</include>
			<control type="image">
				<fadetime>180</fadetime>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>300</width>
				<height>300</height>
				<texture>$VAR[MusicPlaylistEditor_Icon]</texture>
				<aspectratio>scale</aspectratio>
			</control>
			<include content="Settings_Right_List_Template">
				<param name="windowname" value="musicplaylisteditor"/>
				<param name="id" value="100"/>
				<param name="scrollbarid" value="61"/>
				<param name="onleft" value="50"/>
				<param name="onright" value="6"/>
				<param name="focusbordervisible" value="Control.HasFocus(100)"/>
				<param name="label" value="$INFO[ListItem.Label]"/>
				<param name="label2" value="$INFO[ListItem.Label2]"/>
			</include>
			<include content="ButtonGroup">
				<param name="right" value="780"/>
				<param name="onleft" value="9000100"/>
				<param name="onright" value="50"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="6"/>
				<param name="button1texture" value="Browse"/>
				<param name="button2" value="true"/>
				<param name="button2id" value="7"/>
				<param name="button3" value="true"/>
				<param name="button3id" value="8"/>
				<param name="button3texture" value="Refresh"/>
			</include>
		</control>

	</controls>

</window>
