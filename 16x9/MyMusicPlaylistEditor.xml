<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicplaylisteditor -->
	<onload>ClearProperty(ActiveList,musicplaylisteditor)</onload>
	<onunload>ClearProperty(ActiveList,musicplaylisteditor)</onunload>
	<defaultcontrol always="true">9001</defaultcontrol>
	<backgroundcolor>$VAR[Dark_Color]</backgroundcolor>
	<include content="WindowOpenClose_Fade_Animation"/>
	<views>50</views>
	<controls>
		<!-- Background -->
		<include condition="Skin.HasSetting(Global_Fanart_Slideshow_Disabled)" content="Light_Theme_Background"/>
		<include condition="!Skin.HasSetting(Global_Fanart_Slideshow_Disabled)" content="Global_Fanart_Slideshow">
			<param name="content_source" value="Music"/>
			<param name="texture_path" value="$VAR[MusicPlaylistEditor_Background]"/>
		</include>
		<!-- Content -->
		<include content="Default_Dialog_Panel_And_Lists_Layout">
			<param name="window_name" value="musicplaylisteditor"/>
			<param name="grouplist_itemgap" value="360"/>
			<param name="left_list_visible" value="![Window.IsVisible(contextmenu) + String.IsEqual(Window(musicplaylisteditor).Property(ActiveList),Right)]"/>
			<param name="left_list_id" value="50"/>
			<param name="left_list_width" value="690"/>
			<param name="left_list_onleft" value="8"/>
			<param name="left_list_label" value="$VAR[MusicPlaylistEditor_Override_LeftLabel]"/>
			<param name="left_list_label2" value="$VAR[MusicPlaylistEditor_Override_LeftLabel2]"/>
			<param name="right_list_visible" value="![Window.IsVisible(contextmenu) + String.IsEqual(Window(musicplaylisteditor).Property(ActiveList),Left)]"/>
			<param name="right_list_id" value="100"/>
			<param name="right_list_width" value="690"/>
			<param name="right_list_onright" value="6"/>
			<param name="right_list_focus_border_visible" value="Control.HasFocus(100)"/>
			<param name="right_list_label" value="$INFO[ListItem.CurrentItem,,.]$INFO[ListItem.Title, ]$INFO[ListItem.Artist, - ]"/>
			<param name="right_list_divider_visible" value="true"/>
			<include content="Simple_ListIcon">
				<param name="left" value="810"/>
				<param name="top" value="390"/>
				<param name="width" value="300"/>
				<param name="height" value="300"/>
				<param name="texture" value="$VAR[MusicPlaylistEditor_Icon]"/>
				<param name="fadetime" value="180"/>
			</include>
			<!-- Left side label -->
			<control type="label">
				<left>120</left>
				<width>600</width>
				<bottom>60</bottom>
				<height>60</height>
				<textcolor>$VAR[Light_Color]</textcolor>
				<aligny>center</aligny>
				<align>left</align>
				<font>Description</font>
				<label>$VAR[MusicPlaylistEditor_Directory_Label]</label>
			</control>
			<!-- Right side label -->
			<control type="label">
				<right>120</right>
				<width>600</width>
				<bottom>60</bottom>
				<height>60</height>
				<textcolor>$VAR[Light_Color]</textcolor>
				<aligny>center</aligny>
				<align>right</align>
				<font>Description</font>
				<label>$VAR[MusicPlaylistEditor_Playlist_Label]</label>
			</control>
			<include content="Button_Group_Template">
				<param name="right" value="780"/>
				<param name="onleft" value="9000100"/>
				<param name="onright" value="50"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="6"/>
				<param name="button1texture" value="Browse"/>
				<param name="button2" value="true"/>
				<param name="button2id" value="7"/>
				<param name="button3" value="true"/>
				<param name="button3id" value="8"/>
				<param name="button3texture" value="Refresh"/>
			</include>
		</include>
		<!-- Hidden components -->
		<include content="Hidden_Components">
			<control type="label" id="12"/>
			<control type="label" id="101"/>
			<include content="Focus_Setter">
				<param name="target_id" value="SetFocus(50,1,absolute)"/>
			</include>
		</include>
		<control type="button" id="50100">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Integer.IsGreater(Container(100).NumItems,0)">SetFocus(100)</onfocus>
			<onfocus condition="!Integer.IsGreater(Container(100).NumItems,0)">SetFocus(6)</onfocus>
		</control>
		<control type="button" id="9000100">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Integer.IsGreater(Container(100).NumItems,0)">SetFocus(100)</onfocus>
			<onfocus condition="!Integer.IsGreater(Container(100).NumItems,0)">SetFocus(50)</onfocus>
		</control>
	</controls>
</window>
