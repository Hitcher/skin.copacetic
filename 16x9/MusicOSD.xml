<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">1</defaultcontrol>
	<include>Transparent_Dialog_Fade_Animation</include>
	<controls>

		<control type="grouplist">
			<left>540</left>
			<right>540</right>
			<bottom>75</bottom>
			<height>60</height>
			<orientation>horizontal</orientation>
			<itemgap>0</itemgap>
			<align>center</align>
			<onup>Close</onup>
			<ondown>Close</ondown>
			<!-- Skip Back -->
			<control type="button" id="3">
				<width>60</width>
				<height>60</height>
				<texturefocus>osd/icon_Previous_focused.png</texturefocus>
				<texturenofocus>osd/icon_Previous_unfocused.png</texturenofocus>
				<onclick>PlayerControl(Previous)</onclick>
			</control>
			<!-- Rewind -->
			<control type="button" id="4">
				<width>60</width>
				<height>60</height>
				<texturefocus>osd/icon_Rewind_focused.png</texturefocus>
				<texturenofocus>osd/icon_Rewind_unfocused.png</texturenofocus>
				<onclick>PlayerControl(Rewind)</onclick>
			</control>
			<!-- Play/Pause -->
			<control type="togglebutton" id="1">
				<width>60</width>
				<height>60</height>
				<texturefocus>osd/icon_Play_focused.png</texturefocus>
				<texturenofocus>osd/icon_Play_unfocused.png</texturenofocus>
				<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
				<alttexturefocus>osd/icon_Pause_focused.png</alttexturefocus>
				<alttexturenofocus>osd/icon_Pause_unfocused.png</alttexturenofocus>
				<onclick>PlayerControl(Play)</onclick>
			</control>
			<!--Stop-->
			<control type="button" id="2">
				<width>60</width>
				<height>60</height>
				<texturefocus>osd/icon_Stop_focused.png</texturefocus>
				<texturenofocus>osd/icon_Stop_unfocused.png</texturenofocus>
				<onclick>PlayerControl(Stop)</onclick>
			</control>
			<!-- Fast Forward -->
			<control type="button" id="5">
				<width>60</width>
				<height>60</height>
				<texturefocus>osd/icon_Forward_focused.png</texturefocus>
				<texturenofocus>osd/icon_Forward_unfocused.png</texturenofocus>
				<onclick>PlayerControl(Forward)</onclick>
			</control>
			<!-- Next -->
			<control type="button" id="6">
				<width>60</width>
				<height>60</height>
				<texturefocus>osd/icon_Next_focused.png</texturefocus>
				<texturenofocus>osd/icon_Next_unfocused.png</texturenofocus>
				<onclick>PlayerControl(Next)</onclick>
			</control>
		</control>

	</controls>
</window>
