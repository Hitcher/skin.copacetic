<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!--musicosd-->
	<defaultcontrol always="true">9000</defaultcontrol>
	<include>Dialog_Fade_Animation</include>
	<controls>

		<control type="panel" id="9000">
			<width>240</width>
			<height>180</height>
			<scrolltime>0</scrolltime>
			<itemlayout width="60" height="60"/>
			<focusedlayout width="60" height="60"/>
			<content>
				<item>
					<description>Pause</description>
					<label>$LOCALIZE[31526]</label>
					<onclick>PlayerControl(Play)</onclick>
				</item>
				<item>
					<label>$LOCALIZE[31528]</label>
					<onclick>PlayerControl(Stop)</onclick>
				</item>
				<item>
					<description>Previous</description>
					<label>$LOCALIZE[210]</label>
					<onclick>PlayerControl(Previous)</onclick>
				</item>
				<item>
					<description>Next</description>
					<label>$LOCALIZE[209]</label>
					<onclick>PlayerControl(Next)</onclick>
				</item>
				<item>
					<description>Rewind</description>
					<label>Rewind</label>
					<onclick>PlayerControl(Rewind)</onclick>
				</item>
				<item>
					<description>Forward</description>
					<label>Forward</label>
					<onclick>PlayerControl(Forward)</onclick>
				</item>
			</content>
		</control>

		<control type="group">
			<width>180</width>
			<height>120</height>
			<left>1080</left>
			<centertop>50%</centertop>
			<!-- Row 1 -->
			<include content="Music_Player_Button_Template">
				<param name="visible" value="!Player.Paused"/>
				<param name="focused" value="String.IsEqual(Control.GetLabel(9000),$LOCALIZE[31526]) + !Player.Paused"/>
				<param name="icon" value="Pause"/>
				<param name="left" value="0"/>
				<param name="top" value="0"/>
			</include>
			<include content="Music_Player_Button_Template">
				<param name="visible" value="Player.Paused"/>
				<param name="focused" value="String.IsEqual(Control.GetLabel(9000),$LOCALIZE[31526]) + Player.Paused"/>
				<param name="icon" value="Play"/>
				<param name="left" value="0"/>
				<param name="top" value="0"/>
			</include>
			<include content="Music_Player_Button_Template">
				<param name="focused" value="String.IsEqual(Control.GetLabel(9000),$LOCALIZE[31528])"/>
				<param name="icon" value="Stop"/>
				<param name="left" value="60"/>
				<param name="top" value="0"/>
			</include>
			<include content="Music_Player_Button_Template">
				<param name="focused" value="String.IsEqual(Control.GetLabel(9000),$LOCALIZE[210])"/>
				<param name="icon" value="Rewind"/>
				<param name="left" value="120"/>
				<param name="top" value="0"/>
			</include>
			<include content="Music_Player_Button_Template">
				<param name="focused" value="String.IsEqual(Control.GetLabel(9000),$LOCALIZE[209])"/>
				<param name="icon" value="Forward"/>
				<param name="left" value="180"/>
				<param name="top" value="0"/>
			</include>
			<!-- Row 2 -->
			<include content="Music_Player_Button_Template">
				<param name="focused" value="String.IsEqual(Control.GetLabel(9000),Rewind)"/>
				<param name="icon" value="Previous"/>
				<param name="left" value="0"/>
				<param name="top" value="60"/>
			</include>
			<include content="Music_Player_Button_Template">
				<param name="focused" value="String.IsEqual(Control.GetLabel(9000),Forward)"/>
				<param name="icon" value="Next"/>
				<param name="left" value="60"/>
				<param name="top" value="60"/>
			</include>
		</control>

	</controls>
</window>
