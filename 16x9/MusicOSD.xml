<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicosd -->
	<onload condition="!String.IsEmpty(window(musicosd).property(MusicOSD_Controls))">ClearProperty(MusicOSD_Controls,musicosd)</onload>
	<onunload condition="!String.IsEmpty(window(musicosd).property(MusicOSD_Controls))">ClearProperty(MusicOSD_Controls,musicosd)</onunload>
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>

	<controls>

		<!-- Delay on Load -->
		<control type="button" id="9001">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus>SetFocus(1)</onfocus>
		</control>
		<control type="group" id="9002">
			<visible>Control.HasFocus(9001)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<control type="group">
			<visible>!Control.IsVisible(9002)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Breadcrumb_Label">
				<param name="label_color" value="$VAR[Primary_Color]"/>
				<param name="title_label" value="$INFO[Window(musicosd).Property(MusicOSD_Controls)]"/>
				<param name="info_label_visible" visible="false"/>
			</include>

			<include content="Player_Status_Icons">
				<param name="large_label" value="true"/>
			</include>

			<control type="group">
				<left>810</left>
				<centertop>50%</centertop>
				<width>300</width>
				<height>120</height>
				<control type="grouplist" id="9003">
					<height>60</height>
					<top>0</top>
					<orientation>horizontal</orientation>
					<align>left</align>
					<itemgap>0</itemgap>
					<control type="button" id="3">
						<include content="Icon_Button">
							<param name="description" value="Previous"/>
							<param name="icon" value="Rewind"/>
						</include>
						<onfocus>SetProperty(MusicOSD_Controls,$LOCALIZE[210],musicosd)</onfocus>
						<onclick>PlayerControl(Previous)</onclick>
						<onclick>SetProperty(VideoOSD_Controls,$VAR[Play_Pause_Label],videoosd)</onclick>
						<ondown>10</ondown>
						<onup>10</onup>
					</control>
					<control type="button" id="6">
						<include content="Icon_Button">
							<param name="description" value="Rewind"/>
							<param name="icon" value="Previous"/>
						</include>
						<onfocus>SetProperty(MusicOSD_Controls,$LOCALIZE[31561],musicosd)</onfocus>
						<onclick>PlayerControl(Rewind)</onclick>
						<onup>5</onup>
						<ondown>5</ondown>
					</control>
					<control type="togglebutton" id="1">
						<description>Play/Pause</description>
						<width>60</width>
						<height>60</height>
						<texturefocus colordiffuse="$VAR[Light_Color]">osd/icon_Play_focused.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_Play_unfocused.png</texturenofocus>
						<usealttexture>![Player.Paused | Player.Forwarding | Player.Rewinding]</usealttexture>
						<alttexturefocus colordiffuse="$VAR[Light_Color]">osd/icon_Pause_focused.png</alttexturefocus>
						<alttexturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_Pause_unfocused.png</alttexturenofocus>
						<onfocus>SetProperty(MusicOSD_Controls,$VAR[Play_Pause_Label],musicosd)</onfocus>
						<onclick>PlayerControl(Play)</onclick>
						<onclick>SetProperty(MusicOSD_Controls,$VAR[Play_Pause_Label],musicosd)</onclick>
						<onup>2</onup>
						<ondown>2</ondown>
					</control>
					<control type="button" id="7">
						<include content="Icon_Button">
							<param name="description" value="Forward"/>
							<param name="icon" value="Next"/>
						</include>
						<onfocus>SetProperty(MusicOSD_Controls,$LOCALIZE[31562],musicosd)</onfocus>
						<onclick>PlayerControl(Forward)</onclick>
						<ondown>8</ondown>
						<onup>8</onup>
					</control>
					<control type="button" id="4">
						<include content="Icon_Button">
							<param name="description" value="Next"/>
							<param name="icon" value="Forward"/>
						</include>
						<onfocus>SetProperty(MusicOSD_Controls,$LOCALIZE[209],musicosd)</onfocus>
						<onclick>PlayerControl(Next)</onclick>
						<ondown>9</ondown>
						<onup>9</onup>
					</control>
				</control>

				<control type="grouplist" id="9004">
					<height>60</height>
					<bottom>0</bottom>
					<orientation>horizontal</orientation>
					<align>left</align>
					<itemgap>0</itemgap>
					<control type="button" id="10">
						<include content="Icon_Button">
							<param name="description" value="Rating"/>
							<param name="icon" value="Bookmarks"/>
						</include>
						<onfocus>SetProperty(MusicOSD_Controls,$LOCALIZE[31563],musicosd)</onfocus>
						<onclick>Dialog.Close(all, true)</onclick>
						<onclick>SetRating</onclick>
						<ondown>3</ondown>
						<onup>3</onup>
					</control>
					<control type="button" id="5">
						<include content="Icon_Button">
							<param name="description" value="Playlist"/>
							<param name="icon" value="Album"/>
						</include>
						<onfocus>SetProperty(MusicOSD_Controls,$LOCALIZE[31560],musicosd)</onfocus>
						<onclick>Dialog.Close(all, true)</onclick>
						<onclick>ActivateWindow(musicplaylist)</onclick>
						<ondown>6</ondown>
						<onup>6</onup>
					</control>
					<control type="button" id="2">
						<include content="Icon_Button">
							<param name="description" value="Stop"/>
							<param name="icon" value="Stop"/>
						</include>
						<onfocus>SetProperty(MusicOSD_Controls,$LOCALIZE[31528],musicosd)</onfocus>
						<onclick>PlayerControl(Stop)</onclick>
						<ondown>1</ondown>
						<onup>1</onup>
					</control>
					<control type="group" id="9005">
						<description>Repeat</description>
						<width>60</width>
						<height>60</height>
						<control type="button" id="8">
							<visible allowhiddenfocus="true">false</visible>
							<onfocus>SetProperty(MusicOSD_Controls,$VAR[Repeat_Button_Label],musicosd)</onfocus>
							<onclick>PlayerControl(Repeat)</onclick>
							<onclick>SetProperty(MusicOSD_Controls,$VAR[Repeat_Button_Label],musicosd)</onclick>
							<ondown>7</ondown>
							<onup>7</onup>
							<onleft>2</onleft>
							<onright>9</onright>
						</control>
						<control type="image">
							<texture colordiffuse="$VAR[Light_Color]">$VAR[Repeat_Button_Texture]</texture>
						</control>
					</control>
					<control type="togglebutton" id="9">
						<description>Random</description>
						<width>60</width>
						<height>60</height>
						<texturefocus colordiffuse="$VAR[Light_Color]">osd/icon_Random_focused.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_Random_unfocused.png</texturenofocus>
						<usealttexture>!Playlist.IsRandom</usealttexture>
						<alttexturefocus colordiffuse="$VAR[Light_Color]">osd/icon_NotRandom_focused.png</alttexturefocus>
						<alttexturenofocus colordiffuse="$VAR[Light_Color]">osd/icon_NotRandom_unfocused.png</alttexturenofocus>
						<onfocus>SetProperty(MusicOSD_Controls,$VAR[Random_Button_Label],musicosd)</onfocus>
						<onclick>PlayerControl(Random)</onclick>
						<onclick>SetProperty(MusicOSD_Controls,$VAR[Random_Button_Label],musicosd)</onclick>
						<ondown>4</ondown>
						<onup>4</onup>
					</control>
				</control>
			</control>

		</control>

	</controls>
</window>
