<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicosd -->
	<defaultcontrol always="true">1</defaultcontrol>

	<controls>

		<!-- Player forwarding/rewinding -->
		<control type="group">
			<left>150</left>
			<top>795</top>
			<width>80</width>
			<height>60</height>
			<visible>player.forwarding | player.rewinding | player.paused</visible>
			<animation type="WindowOpen" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
				<effect type="fade" start="0" end="100" time="200"/>
			</animation>
			<animation type="WindowClose" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
				<effect type="fade" start="100" end="0" time="200"/>
			</animation>

			<!-- Background -->
			<control type="image">
				<width>80</width>
				<height>60</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

			<!-- Status -->
			<control type="label">
				<width>80</width>
				<height>60</height>
				<font>Font36</font>
				<align>center</align>
				<label>$VAR[PlayerStatus]</label>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>

			<!-- Pause -->
			<control type="image">
				<left>10</left>
				<width>60</width>
				<height>60</height>
				<texture>osd/OSDPauseNF.png</texture>
				<visible>player.paused</visible>
			</control>

		</control>

		<!-- Player skipping -->
		<control type="group">
			<right>150</right>
			<top>795</top>
			<width>140</width>
			<height>60</height>
			<animation type="WindowOpen" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
				<effect type="fade" start="0" end="100" time="200"/>
			</animation>
			<animation type="WindowClose" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
				<effect type="fade" start="100" end="0" time="200"/>
			</animation>
			<visible>Integer.IsGreater(MusicPlayer.PlaylistLength,0)</visible>

			<!-- Background -->
			<control type="image">
				<width>140</width>
				<height>60</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

			<!-- Status -->
			<control type="label">
				<width>140</width>
				<height>60</height>
				<font>Font27</font>
				<align>center</align>
				<label>[B]$INFO[MusicPlayer.PlaylistPosition,(,/]$INFO[MusicPlayer.PlaylistLength,,)][/B]</label>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>

		</control>

		<!-- Progress -->
		<control type="group">
			<left>150</left>
			<top>870</top>
			<width>1620</width>
			<height>60</height>
			<animation type="WindowOpen" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
				<effect type="fade" start="0" end="100" time="200"/>
			</animation>
			<animation type="WindowClose" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
				<effect type="fade" start="100" end="0" time="200"/>
			</animation>

			<!-- Background -->
			<control type="image">
				<width>1620</width>
				<height>60</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

				<!--  Current position/Time remaining -->
				<control type="label">
					<left>20</left>
					<width>260</width>
					<height>60</height>
					<font>Font27</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
				</control>

				<!--  Progress bar -->
				<control type="progress" id="1">
					<left>280</left>
					<top>20</top>
					<width>920</width>
					<height>20</height>
					<info>Player.Progress</info>
					<texturebg border="2">osd/OSDProgressBack.png</texturebg>
					<lefttexture></lefttexture>
					<midtexture border="2">osd/OSDProgressBar.png</midtexture>
					<righttexture></righttexture>
					<overlaytexture></overlaytexture>
				</control>

				<!--  Cache bar -->
				<control type="progress" id="1">
					<left>280</left>
					<top>20</top>
					<width>920</width>
					<height>20</height>
					<info>Player.ProgressCache</info>
					<texturebg colordiffuse="00ffffff" border="2">osd/OSDProgressBack.png</texturebg>
					<lefttexture></lefttexture>
					<midtexture colordiffuse="66ffffff" border="2">osd/OSDProgressBar.png</midtexture>
					<righttexture></righttexture>
					<overlaytexture></overlaytexture>
				</control>

				<!-- Current Time/End Time -->
				<control type="label">
					<left>1001</left>
					<width>600</width>
					<height>60</height>
					<align>right</align>
					<font>Font27</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[System.Time,$LOCALIZE[142] , / ]$INFO[Player.FinishTime,$LOCALIZE[19081] ]</label>
				</control>

		</control>

		<control type="group">
			<left>150</left>
			<top>945</top>
			<width>1620</width>
			<height>60</height>
			<animation type="WindowOpen" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
				<effect type="fade" start="0" end="100" time="200"/>
			</animation>
			<animation type="WindowClose" condition="!Window.IsActive(seekbar) + !Player.ShowInfo">
				<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
				<effect type="fade" start="100" end="0" time="200"/>
			</animation>

			<!-- Background -->
			<control type="image">
				<width>1620</width>
				<height>60</height>
				<texture border="1">osd/OSDBack.png</texture>
			</control>

			<!-- Controls -->
			<control type="grouplist">
				<width>360</width>
				<height>60</height>
				<itemgap>0</itemgap>
				<onleft>12</onleft>
				<onright>7</onright>
				<onup>Close</onup>
				<ondown>Close</ondown>
				<orientation>horizontal</orientation>

				<!-- Play/Pause -->
				<control type="togglebutton" id="1">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDPauseFO.png</texturefocus>
					<texturenofocus>osd/OSDPauseNF.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>osd/OSDPlayFO.png</alttexturefocus>
					<alttexturenofocus>osd/OSDPlayNF.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<!-- Stop -->
				<control type="button" id="2">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDStopFO.png</texturefocus>
					<texturenofocus>osd/OSDStopNF.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<!-- Skip Back -->
				<control type="button" id="3">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDPrevTrackFO.png</texturefocus>
					<texturenofocus>osd/OSDPrevTrackNF.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<!-- Rewind -->
				<control type="button" id="4">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDRewindFO.png</texturefocus>
					<texturenofocus>osd/OSDRewindNF.png</texturenofocus>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<!-- Fast Forward -->
				<control type="button" id="5">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDForwardFO.png</texturefocus>
					<texturenofocus>osd/OSDForwardNF.png</texturenofocus>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<!-- Next -->
				<control type="button" id="6">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDNextTrackFO.png</texturefocus>
					<texturenofocus>osd/OSDNextTrackNF.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>

			</control>

			<!-- Options -->
			<control type="grouplist">
				<right>0</right>
				<width>420</width>
				<height>60</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>6</onleft>
				<onright>1</onright>
				<onup>Close</onup>
				<ondown>Close</ondown>
				<orientation>horizontal</orientation>

				<!-- Repeat -->
				<control type="button" id="7">
					<width>60</width>
					<height>60</height>
					<texturefocus></texturefocus>
					<texturenofocus></texturenofocus>
					<onclick>PlayerControl(Repeat)</onclick>
				</control>
				<!-- Random -->
				<control type="togglebutton" id="8">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDRandomOffFO.png</texturefocus>
					<texturenofocus>osd/OSDRandomOffNF.png</texturenofocus>
					<alttexturefocus>osd/OSDRandomOnFO.png</alttexturefocus>
					<alttexturenofocus>osd/OSDRandomOnNF.png</alttexturenofocus>
					<onclick>PlayerControl(Random)</onclick>
				</control>
				<!-- Lyrics -->
				<control type="button" id="9">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDLyricsFO.png</texturefocus>
					<texturenofocus>osd/OSDLyricsNF.png</texturenofocus>
					<onclick condition="String.IsEmpty(Skin.String(LyricAddon))">Skin.SetAddon(LyricAddon,xbmc.python.lyrics)</onclick>
					<onclick condition="!String.IsEmpty(Skin.String(LyricAddon))">XBMC.RunScript($INFO[Skin.String(LyricAddon)])</onclick>
				</control>
				<!-- Playlist -->
				<control type="button" id="10">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDPlaylistFO.png</texturefocus>
					<texturenofocus>osd/OSDPlaylistNF.png</texturenofocus>
					<onclick>ActivateWindow(MusicPlaylist)</onclick>
				</control>
				<!-- Visualisation -->
				<control type="button" id="500">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDVizFO.png</texturefocus>
					<texturenofocus>osd/OSDVizNF.png</texturenofocus>
				</control>
				<!-- Visualisation settings -->
				<control type="button" id="11">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDVizSettingsFO.png</texturefocus>
					<texturenofocus>osd/OSDVizSettingsNF.png</texturenofocus>
					<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
				</control>
				<!-- Visualisation presets list -->
				<control type="button" id="12">
					<width>60</width>
					<height>60</height>
					<texturefocus>osd/OSDVizPreFO.png</texturefocus>
					<texturenofocus>osd/OSDVizPreNF.png</texturenofocus>
					<onclick>ActivateWindow(122)</onclick>
				</control>

			</control>

			<!-- Repeat images -->
			<control type="group">
				<right>360</right>
				<width>60</width>
				<height>60</height>

				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture>osd/OSDRepeatNF.png</texture>
					<visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne</visible>
					<visible>!Control.HasFocus(7)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture>osd/OSDRepeatFO.png</texture>
					<visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne</visible>
					<visible>Control.HasFocus(7)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture>osd/OSDRepeatOneNF.png</texture>
					<visible>Playlist.IsRepeatOne</visible>
					<visible>!Control.HasFocus(7)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture>osd/OSDRepeatOneFO.png</texture>
					<visible>Playlist.IsRepeatOne</visible>
					<visible>Control.HasFocus(7)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture>osd/OSDRepeatAllNF.png</texture>
					<visible>Playlist.IsRepeat</visible>
					<visible>!Control.HasFocus(7)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture>osd/OSDRepeatAllFO.png</texture>
					<visible>Playlist.IsRepeat</visible>
					<visible>Control.HasFocus(7)</visible>
				</control>

			</control>

		</control>

	</controls>

</window>
