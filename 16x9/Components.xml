<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Object_Include">
		<nested />
	</include>

	<include name="Hidden_Components">
		<control type="group">
			<visible>false</visible>
			<nested />
		</control>
	</include>

	<include name="Hidden_Control">
		<animation effect="slide" end="-1920,-1080" time="0" condition="true">Conditional</animation>
		<top>-100</top>
		<left>-100</left>
		<width>10</width>
		<height>10</height>
	</include>

	<include name="RunScript_OnClick">
		<param name="addon" default="skin.copacetic.helper" />
		<definition>
			<onclick condition="System.AddonIsEnabled($PARAM[addon])">$PARAM[action]</onclick>
			<onclick condition="!System.AddonIsEnabled($PARAM[addon]) + System.HasAddon($PARAM[addon])">EnableAddon($PARAM[addon])</onclick>
			<onclick condition="!System.HasAddon($PARAM[addon])">InstallAddon($PARAM[addon])</onclick>
		</definition>
	</include>

	<include name="Busy_Spinner">
		<param name="visible" />
		<param name="size" default="90" />
		<param name="color" default="$VAR[Primary_Color]" />
		<definition>
			<control type="image">
				<visible>$PARAM[visible]</visible>
				<include content="Visible_Fade_Animation" />
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>$PARAM[size]</width>
				<height>$PARAM[size]</height>
				<texture colordiffuse="$PARAM[color]">dialogs/busy.png</texture>
				<animation effect="rotate" start="0" end="-360" center="auto" time="1800" loop="true" tween="cubic" easing="out" condition="true">Conditional</animation>
				<nested />
			</control>
		</definition>
	</include>

	<include name="Focus_Setter">
		<param name="id" default="4010" />
		<param name="time" default="0" />
		<param name="target_id" />
		<definition>
			<control type="button" id="$PARAM[id]">
				<visible allowhiddenfocus="true">false</visible>
				<animation effect="slide" end="0,0" time="$PARAM[time]" reversible="false">Focus</animation>
				<onfocus>$PARAM[target_id]</onfocus>
				<onright>$PARAM[target_id]</onright>
				<onleft>$PARAM[target_id]</onleft>
				<ontop>$PARAM[target_id]</ontop>
				<onbottom>$PARAM[target_id]</onbottom>
				<nested />
			</control>
		</definition>
	</include>

	<include name="Light_Theme_Background">
		<param name="visible" default="true" />
		<definition>
			<control type="group">
				<nested />
				<visible>Skin.String(Theme,Light)</visible>
				<visible>$PARAM[visible]</visible>
				<include content="Light_Theme_Background_Fade_Animation" />
				<control type="image">
					<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<height>50%</height>
					<texture colordiffuse="$VAR[Light_Grey_Color]">views/gradient_light-background.png</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="Fanart_Slideshow_Home">
		<control type="list" id="3300">
			<include content="Hidden_Control" />
			<content sortby="random">$VAR[Fanart_Slideshow_Home_Path]</content>
			<autoscroll time="7000">true</autoscroll> <!-- Time to show each image, in milliseconds -->
			<itemlayout />
			<focusedlayout />
		</control>
		<control type="image">
			<animation effect="fade" start="0" end="100" time="360" delay="1800" tween="sine" easing="inout" reversible="true">Visible</animation>
			<texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
		</control>
		<control type="multiimage">
			<include content="Ken_Burns_Effect_Animation" />
			<imagepath colordiffuse="$VAR[Home_Artwork_Diffuse]" background="true">$VAR[Fanart_Slideshow_Home_Texture]</imagepath>
			<aspectratio>scale</aspectratio>
			<timeperimage>7000</timeperimage>
			<fadetime>360</fadetime>
			<randomize>true</randomize>
		</control>
	</include>

	<include name="Fanart_Slideshow_Playlists">
		<control type="list" id="3300">
			<include content="Hidden_Control" />
			<visible>$EXP[Background_Containers]</visible>
			<content sortby="random">$INFO[ListItem.FolderPath]</content>
			<autoscroll time="7000">true</autoscroll> <!-- Time to show each image, in milliseconds -->
			<itemlayout />
			<focusedlayout />
		</control>
		<control type="group">
			<visible>$EXP[Background_Containers]</visible>
			<include content="Visible_Fade_Delayed_Animation" />
			<control type="image">
				<animation effect="fade" start="0" end="100" time="360" delay="1800" tween="sine" easing="inout" reversible="true">Visible</animation>
				<texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
			</control>
			<control type="multiimage">
				<include content="Ken_Burns_Effect_Animation" />
				<imagepath colordiffuse="$VAR[Home_Artwork_Diffuse]" background="true">$INFO[Container(3300).ListItem.Art(fanart)]</imagepath>
				<aspectratio>scale</aspectratio>
				<timeperimage>7000</timeperimage>
				<fadetime>360</fadetime>
				<randomize>true</randomize>
			</control>
		</control>
	</include>

	<include name="Home_Clearlogo">
		<control type="button" id="4300">
			<visible allowhiddenfocus="true">false</visible>
			<onclick>SetFocus(3000)</onclick>
			<onup>SetFocus(3000)</onup>
			<ondown>SetFocus(3000)</ondown>
			<onleft>SetFocus(3000)</onleft>
			<onright>SetFocus(3000)</onright>
			<onback>SetFocus(3000)</onback>
		</control>
		<control type="image">
			<visible>Skin.HasSetting(Home_Screensaver_Clearlogo_Enabled)</visible>
			<visible>[String.IsEmpty(Container(3000).ListItem.Property(background)) | [Skin.HasSetting(Home_Background_Override_Enabled) + Skin.String(Home_Background_Override)]]</visible>
			<visible>Control.HasFocus(4300) + !$EXP[TransparentDialog_IsVisible]</visible>
			<include content="WindowOpenClose_Fade_Delayed_Animation" />
			<left>60</left>
			<centertop>75%</centertop>
			<width>560</width>
			<height>237</height>
			<aspectratio>keep</aspectratio>
			<texture background="true">$INFO[Container(3300).ListItem.Art(clearlogo)]</texture>
			<fadetime>360</fadetime>
		</control>
	</include>

	<include name="Fanart_Slideshow_Global">
		<param name="visible" default="true" />
		<param name="content_source" default="Global" />
		<param name="texture_path" default="$VAR[Fanart_Slideshow_Global_Texture]" />
		<definition>
			<control type="group">
				<visible>!VideoPlayer.IsFullscreen + !Skin.HasSetting(Fanart_Slideshow_Global_Disabled)</visible>
				<visible>$PARAM[visible]</visible>
				<include content="VisibleHidden_Fade_Animation" />
				<control type="list" id="3300">
					<include content="Hidden_Control" />
					<include content="Fanart_Slideshow_$PARAM[content_source]_Path" />
					<autoscroll time="7000">true</autoscroll>
					<itemlayout />
					<focusedlayout />
				</control>
				<control type="videowindow">
					<include content="Hidden_Control" />
				</control>
				<include content="Fanart_Slideshow_Backing" condition="Skin.String(Theme,Light)">
					<param name="visible" value="Integer.IsGreater(Container(3300).NumItems,0)" />
				</include>
				<include content="Fanart_Slideshow_Multiart" condition="$EXP[Settings_IsVisible] + !Skin.HasSetting(Fanart_Slideshow_Global_Disabled)">
					<param name="colordiffuse" value="$VAR[Dialogs_Artwork_Diffuse]" />
					<param name="texture_path" value="$PARAM[texture_path]" />
					<param name="fadetime" value="0" />
				</include>
				<include content="Fanart_Slideshow_Multiart">
					<param name="colordiffuse" value="$VAR[Dialogs_Artwork_Diffuse]" />
					<param name="texture_path" value="$PARAM[texture_path]" />
					<param name="fadetime" value="360" />
				</include>
			</control>
		</definition>
	</include>

</includes>