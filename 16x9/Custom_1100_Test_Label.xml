<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1100">
	<zorder>100</zorder>
	<allowoverlay>no</allowoverlay>
	<visible>false</visible>
	<animation effect="fade" start="100" end="0" time="360">WindowClose</animation>
	<controls>
		<control type="group">
			<width>360</width>
			<height>360</height>
			<centerleft>50%</centerleft>
			<control type="image">
				<texture colordiffuse="$VAR[AccentColor]">views/white_100.png</texture>
			</control>
			<control type="label">
				<top>0</top>
				<height>60</height>
				<font>body</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.Artist]</label>
			</control>
			<control type="label">
				<top>60</top>
				<height>60</height>
				<font>body</font>
				<textcolor>white</textcolor>
				<label>$INFO[ListItem.AlbumArtist]</label>
			</control>
			<control type="label">
				<top>120</top>
				<height>60</height>
				<font>body</font>
				<textcolor>white</textcolor>
				<label>$INFO[MusicPlayer.Artist]</label>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<top>180</top>
				<height>60</height>
				<font>body</font>
				<textcolor>white</textcolor>
				<label>$INFO[MusicPlayer.Property(Artist_Sortname)]</label>
			</control>
		</control>
	</controls>
</window>
