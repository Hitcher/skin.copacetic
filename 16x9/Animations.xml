<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!-- Main -->
	<include name="My_Window_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="inout" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="inout" reversible="true">Hidden</animation>
	</include>

	<include name="Dialog_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="true" condition="!Window.IsVisible(1120)">WindowOpen</animation>
		<animation effect="fade" start="0" end="100" delay="360" time="0" tween="sine" easing="inout" reversible="false" condition="Window.IsVisible(1120)">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="inout" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="inout" reversible="true">Hidden</animation>
	</include>
	<include name="Delayed_Dialog_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="inout" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="inout" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="inout" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="inout" reversible="true">Hidden</animation>
	</include>

	<include name="Viewtype_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="inout"  reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<include name="Artwork_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<include name="Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="inout" reversible="false">Hidden</animation>
	</include>
	<include name="Delayed_Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="540" tween="sine" easing="inout" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<include name="Delayed_Content_Fade_And_Slide_Animation">
		<animation type="Visible" reversible="true">
  		<effect type="fade" start="0" end="100" time="360" delay="540" tween="sine" easing="inout"/>
			<effect type="slide" start="0,60" end="0,0" time="135" delay="540" tween="cubic" easing="in"/>
		</animation>
	</include>

	<include name="Long_Delayed_Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="900" tween="sine" easing="inout" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>



	<!-- Other scenarios-->
	<include name="Secondary_List_Scroll_Animation">
		<animation effect="slide" start="0" end="0,-1080" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + [[$EXP[ListView_Display_IsThumbnails] + !Container.Content(artists)] | $EXP[BillboardView_IsVisible] | $EXP[ShowcaseView_IsVisible]]">Conditional</animation>
		<animation effect="slide" start="0" end="-720,0" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + $EXP[ListView_Display_IsThumbnails] + Container.Content(artists)">Conditional</animation>
		<animation effect="slide" start="0" end="-1920,0" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + $EXP[ListView_Display_IsBackground]">Conditional</animation>
		<animation effect="slide" start="0" end="0,-720" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + $EXP[StripView_Display_IsPosters]">Conditional</animation>
		<animation effect="slide" start="0" end="0,-630" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + [$EXP[StripView_Display_IsFanart] | $EXP[StripView_Display_IsSquare]]">Conditional</animation>
		<animation effect="fade" start="100" end="0" delay="360" time="30" reversible="false" tween="sine" easing="inout" condition="Control.HasFocus(4501)">Conditional</animation>
	</include>

	<include name="SettingsCategory_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="inout" reversible="true" condition="!String.IsEqual(Window(home).Property(SettingsCategory_Switcher),true)">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="inout" reversible="true" condition="!Window.Next(interfacesettings) + !Window.Next(mediasettings) + !Window.Next(playersettings) + !Window.Next(systemsettings) + !Window.Next(servicesettings) + !Window.Next(gamesettings) + !Window.Next(pvrsettings) + Window.Next(profiles) + Window.Next(systeminfo) + !Window.Next(skinsettings)">WindowClose</animation>
	</include>

	<include name="Options_Menu_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="360"  tween="sine" easing="inout" reversible="true" condition="!$EXP[TransparentDialog_IsVisible] | [$EXP[Background_IsFanart] + $EXP[PanelDialog_IsVisible]]">Hidden</animation>
	</include>

	<include name="Multiart_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="720" delay="1440" tween="sine" easing="inout" reversible="false" condition="!$EXP[ContentSwitching]">Visible</animation>
	</include>

	<include name="Music_Player_Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="540" tween="sine" easing="inout" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="inout" reversible="true">Hidden</animation>
	</include>

	<include name="Notification_Dialog_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="inout" reversible="false">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="540" tween="sine" easing="inout" reversible="false">WindowClose</animation>
	</include>

	<!-- Content fade on MusicPlayer labels when Notification diaalogs visible -->
	<include name="Notification_Label_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="inout" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" reversible="false">Hidden</animation>
	</include>

	<include name="Focus_Zoom_Animation" reversible="true">
		<animation effect="zoom" center="auto" start="103" end="100" time="270" tween="back" easing="in" condition="$EXP[GridView_IsVisible]" reversible="false">Focus</animation>
	</include>

	<include name="Scrollbar_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout">VisibleChange</animation>
	</include>

	<include name="Home_Scrollbar_Fade_Animation_Main">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="3840" tween="sine" easing="inout" reversible="true">Hidden</animation>
	</include>

	<include name="Home_Scrollbar_Fade_Animation_Sub">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="2160" tween="sine" easing="inout" reversible="true">Hidden</animation>
	</include>

	<include name="Video_Breadcrumb_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="inout" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="inout" reversible="false">Hidden</animation>
	</include>

</includes>
