<!--OTHER ANIMATIONS-->
	<include name="ScrollBarAnimation">
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" condition="![Container.Scrolling | Control.HasFocus(60)]">Conditional</animation>
