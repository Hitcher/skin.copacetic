<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!--Switching between Views-->
	<include name="ViewSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" delay="380">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Containers-->
	<include name="ContainerSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" delay="380">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Containers after 380 Delay-->
	<include name="DelayedContainerSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" delay="760">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Displays-->
	<include name="DisplaySwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" delay="380">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Content-->
	<include name="ContentSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Content after 380 Delay-->
	<include name="DelayedContentSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out" delay="380">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>


<!--Dialogs fade in/out-->
<include name="MyWindowFadeAnimation">
	<animation effect="fade" start="0" end="100" time="380" delay="380" tween="sine" easing="out" reversible="true">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="380" tween="sine" easing="out" reversible="true">WindowClose</animation>
</include>

<include name="DialogWindowFadeAnimation">
	<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out" reversible="true">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="380" tween="sine" easing="out" reversible="true">WindowClose</animation>
</include>

<include name="DialogBusyFadeAnimation">
	<animation effect="fade" start="0" end="100" time="380" delay="180" tween="sine" easing="out" reversible="true">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="380" tween="sine" easing="out" reversible="true">WindowClose</animation>
</include>

<!--Delay for progress bar when switching between container types-->
<include name="ContainerSwitchingProgressBarAnimation">
	<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out" delay="1080">Visible</animation>
</include>

<!--Slideshow crossfade animation-->
<include name="HomeSlideShowCrossFadeAnimation">
	<animation effect="fade" start="0" end="100" time="900" tween="sine" easing="out" reversible="true">Visible</animation>
	<animation effect="fade" start="100" end="0" time="900" tween="sine" easing="out" reversible="true">Hidden</animation>
</include>

<!--Dialogs fade in/out where dialog is part of another window-->
	<include name="OptionsMenuFadeAnimation">
		<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="380" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

<!--Content fade in/out where needs to be hidden instantly-->
	<include name="ContentFadeAnimation">
		<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="ScrollBarAnimation">
		<animation effect="fade" start="100" end="0" time="380" tween="sine" easing="out" condition="![Container.Scrolling | Control.HasFocus(60)]">Conditional</animation>
	</include>

	<include name="ProgressBarFadeAnimation" reversible="false">
		<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out" delay="380">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<include name="ProgressBarGradientBackingAnimation" reversible="false">
		<animation effect="fade" start="0" end="100" time="380" tween="sine" easing="out" delay="720">Focus</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>



