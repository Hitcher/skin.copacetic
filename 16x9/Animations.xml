<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!--Window fade in/out-->
	<include name="MyWindowFadeAnimation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="TransparentDialogWindowFadeAnimation">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="ContextDialogWindowFadeAnimation">
		<animation effect="fade" start="0" end="100" time="180" delay="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" delay="720" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<!--Default view transition fade-->
	<include name="View_Transition_Fade_Animation_No_Delay">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out" reversible="false" condition="!$EXP[ContentSwitching]">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<include name="View_Transition_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="180" delay="360" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
		<animation effect="fade" start="0" end="100" time="180" delay="360" tween="sine" easing="out" reversible="false">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0">WindowClose</animation>
	</include>

	<!--Delayed content fade when view loads or transitions-->
	<include name="View_Transition_Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="630" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<!--Delayed content fade when content changes-->
	<include name="Content_Transition_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="Content_Grid_Transition_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<!--Content fade where needs to be hidden instantly on menu loads-->
	<include name="Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="out" reversible="false">Hidden</animation>
	</include>

	<!--Open/Close animation for notification dialog windows-->
	<include name="Notification_Dialog_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="out" condition="Player.HasAudio" reversible="false">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" condition="Player.HasAudio" reversible="false">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" condition="!Player.HasAudio" reversible="false">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" condition="!Player.HasAudio" reversible="false">WindowClose</animation>
	</include>

	<!--MusicPlayer Visible animation-->
	<include name="Notification_Widget_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="out" reversible="true">Visible</animation>
	</include>

	<!--Transition on Notification dialogs between windows-->
	<include name="Notification_Window_Transition_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="Notification_View_Transition_Animation">
		<animation effect="fade" start="0" end="100" time="180" delay="360">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Content fade on MusicPlayer when Notification diaalogs visible-->
	<include name="Notification_Label_Switching_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" reversible="false">Hidden</animation>
	</include>


	<!--GridView Top Border-->
	<include name="Custom_View_Transition_Animation">
		<animation effect="fade" start="0" end="100" time="180">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0">WindowClose</animation>
	</include>

	<include name="Custom_Window_Transition_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>







	<!--Switching between Views-->
	<include name="ViewSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out" delay="360">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Views after 380 Delay-->
	<include name="DelayedViewSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" delay="720">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Displays-->
	<include name="DisplaySwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out" delay="360">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Displays after 380 Delay-->
	<include name="DelayedDisplaySwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" delay="720">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Containers-->
	<include name="ContainerSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" delay="360">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Containers (in same view) after 380 Delay-->
	<include name="DelayedContainerSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" delay="720">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Content-->
	<include name="ContentSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between Content after 380 Delay-->
	<include name="DelayedContentSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" delay="360">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between options in View Menu-->
	<include name="OptionsMenuSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

	<!--Switching between options in View Menu after 380 delay-->
	<include name="DelayedOptionsMenuSwitchingAnimation">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out" delay="360">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>

<!--WINDOW ANIMATIONS-->

<!--Ken Burns Effect-->
<include name="KenBurnsEffectAnimation">
	<animation type="Conditional" pulse="true" condition="true">
		<effect type="zoom" center="0,0" end="110" time="14000" tween="sine" easing="out" />
		<effect type="slide" end="-120,-90" time="14000" tween="sine" easing="out" />
		<effect type="zoom" end="96" time="21000" delay="14000" tween="sine" easing="out" />
		<effect type="slide" end="120,90" time="21000" delay="14000" tween="sine" easing="out" />
		<effect type="zoom" end="103" time="7000" delay="35000" tween="sine" easing="out" />
		<effect type="slide" end="-15,-30" time="7000" delay="35000" tween="sine" easing="out" />
	</animation>
</include>

<include name="OpaqueDialogWindowFadeAnimation">
	<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
