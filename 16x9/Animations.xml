<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!--Window fade in/out-->
	<include name="My_Window_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<!--Dialogs fade in/out-->
	<include name="Dialog_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true" condition="!Window.IsVisible(1120)">WindowOpen</animation>
		<animation effect="fade" start="0" end="100" delay="360" time="0" tween="sine" easing="out" reversible="false" condition="Window.IsVisible(1120)">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="Options_Menu_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="360"  tween="sine" easing="out" reversible="true" condition="!$EXP[TransparentDialog_IsVisible] | [$EXP[Background_IsFanart] + $EXP[PanelDialog_IsVisible]]">Hidden</animation>
	</include>

	<include name="Delayed_Dialog_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="Transparent_Dialog_Over_Background_Fanart_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">WindowClose</animation>
	</include>


	<!--OSD fade in/out-->
	<include name="OSD_Fade_Animation">
		<animation effect="fade" start="0" end="100" delay="360" time="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">WindowClose</animation>
	</include>

	<include name="OSD_Delayed_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="Delayed_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<!--Switching between Views-->
	<include name="Viewtype_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out"  reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>
	<!--Artwork fade in/out-->
	<include name="Artwork_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>
	<include name="ViewtypeSwitching_Cover_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="0">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="false">Hidden</animation>
	</include>
	<include name="ContainerSwitching_Cover_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="0">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="false">Hidden</animation>
	</include>
	<include name="GridView_TopBorder_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" condition="!Window.Next(home)">Hidden</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="false" condition="Window.Next(home)">Hidden</animation>
	</include>
	<include name="GridView_Dropshadow_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="180" delay="180" tween="sine" easing="out" reversible="true">VisibleChange</animation>
	</include>

	<!--Delayed Detail fade in after Artwork/instant fade out-->
	<include name="Delayed_Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="540" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>
	<!--Content fade with no delay-->
	<include name="Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="out" reversible="false">Hidden</animation>
	</include>

	<include name="Secondary_List_Fade_Animation">
		<animation effect="fade" start="100" end="0" time="0" delay="720">Hidden</animation>
		<animation effect="fade" start="0" end="100" time="360" delay="360">Visible</animation>
	</include>

	<include name="Visualization_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="out" reversible="true">Visible</animation>
	</include>

	<!--VIDEOPLAYER-->
	<include name="Video_Player_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="true">WindowClose</animation>
	</include>

	<!--MUSIC PLAYER-->
	<include name="Music_Player_Dialog_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="360" tween="sine" easing="out" reversible="false">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" reversible="false">WindowClose</animation>
	</include>

	<include name="Music_Player_Artwork_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="false">Hidden</animation>
	</include>

	<include name="Music_Player_Content_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="540" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="180" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<!--NOTIFICATIONS-->
	<include name="Notification_Dialog_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="out" reversible="false">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="540" tween="sine" easing="out" reversible="false">WindowClose</animation>
	</include>

	<!--Content fade on MusicPlayer labels when Notification diaalogs visible-->
	<include name="Notification_Label_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="360" delay="180" tween="sine" easing="out" reversible="false">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" reversible="false">Hidden</animation>
	</include>

	<!--OTHER-->
	<include name="Focus_Zoom_Animation" reversible="true">
		<animation effect="zoom" center="auto" start="103" end="100" time="270" tween="back" easing="in" condition="$EXP[GridView_IsVisible]" reversible="false">Focus</animation>
	</include>

	<include name="Secondary_List_Scroll_Animation">
		<animation effect="slide" start="0" end="0,-1080" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + [[$EXP[ListView_Display_IsThumbnails] + !Container.Content(artists)] | $EXP[BillboardView_IsVisible] | $EXP[ShowcaseView_IsVisible]]">Conditional</animation>
		<animation effect="slide" start="0" end="-720,0" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + $EXP[ListView_Display_IsThumbnails] + Container.Content(artists)">Conditional</animation>
		<animation effect="slide" start="0" end="-1920,0" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + $EXP[ListView_Display_IsBackground]">Conditional</animation>
		<animation effect="slide" start="0" end="0,-720" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + $EXP[StripView_Display_IsPosters]">Conditional</animation>
		<animation effect="slide" start="0" end="0,-630" reversible="true" time="360" tween="sine" easing="inout" condition="Control.HasFocus(4501) + [$EXP[StripView_Display_IsFanart] | $EXP[StripView_Display_IsSquare]]">Conditional</animation>
		<animation effect="fade" start="100" end="0" delay="360" time="90" reversible="false" tween="sine" easing="inout" condition="Control.HasFocus(4501)">Conditional</animation>
	</include>

	<include name="Scrollbar_Fade_Animation">
		<animation effect="fade" start="100" end="0" time="360" tween="sine" easing="out" condition="![Container.Scrolling | Control.HasFocus(60)]">Conditional</animation>
	</include>

	<include name="Home_Scrollbar_Fade_Animation_Main">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="3840" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="Home_Scrollbar_Fade_Animation_Sub">
		<animation effect="fade" start="0" end="100" time="360" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="360" delay="2160" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>

	<include name="Ken_Burns_Effect_Animation">
		<animation type="Conditional" pulse="true" condition="true">
			<effect type="zoom" center="0,0" end="110" time="14000" tween="sine" easing="out" />
			<effect type="slide" end="-120,-90" time="14000" tween="sine" easing="out" />
			<effect type="zoom" end="96" time="21000" delay="14000" tween="sine" easing="out" />
			<effect type="slide" end="120,90" time="21000" delay="14000" tween="sine" easing="out" />
			<effect type="zoom" end="103" time="7000" delay="35000" tween="sine" easing="out" />
			<effect type="slide" end="-15,-30" time="7000" delay="35000" tween="sine" easing="out" />
		</animation>
	</include>









<!--OTHER ANIMATIONS-->
<!--Dialogs fade in/out where dialog is part of another window-->
	<include name="QuickContent_Fade_Animation">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out" reversible="true">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0" tween="sine" easing="out" reversible="true">Hidden</animation>
	</include>
	<include name="WidgetLoadDelayAnimation">
		<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="out" delay="360">Visible</animation>
		<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
	</include>


	<!-- not yet processed-->

	<include name="HomeClockAnimation">
		<animation type="WindowOpen" condition="Window.Previous(startup)">
			<effect type="slide" start="0,-600" end="0,0" time="1600" tween="cubic" easing="out"/>
			<effect type="fade" start="0" end="100" delay="800" time="600" />
		</animation>
	</include>
	<include name="DialogToastAnimation">
		<animation effect="slide" start="0,-150" end="0,0" time="400" tween="cubic" easing="out">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
	</include>
	<include name="MediaInfoAnimation">
		<animation type="Visible" reversible="true">
			<effect type="fade" start="0" end="100" time="400" tween="cubic" easing="out"/>
		</animation>
	</include>
	<include name="MediaInfoDiffuseAnimation">
		<control type="image">
			<texture colordiffuse="$VAR[Secondary_Color]">views/white_70.png</texture>
			<visible>System.IdleTime(3) + !String.Contains(ListItem.Icon,Default) + !Container.Content(files) + !Container.Content(genres) + !Container.Content(years) + !Container.Content(actors) + !Container.Content(playlists) + !Container.Content(plugins) + !Container.Content(studios) + !Container.Content(directors) + !Container.Content(sets) + !Container.Content(tags) + !Control.HasFocus(60) + !Control.HasFocus(3000) + !Window.IsVisible(yesnodialog) + !Window.IsVisible(progressdialog) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(contextmenu) + !Window.IsVisible(numericinput) + !Window.IsVisible(shutdownmenu) + !Window.IsVisible(playercontrols) + !Window.IsVisible(songinformation) + !Window.IsVisible(busydialog) + !Window.IsVisible(addoninformation) + !Window.IsVisible(textviewer) + !Window.IsVisible(selectdialog) + !Window.IsVisible(musicinformation) + !Window.IsVisible(okdialog)</visible>
			<animation type="Visible" reversible="true">
				<effect type="fade" start="0" end="100" time="400" tween="cubic" easing="out"/>
				<effect type="zoom" start="0,0" end="1920,1080" center="auto" time="0"/>
			</animation>
		</control>
	</include>
	<include name="MediaInfoHideAnimation">
		<animation type="Conditional" condition="Window.IsVisible(movieinformation) | Window.IsVisible(musicinformation) | Window.IsVisible(songinformation) | Window.IsVisible(addoninformation)" reversible="true">
			<effect type="fade" start="100" end="0" time="200" tween="cubic" easing="out"/>
		</animation>
	</include>
	<include name="DialogAnimation">
		<animation type="WindowOpen" reversible="false">
			<effect type="fade" start="0" end="100" time="200" />
			<effect type="slide" start="-500,0" end="0,0" time="400" tween="cubic" easing="out"/>
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="0" />
		</animation>
	</include>
	<include name="HomeListAnimation">
		<animation type="WindowOpen" condition="Window.Previous(startup)">
			<effect type="slide" start="0,600" end="0,0" time="1600" tween="cubic" easing="out"/>
			<effect type="fade" start="0" end="100" time="1000" />
		</animation>
		<animation condition="Window.IsVisible(1101)" reversible="false" type="Conditional">
			<effect easing="out" end="0,18" start="0,0" time="60" tween="sine" type="slide" />
			<effect delay="80" easing="out" end="0,-18" start="0,0" time="120" tween="sine" type="slide" />
		</animation>
		<animation condition="Window.IsVisible(1102)" reversible="false" type="Conditional">
			<effect easing="out" end="0,-18" start="0,0" time="60" tween="sine" type="slide" />
		</animation>
	</include>

</includes>
