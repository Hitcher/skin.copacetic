<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="ListView_Icon">
		<param name="visible" default="true"/>
		<param name="art_icon" default="List_Thumbnail"/>
		<param name="art_diffuse" default="false"/>
		<param name="aspectratio" default="scale"/>
		<param name="fallback" default="fallback/fallback.png"/>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<include content="Icon_Art_Focused">
					<param name="texture" value="$VAR[$PARAM[art_icon](0)Content]"/>
					<param name="art_diffuse" value="$PARAM[art_diffuse]"/>
					<param name="multiart_fade" value="false"/>
					<param name="aspectratio" value="$PARAM[aspectratio]"/>
					<param name="fallback" value="$PARAM[fallback]"/>
					<param name="fadetime" value="360"/>
				</include>
				<nested/>
			</control>
		</definition>
	</include>

</includes>
