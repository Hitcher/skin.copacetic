					<animation effect="slide" end="0,630" time="0" reversible="false" condition="Container($PARAM[categoryid]).Position(7)">Conditional</animation>
					<animation effect="slide" end="0,720" time="0" reversible="false" condition="Container($PARAM[categoryid]).Position(8)">Conditional</animation>
					<animation effect="slide" end="0,810" time="0" reversible="false" condition="Container($PARAM[categoryid]).Position(9)">Conditional</animation>
					<animation effect="slide" end="0,900" time="0" reversible="false" condition="Container($PARAM[categoryid]).Position(10)">Conditional</animation>
					<animation effect="slide" end="0,980" time="0" reversible="false" condition="Container($PARAM[categoryid]).Position(11)">Conditional</animation>
