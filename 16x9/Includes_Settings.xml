<includes>

	<!-- settingdialog -->
	<include name="DialogGrouplist">
		<width>1200</width>
		<centerleft>50%</centerleft>
		<centertop>50%</centertop>
		<height>540</height>
		<onright condition="Window.IsVisible(smartplaylistrule)">20</onright>
		<onright condition="!Window.IsVisible(smartplaylistrule)">9000</onright>
		<onleft>noop</onleft>
		<itemgap>0</itemgap>
		<align>center</align>
	</include>

	<include name="Grouplist_Scrollbar">
		<param name="id" default="60"/>
		<param name="visible" default="false"/>
		<param name="left" default="594"/>
		<param name="height" default="630"/>
		<definition>
			<control type="scrollbar" id="$PARAM[id]">
				<visible>$PARAM[visible]</visible>
				<left>$PARAM[left]</left>
				<width>6</width>
				<centertop>50%</centertop>
				<height>$PARAM[height]</height>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<texturesliderbackground></texturesliderbackground>
				<texturesliderbar colordiffuse="$VAR[Scroll_Focused_Color]">views/white_100.png</texturesliderbar>
				<texturesliderbarfocus></texturesliderbarfocus>
				<textureslidernib></textureslidernib>
				<textureslidernibfocus></textureslidernibfocus>
			</control>
		</definition>
	</include>

	<include name="skinnsettings_Default_Button">
		<radiowidth/>
		<radioheight/>
		<textureradioonfocus/>
		<textureradioofffocus/>
		<textureradioonnofocus/>
		<textureradiooffnofocus/>
		<textureradioondisabled/>
		<textureradiooffdisabled/>
	</include>

	<include name="Widget_Settings_Content">
		<param name="widget_position"/>
		<param name="previous_widget_position"/>
		<definition>
			<control type="group" id="11$PARAM[widget_position]">
				<height>180</height>
				<width>100%</width>
				<visible>ControlGroup(9).HasFocus(11)</visible>
				<control type="label">
					<top>0</top>
					<height>90</height>
					<description>Widget Label</description>
					<label>$LOCALIZE[31222] $PARAM[widget_position]</label>
					<height>90</height>
					<textoffsetx>20</textoffsetx>
					<font>Default_Settings_Header</font>
					<textcolor>$VAR[Unfocused_Color]</textcolor>
				</control>
				<control type="button" id="11$PARAM[widget_position]0">
					<top>90</top>
					<description>Content Button</description>
					<label>$LOCALIZE[31223]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_Content]</label2>
					<onclick>Skin.SelectBool(424, 1223|Widget$PARAM[widget_position]_Content_Disabled,  31226|Widget$PARAM[widget_position]_Content_InProgress, 31227|Widget$PARAM[widget_position]_Content_NextUp, 31228|Widget$PARAM[widget_position]_Content_LatestMovies, 31229|Widget$PARAM[widget_position]_Content_LatestTVShows, 31230|Widget$PARAM[widget_position]_Content_LatestAlbums, 31231|Widget$PARAM[widget_position]_Content_RecentAlbums, 1036|Widget$PARAM[widget_position]_Content_Favourites)</onclick>
					<visible>ControlGroup(9).HasFocus(11)</visible>
					<onup>11$PARAM[previous_widget_position]5</onup>
					<ondown>11$PARAM[widget_position]1</ondown>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">Skin.Reset(Widget$PARAM[widget_position]_View_Billboard)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">Skin.SetBool(Widget$PARAM[widget_position]_View_Strip)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">Skin.Reset(Widget$PARAM[widget_position]_Display_Fanart)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">Skin.Reset(Widget$PARAM[widget_position]_Display_Posters)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)">Skin.SetBool(Widget$PARAM[widget_position]_Display_Square)</onunfocus>
					<onback>9</onback>
					<onleft>9</onleft>
					<onright>9000</onright>
					<include content="skinnsettings_Default_Button"/>
				</control>
			</control>
		</definition>
	</include>

	<include name="Widget_Settings_View">
		<param name="widget_position"/>
		<definition>
			<control type="group" id="11$PARAM[widget_position]1">
				<height>90</height>
				<width>100%</width>
				<visible>ControlGroup(9).HasFocus(11)</visible>
				<control type="button" id="11$PARAM[widget_position]2">
					<description>Widget View Button - Default</description>
					<label>$LOCALIZE[31224]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_View]</label2>
					<onclick>Skin.SelectBool(424, 31202|Widget$PARAM[widget_position]_View_Billboard, 31203|Widget$PARAM[widget_position]_View_Showcase, 31204|Widget$PARAM[widget_position]_View_Strip, 31205|Widget$PARAM[widget_position]_View_Grid)</onclick>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard)">Skin.Reset(Widget$PARAM[widget_position]_Display_Posters)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard)">Skin.Reset(Widget$PARAM[widget_position]_Display_Square)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard)">Skin.SetBool(Widget$PARAM[widget_position]_Display_Fanart)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase) + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart)">Skin.SetBool(Widget$PARAM[widget_position]_Display_Square)</onunfocus>
					<onunfocus condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase) + Skin.HasSetting(Widget$PARAM[widget_position]_Display_Fanart)">Skin.Reset(Widget$PARAM[widget_position]_Display_Fanart)</onunfocus>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]0</onup>
					<ondown>11$PARAM[widget_position]5</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<visible>!Skin.HasSetting(Widget$PARAM[widget_position]_Content_Disabled) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)</visible>
					<include content="skinnsettings_Default_Button"/>
				</control>
				<control type="button" id="11$PARAM[widget_position]3">
					<description>Widget View Button - Square views only</description>
					<label>$LOCALIZE[31224]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_View]</label2>
					<onclick>Skin.SelectBool(424, 31203|Widget$PARAM[widget_position]_View_Showcase, 31204|Widget$PARAM[widget_position]_View_Strip, 31205|Widget$PARAM[widget_position]_View_Grid)</onclick>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]0</onup>
					<ondown>11$PARAM[widget_position]5</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<visible>Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)</visible>
					<include content="skinnsettings_Default_Button"/>
				</control>
				<control type="button" id="11$PARAM[widget_position]4">
					<description>Widget View Button - Disabled</description>
					<label>$LOCALIZE[31224]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_View]</label2>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]0</onup>
					<ondown>11$PARAM[widget_position]5</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<textcolor>$VAR[Settings_Disabled_Unfocused_Color]</textcolor>
					<focusedcolor>$VAR[Settings_Disabled_Focused_Color]</focusedcolor>
					<visible>Skin.HasSetting(Widget$PARAM[widget_position]_Content_Disabled)</visible>
					<include content="skinnsettings_Default_Button"/>
				</control>
			</control>
		</definition>
	</include>

	<include name="Widget_Settings_Display">
		<param name="widget_position"/>
		<param name="next_widget_position"/>
		<definition>
			<control type="group" id="11$PARAM[widget_position]5">
				<height>90</height>
				<width>100%</width>
				<visible>ControlGroup(9).HasFocus(11)</visible>
				<control type="button" id="11$PARAM[widget_position]6">
					<description>Widget Display Button - Disabled or Set as Square</description>
					<label>$LOCALIZE[131]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_Display]</label2>
					<visible>Skin.HasSetting(Widget$PARAM[widget_position]_Content_Disabled) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) | Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)</visible>
					<textcolor>$VAR[Settings_Disabled_Unfocused_Color]</textcolor>
					<focusedcolor>$VAR[Settings_Disabled_Focused_Color]</focusedcolor>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]1</onup>
					<ondown>11$PARAM[next_widget_position]0</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<include content="skinnsettings_Default_Button"/>
				</control>
				<control type="button" id="11$PARAM[widget_position]7">
					<description>Widget Display Button - Billboard view selected</description>
					<label>$LOCALIZE[131]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_Display]</label2>
					<visible>Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_Disabled) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)</visible>
					<textcolor>$VAR[Settings_Disabled_Unfocused_Color]</textcolor>
					<focusedcolor>$VAR[Settings_Disabled_Focused_Color]</focusedcolor>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]1</onup>
					<ondown>11$PARAM[next_widget_position]0</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<include content="skinnsettings_Default_Button"/>
				</control>
				<control type="button" id="11$PARAM[widget_position]8">
					<description>Widget Display Button - Showcase view selected</description>
					<label>$LOCALIZE[131]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_Display]</label2>
					<onclick>Skin.SelectBool(424, 31206|Widget$PARAM[widget_position]_Display_Posters, 31208|Widget$PARAM[widget_position]_Display_Square)</onclick>
					<visible>Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_Disabled) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)</visible>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]1</onup>
					<ondown>11$PARAM[next_widget_position]0</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<include content="skinnsettings_Default_Button"/>
				</control>
				<control type="button" id="11$PARAM[widget_position]9">
					<description>Widget Display Button - Strip view selected</description>
					<label>$LOCALIZE[131]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_Display]</label2>
					<onclick>Skin.SelectBool(424, 31207|Widget$PARAM[widget_position]_Display_Fanart, 31206|Widget$PARAM[widget_position]_Display_Posters, 31208|Widget$PARAM[widget_position]_Display_Square)</onclick>
					<visible>Skin.HasSetting(Widget$PARAM[widget_position]_View_Strip) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_Disabled) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)</visible>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]1</onup>
					<ondown>11$PARAM[next_widget_position]0</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<include content="skinnsettings_Default_Button"/>
				</control>
				<control type="button" id="11$PARAM[widget_position]10">
					<description>Widget Display Button - Grid view selected</description>
					<label>$LOCALIZE[131]</label>
					<label2>$VAR[Widget$PARAM[widget_position]_Display]</label2>
					<onclick>Skin.SelectBool(424, 31207|Widget$PARAM[widget_position]_Display_Fanart, 31206|Widget$PARAM[widget_position]_Display_Posters, 31208|Widget$PARAM[widget_position]_Display_Square)</onclick>
					<visible>Skin.HasSetting(Widget$PARAM[widget_position]_View_Grid) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_Disabled) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_LatestAlbums) + !Skin.HasSetting(Widget$PARAM[widget_position]_Content_RecentAlbums)</visible>
					<onback>9</onback>
					<onup>11$PARAM[widget_position]1</onup>
					<ondown>11$PARAM[next_widget_position]0</ondown>
					<onleft>9</onleft>
					<onright>9000</onright>
					<include content="skinnsettings_Default_Button"/>
				</control>
			</control>
		</definition>
	</include>

	<include name="Widget_Settings">
		<include content="Widget_Settings_Content">
			<param name="previous_widget_position" value="$PARAM[previous_widget_position]"/>
