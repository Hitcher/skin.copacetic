<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>5</zorder>
	<include>Notification_Dialog_Fade_Animation</include>
	<controls>

		<!-- Hidden Labels -->
		<control type="label" id="30">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="label" id="31">
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<include content="Shared_Dialog_Layouts">
			<param name="type" value="Notification"/>
			<param name="visible" value="$EXP[Music_Player_IsVisible] | Window.IsVisible(volumebar)"/>
		  <param name="content_visible" value="true"/>
			<param name="label_1" value="$INFO[Control.GetLabel(30)]"/>
			<param name="label_2" value="$INFO[Control.GetLabel(31)]"/>
		</include>

		<include content="Notification_Dialog_Layouts">
			<param name="visible" value="![$EXP[Music_Player_IsVisible] | Window.IsVisible(volumebar)]"/>
			<param name="content_visible" value="true"/>
			<param name="label_1" value="$INFO[Control.GetLabel(30)]"/>
			<param name="label_2" value="$INFO[Control.GetLabel(31)]"/>
		</include>

	</controls>
</window>
