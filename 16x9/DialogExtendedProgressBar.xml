<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- extendedprogressdialog -->
	<controls>
		<control type="group">
			<right>0</right>
			<top>0</top>
			<width>750</width>
			<height>150</height>
			<include>DialogToastAnimation</include>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(fullscreenvideo)">Conditional</animation>
			<!-- Background image -->
			<control type="image">
				<width>750</width>
				<height>150</height>
				<texture colordiffuse="$VAR[BackgroundColor]">views/white_100.png</texture>
			</control>
			<!-- Progress -->
			<control type="progress" id="32">
				<width>750</width>
				<height>150</height>
				<texturebg colordiffuse="$VAR[BackgroundColor]">views/white_100.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!-- Heading -->
			<control type="label" id="30">
				<left>20</left>
				<top>35</top>
				<width>710</width>
				<height>40</height>
				<scroll>true</scroll>
				<font>Light33Upper</font>
				<textcolor>$VAR[TextColor]</textcolor>
			</control>
			<!-- Details -->
			<control type="label" id="31">
				<left>20</left>
				<top>77</top>
				<width>710</width>
				<height>37</height>
				<scroll>true</scroll>
				<font>Thin27</font>
				<textcolor>$VAR[TextColor]</textcolor>
			</control>
		</control>
	</controls>
</window>