<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- home -->
	<backgroundcolor>$VAR[Dark_Color]</backgroundcolor>
	<defaultcontrol always="true">9001</defaultcontrol>
	<onload condition="!Skin.HasSetting(Widget1_View_Billboard) + !Skin.HasSetting(Widget1_View_Showcase) + !Skin.HasSetting(Widget1_View_Strip)">Skin.SetBool(Widget1_View_Strip)</onload>
	<onload condition="!Skin.HasSetting(Widget1_Display_Fanart) + !Skin.HasSetting(Widget1_Display_Posters) + !Skin.HasSetting(Widget1_Display_Square)">Skin.SetBool(Widget1_Display_Fanart)</onload>
	<onload condition="!Skin.HasSetting(Widget2_View_Billboard) + !Skin.HasSetting(Widget2_View_Showcase) + !Skin.HasSetting(Widget2_View_Strip)">Skin.SetBool(Widget2_View_Strip)</onload>
	<onload condition="!Skin.HasSetting(Widget2_Display_Fanart) + !Skin.HasSetting(Widget2_Display_Posters) + !Skin.HasSetting(Widget2_Display_Square)">Skin.SetBool(Widget2_Display_Fanart)</onload>
	<onload condition="!Skin.HasSetting(Widget3_View_Billboard) + !Skin.HasSetting(Widget3_View_Showcase) + !Skin.HasSetting(Widget3_View_Strip)">Skin.SetBool(Widget3_View_Strip)</onload>
	<onload condition="!Skin.HasSetting(Widget3_Display_Fanart) + !Skin.HasSetting(Widget3_Display_Posters) + !Skin.HasSetting(Widget3_Display_Square)">Skin.SetBool(Widget3_Display_Fanart)</onload>
	<onload condition="!Skin.HasSetting(Widget4_View_Billboard) + !Skin.HasSetting(Widget4_View_Showcase) + !Skin.HasSetting(Widget4_View_Strip)">Skin.SetBool(Widget4_View_Strip)</onload>
	<onload condition="!Skin.HasSetting(Widget4_Display_Fanart) + !Skin.HasSetting(Widget4_Display_Posters) + !Skin.HasSetting(Widget4_Display_Square)">Skin.SetBool(Widget4_Display_Fanart)</onload>
	<onunload>ClearProperty(Music_Player_Controls,home)</onunload>
	<include>My_Window_Fade_Animation</include>
	<controls>

		<!--Hidden Focus setter-->
		<control type="button" id="9001">
			<animation effect="slide" end="0,0" time="720" reversible="false">Focus</animation>
			<visible allowhiddenfocus="true">false</visible>
			<onfocus>SetFocus(9000)</onfocus>
		</control>

		<!--On Previous Delay-->
		<control type="group" id="5001">
			<visible>Container(9010).OnPrevious | Container(9020).OnPrevious | Container(9030).OnPrevious | Container(9040).OnPrevious | Container(9050).OnPrevious</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!--On Next Delay-->
		<control type="group" id="5002">
			<visible>Container(9010).OnNext | Container(9020).OnNext | Container(9030).OnNext | Container(9040).OnNext | Container(9050).OnNext</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<control type="group">
			<visible>Control.HasFocus(9001) | Control.HasFocus(9000) | Control.HasFocus(91100)</visible>
			<include>Dialog_Fade_Animation</include>
			<include content="FanartSlideshow"/>
		</control>

		<control type="group">
			<visible>!Control.HasFocus(9001)</visible>
			<include>Content_Fade_Animation</include>

			<control type="group">
				<visible>!Control.HasFocus(91100) + !Window.IsVisible(contextmenu) + ![String.IsEqual(Window(home).Property(HomeWidget),Active) + Window.IsVisible(shutdownmenu)]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Clock">
					<param name="textcolor" value="$VAR[Light_Color]"/>
				</include>
			</control>

			<control type="group">
				<visible>!Window.IsActive(favourites) + !Window.IsVisible(shutdownmenu)</visible>
				<include>Delayed_Content_Fade_Animation</include>

				<include content="Music_Player_Buttons"/>

				<!--Hidden list-->
				<control type="list" id="9000">
					<viewtype label="535">list</viewtype>
					<width>800</width>
					<height>0</height>
					<top>0</top>
					<onup condition="Player.HasAudio">SetFocus(91100,1)</onup>
					<onleft>0</onleft>
					<onright>0</onright>
					<ondown>9010</ondown>
					<orientation>horizontal</orientation>
					<itemlayout width="100"/>
					<focusedlayout width="100"/>
					<content>
						<include>skinshortcuts-mainmenu</include>
					</content>
				</control>

				<!--Dummy Horizontal List-->
				<control type="group">
					<visible>!$EXP[TransparentDialog_IsVisible]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<animation effect="slide" start="0" end="0,660" time="0" condition="true">Conditional</animation>
					<animation effect="slide" start="0" end="0,-660" time="180" tween="sine" easing="out" reversible="false" condition="Control.HasFocus(9001) | Control.HasFocus(9000) | Control.HasFocus(91100)">Conditional</animation>
					<include content="DummyHorizontalList">
						<param name="dummyid" value="9001"/>
						<param name="hiddenid" value="9000"/>
						<param name="focusedtextcolor" value="$VAR[Light_Color]"/>
						<param name="unfocusedtextcolor" value="$VAR[Light_Color]"/>
					</include>
				</control>

			</control>
		</control>

		<include condition="Skin.HasSetting(Widgets_Enabled)" content="Widget_1"/>
		<include condition="Skin.HasSetting(Widgets_Enabled)" content="Widget_2"/>
		<include condition="Skin.HasSetting(Widgets_Enabled)" content="Widget_3"/>
		<include condition="Skin.HasSetting(Widgets_Enabled)" content="Widget_4"/>

		<!--Scrollbar-->
		<control type="group">
			<visible>!Control.HasFocus(91100) + Skin.HasSetting(Widgets_Enabled)</visible>
			<include>Content_Fade_Animation</include>
			<control type="group">
				<visible>!Control.HasFocus(9000)</visible>
				<include>Home_Scrollbar_Fade_Animation_Sub</include>
				<control type="group">
					<visible>!Control.HasFocus(9010)</visible>
					<include>Home_Scrollbar_Fade_Animation_Sub</include>
					<control type="group">
						<visible>!Control.HasFocus(9020)</visible>
						<include>Home_Scrollbar_Fade_Animation_Sub</include>
						<control type="group">
							<visible>!Control.HasFocus(9030)</visible>
							<include>Home_Scrollbar_Fade_Animation_Sub</include>
							<control type="group">
								<visible>!Control.HasFocus(9040)</visible>
								<include>Home_Scrollbar_Fade_Animation_Sub</include>
								<control type="group">
									<visible>!Control.HasFocus(9050)</visible>
									<include>Home_Scrollbar_Fade_Animation_Sub</include>
									<control type="group">
										<visible>!Control.HasFocus(9060)</visible>
										<include>Home_Scrollbar_Fade_Animation_Sub</include>
										<control type="group">
											<visible>!Control.HasFocus(9070)</visible>
											<include>Home_Scrollbar_Fade_Animation_Sub</include>
											<control type="group">
												<visible>!Control.HasFocus(9080)</visible>
												<include>Home_Scrollbar_Fade_Animation_Sub</include>
												<control type="group">
													<visible>!Control.HasFocus(9090)</visible>
													<include>Home_Scrollbar_Fade_Animation_Sub</include>

													<control type="grouplist">
														<right>30</right>
														<width>6</width>
														<height>100%</height>
														<align>center</align>
														<orientation>vertical</orientation>
														<itemgap>0</itemgap>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9000"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9010"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9020"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9030"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9040"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9050"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9060"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9070"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9080"/>
														</include>
														<include content="Home_Scrollbar_Nib">
															<param name="id" value="9090"/>
														</include>
													</control>

												</control>
											</control>
										</control>
									</control>
								</control>
							</control>
						</control>
					</control>
				</control>
			</control>
		</control>

	</controls>
</window>
