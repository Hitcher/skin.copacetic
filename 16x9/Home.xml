<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- home -->
	<backgroundcolor>$VAR[SecondaryColor]</backgroundcolor>
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;levels=0)</onload>
	<include>MyWindowFadeAnimation</include>
	<include>FullscreenDimensions</include>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(favourites)</visible>
			<include>Content_Transition_Fade_Animation</include>
			<control type="image">
				<texture colordiffuse="$VAR[DarkColor]">views/white_100.png</texture>
			</control>
			<include content="FanartSlideshow"/>
			<!-- Main controls -->
			<control type="group">
				<visible>!Window.IsVisible(shutdownmenu)</visible>
				<include>Content_Transition_Fade_Animation</include>
				<include>Clock</include>
				<control type="group">
					<visible>Player.HasAudio</visible>
					<include>Notification_Widget_Animation</include>
					<include content="Notification_Widget">
						<param name="right" value="180"/>
						<param name="width" value="180"/>
						<param name="center_label_visible" value="false"/>
						<param name="left_label_visible" value="true"/>
						<param name="label_width" value="1650"/>
					</include>
				</control>
				<!--Hidden list-->
				<control type="list" id="9000">
					<viewtype label="535">list</viewtype>
					<width>800</width>
					<height>0</height>
					<top>0</top>
					<onleft>0</onleft>
					<onright>0</onright>
					<!--<onup>999</onup>-->
					<orientation>horizontal</orientation>
					<itemlayout width="100"/>
					<focusedlayout width="100"/>
					<content>
						<include>skinshortcuts-mainmenu</include>
					</content>
				</control>
				<!--Dummy Horizontal List-->
				<control type="group">
					<visible>!$EXP[TransparentDialog_IsVisible]</visible>
					<include>Content_Transition_Fade_Animation</include>
					<include content="DummyHorizontalList">
						<param name="dummyid" value="9001"/>
						<param name="hiddenid" value="9000"/>
						<param name="focusedtextcolor" value="$VAR[LightColor]"/>
						<param name="unfocusedtextcolor" value="$VAR[LightColor]"/>
					</include>
				</control>
			</control>
		</control>
	</controls>
</window>
