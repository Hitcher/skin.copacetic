<includes>

	<include name="AlbumInfo_Content_Path">
		<content>musicdb://albums/$INFO[ListItem.DBID]/</content>
	</include>

	<include name="FlagLayout">
		<param name="id" default=""/>
		<param name="content" default=""/>
		<param name="colordiffuse" default="$VAR[Primary_Color]"/>
		<definition>
			<control type="group">
				<visible>!String.IsEqual(Control.GetLabel($PARAM[id]),flags/blank.png)</visible>
				<width>180</width>
				<height>180</height>
				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>90</width>
					<height>60</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$PARAM[colordiffuse]">$PARAM[content]</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="Info_Dialog_Header">
		<param name="visible"/>
		<param name="left"/>
		<param name="right"/>
		<param name="align"/>
			<definition>
				<control type="grouplist">
					<visible>$PARAM[visible]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<left>$PARAM[left]</left>
					<right>$PARAM[right]</right>
					<centertop>50%</centertop>
					<height>720</height>
					<orientation>vertical</orientation>
					<align>center</align>
					<usecontrolcoords>true</usecontrolcoords>
					<itemgap>0</itemgap>
					<!--Title-->
					<control type="textbox">
						<width>100%</width>
						<height max="280">auto</height>
						<align>$PARAM[align]</align>
						<font>Billboard_Title</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Title_Label]</label>
					</control>
					<!--Details-->
					<control type="textbox">
						<visible>$PARAM[single_row_info]</visible>
						<top>0</top>
						<width>100%</width>
						<height max="70">auto</height>
						<font>Video_Info_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Dialog_Info_Label]</label>
						<align>$PARAM[align]</align>
					</control>
					<!-- Star Rating -->
					<control type="grouplist">
						<visible>!ListItem.DBType(season) + !ListItem.DBType(artist) + [!String.IsEmpty(ListItem.Rating) | !String.IsEmpty(ListItem.UserRating)]</visible>
						<top>15</top>
						<centerleft>50%</centerleft>
						<height>30</height>
						<orientation>horizontal</orientation>
						<align>$PARAM[align]</align>
						<control type="image">
							<width>182</width>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[Accent_Color]">$VAR[StarRating_Label]</texture>
						</control>
					</control>
					<!--Flags-->
					<control type="grouplist">
						<visible>Window.IsActive(movieinformation)</visible>
						<top>0</top>
						<width>100%</width>
						<height>180</height>
						<orientation>horizontal</orientation>
						<align>center</align>
						<!--Studio-->
						<include content="FlagLayout">
							<param name="id" value="920"/>
							<param name="content" value="$VAR[Studio_Label]"/>
						</include>
						<!--Rating-->
						<include content="FlagLayout">
							<param name="id" value="921"/>
							<param name="content" value="$VAR[MPAA_Label]"/>
						</include>
						<!--Video Source-->
						<include content="FlagLayout">
							<param name="id" value="922"/>
							<param name="content" value="$VAR[VideoSource_Label]"/>
						</include>
						<!--Video Codec-->
						<include content="FlagLayout">
							<param name="id" value="923"/>
							<param name="content" value="$VAR[VideoCodec_Label]"/>
						</include>
						<!--Audio Source-->
						<include content="FlagLayout">
							<param name="id" value="924"/>
							<param name="content" value="$VAR[AudioCodec_Label]"/>
						</include>
					</control>
				</control>
			</definition>
		</include>

		<include name="Info_Dialog_Plot">
			<param name="visible"/>
			<param name="left"/>
			<param name="right"/>
			<param name="align"/>
			<param name="font"/>
			<definition>
				<!--Hidden Label empty checker-->
				<control type="label" id="916">
					<visible>false</visible>
					<label>$VAR[Plot_Label]</label>
				</control>
				<control type="group">
					<visible>$PARAM[visible]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<control type="group">
						<visible>!$EXP[TransparentDialog_IsVisible]</visible>
						<include>Content_Fade_Animation</include>
						<control type="textbox" id="4">
							<height>600</height>
							<left>$PARAM[left]</left>
							<right>$PARAM[right]</right>
							<centertop>50%</centertop>
							<align>$PARAM[align]</align>
							<aligny>center</aligny>
							<font>$PARAM[font]</font>
							<label>$VAR[Plot_Label]$INFO[Window(musicinformation).Property(ResetScroll)]</label>
							<textcolor>$VAR[Light_Color]</textcolor>
							<pagecontrol>60</pagecontrol>
							<autoscroll>false</autoscroll>
						</control>
						<control type="scrollbar" id="60">
							<right>27</right>
							<bottom>180</bottom>
							<width>6</width>
							<height>720</height>
							<onleft>99</onleft>
							<onright>99</onright>
							<onback>65000</onback>
							<showonepage>false</showonepage>
							<orientation>vertical</orientation>
							<texturesliderbackground colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturesliderbackground>
							<texturesliderbar colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturesliderbar>
							<texturesliderbarfocus colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</texturesliderbarfocus>
							<textureslidernib></textureslidernib>
							<textureslidernibfocus></textureslidernibfocus>
							<include>Scrollbar_Fade_Animation</include>
						</control>
					</control>
				</control>
			</definition>
		</include>

		<include name="Info_Dialog_Stars">
			<control type="image">
				<visible>$PARAM[visible]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<centertop>50%</centertop>
				<left>1102</left>
				<height>60</height>
				<width>364</width>
				<visible>!ListItem.DBType(season) + !ListItem.DBType(artist) + [!String.IsEmpty(ListItem.Rating) | !String.IsEmpty(ListItem.UserRating)]</visible>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="$VAR[Accent_Color]">$VAR[StarRating_Label]</texture>
			</control>
		</include>

</includes>
