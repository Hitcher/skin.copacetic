<includes>

	<include name="AlbumInfo_Content_Path">
		<content>musicdb://albums/$INFO[ListItem.DBID]/</content>
	</include>

	<include name="FlagLayout">
		<param name="id" default=""/>
		<param name="content" default=""/>
		<param name="colordiffuse" default="$VAR[Light_Color]"/>
		<definition>
			<control type="group">
				<visible>!String.IsEqual(Control.GetLabel($PARAM[id]),flags/blank.png)</visible>
				<width>180</width>
				<height>180</height>
				<control type="image">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>90</width>
					<height>60</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$PARAM[colordiffuse]">$PARAM[content]</texture>
				</control>
			</control>
		</definition>
	</include>

	<include name="Info_Dialog_Header">
		<param name="visible"/>
		<param name="left"/>
		<param name="right"/>
		<param name="align"/>
			<definition>
				<control type="grouplist">
					<visible>$PARAM[visible]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<left>$PARAM[left]</left>
					<right>$PARAM[right]</right>
					<centertop>50%</centertop>
					<height>720</height>
					<orientation>vertical</orientation>
					<align>center</align>
					<usecontrolcoords>true</usecontrolcoords>
					<itemgap>0</itemgap>
					<!-- Title -->
					<control type="textbox">
						<width>100%</width>
						<height max="280">auto</height>
						<align>$PARAM[align]</align>
						<font>Billboard_Title</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Title_Label]</label>
					</control>
					<!-- Details -->
					<control type="textbox">
						<visible>$PARAM[single_row_info]</visible>
						<top>0</top>
						<width>100%</width>
						<height max="90">auto</height>
						<font>Dialog_Info_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Dialog_Info_Label]</label>
						<align>$PARAM[align]</align>
					</control>
					<!-- Star Rating -->
					<control type="grouplist">
						<visible>!Window.IsVisible(addoninformation) + !ListItem.DBType(season) + !ListItem.DBType(artist) + [!String.IsEmpty(ListItem.Rating) | !String.IsEmpty(ListItem.UserRating)]</visible>
						<top>15</top>
						<centerleft>50%</centerleft>
						<height>30</height>
						<orientation>horizontal</orientation>
						<align>$PARAM[align]</align>
						<control type="image">
							<width>182</width>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[Star_Color]">$VAR[StarRating_Label]</texture>
						</control>
					</control>
					<!-- Flags -->
					<control type="grouplist">
						<visible>Window.IsActive(movieinformation)</visible>
						<top>0</top>
						<width>100%</width>
						<height>180</height>
						<orientation>horizontal</orientation>
						<align>center</align>
						<itemgap>0</itemgap>
						<!-- Studio -->
						<include content="FlagLayout">
							<param name="id" value="920"/>
							<param name="content" value="$VAR[Studio_Flag]"/>
						</include>
						<!-- Rating -->
						<include content="FlagLayout">
							<param name="id" value="921"/>
							<param name="content" value="$VAR[MPAA_Flag]"/>
						</include>
						<!-- Video Source -->
						<include content="FlagLayout">
							<param name="id" value="922"/>
							<param name="content" value="$VAR[VideoSource_Flag]"/>
						</include>
						<!-- Video Codec -->
						<include content="FlagLayout">
							<param name="id" value="923"/>
							<param name="content" value="$VAR[VideoCodec_Flag]"/>
						</include>
						<!-- Audio Source -->
						<include content="FlagLayout">
							<param name="id" value="924"/>
							<param name="content" value="$VAR[AudioCodec_Flag]"/>
						</include>
					</control>
					<control type="textbox">
						<top>60</top>
						<height max="206">auto</height>
						<visible>Window.IsVisible(addoninformation)</visible>
						<font>Body</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$INFO[ListItem.AddonDescription]</label>
						<align>left</align>
						<autoscroll delay="5000" time="1500" repeat="2000">true</autoscroll>
					</control>
				</control>
			</definition>
		</include>

		<include name="Info_Dialog_Plot">
			<param name="visible"/>
			<param name="left"/>
			<param name="right"/>
			<param name="align"/>
			<param name="font"/>
			<definition>
				<control type="group">
					<visible>$PARAM[visible]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<!-- Hidden Label empty checker -->
					<control type="label" id="916">
						<visible>false</visible>
						<label>$VAR[Plot_Label]</label>
					</control>
					<control type="textbox" id="4">
						<height>600</height>
						<left>$PARAM[left]</left>
						<right>$PARAM[right]</right>
						<centertop>50%</centertop>
						<align>$PARAM[align]</align>
						<aligny>center</aligny>
						<font>$PARAM[font]</font>
						<label>$VAR[Plot_Label]$INFO[Window(musicinformation).Property(ResetScroll)]</label>
						<textcolor>$VAR[Light_Color]</textcolor>
						<pagecontrol>60</pagecontrol>
						<autoscroll>false</autoscroll>
					</control>
					<control type="scrollbar" id="60">
						<visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
						<include>Scrollbar_Fade_Animation</include>
						<right>27</right>
						<bottom>180</bottom>
						<width>6</width>
						<height>720</height>
						<onup>65000</onup>
						<onleft condition="Window.IsVisible(movieinformation)">8</onleft>
						<onleft condition="!Window.IsVisible(movieinformation)">97</onleft>
						<onright condition="Window.IsVisible(movieinformation) + !String.IsEmpty(ListItem.Trailer)">11</onright>
						<onright condition="Window.IsVisible(movieinformation) + String.IsEmpty(ListItem.Trailer) + !String.IsEqual(ListItem.DBType,set)">7</onright>
						<onright condition="Window.IsVisible(movieinformation) + String.IsEmpty(ListItem.Trailer) + String.IsEqual(ListItem.DBType,set)">6</onright>
						<onright condition="String.IsEqual(ListItem.DBType,album)">98</onright>
						<onright condition="String.IsEqual(ListItem.DBType,song)">7</onright>
						<onright condition="String.IsEqual(ListItem.DBType,artist)">10</onright>
						<onback>65000</onback>
						<showonepage>false</showonepage>
						<orientation>vertical</orientation>
						<texturesliderbackground colordiffuse="$VAR[Scroll_Background_Color]">views/white_100.png</texturesliderbackground>
						<texturesliderbar/>
						<texturesliderbarfocus colordiffuse="$VAR[Scroll_Focused_Color]">views/white_100.png</texturesliderbarfocus>
						<textureslidernib></textureslidernib>
						<textureslidernibfocus></textureslidernibfocus>
					</control>
				</control>
			</definition>
		</include>

		<include name="Info_Dialog_Stars">
			<control type="grouplist">
				<visible>$PARAM[visible]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<animation effect="slide" end="330,0" time="0" condition="Window.Is(songinformation) | String.IsEqual(ListItem.DBType,album)" reversible="false">Conditional</animation>
				<width>364</width>
				<centerleft>50%</centerleft>
				<height>360</height>
				<centertop>50%</centertop>
				<orientation>vertical</orientation>
				<align>center</align>
				<itemgap>$PARAM[itemgap]</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="image">
					<animation effect="zoom" center="auto" start="130" end="100" time="360" tween="back" easing="out" condition="!Control.HasFocus(5003)" reversible="false">Conditional</animation>
					<animation effect="slide" end="0,7" time="360" tween="back" easing="out" condition="!Control.HasFocus(5003)" reversible="false">Conditional</animation>
					<width>60</width>
					<centerleft>50%</centerleft>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">dialogs/icon_arrow_focused.png</texture>
				</control>
				<control type="image">
					<height>$PARAM[starheight]</height>
					<centerleft>50%</centerleft>
					<visible>!ListItem.DBType(season) + !ListItem.DBType(artist)</visible>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$VAR[Star_Color]">$VAR[StarRating_Label]</texture>
				</control>
				<control type="image">
					<visible>!String.IsEmpty(ListItem.UserRating)</visible>
					<animation effect="rotate" center="auto" end="180" time="0" condition="true" reversible="false">Conditional</animation>
					<animation effect="zoom" center="auto" start="130" end="100" time="360" tween="back" easing="out" condition="!Control.HasFocus(5004)" reversible="false">Conditional</animation>
					<animation effect="slide" end="0,7" time="360" tween="back" easing="out" condition="!Control.HasFocus(5004)" reversible="false">Conditional</animation>
					<width>60</width>
					<centerleft>50%</centerleft>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">dialogs/icon_arrow_focused.png</texture>
				</control>
				<control type="image">
					<visible>String.IsEmpty(ListItem.UserRating)</visible>
					<width>60</width>
					<centerleft>50%</centerleft>
					<height>60</height>
					<texture colordiffuse="$VAR[Light_Color]">flags/blank.png</texture>
				</control>
			</control>
		</include>

		<include name="Info_Dialog_Artwork">
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<visible>![Window.IsVisible(selectdialog) | Window.IsVisible(filebrowser)]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="Transparent_Dialog_Panel">
					<param name="top" value="180"/>
					<param name="bottom" value="180"/>
				</include>

				<!-- Episodes -->
				<control type="image">
					<visible>String.IsEqual(ListItem.DBType,episode) | [String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(poster))]</visible>
					<height>610</height>
					<width>1084</width>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>auto</width>
					<aspectratio>fixed</aspectratio>
					<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
				</control>

				<!-- Others -->
				<control type="grouplist">
					<visible>!String.IsEqual(ListItem.DBType,episode) + ![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(poster))]</visible>
					<centertop>50%</centertop>
					<centerleft>50%</centerleft>
					<height>594</height>
					<width>1920</width>
					<orientation>horizontal</orientation>
					<align>center</align>
					<usecontrolcoords>true</usecontrolcoords>
					<itemgap>0</itemgap>
					<!-- Position 1 -->
					<control type="image">
						<visible>!String.IsEmpty(ListItem.Art(fanart))</visible>
						<height>594</height>
						<width>1056</width>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					</control>
					<!-- Position 2 -->
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Art(poster)) + Window.IsVisible(movieinformation)</visible>
						<top>57</top>
						<height>480</height>
						<width>320</width>
						<control type="image">
							<texture background="true">$INFO[ListItem.Art(poster)]</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<include content="DropShadow">
							<param name="height" value="100%"/>
							<param name="flipx" value="true"/>
							<param name="visible" value="!String.IsEmpty(ListItem.Art(fanart))"/>
						</include>
					</control>
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Art(thumb)) + !Window.IsVisible(movieinformation)</visible>
						<top>45</top>
						<height>504</height>
						<width>504</width>
						<control type="image">
							<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<include content="DropShadow">
							<param name="height" value="100%"/>
							<param name="flipx" value="true"/>
							<param name="visible" value="!String.IsEmpty(ListItem.Art(fanart))"/>
						</include>
					</control>
					<!-- Postiion 3 -->
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Art(keyart)) + Window.IsVisible(movieinformation)</visible>
						<top>102</top>
						<height>390</height>
						<width>260</width>
						<control type="image">
							<texture background="true">$INFO[ListItem.Art(keyart)]</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<include content="DropShadow">
							<param name="height" value="100%"/>
							<param name="flipx" value="true"/>
							<param name="visible" value="!String.IsEmpty(ListItem.Art(poster))"/>
						</include>
					</control>
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Art(square)) + Window.IsVisible(movieinformation)</visible>
						<top>155</top>
						<height>284</height>
						<width>284</width>
						<control type="image">
							<texture background="true">$INFO[ListItem.Art(square)]</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<include content="DropShadow">
							<param name="height" value="100%"/>
							<param name="flipx" value="true"/>
							<param name="visible" value="!String.IsEmpty(ListItem.Art(keyart))"/>
						</include>
					</control>
				</control>
			</control>
		</include>

</includes>
