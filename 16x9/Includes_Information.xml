<includes>

	<include name="Info_Dialog_Header">
		<param name="visible"/>
		<param name="left"/>
		<param name="right"/>
		<param name="align"/>
			<definition>
				<control type="grouplist">
					<visible>$PARAM[visible]</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<left>$PARAM[left]</left>
					<right>$PARAM[right]</right>
					<centertop>50%</centertop>
					<height>540</height>
					<orientation>vertical</orientation>
					<align>center</align>
					<usecontrolcoords>true</usecontrolcoords>
					<!--Title-->
					<control type="textbox">
						<width>100%</width>
						<height max="280">auto</height>
						<align>$PARAM[align]</align>
						<font>Billboard_Title</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Title_Label]</label>
					</control>
					<!--Details-->
					<control type="label">
						<top>0</top>
						<width>100%</width>
						<height>35</height>
						<font>Video_Info_Label</font>
						<textcolor>$VAR[Light_Color]</textcolor>
						<label>$VAR[Dialog_Info_Label]</label>
						<align>$PARAM[align]</align>
					</control>
					<!-- Star Rating -->
					<control type="grouplist">
						<visible>!ListItem.DBType(season) + !ListItem.DBType(artist)</visible>
						<top>15</top>
						<centerleft>50%</centerleft>
						<height>30</height>
						<orientation>horizontal</orientation>
						<align>$PARAM[align]</align>
						<control type="image">
							<width>185</width>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[Accent_Color]">$VAR[StarRating_Label]</texture>
						</control>
					</control>
				</control>
			</definition>
	</include>

	<include name="Info_Dialog_Plot">
		<param name="visible"/>
		<param name="left"/>
		<param name="right"/>
		<param name="align"/>
		<definition>
			<!--Hidden Label empty checker-->
			<control type="label" id="916">
				<visible>false</visible>
				<label>$VAR[Plot_Label]</label>
			</control>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<control type="group">
					<visible>!$EXP[TransparentDialog_IsVisible]</visible>
					<include>Content_Fade_Animation</include>
					<control type="textbox" id="4">
						<height>540</height>
						<left>$PARAM[left]</left>
						<right>$PARAM[right]</right>
						<centertop>50%</centertop>
						<align>$PARAM[align]</align>
						<aligny>center</aligny>
						<font>Plot</font>
						<label>$VAR[Plot_Label]</label>
						<textcolor>$VAR[Light_Color]</textcolor>
						<pagecontrol>60</pagecontrol>
						<autoscroll>false</autoscroll>
					</control>
					<control type="scrollbar" id="60">
						<right>27</right>
						<bottom>240</bottom>
						<width>6</width>
						<height>600</height>
						<onleft>99</onleft>
						<onright>99</onright>
						<onback>65000</onback>
						<showonepage>false</showonepage>
						<orientation>vertical</orientation>
						<texturesliderbackground colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturesliderbackground>
						<texturesliderbar colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturesliderbar>
						<texturesliderbarfocus colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</texturesliderbarfocus>
						<textureslidernib></textureslidernib>
						<textureslidernibfocus></textureslidernibfocus>
						<include>Scrollbar_Fade_Animation</include>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>
