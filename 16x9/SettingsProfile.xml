<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- profiles -->
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>SettingsCategory_Fade_Animation</include>
	<defaultcontrol always="true">300008</defaultcontrol>
	<controls>

		<include condition="System.HasAddon(script.embuary.helper)" content="Settings_Fanart_Slideshow"/>

		<!-- Content -->
		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<include content="SettingsCategory_Layout">
				<param name="mainlist" value="500"/>
				<param name="sublist" value="2"/>
			</include>

			<!-- Main list -->
			<control type="group">
				<left>210</left>
				<width>390</width>
				<control type="grouplist" id="500">
					<height>630</height>
					<centertop>50%</centertop>
					<itemgap>0</itemgap>
					<onleft>300008</onleft>
					<onright>2</onright>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">4</defaultcontrol>
					<!-- Enable login screen -->
					<control type="radiobutton" id="4">
						<label>20096</label>
						<textwidth>270</textwidth>
						<radioposx>270</radioposx>
					</control>
					<!-- Auto login -->
					<control type="button" id="5">
						<label>33084</label>
						<enable>!System.HasLoginScreen</enable>
					</control>
				</control>
				<!-- Dummy underline for main list -->
				<control type="image">
					<animation effect="slide" end="0,90" time="0" reversible="false" condition="Container(500).Position(1)">Conditional</animation>
					<height>1</height>
					<top>314</top>
					<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
				</control>
			</control>

			<!-- Artwork -->
			<control type="image">
				<left>255</left>
				<top>450</top>
				<width>300</width>
				<height>300</height>
				<texture fallback="DefaultUser.png">$INFO[Container(2).ListItem.Art(thumb)]</texture>
				<aspectratio>scale</aspectratio>
			</control>

			<control type="list" id="2">
				<width>1200</width>
				<left>600</left>
				<height>630</height>
				<centertop>50%</centertop>
				<itemgap>0</itemgap>
				<onleft>500</onleft>
				<onright>300008</onright>
				<orientation>vertical</orientation>
				<align>top</align>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout height="90" width="1200">
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[Unfocused_Color]</textcolor>
					</control>
				</itemlayout>
				<focusedlayout height="90" width="1200">
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[Settings_Grouplist_Label_Color]</textcolor>
					</control>
					<control type="label">
						<textoffsetx>60</textoffsetx>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>$VAR[Settings_Grouplist_Label_Color]</textcolor>
					</control>
					<control type="image">
						<visible>Control.HasFocus(2)</visible>
						<width>100%</width>
						<height>1</height>
						<bottom>0</bottom>
						<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
					</control>

				</focusedlayout>
			</control>

		</control>

	</controls>

</window>
