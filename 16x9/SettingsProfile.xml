			<top>240</top>
			<width>300</width>
			<height>870</height>
			<itemgap>34</itemgap>
			<orientation>vertical</orientation>

			<!-- Interface -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>14206</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>
			<!-- Library -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>14022</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>
			<!-- Player -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>14200</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>
			<!-- Addons -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>24001</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>
			<!-- System -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>13000</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>
			<!-- Service -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>14036</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>
			<!-- Profiles -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>13200</label>
				<font>Font42</font>
				<textcolor>$VAR[Accent_Color]</textcolor>
			</control>
			<!-- File Manager -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>7</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>
			<!-- System info -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>130</label>
				<font>Font42</font>
				<textcolor>$VAR[Primary_Color]</textcolor>
			</control>

		</control>

		<!-- Main list -->
		<control type="grouplist" id="50">
			<left>480</left>
			<top>244</top>
			<width>1680</width>
			<height>726</height>
			<itemgap>34</itemgap>
			<onleft>ReplaceWindow(settings)</onleft>
			<onright>noop</onright>
			<onup>noop</onup>
			<ondown>noop</ondown>
			<orientation>vertical</orientation>

			<!-- Addons -->
			<control type="button">
				<width>970</width>
				<height>42</height>
				<font>Font33</font>
				<label>24001</label>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>
			<!-- Profiles -->
			<control type="button">
				<width>970</width>
				<height>42</height>
				<font>Font33</font>
				<label>13200</label>
				<textcolor>$VAR[FocusedColor]</textcolor>
			</control>
			<!-- File manager -->
			<control type="button">
				<width>970</width>
				<height>42</height>
				<font>Font33</font>
				<label>7</label>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>
			<!-- Settings level -->
			<control type="button">
				<width>300</width>
				<height>42</height>
				<label>31016</label>
				<font>Font33</font>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>

		</control>

		<!-- Main list indicator -->
		<control type="image">
			<left>442</left>
			<top>248</top>
			<width>20</width>
			<height>60</height>
			<colordiffuse>$VAR[UnFocusedColor]</colordiffuse>
			<texture border="6,1,8,1">common/ScrollBackground.png</texture>
			<animation effect="fade" start="100" end="50" time="0" condition="true">Conditional</animation>
		</control>

		<!-- Default list -->
		<control type="grouplist" id="500">
			<left>830</left>
			<top>244</top>
			<width>970</width>
			<height>194</height>
			<itemgap>34</itemgap>
			<onleft>ReplaceWindow(settings)</onleft>
			<onright>noop</onright>
			<onup>noop</onup>
			<ondown>2</ondown>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<defaultcontrol always="true">4</defaultcontrol>
			<animation effect="fade" start="100" end="0" time="0" condition="!ControlGroup(500).HasFocus + !Control.HasFocus(2)">Conditional</animation>

			<!-- Enable login screen -->
			<control type="radiobutton" id="4">
				<width>970</width>
				<height>42</height>
				<font>Font33</font>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
				<focusedcolor>$VAR[FocusedColor]</focusedcolor>
				<disabledcolor>$VAR[DisabledColor]</disabledcolor>
				<label>20096</label>
			</control>

			<!-- Auto login -->
			<control type="button" id="5">
				<width>970</width>
				<height>42</height>
				<font>Font33</font>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
				<focusedcolor>$VAR[FocusedColor]</focusedcolor>
				<invalidcolor>$VAR[DisabledColor]</invalidcolor>
				<disabledcolor>$VAR[DisabledColor]</disabledcolor>
				<label>33084</label>
				<enable>!System.HasLoginScreen</enable>
			</control>

			<!-- Separator -->
			<control type="image" id="6">
				<top>11</top>
				<width>970</width>
				<height>20</height>
				<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
			</control>

		</control>

		<control type="list" id="2">
			<left>830</left>
			<top>454</top>
			<width>970</width>
			<height>456</height>
			<onleft>ReplaceWindow(settings)</onleft>
			<onright>noop</onright>
			<onup>500</onup>
			<ondown>noop</ondown>
			<orientation>vertical</orientation>
			<animation effect="fade" start="100" end="0" time="0" condition="!ControlGroup(500).HasFocus + !Control.HasFocus(2)">Conditional</animation>

			<itemlayout height="76" width="970">
				<control type="label">
					<width>900</width>
					<height>76</height>
					<font>Font33</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
				</control>
				<control type="image">
					<left>898</left>
					<top>2</top>
					<width>72</width>
					<height>72</height>
					<colordiffuse>$VAR[FocusedColor]</colordiffuse>
					<texture fallback="DefaultUser.png">$INFO[ListItem.Icon]</texture>
				</control>
			</itemlayout>

			<focusedlayout height="76" width="970">
				<control type="label">
					<width>900</width>
					<height>76</height>
					<font>Font33</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>$VAR[FocusedColor]</textcolor>
					<animation effect="fade" start="100" end="50" time="0" condition="!Control.HasFocus(2)">Conditional</animation>
				</control>
				<control type="image">
					<left>898</left>
					<top>2</top>
					<width>72</width>
					<height>72</height>
					<texture fallback="DefaultUser.png">$INFO[ListItem.Icon]</texture>
				</control>
			</focusedlayout>

		</control>

		<!-- Sub list indicator -->
		<control type="image">
			<left>792</left>
			<top>248</top>
			<width>20</width>
			<height>60</height>
			<colordiffuse>$VAR[UnFocusedColor]</colordiffuse>
			<texture border="6,1,8,1">common/ScrollBackground.png</texture>
		</control>

	</controls>

</window>
