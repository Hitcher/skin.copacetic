<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<visible>[VideoPlayer.IsFullscreen | Window.IsActive(visualisation)] + !Window.IsVisible(subtitlesearch) + !Player.FrameAdvance</visible>
	<include>Dialog_Fade_Animation</include>
	<controls>

		<!--Hidden Labels-->
		<control type="slider" id="401">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="402">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="403">
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<!--Background-->
		<control type="image">
			<visible>Player.HasVideo + [Player.Paused | Player.Seeking | Player.Rewinding | Player.Forwarding | Player.DisplayAfterSeek | Window.IsVisible(videoosd) | $EXP[TransparentDialog_IsVisible]]</visible>
			<texture colordiffuse="$VAR[Fullscreen_Video_Diffuse]">views/white_100.png</texture>
			<include>Dialog_Fade_Animation</include>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<!--  Progress Bar -->
			<control type="group">
				<visible>Player.HasVideo + [Player.Paused | Player.Seeking | Player.Rewinding | Player.Forwarding | Player.DisplayAfterSeek | Window.IsVisible(videoosd)]</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<control type="group">
					<left>120</left>
					<right>120</right>
					<bottom>0</bottom>
					<height>90</height>
					<!--Cache bar-->
					<control type="progress" id="1">
						<top>-6</top>
						<height>6</height>
						<info>Player.ProgressCache</info>
						<texturebg colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturebg>
						<lefttexture></lefttexture>
						<midtexture colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</midtexture>
						<righttexture></righttexture>
						<overlaytexture></overlaytexture>
					</control>
					<!--Progress bar-->
					<control type="progress" id="1">
						<top>-6</top>
						<height>6</height>
						<info>Player.Progress</info>
						<texturebg colordiffuse="$VAR[Blank_Color]">views/white_100.png</texturebg>
						<lefttexture></lefttexture>
						<midtexture colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</midtexture>
						<righttexture></righttexture>
						<overlaytexture></overlaytexture>
					</control>
					<control type="label">
						<left>0</left>
						<height>100%</height>
						<width>100%</width>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
						<font>Body</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
					<control type="label">
						<height>100%</height>
						<width>100%</width>
						<align>right</align>
						<aligny>center</aligny>
						<label>$LOCALIZE[32000] $INFO[Player.FinishTime]</label>
						<font>Body</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
				</control>
			</control>


			<!-- Pause Screen-->
			<control type="group">
				<visible>Player.Paused + !Window.IsVisible(videoosd)</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<control type="group">
					<visible>!$EXP[TransparentDialog_IsVisible]</visible>
					<include>Dialog_Fade_Animation</include>
					<control type="group">
						 <animation effect="slide" start="0,0" end="0,60" time="0" condition="Player.HasAudio" reversible="false">Conditional</animation>
							<control type="group">
					      <visible>!Window.IsActive(busydialog)</visible>
					      <include>Content_Fade_Animation</include>
					      <width>120</width>
					      <height>120</height>
								<centerleft>50%</centerleft>
								<centertop>50%</centertop>
								<control type="grouplist">
									<centertop>50%</centertop>
									<height>50%</height>
									<itemgap>8</itemgap>
									<orientation>horizontal</orientation>
									<align>center</align>
									<control type="image">
										<width>24</width>
										<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
									</control>
									<control type="image">
										<width>24</width>
										<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
									</control>
								</control>
					    </control>
						</control>
					</control>
				</control>
			</control>

	</controls>

</window>
