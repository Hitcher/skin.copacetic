<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<visible>VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)</visible>
	<include content="WindowOpenClose_Fade_Animation"/>
	<controls>

		<!-- Hidden Labels -->
		<control type="slider" id="401">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="402">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="403">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="image" id="6304">
			<include content="Hidden_Control"/>
			<texture fallback="flags/blank.png">$VAR[MPAA_Flag]</texture>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include content="Visible_Fade_Delayed_Animation"/>

			<!-- Video -->
			<control type="group">
				<visible>VideoPlayer.IsFullscreen + !Window.IsVisible(playerprocessinfo) + !Window.IsVisible(videobookmarks)</visible>
				<!-- progress -->
				<control type="group">
					<visible>Player.Seeking | Player.Rewinding | Player.Forwarding | Player.HasPerformedSeek(3) | [Window.IsVisible(videoosd) + !System.IdleTime(3)] | [Player.Paused + !System.IdleTime(3)] | Window.IsVisible(fullscreeninfo)</visible>
					<include content="Visible_Fade_Delayed_Animation"/>
					<control type="group">
						<visible>![Player.Paused + Skin.HasSetting(Player_Progress_Disabled)]</visible>
						<include content="Player_Progress">
							<param name="left" value="60"/>
							<param name="right" value="60"/>
							<param name="bottom" value="14"/>
							<param name="height" value="32"/>
							<param name="progress_id" value="1"/>
							<param name="progress_bar_padding" value="120"/>
							<param name="left_label" value="$INFO[Player.Time]"/>
							<param name="right_label" value="$INFO[Player.Duration]"/>
							<param name="text_color" value="$VAR[Light_Color]"/>
						</include>
					</control>
				</control>
				<!-- fullscreen info -->
				<control type="group">
					<visible>Player.Paused + !Window.IsVisible(videoosd) + !Window.IsVisible(fullscreeninfo)</visible>
					<include content="Visible_Fade_Delayed_Animation"/>
					<include content="Fullscreen_Info" condition="VideoPlayer.IsFullscreen + Skin.HasSetting(Pause_Screen_Info_Enabled) + Integer.IsGreater(VideoPlayer.DBID,0)" />
				</control>
				<control type="group">
					<visible>!Window.IsVisible(fullscreeninfo) + ![Skin.HasSetting(Pause_Screen_Info_Enabled) + Player.Paused]</visible>
					<!-- Breadcrumb -->
					<control type="grouplist">
						<visible>!Skin.TimerIsRunning(video_playback_label_interruptor)</visible>
						<left>60</left>
						<right>60</right>
						<top>60</top>
						<height>60</height>
						<orientation>horizontal</orientation>
						<align>left</align>
						<itemgap>12</itemgap>
						<usecontrolcoords>true</usecontrolcoords>
						<control type="image">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),2) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),8)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<top>6</top>
							<height>48</height>
							<width>6</width>
							<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
						</control>
						<control type="label">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),2) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),8)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<height>60</height>
							<width max="960">auto</width>
							<label>$VAR[Title_Breadcrumb_Label]</label>
							<font>Title_Breadcrumb_Label</font>
							<textcolor>$VAR[Light_Color]</textcolor>
						</control>
						<!--Label 1 -->
						<control type="label">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),2) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),5)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<width max="600">auto</width>
							<height>35</height>
							<top>16</top>
							<label>$VAR[Info_Fullscreen_Label]</label>
							<font>Info_Breadcrumb_Label</font>
							<textcolor>$VAR[Light_Color]</textcolor>
						</control>
						<control type="label">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),5) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),8)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<width max="600">auto</width>
							<height>35</height>
							<top>16</top>
							<label>$VAR[Info_Fullscreen_Label2]</label>
							<font>Info_Breadcrumb_Label</font>
							<textcolor>$VAR[Light_Color]</textcolor>
						</control>
						<!-- MPAA -->
						<control type="image">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11) + !String.IsEqual(Control.GetLabel(6304),flags/blank.png)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<top>6</top>
							<height>48</height>
							<width>6</width>
							<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
						</control>
						<control type="label">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11) + !String.IsEqual(Control.GetLabel(6304),flags/blank.png)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<width max="600">auto</width>
							<height>35</height>
							<top>16</top>
							<label>$LOCALIZE[31148]</label>
							<font>Info_Breadcrumb_Label</font>
							<textcolor>$VAR[Light_Color]</textcolor>
						</control>
						<control type="image">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<left>-15</left>
							<width>90</width>
							<height>60</height>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[Light_Color]">$VAR[MPAA_Flag]</texture>
						</control>
						<control type="label">
							<visible>Integer.IsGreater(Skin.TimerElapsedSecs(video_playback),8) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback),11)</visible>
							<include content="Video_Breadcrumb_Fade_Animation"/>
							<left>-15</left>
							<width max="600">auto</width>
							<height>35</height>
							<top>16</top>
							<label>$VAR[MPAA_Description_Label]</label>
							<font>Info_Breadcrumb_Label</font>
							<textcolor>$VAR[Light_Color]</textcolor>
						</control>
					</control>
					<!-- Player status icons -->
					<control type="group">
						<visible>Player.Seeking | Player.Rewinding | Player.Forwarding | Player.HasPerformedSeek(3) | Player.Paused</visible>
						<include content="WindowOpenClose_Fade_Delayed_Animation"/>
						<include content="Player_Status_Icons">
							<param name="large_label" value="true"/>
						</include>
					</control>
				</control>
			</control>

			<!-- Music -->
			<control type="group">
				<visible>Window.IsVisible(visualisation) + !Window.IsVisible(1123) + Player.HasAudio</visible>
				<include content="WindowOpenClose_Fade_Delayed_Animation"/>
				<control type="group">
					<visible>!Window.IsVisible(musicosd)</visible>
					<include content="Visible_Fade_Delayed_Animation"/>
					<include content="Player_Status_Icons">
						<param name="large_label" value="true"/>
					</include>
				</control>
				<include content="Player_Progress">
					<param name="left" value="60"/>
					<param name="right" value="60"/>
					<param name="bottom" value="14"/>
					<param name="height" value="32"/>
					<param name="progress_bar_padding" value="120"/>
					<param name="progress_id" value="1"/>
					<param name="left_label" value="$INFO[Player.Time]"/>
					<param name="right_label" value="$INFO[Player.Duration]"/>
					<param name="text_color" value="$VAR[Primary_Color]"/>
				</include>
			</control>

		</control>

	</controls>

</window>
