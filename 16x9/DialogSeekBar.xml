<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<visible>[VideoPlayer.IsFullscreen | Window.IsActive(visualisation)] + !Window.IsVisible(subtitlesearch) + !Player.FrameAdvance</visible>
	<include>Dialog_Fade_Animation</include>
	<controls>

		<!--Hidden Labels-->
		<control type="slider" id="401">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="402">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="403">
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<!--Background-->
		<control type="image">
			<visible>Player.HasVideo + [Player.Playing | Player.Paused | Window.IsVisible(videoosd) | $EXP[TransparentDialog_IsVisible]]</visible>
			<animation effect="fade" start="100" end="0" delay="1080" time="360" condition="Player.Playing + !Window.IsVisible(videoosd)" tween="sine" easing="inout">Conditional</animation>
			<texture colordiffuse="$VAR[Fullscreen_Video_Diffuse]">views/white_100.png</texture>
			<include>Dialog_Fade_Animation</include>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<control type="group">
				<visible>Player.HasVideo</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<include content="Player_Status_Icons">
					<param name="large_label" value="true"/>
				</include>
				<control type="group">
					<visible>[Player.Paused | Player.Seeking | Player.Rewinding | Player.Forwarding | Player.DisplayAfterSeek] + !Window.IsVisible(videoosd)</visible>
					<include>Delayed_Dialog_Fade_Animation</include>
					<include content="Breadcrumb_Label">
						<param name="label_color" value="$VAR[Light_Color]"/>
					</include>
					<control type="group">
						<visible>![Player.Paused + Skin.HasSetting(Player_Progress_Disabled)]</visible>
						<include content="Player_Progress">
							<param name="left" value="60"/>
							<param name="right" value="60"/>
							<param name="bottom" value="15"/>
							<param name="height" value="33"/>
							<param name="progress_id" value="1"/>
							<param name="progress_bar_padding" value="120"/>
							<param name="left_label" value="$INFO[Player.Time]"/>
							<param name="right_label" value="$INFO[Player.Duration]"/>
							<param name="text_color" value="$VAR[Light_Color]"/>
						</include>
					</control>
				</control>
			</control>

			<control type="group">
				<visible>Window.IsVisible(visualisation)</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<control type="group">
					<visible>!Window.IsVisible(1123) + Player.HasAudio + !Window.IsVisible(musicosd)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="Player_Progress">
						<param name="left" value="780"/>
						<param name="right" value="300"/>
						<param name="bottom" value="80"/>
						<param name="height" value="33"/>
						<param name="progress_bar_padding" value="90"/>
						<param name="progress_id" value="1"/>
						<param name="left_label" value="$INFO[Player.Time]"/>
						<param name="right_label" value="$INFO[Player.Duration]"/>
						<param name="text_color" value="$VAR[Primary_Color]"/>
					</include>
					<include content="Player_Status_Icons">
						<param name="large_label" value="true"/>
					</include>
				</control>
			</control>

		</control>

	</controls>

</window>
