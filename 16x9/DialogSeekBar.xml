<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<visible>[VideoPlayer.IsFullscreen | Window.IsActive(visualisation)] + !$EXP[TransparentDialog_IsVisible] + !Window.IsVisible(subtitlesearch) + !Player.FrameAdvance</visible>
	<include>OSD_Fade_Animation</include>
	<controls>

		<!--Hidden Labels-->
		<control type="slider" id="401">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="402">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="403">
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<!--Background-->
		<control type="image">
			<visible>Player.Paused</visible>
			<texture colordiffuse="$VAR[Dark_Color]">views/white_100.png</texture>
		</control>

		<!-- Pause Screen-->
		<control type="group">
			<visible>Player.Paused</visible>
			<include>OSD_Delayed_Fade_Animation</include>
			<control type="group">
				 <animation effect="slide" start="0,0" end="0,60" time="0" condition="Player.HasAudio" reversible="false" >Conditional</animation>
				<control type="group">
		      <visible>!Window.IsActive(busydialog)</visible>
		      <include>Content_Fade_Animation</include>
		      <width>120</width>
		      <height>120</height>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<control type="grouplist">
						<centertop>50%</centertop>
						<height>50%</height>
						<itemgap>8</itemgap>
						<orientation>horizontal</orientation>
						<align>center</align>
						<control type="image">
							<width>24</width>
							<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
						</control>
						<control type="image">
							<width>24</width>
							<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
						</control>
					</control>
		    </control>
			</control>
		</control>

		<!--  Background and Progress Bar -->
		<control type="progress" id="1">
			<visible>Player.HasVideo + [Player.Paused | Player.Seeking | Player.Rewinding | Player.Forwarding]</visible>
			<include>OSD_Delayed_Fade_Animation</include>
			<left>60</left>
			<right>60</right>
			<bottom>60</bottom>
			<height>6</height>
			<info>Player.Progress</info>
			<texturebg colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturebg>
			<lefttexture></lefttexture>
			<midtexture colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</midtexture>
			<righttexture></righttexture>
			<overlaytexture></overlaytexture>
		</control>

	</controls>

</window>
