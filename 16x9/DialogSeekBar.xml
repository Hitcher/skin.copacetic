<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<visible>VideoPlayer.IsFullscreen | Window.IsActive(visualisation)</visible>
	<include>Dialog_Fade_Animation</include>
	<controls>

		<!-- Hidden Labels -->
		<control type="slider" id="401">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="402">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="403">
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<!-- Video -->
			<control type="group">
				<visible>Player.HasVideo + !Window.IsVisible(playerprocessinfo) + !Window.IsVisible(videobookmarks)</visible>
				<!-- progress -->
				<control type="group">
					<visible>Player.Seeking | Player.Rewinding | Player.Forwarding | Player.HasPerformedSeek(3) | [Window.IsActive(videoosd) + !System.IdleTime(3)] | [Player.Paused + !System.IdleTime(3)] | Window.IsVisible(fullscreeninfo)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<control type="group">
						<visible>![Player.Paused + Skin.HasSetting(Player_Progress_Disabled)]</visible>
						<include content="Player_Progress">
							<param name="left" value="60"/>
							<param name="right" value="60"/>
							<param name="bottom" value="14"/>
							<param name="height" value="32"/>
							<param name="progress_id" value="1"/>
							<param name="progress_bar_padding" value="120"/>
							<param name="left_label" value="$INFO[Player.Time]"/>
							<param name="right_label" value="$INFO[Player.Duration]"/>
							<param name="text_color" value="$VAR[Light_Color]"/>
						</include>
					</control>
				</control>
				<control type="group">
					<visible>!Window.IsVisible(fullscreeninfo)</visible>
					<include>Content_Fade_Animation</include>
					<!-- Breadcrumb -->
					<control type="group">
						<visible>!Window.IsVisible(videoosd)</visible>
						<include>Dialog_Fade_Animation</include>
						<control type="grouplist">
							<left>60</left>
							<right>60</right>
							<top>60</top>
							<height>60</height>
							<orientation>horizontal</orientation>
							<align>left</align>
							<itemgap>12</itemgap>
							<usecontrolcoords>true</usecontrolcoords>
							<control type="image">
								<visible>Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(video_playback_label_delay),1) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback_label_delay),8)</visible>
								<include>Dialog_Fade_Animation</include>
								<top>6</top>
								<height>48</height>
								<width>6</width>
								<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
							</control>
							<control type="label">
								<visible>Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(video_playback_label_delay),1) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback_label_delay),8)</visible>
								<include>Dialog_Fade_Animation</include>
								<height>60</height>
								<width max="1200">auto</width>
								<label>$VAR[Breadcrumb_Title_Label]</label>
								<font>Breadcrumb_Title_Label</font>
								<textcolor>$VAR[Light_Color]</textcolor>
							</control>
							<!--Label 1 -->
							<control type="label">
								<visible>Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(video_playback_label_delay),1) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback_label_delay),4)</visible>
								<include>Dialog_Fade_Animation</include>
								<width max="600">auto</width>
								<height>35</height>
								<top>16</top>
								<label>$VAR[Fullscreen_Info_Label]</label>
								<font>Breadcrumb_Info_Label</font>
								<textcolor>$VAR[Light_Color]</textcolor>
							</control>
							<control type="label">
								<visible>Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(video_playback_label_delay),5) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback_label_delay),8)</visible>
								<include>Dialog_Fade_Animation</include>
								<width max="600">auto</width>
								<height>35</height>
								<top>16</top>
								<label>$VAR[Fullscreen_Info_Label2]</label>
								<font>Breadcrumb_Info_Label</font>
								<textcolor>$VAR[Light_Color]</textcolor>
							</control>
							<!-- MPAA -->
							<control type="image">
								<visible>Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(video_playback_label_delay),9) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback_label_delay),11)</visible>
								<include>Dialog_Fade_Animation</include>
								<top>6</top>
								<height>48</height>
								<width>6</width>
								<texture colordiffuse="$VAR[Accent_Color]">views/white_100.png</texture>
							</control>
							<control type="image">
								<visible>Integer.IsGreaterOrEqual(Skin.TimerElapsedSecs(video_playback_label_delay),9) + Integer.IsLess(Skin.TimerElapsedSecs(video_playback_label_delay),11)</visible>
								<include>Dialog_Fade_Animation</include>
								<width>90</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture colordiffuse="$VAR[Light_Color]">$VAR[MPAA_Flag]</texture>
							</control>
						</control>
					</control>
					<!-- Player status icons -->
					<control type="group">
						<visible>Player.Seeking | Player.Rewinding | Player.Forwarding | Player.HasPerformedSeek(3) | Player.Paused</visible>
						<include>Delayed_Dialog_Fade_Animation</include>
						<include content="Player_Status_Icons">
							<param name="large_label" value="true"/>
						</include>
					</control>
				</control>
			</control>

			<!-- Music -->
			<control type="group">
				<visible>Window.IsVisible(visualisation) + !Window.IsVisible(1123) + Player.HasAudio</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<control type="group">
					<visible>!Window.IsVisible(musicosd)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include content="Player_Status_Icons">
						<param name="large_label" value="true"/>
					</include>
				</control>
				<include content="Player_Progress">
					<param name="left" value="60"/>
					<param name="right" value="60"/>
					<param name="bottom" value="14"/>
					<param name="height" value="32"/>
					<param name="progress_bar_padding" value="120"/>
					<param name="progress_id" value="1"/>
					<param name="left_label" value="$INFO[Player.Time]"/>
					<param name="right_label" value="$INFO[Player.Duration]"/>
					<param name="text_color" value="$VAR[Primary_Color]"/>
				</include>
			</control>

		</control>

	</controls>

</window>
