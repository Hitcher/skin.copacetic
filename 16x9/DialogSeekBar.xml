<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<visible>[VideoPlayer.IsFullscreen | Window.IsActive(visualisation)] + !Window.IsVisible(subtitlesearch) + !Player.FrameAdvance</visible>
	<include>Dialog_Fade_Animation</include>
	<controls>

		<!--Hidden Labels-->
		<control type="slider" id="401">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="402">
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<control type="slider" id="403">
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<!--Background-->
		<control type="image">
			<visible>Player.HasVideo + [Player.Paused | Window.IsVisible(videoosd) | $EXP[TransparentDialog_IsVisible]]</visible>
			<texture colordiffuse="$VAR[Fullscreen_Video_Diffuse]">views/white_100.png</texture>
			<include>Dialog_Fade_Animation</include>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<!--  Progress Bar -->
			<control type="group">
				<visible>Player.HasVideo + [[Player.Paused + !Skin.HasSetting(Player_Progress_Disabled)] | Player.Seeking | Player.Rewinding | Player.Forwarding | Player.DisplayAfterSeek | Window.IsVisible(videoosd)]</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<control type="group">
					<left>120</left>
					<right>120</right>
					<bottom>0</bottom>
					<height>90</height>
					<!--Cache bar-->
					<control type="progress" id="1">
						<top>-6</top>
						<height>6</height>
						<info>Player.ProgressCache</info>
						<texturebg colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</texturebg>
						<lefttexture></lefttexture>
						<midtexture colordiffuse="$VAR[Progress_Background_Color]">views/white_100.png</midtexture>
						<righttexture></righttexture>
						<overlaytexture></overlaytexture>
					</control>
					<!--Progress bar-->
					<control type="progress" id="1">
						<top>-6</top>
						<height>6</height>
						<info>Player.Progress</info>
						<texturebg colordiffuse="$VAR[Blank_Color]">views/white_100.png</texturebg>
						<lefttexture></lefttexture>
						<midtexture colordiffuse="$VAR[Progress_Focused_Color]">views/white_100.png</midtexture>
						<righttexture></righttexture>
						<overlaytexture></overlaytexture>
					</control>
					<control type="label">
						<left>0</left>
						<height>100%</height>
						<width>100%</width>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
						<font>Body</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
					<control type="label">
						<height>100%</height>
						<width>100%</width>
						<align>right</align>
						<aligny>center</aligny>
						<label>$LOCALIZE[32000] $INFO[Player.FinishTime]</label>
						<font>Body</font>
						<textcolor>$VAR[Light_Color]</textcolor>
					</control>
				</control>
			</control>

			<!-- Status icons -->
			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible]</visible>
				<include>Delayed_Dialog_Fade_Animation</include>
				<control type="group">
		      <visible>!Window.IsActive(busydialog)</visible>
		      <include>Content_Fade_Animation</include>
					<control type="group">
			      <width>120</width>
			      <height>120</height>
						<centerleft>50%</centerleft>
						<centertop>50%</centertop>
						<!-- Pause Screen-->
						<control type="grouplist">
							<visible>Player.Paused  + !Window.IsVisible(videoosd)</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<centertop>50%</centertop>
							<height>30%</height>
							<itemgap>6</itemgap>
							<orientation>horizontal</orientation>
							<align>center</align>
							<control type="image">
								<width>12</width>
								<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>12</width>
								<texture colordiffuse="$VAR[Light_Color]">views/white_100.png</texture>
							</control>
						</control>
						<!-- Rewinding -->
						<control type="group">
							<visible>Player.Rewinding</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<control type="image">
								<visible>Player.Rewinding2x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]" flipx="true">osd/icon_Player.Forwarding_2x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Rewinding4x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]" flipx="true">osd/icon_Player.Forwarding_4x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Rewinding8x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]" flipx="true">osd/icon_Player.Forwarding_8x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Rewinding16x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]" flipx="true">osd/icon_Player.Forwarding_16x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Rewinding32x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]" flipx="true">osd/icon_Player.Forwarding_32x.png</texture>
							</control>
						</control>
						<!-- Forwarding -->
						<control type="group">
							<visible>Player.Forwarding</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<control type="image">
								<visible>Player.Forwarding2x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]">osd/icon_Player.Forwarding_2x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Forwarding4x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]">osd/icon_Player.Forwarding_4x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Forwarding8x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]">osd/icon_Player.Forwarding_8x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Forwarding16x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]">osd/icon_Player.Forwarding_16x.png</texture>
							</control>
							<control type="image">
								<visible>Player.Forwarding32x</visible>
								<centertop>50%</centertop>
								<centerleft>50%</centerleft>
								<texture colordiffuse="$VAR[Light_Color]">osd/icon_Player.Forwarding_32x.png</texture>
							</control>
						</control>
						<!--Playing-->
						<control type="image">
							<animation effect="fade" start="100" end="0" delay="720" time="360" condition="Player.Playing" tween="sine" easing="inout">Conditional</animation>
							<visible>Player.Playing</visible>
							<include>Content_Fade_Animation</include>
							<centertop>50%</centertop>
							<centerleft>50%</centerleft>
							<texture colordiffuse="$VAR[Light_Color]">osd/icon_Player.Playing.png</texture>
						</control>
						<!-- label -->
						<control type="label">
							<visible>Player.Rewinding | Player.Forwarding</visible>
							<include>Delayed_Content_Fade_Animation</include>
							<top>90</top>
							<width>auto</width>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[Light_Color]</textcolor>
							<font>Player_Status</font>
							<label>$VAR[Player_Status]</label>
						</control>
			    </control>
				</control>
			</control>
		</control>

	</controls>

</window>
