<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- seekbar -->
	<defaultcontrol always="true">901</defaultcontrol>
	<visible>[VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)] + [Player.Seeking | Player.Paused | Player.Forwarding | Player.Rewinding] + !Window.IsVisible(videoosd) + !Window.IsVisible(subtitlesearch) + !Player.FrameAdvance</visible>
	<include>Transparent_Dialog_Fade_Animation</include>
	<controls>

		<!--Background-->
		<include>FullscreenDimensions</include>
		<include>DialogBackground</include>

		<!-- Pause -->
		<control type="group">
			<animation effect="slide" start="0,0" end="0,60" time="0" condition="Player.HasAudio" reversible="false" >Conditional</animation>
			<visible>Player.Paused</visible>
			<include>Content_Fade_Animation</include>
			<include content="Now_Playing_Visualization_Fill">
				<param name="width" value="120"/>
				<param name="pausewidth" value="24"/>
				<param name="pausegap" value="8"/>
				<param name="color" value="$VAR[PrimaryColor]"/>
			</include>
		</control>

		<!--  Progress bar -->
		<control type="progress" id="1">
			<visible>Player.HasVideo</visible>
			<include>Content_Fade_Animation</include>
			<left>60</left>
			<right>60</right>
			<bottom>60</bottom>
			<height>6</height>
			<info>Player.Progress</info>
			<texturebg colordiffuse="$VAR[PrimaryColor]">views/white_20.png</texturebg>
			<lefttexture></lefttexture>
			<midtexture colordiffuse="$VAR[PrimaryColor]">views/white_100.png</midtexture>
			<righttexture></righttexture>
			<overlaytexture></overlaytexture>
		</control>

	</controls>

</window>
