<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- smartplaylisteditor -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<!-- Delay content on Load -->
		<include content="Delay_Content_Load">
			<param name="id" value="9001"/>
			<param name="time" value="360"/>
			<param name="target_id" value="SetFocus(22)"/>
		</include>

		<control type="group">
			<include>DialogFanartSlideshow</include>
		</control>
		
		<control type="group">
			<visible>![Window.IsVisible(smartplaylistrule) | Window.IsVisible(shutdownmenu) | Window.IsVisible(virtualkeyboard) | Window.IsVisible(numericinput) | Window.IsVisible(filebrowser) | Window.IsVisible(selectdialog)]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<control type="group">
				<visible>!Control.HasFocus(9001)</visible>
				<include>Content_Fade_Animation</include>
				<include content="Breadcrumb_Label">
					<param name="visible" value="true"/>
					<param name="id" value="2"/>
				</include>
				<include content="Transparent_Dialog_Panel">
					<param name="top" value="150"/>
					<param name="bottom" value="150"/>
				</include>
			</control>

			<control type="group">
				<visible>!Control.HasFocus(9001)</visible>
				<include>Long_Delayed_Content_Fade_Animation</include>
				<include content="DialogDivider">
					<param name="left" value="960"/>
					<param name="height" value="720"/>
				</include>
				<!-- Main grouplist -->
				<control type="grouplist" id="100">
					<left>90</left>
					<width>870</width>
					<height>720</height>
					<centertop>50%</centertop>
					<itemgap>0</itemgap>
					<onright>10</onright>
					<onleft>noop</onleft>
					<onup>100</onup>
					<ondown>100</ondown>
					<orientation>vertical</orientation>
					<align>top</align>
					<scrolltime tween="sine" easing="inout">360</scrolltime>
					<control type="button" id="22">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Set Playlist type</description>
						<label>$LOCALIZE[467]</label>
					</control>
					<control type="button" id="12">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Name of the playlist</description>
						<label>$LOCALIZE[551]</label>
					</control>
					<control type="button" id="16">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Match rules option</description>
						<label>$LOCALIZE[31117]</label>
					</control>
					<control type="button" id="17">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Limit rules option</description>
						<label>$LOCALIZE[31118]</label>
					</control>
					<control type="button" id="18">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Sort rules option</description>
						<label>$LOCALIZE[31119]</label>>
					</control>
					<control type="button" id="19">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Sort direction option</description>
						<label>$LOCALIZE[31120]</label>>
					</control>
					<control type="button" id="23">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Group by</description>
						<label>$LOCALIZE[19141]</label>
					</control>
					<control type="radiobutton" id="24">
						<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
						<description>Mixed</description>
						<label>$LOCALIZE[467]: $LOCALIZE[21459]</label>
					</control>
				</control>

				<!-- Sub list -->
				<control type="list" id="10">
					<width>870</width>
					<right>90</right>
					<height>720</height>
					<centertop>50%</centertop>
					<itemgap>0</itemgap>
					<onleft>100</onleft>
					<onright>14</onright>
					<onup>10</onup>
					<ondown>10</ondown>
					<orientation>vertical</orientation>
					<align>top</align>
					<scrolltime tween="sine" easing="inout">360</scrolltime>
					<itemlayout height="90" width="870">
						<control type="label">
							<textoffsetx>60</textoffsetx>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>$VAR[Unfocused_Color]</textcolor>
						</control>
						<control type="label">
							<textoffsetx>60</textoffsetx>
							<align>right</align>
							<label>$INFO[ListItem.Label2]</label>
							<textcolor>$VAR[Unfocused_Color]</textcolor>
						</control>
					</itemlayout>
					<focusedlayout height="90" width="870">
						<control type="label">
							<textoffsetx>60</textoffsetx>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>$VAR[Settings_Grouplist_Label_Color]</textcolor>
							<selectedcolor>$VAR[Settings_Grouplist_Label_Color]</selectedcolor>
						</control>
						<control type="image">
							<visible>String.IsEqual(Container(100).CurrentItem,-1) + !ControlGroup(9000).HasFocus</visible>
							<left>0</left>
							<right>60</right>
							<height>1</height>
							<bottom>0</bottom>
							<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
						</control>
						<control type="group">
							<visible>String.IsEqual(Container(100).CurrentItem,-1) + !ControlGroup(9000).HasFocus</visible>
							<right>60</right>
							<width>90</width>
							<height>90</height>
							<include content="Button_Template">
								<param name="buttonid" value="14"/>
								<param name="width" value="90"/>
								<param name="texture" value="Cross"/>
								<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
								<param name="focusedcolor" value="$VAR[Light_Color]"/>
							</include>
						</control>
					</focusedlayout>
				</control>

				<!-- Edit Rule Button -->
				<control type="button" id="15">
					<include>Hidden_Button</include>
				</control>
				<control type="button" id="13">
					<include>Hidden_Button</include>
				</control>
				<!-- Remove Rule Button -->
				<control type="button" id="14">
					<include>Hidden_Button</include>
					<onleft>10</onleft>
					<onup condition="String.IsEqual(Container(10).ListItem(-1).Label,$LOCALIZE[21423])">SetFocus(10)</onup>
					<onup>Control.Move(10,-1)</onup>
					<ondown>Control.Move(10,1)</ondown>
					<ondown condition="String.IsEqual(Container(10).ListItem(1).Label,$LOCALIZE[21423])">SetFocus(10)</ondown>
					<onright>21</onright>
				</control>

				<include content="Button_Group_Template">
					<param name="bottom" value="15"/>
					<param name="onleft" value="10"/>
					<param name="onright" value="100"/>
					<param name="icons" value="true"/>
					<param name="button1" value="true"/>
					<param name="button1id" value="21"/>
					<param name="button2" value="true"/>
					<param name="button2id" value="20"/>
				</include>

			</control>
		</control>
	</controls>
</window>
