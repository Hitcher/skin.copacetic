<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- smartplaylisteditor -->
	<defaultcontrol always="true">100</defaultcontrol>
	<backgroundcolor>$VAR[Fanart_Slideshow_Global_Background_Color]</backgroundcolor>
	<include content="WindowOpenClose_Fade_Delayed_Animation"/>
	<controls>
		<include condition="Skin.HasSetting(Fanart_Slideshow_Global_Disabled)" content="Light_Theme_Background"/>
		<include condition="!Skin.HasSetting(Fanart_Slideshow_Global_Disabled)" content="Fanart_Slideshow_Global"/>
		<include content="Default_Dialog_Panel_Layout">
			<param name="visible" value="![Window.IsVisible(smartplaylistrule) | Window.IsVisible(shutdownmenu) | Window.IsVisible(virtualkeyboard) | Window.IsVisible(numericinput) | Window.IsVisible(filebrowser) | Window.IsVisible(selectdialog)]"/>
			<param name="panel_edge_top" value="150"/>
			<param name="panel_edge_bottom" value="150"/>
			<include content="Breadcrumb_Label">
				<param name="title_label_id" value="2"/>
				<param name="label_color" value="$VAR[Settings_Label_Color]"/>
			</include>
			<include content="Settings_Grouplist_Template">
				<param name="id" value="100"/>
				<param name="width" value="870"/>
				<param name="height" value="720"/>
				<param name="onleft" value="20"/>
				<param name="onright" value="10"/>
				<param name="include_scrollbar" value="false"/>
				<include content="smartplaylisteditor_Left_List_Content"/>
			</include>
			<include content="SmartPlaylistEditor_List"/>
			<include content="Button_Template">
				<param name="visible" value="String.IsEqual(Container(100).CurrentItem,-1) + !ControlGroup(4000).HasFocus"/>
				<param name="buttonid" value="14"/>
				<param name="left" value="1680"/>
				<param name="width" value="90"/>
				<param name="texture" value="Cross"/>
				<param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
				<param name="focusedcolor" value="$VAR[Light_Color]"/>
				<animation effect="slide" end="0,180" time="0" condition="true">Conditional</animation>
				<animation effect="slide" end="0,90" time="0" reversible="false" condition="Container(10).Position(1)">Conditional</animation>
				<animation effect="slide" end="0,180" time="0" reversible="false" condition="Container(10).Position(2)">Conditional</animation>
				<animation effect="slide" end="0,270" time="0" reversible="false" condition="Container(10).Position(3)">Conditional</animation>
				<animation effect="slide" end="0,360" time="0" reversible="false" condition="Container(10).Position(4)">Conditional</animation>
				<animation effect="slide" end="0,450" time="0" reversible="false" condition="Container(10).Position(5)">Conditional</animation>
				<animation effect="slide" end="0,540" time="0" reversible="false" condition="Container(10).Position(6)">Conditional</animation>
			</include>
			<include content="Button_Group_Template">
				<param name="bottom" value="15"/>
				<param name="onleft" value="10"/>
				<param name="onright" value="100"/>
				<param name="color" value="$VAR[Settings_Label_Color]"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="21"/>
				<param name="button2" value="true"/>
				<param name="button2id" value="20"/>
			</include>
		</include>
		<!-- Hidden components -->
		<control type="button" id="15">
			<include content="Hidden_Button_Template"/>
		</control>
		<control type="button" id="13">
			<include content="Hidden_Button_Template"/>
		</control>
		<control type="button" id="14">
			<include content="Hidden_Button_Template"/>
			<onleft>10</onleft>
			<onup condition="String.IsEqual(Container(10).ListItem(-1).Label,$LOCALIZE[21423])">SetFocus(10)</onup>
			<onup>Control.Move(10,-1)</onup>
			<ondown>Control.Move(10,1)</ondown>
			<ondown condition="String.IsEqual(Container(10).ListItem(1).Label,$LOCALIZE[21423])">SetFocus(10)</ondown>
			<onright>21</onright>
		</control>
	</controls>
</window>
