<?xml version="1.0" encoding="UTF-8"?>
<window>
  <!-- smartplaylistrule -->
  <defaultcontrol always="true">5</defaultcontrol>
  <include>Delayed_Dialog_Fade_Animation</include>
  <controls>
    <control type="group">
      <visible>!Window.IsVisible(shutdownmenu) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(selectdialog)</visible>
      <include>Delayed_Content_Fade_Animation</include>

      <control type="group">
        <visible>!Window.IsVisible(shutdownmenu) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(selectdialog)</visible>
        <include>Delayed_Content_Fade_Animation</include>

        <include content="Transparent_Dialog_Panel">
          <param name="top" value="360"/>
          <param name="bottom" value="360"/>
        </include>

        <include content="Breadcrumb_Label">
          <param name="visible" value="true"/>
          <param name="id" value="2"/>
        </include>

        <include content="DialogDivider">
          <param name="height" value="270"/>
        </include>

        <control type="grouplist" id="5">
          <include>DialogGrouplist</include>
          <control type="button" id="15"/>
          <control type="button" id="16"/>
          <control type="edit" id="17">
            <hinttext>Enter text here...</hinttext>
          </control>
        </control>

        <control type="button" id="20">
          <visible allowhiddenfocus="true">false</visible>
          <ondown>9000</ondown>
          <onright>9000</onright>
          <onleft>5</onleft>
          <onup>5</onup>
        </control>

        <control type="group">
          <left>360</left>
          <width>1200</width>
          <top>585</top>
          <height>90</height>
          <control type="image">
            <visible>Control.HasFocus(20)</visible>
            <texture border="2,2,2,2" colordiffuse="$VAR[Light_Color]">dialogs/button_underline_focused_20.png</texture>
          </control>
          <control type="group">
            <right>-15</right>
            <width>120</width>
            <top>-15</top>
            <height>120</height>
            <include content="ButtonLayout">
              <param name="buttonid" value="20"/>
              <param name="unfocusedtexture" value="Browse_Unfocused"/>
              <param name="unfocusedcolor" value="$VAR[Settings_Unfocused_Color]"/>
              <param name="focusedtexture" value="Browse_Focused_Large"/>
              <param name="focusedcolor" value="$VAR[Light_Color]"/>
            </include>
          </control>
        </control>

        <include content="ButtonGroup">
          <param name="onleft" value="20"/>
          <param name="onup" value="20" />
          <param name="button1id" value="19"/>
          <param name="button1unfocused" value="Cross_Unfocused"/>
          <param name="button1focused" value="Cross_Focused_Large"/>
          <param name="button2id" value="18"/>
          <param name="button2unfocused" value="Check_Unfocused"/>
          <param name="button2focused" value="Check_Focused_Large"/>
          <param name="buttonsvisible" value="true"/>
        </include>

      </control>

    </control>
  </controls>
</window>
