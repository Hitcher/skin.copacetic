<?xml version="1.0" encoding="UTF-8"?>
<window>
  <!-- smartplaylistrule -->
  <defaultcontrol always="true">5</defaultcontrol>
  <include content="WindowOpenClose_Fade_Delayed_Animation"/>
  <controls>
    <include content="Default_Dialog_Panel_Layout">
      <param name="visible" value="![Window.IsVisible(shutdownmenu) | Window.IsVisible(virtualkeyboard) | Window.IsVisible(numericinput) | Window.IsVisible(filebrowser) | Window.IsVisible(selectdialog)]"/>
      <param name="panel_edge_top" value="360"/>
      <param name="panel_edge_bottom" value="360"/>
      <include content="Breadcrumb_Label">
        <param name="title_label_id" value="2"/>
        <param name="label_color" value="$VAR[Settings_Label_Color]"/>
      </include>
      <include content="Dialog_Divider">
        <param name="height" value="270"/>
      </include>
      <include content="Settings_Grouplist_Template">
        <param name="id" value="5"/>
        <param name="left" value="360"/>
        <param name="width" value="1200"/>
        <param name="onleft" value="18"/>
        <param name="onright" value="20"/>
        <param name="align" value="center"/>
        <include content="smartplaylistrule_List_Content"/>
      </include>
      <!-- Button 20 icon -->
      <control type="group">
        <left>360</left>
        <right>360</right>
        <top>585</top>
        <height>90</height>
        <control type="image">
          <visible>Control.HasFocus(20)</visible>
          <bottom>0</bottom>
          <height>1</height>
          <texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
        </control>
        <control type="group">
          <right>0</right>
          <width>90</width>
          <include content="Button_Template">
            <param name="buttonid" value="20"/>
            <param name="texture" value="Browse"/>
            <param name="width" value="90"/>
            <param name="unfocusedcolor" value="$VAR[Unfocused_Color]"/>
            <param name="focusedcolor" value="$VAR[Light_Color]"/>
          </include>
        </control>
      </control>
      <include content="Button_Group_Template">
        <param name="onleft" value="20"/>
        <param name="onright" value="5"/>
        <param name="onup" value="20" />
        <param name="color" value="$VAR[Settings_Label_Color]"/>
        <param name="button1" value="true"/>
        <param name="button1id" value="19"/>
        <param name="button1texture" value="Cross"/>
        <param name="button2" value="true"/>
        <param name="button2id" value="18"/>
        <param name="button2texture" value="Check"/>
      </include>
    </include>
    <!-- Hidden components -->
    <control type="button" id="20">
      <include>Hidden_Button</include>
      <ondown>15</ondown>
      <onright>9000</onright>
      <onleft>17</onleft>
      <onup>16</onup>
    </control>
  </controls>
</window>
