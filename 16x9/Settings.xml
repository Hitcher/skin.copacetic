<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">9002,0</defaultcontrol>
	<onload>SetFocus(9001,0)</onload>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>
		<include>DialogFanartSlideshow</include>
		<control type="group">
			<visible>!$EXP[TransparentDialog_IsVisible]</visible>
			<include>Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<control type="image">
				<left>60</left>
				<width>720</width>
				<centertop>50%</centertop>
				<height>720</height>
				<aspectratio>keep</aspectratio>
				<texture align="center" aligny="center">logo.png</texture>
			</control>

			<control type="image">
				<left>780</left>
				<width>1</width>
				<centertop>50%</centertop>
				<height>540</height>
				<aspectratio>scale</aspectratio>
				<texture colordiffuse="$VAR[Light_Color]">views/white_20.png</texture>
			</control>

			<include content="Breadcrumb_Label">
				<param name="visible" value="true"/>
			</include>

			<include content="Simple_List">
				<param name="id" value="9002"/>
				<param name="left" value="840"/>
				<param name="include" value="Settings_Content"/>
			</include>

			<include content="ButtonGroup">
				<param name="onleft" value="9002"/>
				<param name="onup" value="9002"/>
				<param name="button1id" value="301"/>
				<param name="button1onclick" value="Close"/>
				<param name="buttonsvisible" value="true"/>
			</include>

		</control>
	</controls>
</window>
