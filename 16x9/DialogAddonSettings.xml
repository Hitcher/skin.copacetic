<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addonsettings -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<!-- Delay content on Load -->
		<include content="Delay_Content_Load">
			<param name="id" value="9001"/>
			<param name="time" value="360"/>
			<param name="target_id" value="SetFocus(3)"/>
		</include>

		<include>DialogFanartSlideshow</include>

		<control type="group">
			<visible>!Control.HasFocus(9001) + !String.IsEqual(Window(home).Property(UpNext),true) + !Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<!-- Heading label -->
			<include content="Breadcrumb_Label">
				<param name="title_label_id" value="2"/>
				<param name="info_label_visible" value="false"/>
			</include>

			<include content="Dialog_Divider_With_Scrollbar">
				<param name="scrollbarvisible" value="ControlGroup(5).HasFocus"/>
				<param name="left" value="570"/>
				<param name="scrollbaralignleft" value="true"/>
			</include>

			<include content="Dialog_Divider_With_Scrollbar">
				<param name="id" value="61"/>
				<param name="scrollbarvisible" value="!ControlGroup(5).HasFocus + !ControlGroup(9000).HasFocus"/>
				<param name="left" value="570"/>
			</include>

			<!-- Main list -->
			<control type="grouplist" id="3">
				<left>90</left>
				<width>480</width>
				<centertop>50%</centertop>
				<height>630</height>
				<onright>5</onright>
				<onleft>28</onleft>
				<ondown>3</ondown>
				<onup>3</onup>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<pagecontrol>61</pagecontrol>
				<align>top</align>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
			</control>


			<!-- Sub list -->
			<control type="grouplist" id="5">
				<width>1260</width>
				<left>570</left>
				<centertop>50%</centertop>
				<height>630</height>
				<onleft>3</onleft>
				<onright>30</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<align>top</align>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<pagecontrol>60</pagecontrol>
			</control>

			<!-- Default button -->
			<control type="button" id="7"/>
			<!-- Default radiobutton -->
			<control type="radiobutton" id="8"/>
			<!-- Default spincontrolex -->
			<control type="spincontrolex" id="9"/>
			<!-- Default togglebutton -->
			<control type="togglebutton" id="10">
				<focusedcolor>$VAR[Settings_Grouplist_Label_Color]</focusedcolor>
				<texturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</texturefocus>
				<alttexturefocus border="62,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_except_60_left.png</alttexturefocus>
			</control>
			<!-- Default divider -->
			<control type="image" id="11">
				<height>1</height>
				<texture colordiffuse="$VAR[Blank_Color]">views/white_100.png</texture>
			</control>
			<!-- Default edit -->
			<control type="edit" id="12"/>
			<!-- Default slider -->
			<control type="sliderex" id="13"/>
			<!-- Default label -->
			<control type="label" id="14">
				<height>90</height>
				<textoffsetx>30</textoffsetx>
				<font>Default_Settings_Header</font>
				<textcolor>$VAR[Unfocused_Color]</textcolor>
			</control>

			<include content="Button_Group_Template">
				<param name="onleft" value="5"/>
				<param name="onright" value="3"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="30"/>
				<param name="button1texture" value="Refresh"/>
				<param name="button2" value="true"/>
				<param name="button2id" value="29"/>
				<param name="button2texture" value="Cross"/>
				<param name="button3" value="true"/>
				<param name="button3id" value="28"/>
				<param name="button3texture" value="Check"/>
			</include>

		</control>

	</controls>
</window>
