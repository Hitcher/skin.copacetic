<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_501_BillboardInfo">
		<control type="group">
			<visible>Control.IsVisible(501)</visible>
			<!-- List -->
			<control type="list" id="501">
				<width>1920</width>
				<height>1080</height>
				<onleft>501</onleft>
				<onright>501</onright>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<viewtype label="31501">list</viewtype>
				<scrolltime tween="sine" easing="inout">480</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>SubString(Container.FolderPath,videodb://) | SubString(Container.FolderPath,special://) | SubString(Container.FolderPath,addons://) | SubString(Container.FolderPath,musicdb://) | SubString(Container.FolderPath,androidapp://)</visible>
				<itemlayout height="1080" width="1920">
					<control type="image">
						<width>1920</width>
						<height>1080</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[LandscapeIcon]</texture>
					</control>
					<control type="image">
						<width>1920</width>
						<height>1080</height>
						<texture colordiffuse="$VAR[DiffuseColor]" border="1">views/white_50.png</texture>
					</control>
					<include>WatchedIndicator</include>
					<control type="group">
						<include>MediaInfoHideAnimation</include>
						<control type="label">
							<left>50</left>
							<bottom>213</bottom>
							<width>1820</width>
							<height>75</height>
							<font>Bold75</font>
							<label>$VAR[InfoTitle]</label>
							<visible>IsEmpty(ListItem.Art(clearlogo)) | [!IsEmpty(ListItem.Art(clearlogo)) + !Skin.HasSetting(LogosViews) + !Skin.HasSetting(LogosBoth)]</visible>
						</control>
						<control type="image">
							<left>50</left>
							<top>602</top>
							<width>640</width>
							<height>248</height>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<visible>Skin.HasSetting(LogosViews) | Skin.HasSetting(LogosBoth)</visible>
						</control>
						<!-- Details -->
						<control type="label">
							<left>50</left>
							<bottom>165</bottom>
							<width>1820</width>
							<height>36</height>
							<font>Light36</font>
							<label>$VAR[BillboardInfo]</label>
							<visible>!SubString(ListItem.Icon,Default)</visible>
						</control>
						<!-- Plot -->
						<control type="textbox">
							<left>50</left>
							<bottom>50</bottom>
							<width>1474</width>
							<height>100</height>
							<font>Light27</font>
							<label>$VAR[BillboardPlot]</label>
							<visible>Skin.HasSetting(EnableFlags) + !Container.Content(artists)</visible>
						</control>
						<control type="textbox">
							<left>50</left>
							<bottom>50</bottom>
							<width>1820</width>
							<height>100</height>
							<font>Light27</font>
							<label>$VAR[BillboardPlot]</label>
							<visible>!Skin.HasSetting(EnableFlags) | [Skin.HasSetting(EnableFlags) + Container.Content(artists)]</visible>
						</control>
						<include condition="Skin.HasSetting(EnableFlags)">Flags</include>
					</control>
				</itemlayout>
				<focusedlayout height="1080" width="1920">
					<control type="image">
						<width>1920</width>
						<height>1080</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture background="true">$VAR[LandscapeIcon]</texture>
					</control>
					<control type="image">
						<width>1920</width>
						<height>1080</height>
						<texture colordiffuse="$VAR[DiffuseColor]" border="1">views/white_50.png</texture>
					</control>
					<include>WatchedIndicator</include>
					<control type="group">
						<include>MediaInfoHideAnimation</include>
						<control type="label">
							<left>50</left>
							<bottom>213</bottom>
							<width>1820</width>
							<height>75</height>
							<font>Bold75</font>
							<textcolor>$VAR[TextColor]</textcolor>
							<label>$VAR[InfoTitle]</label>
							<visible>IsEmpty(ListItem.Art(clearlogo)) | [!IsEmpty(ListItem.Art(clearlogo)) + !Skin.HasSetting(LogosViews) + !Skin.HasSetting(LogosBoth)]</visible>
						</control>
						<control type="image">
							<left>50</left>
							<top>602</top>
							<width>640</width>
							<height>248</height>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<visible>Skin.HasSetting(LogosViews) | Skin.HasSetting(LogosBoth)</visible>
						</control>
						<!-- Details -->
						<control type="label">
							<left>50</left>
							<bottom>165</bottom>
							<width>1820</width>
							<height>36</height>
							<font>Light36</font>
							<textcolor>$VAR[TextColor]</textcolor>
							<label>$VAR[BillboardInfo]</label>
							<visible>!SubString(ListItem.Icon,Default)</visible>
						</control>
						<!-- Plot -->
						<control type="textbox">
							<left>50</left>
							<bottom>50</bottom>
							<width>1474</width>
							<height>100</height>
							<font>Light27</font>
							<textcolor>$VAR[TextColor]</textcolor>
							<label>$VAR[BillboardPlot]</label>
							<visible>Skin.HasSetting(EnableFlags) + !Container.Content(artists)</visible>
						</control>
						<control type="textbox">
							<left>50</left>
							<bottom>50</bottom>
							<width>1820</width>
							<height>100</height>
							<font>Light27</font>
							<textcolor>$VAR[TextColor]</textcolor>
							<label>$VAR[BillboardPlot]</label>
							<visible>!Skin.HasSetting(EnableFlags) | [Skin.HasSetting(EnableFlags) + Container.Content(artists)]</visible>
						</control>
						<include condition="Skin.HasSetting(EnableFlags)">Flags</include>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>