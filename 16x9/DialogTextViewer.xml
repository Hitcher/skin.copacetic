<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- textviewer -->
	<defaultcontrol always="true">61</defaultcontrol>
	<include>Dialog_Fade_Animation</include>

	<controls>

		<control type="group">
			<visible>!Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<include content="Breadcrumb_Label">
				<param name="title_label_id" value="1"/>
				<param name="left" value="90"/>
				<param name="label_color" value="$VAR[Light_Color]"/>
				<param name="info_label_visible" value="false"/>
			</include>

			<control type="textbox" id="5">
				<left>120</left>
				<right>120</right>
				<height>645</height>
				<centertop>50%</centertop>
				<aligny>left</aligny>
				<font>Description</font>
				<textcolor>$VAR[Light_Color]</textcolor>
				<pagecontrol>61</pagecontrol>
				<autoscroll>false</autoscroll>
			</control>

			<control type="scrollbar" id="61">
				<visible allowhiddenfocus="true">true</visible>
				<right>26</right>
				<width>6</width>
				<centertop>50%</centertop>
				<height>720</height>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<texturesliderbackground colordiffuse="$VAR[Scroll_Background_Color]">views/white_100.png</texturesliderbackground>
				<texturesliderbar/>
				<texturesliderbarfocus colordiffuse="$VAR[Light_Color]">views/white_100.png</texturesliderbarfocus>
				<textureslidernib></textureslidernib>
				<textureslidernibfocus></textureslidernibfocus>
			</control>

		</control>

	</controls>
</window>
