<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Widget_Container_Content_Path">
		<param name="limit" default="20"/>
		<definition>
			<content target="$PARAM[target]" sortby="$PARAM[sortby]" sortorder="$PARAM[sortorder]" limit="$PARAM[limit]">$PARAM[content]</content>
		</definition>
	</include>

	<variable name="TMDBHelper_Default_Params">
			<value>limit=50&amp;fanarttv=false</value>
	</variable>

	<variable name="Path_MovieSet">
		<value condition="System.HasAddon(plugin.video.themoviedb.helper) + String.Contains(ListItem.Path,themoviedb.helper) + !String.IsEmpty(ListItem.Set)">plugin://plugin.video.themoviedb.helper?info=collection&amp;type=movie&amp;query=$INFO[ListItem.Set]&amp;$VAR[TMDBHelper_Default_Params]</value>
		<value>videodb://movies/titles/?setid=$INFO[ListItem.SetID]</value>
	</variable>

	<variable name="Path_Seasons">
		<value condition="System.HasAddon(plugin.video.themoviedb.helper) + String.Contains(ListItem.Path,themoviedb.helper) + String.IsEqual(ListItem.DBType,tvshow) + !String.IsEmpty(ListItem.TVShowTitle)">plugin://plugin.video.themoviedb.helper?info=seasons&amp;type=tv&amp;query='$ESCINFO[ListItem.TVShowTitle]'&amp;year=$INFO[ListItem.Year]&amp;$VAR[TMDBHelper_Default_Params]</value>
		<value condition="System.HasAddon(plugin.video.themoviedb.helper) + String.Contains(ListItem.Path,themoviedb.helper) + String.IsEqual(ListItem.DBType,episode) + !String.IsEmpty(ListItem.TVShowTitle)">plugin://plugin.video.themoviedb.helper?info=episodes&amp;type=tv&amp;query='$ESCINFO[ListItem.TVShowTitle]'&amp;season=$INFO[ListItem.Season]&amp;year=$INFO[ListItem.Year]&amp;$VAR[TMDBHelper_Default_Params]</value>
		<value condition="String.IsEqual(ListItem.DBType,tvshow) + Integer.IsGreater(ListItem.DBID,0)">videodb://tvshows/titles/$INFO[ListItem.DBID]/</value>
		<value condition="String.IsEqual(ListItem.DBType,episode) + Integer.IsGreater(ListItem.DBID,0)">videodb://tvshows/titles/$INFO[ListItem.TVShowDBID]/</value>
	</variable>

	<variable name="Path_ActorCredits">
		<value condition="System.HasAddon(plugin.video.themoviedb.helper) + String.Contains(ListItem.Path,themoviedb.helper) + String.IsEqual(ListItem.DBType,movie) + !String.IsEmpty(Container(50).ListItem.Label)">plugin://plugin.video.themoviedb.helper?info=stars_in_movies&amp;type=person&amp;query=$INFO[Container(50).ListItem.Label]&amp;exclude_key=title&amp;exclude_value=$INFO[ListItem.Title]&amp;$VAR[TMDBHelper_Default_Params]</value>
		<value condition="System.HasAddon(plugin.video.themoviedb.helper) + String.Contains(ListItem.Path,themoviedb.helper) + String.IsEqual(ListItem.DBType,tvshow) + !String.IsEmpty(Container(50).ListItem.Label)">plugin://plugin.video.themoviedb.helper?info=stars_in_tvshows&amp;type=person&amp;query=$INFO[Container(50).ListItem.Label]&amp;exclude_key=title&amp;exclude_value=$INFO[ListItem.Title]&amp;$VAR[TMDBHelper_Default_Params]</value>
		<value condition="System.HasAddon(script.embuary.helper) + Integer.IsGreater(ListItem.DBID,0)">plugin://script.embuary.helper/?info=getitemsbyactor&amp;label='$ESCINFO[Container(50).ListItem.Label]'</value>
		<value condition="String.IsEqual(ListItem.DBType,movie) + Integer.IsGreater(ListItem.DBID,0)">videodb://movies/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22actor%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B%22$INFO[Container(50).ListItem.Label]%22%5D%7D%5D%7D%2C%22type%22%3A%22movies%22%7D</value>
		<value condition="String.IsEqual(ListItem.DBType,tvshow) + Integer.IsGreater(ListItem.DBID,0)">videodb://tvshows/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22actor%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B%22$INFO[Container(50).ListItem.Label]%22%5D%7D%5D%7D%2C%22type%22%3A%22tvshows%22%7D</value>
	</variable>

	<variable name="Path_DirectorCredits">
		<value condition="System.HasAddon(plugin.video.themoviedb.helper) + String.Contains(ListItem.Path,themoviedb.helper) + !String.IsEmpty(ListItem.Property(Director.1.Name))">plugin://plugin.video.themoviedb.helper?info=crew_in_movies&amp;type=person&amp;query='$ESCINFO[ListItem.Property(Director.1.Name)]'&amp;filter_key=job&amp;filter_value=Director&amp;exclude_key=title&amp;exclude_value=$INFO[ListItem.Title]&amp;$VAR[TMDBHelper_Default_Params]</value>
		<value>videodb://movies/titles/?xsp=%7b%22rules%22%3a%7b%22and%22%3a%5b%7b%22field%22%3a%22director%22%2c%22operator%22%3a%22is%22%2c%22value%22%3a%5b$ESCINFO[ListItem.Director]%5d%7d%5d%7d%2c%22type%22%3a%22movies%22%7d</value>
	</variable>

	<variable name="Path_Discography">
		<value condition="String.IsEqual(ListItem.DBType,artist)">musicdb://albums/?artistid=$INFO[ListItem.DBID]</value>
		<value condition="String.IsEqual(ListItem.DBType,album)">musicdb://albums/?xsp=%7b%22rules%22%3a%7b%22and%22%3a%5b%7b%22field%22%3a%22artist%22%2c%22operator%22%3a%22is%22%2c%22value%22%3a%5b$ESCINFO[ListItem.AlbumArtist]%5d%7d%5d%7d%2c%22type%22%3a%22albums%22%7d</value>
		<value condition="String.IsEqual(ListItem.DBType,song)">musicdb://albums/?xsp=%7b%22rules%22%3a%7b%22and%22%3a%5b%7b%22field%22%3a%22artist%22%2c%22operator%22%3a%22is%22%2c%22value%22%3a%5b$ESCINFO[ListItem.Artist]%5d%7d%5d%7d%2c%22type%22%3a%22albums%22%7d</value>
	</variable>

	<variable name="Path_Similar">
		<value condition="System.HasAddon(script.embuary.helper) + Integer.IsGreater(ListItem.DBID,0) + String.IsEqual(ListItem.DBType,movie)">plugin://script.embuary.helper/?info=getsimilar&amp;dbid=$INFO[ListItem.DBID]&amp;type=movie</value>
		<value condition="System.HasAddon(script.embuary.helper) + Integer.IsGreater(ListItem.DBID,0) + String.IsEqual(ListItem.DBType,tvshow)">plugin://script.embuary.helper/?info=getsimilar&amp;dbid=$INFO[ListItem.DBID]&amp;type=tvshow</value>
		<value condition="System.HasAddon(script.embuary.helper) + Integer.IsGreater(ListItem.DBID,0) + String.IsEqual(ListItem.DBType,episode)">plugin://script.embuary.helper/?info=getsimilar&amp;dbid=$INFO[ListItem.TVShowDBID]&amp;type=tvshow</value>
		<value condition="System.HasAddon(plugin.video.themoviedb.helper) + String.Contains(ListItem.Path,themoviedb.helper) + !String.IsEmpty(ListItem.IMDBNumber) + !String.IsEmpty(ListItem.Episode)">plugin://plugin.video.themoviedb.helper?info=similar&amp;type=movie&amp;imdb_id=$INFO[ListItem.IMDBNumber]&amp;$VAR[TMDBHelper_Default_Params]</value>
		<!--<value condition="!String.IsEmpty(ListItem.Property(Genre.1.Name)) + !String.IsEmpty(ListItem.MPAA) + !String.IsEmpty(ListItem.Episode)">videodb://tvshows/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22contains%22%2C%22value%22%3A%5B$ESCINFO[ListItem.Property(Genre.1.Name)]%5D%7D%2C%7B%22field%22%3A%22mpaarating%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B%22$INFO[ListItem.MPAA]%22%5D%7D%5D%7D%2C%22type%22%3A%22tvshows%22%7D%0A</value>-->
		<value condition="!String.IsEmpty(ListItem.Property(Genre.1.Name)) + !String.IsEmpty(ListItem.Episode)">videodb://tvshows/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B$ESCINFO[ListItem.Property(Genre.1.Name)]%5D%7D%5D%7D%2C%22type%22%3A%22tvshows%22%7D</value>
		<!--<value condition="!String.IsEmpty(ListItem.Property(Genre.1.Name)) + !String.IsEmpty(ListItem.MPAA)">videodb://movies/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22contains%22%2C%22value%22%3A%5B$ESCINFO[ListItem.Property(Genre.1.Name)]%5D%7D%2C%7B%22field%22%3A%22mpaarating%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B%22$INFO[ListItem.MPAA]%22%5D%7D%5D%7D%2C%22type%22%3A%22movies%22%7D%0A</value>-->
		<value condition="!String.IsEmpty(ListItem.Property(Genre.1.Name))">videodb://movies/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B$ESCINFO[ListItem.Property(Genre.1.Name)]%5D%7D%5D%7D%2C%22type%22%3A%22movies%22%7D</value>
		<!--<value condition="!String.IsEmpty(Window(home).Property(GenreSplit.0)) + !String.IsEmpty(ListItem.MPAA) + !String.IsEmpty(ListItem.Episode)">videodb://tvshows/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22contains%22%2C%22value%22%3A%5B$ESCINFO[Window(home).Property(GenreSplit.0)]%5D%7D%2C%7B%22field%22%3A%22mpaarating%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B%22$INFO[ListItem.MPAA]%22%5D%7D%5D%7D%2C%22type%22%3A%22tvshows%22%7D%0A</value>-->
		<value condition="!String.IsEmpty(Window(home).Property(GenreSplit.0)) + !String.IsEmpty(ListItem.Episode)">videodb://tvshows/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B$ESCINFO[Window(home).Property(GenreSplit.0)]%5D%7D%5D%7D%2C%22type%22%3A%22tvshows%22%7D</value>
		<!--<value condition="!String.IsEmpty(Window(home).Property(GenreSplit.0)) + !String.IsEmpty(ListItem.MPAA)">videodb://movies/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22contains%22%2C%22value%22%3A%5B$ESCINFO[Window(home).Property(GenreSplit.0)]%5D%7D%2C%7B%22field%22%3A%22mpaarating%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B%22$INFO[ListItem.MPAA]%22%5D%7D%5D%7D%2C%22type%22%3A%22movies%22%7D%0A</value>-->
		<value condition="!String.IsEmpty(Window(home).Property(GenreSplit.0))">videodb://movies/titles/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22genre%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B$ESCINFO[Window(home).Property(GenreSplit.0)]%5D%7D%5D%7D%2C%22type%22%3A%22movies%22%7D</value>
	</variable>

	<variable name="CustomContent_Similar_MPAA">
		<value condition="String.IsEqual(ListItem.MPAA,U) | String.IsEqual(ListItem.MPAA,PG)">U</value>
		<value condition="String.IsEqual(ListItem.MPAA,12A)">PG</value>
		<value condition="String.IsEqual(ListItem.MPAA,15) | String.IsEqual(ListItem.MPAA,18) | String.IsEqual(ListItem.MPAA,X)">15</value>
	</variable>

</includes>
