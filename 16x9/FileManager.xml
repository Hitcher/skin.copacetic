<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- filemanager -->
	<defaultcontrol always="true">20</defaultcontrol>
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<include>DialogFanartSlideshow</include>

		<!-- On Previous Delay -->
		<control type="group" id="5001">
			<visible>Container(20).OnPrevious + Integer.IsGreater(Container(20).NumItems,1)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!-- On Next Delay -->
		<control type="group" id="5002">
			<visible>Container(20).OnNext + Integer.IsGreater(Container(20).NumItems,1)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!-- On Previous Delay -->
		<control type="group" id="5003">
			<visible>Container(21).OnPrevious + Integer.IsGreater(Container(21).NumItems,1)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<!-- On Next Delay -->
		<control type="group" id="5004">
			<visible>Container(21).OnNext + Integer.IsGreater(Container(21).NumItems,1)</visible>
			<animation effect="slide" end="0,0" time="360" reversible="false">Hidden</animation>
		</control>

		<control type="group">
			<visible>!$EXP[TransparentDialog_ExcludingContextMenu]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<include content="DialogDivider">
				<param name="left" value="960"/>
			</include>
			<control type="image">
				<visible>Control.HasFocus(20)</visible>
				<left>120</left>
				<right>960</right>
				<top>240</top>
				<height>30</height>
				<texture border="2,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_focused.png</texture>
			</control>
			<control type="image">
				<visible>Control.HasFocus(21)</visible>
				<left>960</left>
				<right>120</right>
				<top>240</top>
				<height>30</height>
				<texture border="2,2,2,2" colordiffuse="$VAR[Unfocused_Color]">dialogs/button_underline_focused.png</texture>
			</control>

			<include content="Breadcrumb_Label"/>

			<!-- Left Side -->
			<control type="group">
				<visible>![Window.IsVisible(contextmenu) + String.IsEqual(Window(filemanager).Property(ActiveList),Right)]</visible>
				<include>Delayed_Content_Fade_Animation</include>

				<include content="Breadcrumb_Label">
					<param name="title_label_id" value="101"/>
					<param name="left" value="120"/>
					<param name="right" value="1020"/>
					<param name="top" value="195"/>
					<param name="info_label" value="$INFO[Container(20).NumItems,/ , items]"/>
					<param name="maxtitlelabelwidth" value="600"/>
					<param name="maxinfolabelwidth" value="240"/>
					<param name="haspath" value="true"/>
				</include>

				<include content="Simple_List">
					<param name="id" value="20"/>
					<param name="left" value="120"/>
					<param name="right" value="1140"/>
					<param name="labelmaxwidth" value="600"/>
					<param name="selectedcolor" value="$VAR[Light_Color]"/>
					<param name="include" value="FileManager_Left_List"/>
				</include>

				<include content="List_Info_Label">
					<param name="visible" value="![Control.IsVisible(5001) | Control.IsVisible(5002)] + Control.HasFocus(20)"/>
					<param name="visibleanimation" value="Delayed_Content_Fade_Animation"/>
					<param name="width" value="780"/>
					<param name="hiddenlabel" value="$INFO[Container(20).ListItem.Label]"/>
					<param name="hiddenlabelmaxwidth" value="600"/>
					<param name="infolabel" value="$INFO[Container(20).ListItem.Label2,/ ]"/>
					<param name="infolabelwidth" value="240"/>
				</include>

			</control>

			<!-- Right Side -->
			<control type="group">
				<visible>![Window.IsVisible(contextmenu) + String.IsEqual(Window(filemanager).Property(ActiveList),Left)]</visible>
				<include>Delayed_Content_Fade_Animation</include>

				<include content="Breadcrumb_Label">
					<param name="title_label_id" value="102"/>
					<param name="left" value="1020"/>
					<param name="right" value="120"/>
					<param name="top" value="195"/>
					<param name="info_label" value="$INFO[Container(21).NumItems,/ , items]"/>
					<param name="maxtitlelabelwidth" value="600"/>
					<param name="maxinfolabelwidth" value="240"/>
					<param name="haspath" value="true"/>
				</include>

				<include content="Simple_List">
					<param name="id" value="21"/>
					<param name="left" value="1020"/>
					<param name="right" value="120"/>
					<param name="labelmaxwidth" value="600"/>
					<param name="selectedcolor" value="$VAR[Light_Color]"/>
					<param name="include" value="FileManager_Right_List"/>
				</include>

				<include content="List_Info_Label">
					<param name="visible" value="![Control.IsVisible(5003) | Control.IsVisible(5004)] + Control.HasFocus(21)"/>
					<param name="visibleanimation" value="Delayed_Content_Fade_Animation"/>
					<param name="width" value="780"/>
					<param name="left" value="1020"/>
					<param name="hiddenlabel" value="$INFO[Container(21).ListItem.Label]"/>
					<param name="hiddenlabelmaxwidth" value="600"/>
					<param name="infolabel" value="$INFO[Container(21).ListItem.Label2,/ ]"/>
					<param name="infolabelwidth" value="240"/>
				</include>

			</control>

			<include content="ButtonGroup">
				<param name="onleft" value="21"/>
				<param name="onup" value="21"/>
				<param name="onright" value="20"/>
				<param name="buttonsvisible" value="true"/>
				<param name="button1visible" value="true"/>
				<param name="button1id" value="301"/>
				<param name="button1onclick" value="Close"/>
			</include>

		</control>

	</controls>
</window>
