<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- filemanager -->
	<backgroundcolor>$VAR[Secondary_Color]</backgroundcolor>
	<include>SettingsCategory_Fade_Animation</include>
	<defaultcontrol always="true">3000011</defaultcontrol>
	<controls>

		<!-- Hidden controls -->
		<control type="label" id="101">
			<visible>false</visible>
		</control>
		<control type="label" id="102">
			<visible>false</visible>
		</control>

		<include condition="System.HasAddon(script.embuary.helper)" content="Settings_Fanart_Slideshow"/>

		<!-- Content -->
		<control type="group">
			<visible>!$EXP[TransparentDialog_ExcludingContextMenu]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="left" value="180"/>
				<param name="top" value="180"/>
				<param name="bottom" value="180"/>
			</include>

			<include content="SettingsCategory_Layout">
				<param name="mainlist" value="20"/>
				<param name="sublist" value="21"/>
			</include>

			<control type="group">
				<visible>!Control.HasFocus(3000010)</visible>
				<include>Delayed_Content_Fade_Animation</include>

				<include content="DialogDivider">
					<param name="left" value="1020"/>
					<param name="height" value="630"/>
				</include>

				<!-- Left Side -->
				<control type="label">
					<left>240</left>
					<width>720</width>
					<top>120</top>
					<height>60</height>
					<label>$INFO[Control.GetLabel(101)]$INFO[Container(20).NumItems,... , $LOCALIZE[31001]]</label>
					<haspath>true</haspath>
					<textcolor>$VAR[Light_Color]</textcolor>
				</control>

				<control type="group">
					<visible>![Window.IsVisible(contextmenu) + String.IsEqual(Window(filemanager).Property(ActiveList),Right)]</visible>
					<include>Delayed_Content_Fade_Animation</include>

					<include content="Settings_Scrollbar">
						<param name="id" value="60"/>
						<param name="visible" value="Control.HasFocus(20)"/>
						<param name="left" value="1015"/>
					</include>

					<control type="list" id="20">
						<left>180</left>
						<width>840</width>
						<height>630</height>
						<centertop>50%</centertop>
						<itemgap>0</itemgap>
						<onleft>3000011</onleft>
						<onright>21</onright>
						<orientation>vertical</orientation>
						<align>top</align>
						<pagecontrol>60</pagecontrol>
						<scrolltime tween="sine" easing="inout">360</scrolltime>
						<itemlayout height="90" width="840">
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<label>$INFO[ListItem.Label]</label>
								<textcolor>$VAR[Unfocused_Color]</textcolor>
							</control>
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<align>right</align>
								<label>$INFO[ListItem.Label2]</label>
								<textcolor>$VAR[Unfocused_Color]</textcolor>
							</control>
						</itemlayout>
						<focusedlayout height="90" width="840">
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<label>$INFO[ListItem.Label]</label>
								<textcolor>$VAR[FileManager_Left_List_Label_Color]</textcolor>
							</control>
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<align>right</align>
								<label>$INFO[ListItem.Label2]</label>
								<textcolor>$VAR[FileManager_Left_List_Label_Color]</textcolor>
							</control>
							<control type="image">
								<visible>Control.HasFocus(20)</visible>
								<left>60</left>
								<right>0</right>
								<height>1</height>
								<bottom>0</bottom>
								<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
							</control>
						</focusedlayout>
					</control>
				</control>

				<!-- Right Side -->
				<control type="label">
					<left>1080</left>
					<width>720</width>
					<top>120</top>
					<height>60</height>
					<label>$INFO[Control.GetLabel(102)]$INFO[Container(21).NumItems,... , $LOCALIZE[31001]]</label>
					<haspath>true</haspath>
					<textcolor>$VAR[Light_Color]</textcolor>
				</control>

				<control type="group">
					<visible>![Window.IsVisible(contextmenu) + String.IsEqual(Window(filemanager).Property(ActiveList),Left)]</visible>
					<include>Delayed_Content_Fade_Animation</include>

					<include content="Settings_Scrollbar">
						<param name="id" value="61"/>
						<param name="visible" value="Control.HasFocus(21)"/>
						<param name="left" value="1020"/>
					</include>

					<control type="list" id="21">
						<left>1020</left>
						<width>840</width>
						<height>630</height>
						<centertop>50%</centertop>
						<itemgap>0</itemgap>
						<onleft>20</onleft>
						<onright>3000011</onright>
						<orientation>vertical</orientation>
						<align>top</align>
						<pagecontrol>61</pagecontrol>
						<scrolltime tween="sine" easing="inout">360</scrolltime>
						<itemlayout height="90" width="840">
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<label>$INFO[ListItem.Label]</label>
								<textcolor>$VAR[Unfocused_Color]</textcolor>
							</control>
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<align>right</align>
								<label>$INFO[ListItem.Label2]</label>
								<textcolor>$VAR[Unfocused_Color]</textcolor>
							</control>
						</itemlayout>
						<focusedlayout height="90" width="840">
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<label>$INFO[ListItem.Label]</label>
								<textcolor>$VAR[FileManager_Right_List_Label_Color]</textcolor>
							</control>
							<control type="label">
								<textoffsetx>60</textoffsetx>
								<align>right</align>
								<label>$INFO[ListItem.Label2]</label>
								<textcolor>$VAR[FileManager_Right_List_Label_Color]</textcolor>
							</control>
							<control type="image">
								<visible>Control.HasFocus(21)</visible>
								<left>0</left>
								<right>60</right>
								<height>1</height>
								<bottom>0</bottom>
								<texture colordiffuse="$VAR[Unfocused_Color]">views/white_100.png</texture>
							</control>
						</focusedlayout>
					</control>

				</control>

			</control>
		</control>

	</controls>
</window>
