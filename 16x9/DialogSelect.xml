<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- selectdialog -->
	<onload condition="String.IsEqual(Window(home).Property(SelectDialog),Active)">SetProperty(SelectDialog,Active2,home)</onload>
	<onload condition="String.IsEmpty(Window(home).Property(SelectDialog))">SetProperty(SelectDialog,Active,home)</onload>
	<onunload condition="String.IsEqual(Window(home).Property(SelectDialog),Active)">ClearProperty(SelectDialog,home)</onunload>
	<onunload condition="String.IsEqual(Window(home).Property(SelectDialog),Active2)">SetProperty(SelectDialog,Active,home)</onunload>
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<include content="Delay_Content_Load">
			<param name="id" value="9001"/>
			<param name="time" value="360"/>
			<param name="target_id" value="SetFocus(9012)"/>
		</include>

		<control type="button" id="9012">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Control.IsVisible(3)">SetFocus(3)</onfocus>
			<onfocus condition="Control.IsVisible(6)">SetFocus(6)</onfocus>
		</control>

		<control type="group">
			<visible>!Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<control type="group">
				<visible>!Control.HasFocus(9001)</visible>
				<include>Content_Fade_Animation</include>
				<include content="Transparent_Dialog_Panel">
					<param name="top" value="235"/>
					<param name="bottom" value="235"/>
				</include>
			</control>

				<control type="group">
					<visible>!Control.HasFocus(9001)</visible>
					<include>Long_Delayed_Content_Fade_Animation</include>
					<include content="Breadcrumb_Label">
						<param name="visible" value="true"/>
						<param name="title_label_id" value="1"/>
						<param name="info_label_visible" value="false"/>
					</include>

					<include content="Description_Label">
						<param name="label" value="$INFO[Container(6).ListItem.Label2]"/>
					</include>

				<include content="SimpleListIcon">
				 <param name="visible" value="Control.IsVisible(6)"/>
					<param name="top" value="180"/>
					<param name="width" value="720"/>
					<param name="height" value="720"/>
					<param name="fallback" value=""/>
					<param name="align" value="right"/>
					<param name="aspectratio" value="keep"/>
					<param name="texture" value="$VAR[DialogSelect_Artwork]"/>
				</include>

				<include content="Simple_List">
					<param name="id" value="3"/>
					<param name="left" value="360"/>
					<param name="right" value="360"/>
					<param name="labelmaxwidth" value="1210"/>
				</include>

				<include content="Simple_List">
					<param name="id" value="6"/>
				</include>

				<include content="Button_Group_Template">
					<param name="onleft" value="9012"/>
					<param name="icons" value="true"/>
					<param name="button1" value="Window.Is(selectdialog)"/>
					<param name="button1id" value="8"/>
					<param name="button1texture" value="Plus"/>
					<param name="button2" value="true"/>
					<param name="button2id" value="5"/>
					<param name="button2texture" value="Plus"/>
					<param name="button2alttexture" value="Check"/>
					<param name="button2usealttexture" value="String.IsEqual(Control.GetLabel(5),$LOCALIZE[186])"/>
					<param name="button3" value="true"/>
					<param name="button3id" value="7"/>
					<param name="button3texture" value="Cross"/>
				</include>

			</control>
		</control>
	</controls>
</window>
