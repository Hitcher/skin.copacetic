<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- selectdialog -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>

		<control type="button" id="9001">
			<visible allowhiddenfocus="true">false</visible>
			<onfocus condition="Control.IsVisible(3)">SetFocus(3,0,absolute)</onfocus>
			<onfocus condition="Control.IsVisible(6)">SetFocus(6,0,absolute)</onfocus>
		</control>

		<control type="group">
			<visible>!Window.IsVisible(shutdownmenu)</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
				<param name="top" value="235"/>
				<param name="bottom" value="235"/>
			</include>

			<include content="Breadcrumb_Label">
				<param name="visible" value="true"/>
				<param name="title_label_id" value="1"/>
				<param name="info_label_visible" value="false"/>
			</include>

			<include content="Description_Label">
				<param name="label" value="$INFO[Container(6).ListItem.Label2]"/>
			</include>

			<include content="SimpleListIcon">
				<param name="top" value="180"/>
				<param name="width" value="720"/>
				<param name="height" value="720"/>
				<param name="visible" value="Control.IsVisible(6)"/>
				<param name="fallback" value=""/>
				<param name="align" value="right"/>
				<param name="aspectratio" value="keep"/>
				<param name="texture" value="$INFO[Container(6).ListItem.Icon]"/>
			</include>

			<include content="Simple_List">
				<param name="id" value="3"/>
			</include>

			<include content="Simple_List">
				<param name="id" value="6"/>
			</include>

			<include content="ButtonGroup">
				<param name="visible" value="!Window.IsVisible(favourites) + !String.Contains(Control.GetLabel(5),$LOCALIZE[186])"/>
				<param name="onleft" value="3"/>
				<param name="onright" value="3"/>
				<param name="onup" value="3"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="8"/>
				<param name="button1texture" value="Cross"/>
				<param name="button2id" value="5"/>
				<param name="button2texture" value="Plus"/>
				<param name="button3id" value="7"/>
				<param name="button3" value="true"/>
				<param name="button3texture" value="Cross"/>
			</include>

			<include content="ButtonGroup">
				<param name="visible" value="!Window.IsVisible(favourites) + String.Contains(Control.GetLabel(5),$LOCALIZE[186])"/>
				<param name="onleft" value="3"/>
				<param name="onright" value="3"/>
				<param name="onup" value="3"/>
				<param name="icons" value="true"/>
				<param name="button1" value="true"/>
				<param name="button1id" value="7"/>
				<param name="button1texture" value="Cross"/>
				<param name="button2" value="true"/>
				<param name="button2id" value="5"/>
				<param name="button2texture" value="Check"/>
			</include>

		</control>
	</controls>
</window>
