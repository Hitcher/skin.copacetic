<?xml version="1.0" encoding="UTF-8"?>
	<window>
		<!-- shutdownmenu -->
		<defaultcontrol always="true">9000</defaultcontrol>
		<include content="WindowOpenClose_Fade_Delayed_Animation"/>
		<controls>
			<include content="Horizontal_List">
				<param name="hidden_id" value="9000"/>
				<param name="focused_color" value="$VAR[Shutdownmenu_Label_Color]"/>
				<param name="unfocused_color" value="$VAR[Shutdownmenu_Label_Color]"/>
			</include>
			<include content="Clock"/>
			<include content="Hidden_Components">
				<control type="list" id="9000">
					<visible allowhiddenfocus="true">false</visible>
					<viewtype label="535">list</viewtype>
					<onup>Close</onup>
					<ondown>Close</ondown>
					<width>1680</width>
					<onleft>0</onleft>
					<onright>0</onright>
					<orientation>horizontal</orientation>
					<itemlayout width="100"/>
					<focusedlayout width="100"/>
					<content>
						<item>
							<description>Home</description>
							<label>$LOCALIZE[31211]</label>
							<onclick>Dialog.Close(all)</onclick>
							<onclick>ActivateWindow(home)</onclick>
							<visible>!Window.IsVisible(home) + !Window.IsVisible(loginscreen)</visible>
						</item>
						<item>
							<description>Night Mode</description>
							<label>$LOCALIZE[31209]</label>
							<onclick>Skin.SetString(Theme,Light)</onclick>
							<visible>Skin.String(Theme,Dark) | String.IsEmpty(Skin.String(Theme))</visible>
						</item>
						<item>
							<description>Light Mode</description>
							<label>$LOCALIZE[31210]</label>
							<onclick>Skin.SetString(Theme,Dark)</onclick>
							<visible>Skin.String(Theme,Light)</visible>
						</item>
						<item>
							<description>Settings</description>
							<label>$LOCALIZE[5]</label>
							<onclick>Dialog.Close(all)</onclick>
							<onclick>ActivateWindow(Settings)</onclick>
							<visible>!Window.IsVisible(loginscreen) + !Window.IsVisible(skinsettings) + !$EXP[Settings_IsVisible]</visible>
						</item>
						<item>
							<description>Addons</description>
							<label>$LOCALIZE[24001]</label>
							<onclick>Dialog.Close(all)</onclick>
							<onclick>ActivateWindow(addonbrowser)</onclick>
							<visible>!Window.IsVisible(loginscreen) + !Window.IsVisible(addonbrowser)</visible>
						</item>
						<item>
							<description>Exit</description>
							<label>$LOCALIZE[13012]</label>
							<onclick>Quit</onclick>
						</item>
						<!--<include>skinshortcuts-group-shutdownmenu</include>-->
					</content>
				</control>
			</include>
		</controls>
	</window>
