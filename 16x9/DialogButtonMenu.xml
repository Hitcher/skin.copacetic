<?xml version="1.0" encoding="UTF-8"?>
	<window>
		<!-- shutdownmenu -->
		<defaultcontrol always="true">9001</defaultcontrol>
		<include>Dialog_Fade_Animation</include>
		<controls>

			<!-- Delay content on Load -->
			<include content="Delay_Content_Load">
				<param name="id" value="9001"/>
				<param name="time" value="360"/>
				<param name="target_id" value="SetFocus(6002,0,absolute)"/>
			</include>

			<!-- Hidden List -->
			<control type="list" id="6002">
				<viewtype label="535">list</viewtype>
				<onup>Close</onup>
				<ondown>Close</ondown>
				<width>800</width>
				<onleft>0</onleft>
				<onright>0</onright>
				<orientation>horizontal</orientation>
				<itemlayout width="100"/>
				<focusedlayout width="100"/>
				<content>
					<item>
						<description>Home</description>
						<label>$LOCALIZE[31211]</label>
						<onclick>Dialog.Close(all)</onclick>
						<onclick>ActivateWindow(home)</onclick>
						<visible>!Window.IsActive(home) + !Window.IsVisible(loginscreen)</visible>
					</item>
					<item>
						<description>Night Mode</description>
						<label>$LOCALIZE[31209]</label>
						<onclick>Skin.SetString(Theme,Light)</onclick>
						<visible>Skin.String(Theme,Dark) | String.IsEmpty(Skin.String(Theme))</visible>
					</item>
					<item>
						<description>Light Mode</description>
						<label>$LOCALIZE[31210]</label>
						<onclick>Skin.SetString(Theme,Dark)</onclick>
						<visible>Skin.String(Theme,Light)</visible>
					</item>
					<item>
						<description>Settings</description>
						<label>$LOCALIZE[5]</label>
						<onclick>Dialog.Close(all)</onclick>
						<onclick>ActivateWindow(Settings)</onclick>
						<visible>!Window.IsVisible(loginscreen) + !Window.IsVisible(skinsettings) + !$EXP[Settings_IsVisible]</visible>
					</item>
					<item>
						<description>Sign out</description>
						<label>$LOCALIZE[31212]</label>
						<onclick>dialog.close(all,true)</onclick>
						<onclick>System.LogOff</onclick>
						<visible>System.HasLoginScreen | Integer.IsGreater(System.ProfileCount,1)</visible>
						<visible>System.Loggedon</visible>
					</item>
					<item>
						<description>MasterProfile</description>
						<label>$LOCALIZE[20046]</label>
						<altlabel>$LOCALIZE[20045]</altlabel>
						<usealttexture>!System.IsMaster</usealttexture>
						<onclick>Mastermode</onclick>
						<visible>System.HasLocks</visible>
					</item>
					<item>
						<description>Sleep</description>
						<label>$LOCALIZE[31214]</label>
						<onclick>Suspend</onclick>
						<visible>System.CanSuspend</visible>
					</item>
					<item>
						<description>Reset</description>
						<label>$LOCALIZE[31215]</label>
						<onclick>Dialog.Close(all)</onclick>
						<onclick>Reset</onclick>
						<visible>System.CanReboot</visible>
					</item>
					<item>
						<description>Power</description>
						<label>$LOCALIZE[31216]</label>
						<onclick>Powerdown</onclick>
						<visible>System.CanPowerDown</visible>
					</item>
					<item>
						<description>Exit</description>
						<label>$LOCALIZE[13012]</label>
						<onclick>Quit</onclick>
					</item>
				</content>
			</control>

			<!-- Content -->
			<control type="group">
				<visible>Window.IsActive(shutdownmenu)</visible>
				<control type="group">
					<visible>!Control.HasFocus(9001)</visible>
					<include>Content_Fade_Animation</include>
					<include content="Clock"/>
					<include content="DummyHorizontalList">
						<param name="dummyid" value="6003"/>
						<param name="hiddenid" value="6002"/>
						<param name="focusedtextcolor" value="$VAR[Light_Color]"/>
						<param name="unfocusedtextcolor" value="$VAR[Light_Color]"/>
					</include>
				</control>
			</control>


		</controls>
	</window>
