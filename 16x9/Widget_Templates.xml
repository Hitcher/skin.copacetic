	<include name="Info_Widget_Template">
		<param name="use_custom_content" default="true"/>
		<param name="use_custom_click" default="true"/>
		<param name="min_items" default="2"/>
		<param name="bypass_min_items" default="false"/>
		<param name="id" default="8000"/>
		<definition>
			<include content="Widget_List">
				<param name="min_items" value="$PARAM[min_items]"/>
				<param name="bypass_min_items" value="$PARAM[bypass_min_items]"/>
				<param name="widget_type" value="Info_Widget"/>
				<param name="id" value="$PARAM[id]"/>
				<param name="focus_button" value="HiddenFocusButton"/>
				<param name="use_custom_content" value="$PARAM[use_custom_content]"/>
				<param name="target" value="$PARAM[target]"/>
				<param name="sortby" value="$PARAM[sortby]"/>
				<param name="sortorder" value="$PARAM[sortorder]"/>
				<param name="content" value="$PARAM[content]"/>
				<param name="limit" value="$PARAM[limit]"/>
				<param name="use_custom_click" value="$PARAM[use_custom_click]"/>
				<param name="click_action" value="$PARAM[click_action]"/>
			</include>
			<!-- Art -->
			<control type="group">
				<visible>Control.HasFocus($PARAM[id]) + !Container($PARAM[id]).IsUpdating</visible>
				<animation effect="slide" start="0" end="0,660" time="0" condition="Control.HasFocus($PARAM[id])">Conditional</animation>
				<animation effect="slide" start="0" end="0,-660" time="180" tween="sine" easing="inout" reversible="false" condition="Control.HasFocus($PARAM[id])">Conditional</animation>
				<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="inout" reversible="false" condition="Control.HasFocus($PARAM[id])">Conditional</animation>
				<include content="$PARAM[widget_view]View_Art_$PARAM[widget_display]">
					<param name="target_id" value="$PARAM[id]"/>
					<param name="art_icon" value="Widget_$PARAM[widget_display]_Thumbnail"/>
					<param name="show_breadcrumb_overlay" value="true"/>
				</include>
			</control>
			<!-- Breadcrumb -->
			<control type="group">
				<animation effect="fade" start="0" end="100" time="360" delay="540" tween="sine" easing="inout" reversible="false" condition="$EXP[InfoWidget_HasFocus]">Conditional</animation>
				<visible>Control.HasFocus($PARAM[id]) + !$EXP[TransparentDialog_IsVisible]</visible>
				<include content="Breadcrumb_Label">
					<param name="title_label" value="$PARAM[widget_header]"/>
					<param name="info_label" value="$PARAM[widget_info]"/>
					<param name="label_color" value="$VAR[Breadcrumb_Label_Color]"/>
				</include>
			</control>
			<!-- Details -->
			<control type="group">
				<visible>Control.HasFocus($PARAM[id]) + !Container($PARAM[id]).IsUpdating + !$EXP[TransparentDialog_IsVisible]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<include content="$PARAM[widget_view]View_Details">
					<param name="id" value="$PARAM[id]"/>
					<param name="widget_display" value="$PARAM[widget_display]"/>
				</include>
			</control>
			<!-- Busy spinner if container is updating -->
			<control type="image">
				<visible>Control.HasFocus($PARAM[id]) + Container($PARAM[id]).IsUpdating + !$EXP[TransparentDialog_IsVisible]</visible>
				<include>Content_Fade_Animation</include>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>60</width>
				<height>60</height>
				<texture colordiffuse="$VAR[Volume_Focus_Color]">dialogs/busy.png</texture>
				<animation effect="rotate" start="0" end="-360" center="auto" time="1800" loop="true" tween="cubic" easing="out" condition="true">Conditional</animation>
			</control>
			<!-- Labels to check view and display type -->
			<control type="label" id="$PARAM[id]10">
				<visible>false</visible>
				<label>$PARAM[widget_view]</label>
			</control>
			<control type="label" id="$PARAM[id]11">
				<visible>false</visible>
				<label>$PARAM[widget_display]</label>
			</control>
			<!-- Labels to check if artwork is the same as next/previous -->
