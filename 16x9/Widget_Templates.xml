				<param name="sortorder" value="$PARAM[sortorder]"/>
				<param name="content" value="$PARAM[content]"/>
				<param name="limit" value="$PARAM[limit]"/>
			</include>

			<!-- Labels to check if artwork is the same as next/previous -->
			<control type="label" id="$PARAM[id]20">
				<visible>false</visible>
				<label>$VAR[Widget$PARAM[widget_position]_Thumbnail(-1)Content]</label>
			</control>
			<control type="label" id="$PARAM[id]21">
				<visible>false</visible>
				<label>$VAR[Widget$PARAM[widget_position]_Thumbnail(0)Content]</label>
			</control>
			<control type="label" id="$PARAM[id]22">
				<visible>false</visible>
				<label>$VAR[Widget$PARAM[widget_position]_Thumbnail(1)Content]</label>
			</control>

			<control type="group">
				<visible>Control.HasFocus(90$PARAM[widget_position]0)</visible>
				<animation effect="slide" start="0" end="0,660" time="0" condition="Control.HasFocus(90$PARAM[widget_position]0)">Conditional</animation>
				<animation effect="slide" start="0" end="0,-660" time="180" tween="sine" easing="inout" reversible="false" condition="Control.HasFocus(90$PARAM[widget_position]0)">Conditional</animation>
				<animation effect="fade" start="0" end="100" time="180" tween="sine" easing="inout" reversible="false" condition="Control.HasFocus(90$PARAM[widget_position]0)">Conditional</animation>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard)" content="BillboardView_Display">
					<param name="id" value="$PARAM[id]"/>
					<param name="art_icon" value="Widget$PARAM[widget_position]_Thumbnail"/>
					<param name="media_view" value="false"/>
					<param name="widget_view" value="true"/>
					<param name="widget_position" value="$PARAM[widget_position]"/>
				</include>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase)" content="ShowcaseView_Display">
					<param name="id" value="$PARAM[id]"/>
					<param name="art_icon" value="Widget$PARAM[widget_position]_Thumbnail"/>
					<param name="media_view" value="false"/>
					<param name="widget_view" value="true"/>
					<param name="widget_position" value="$PARAM[widget_position]"/>
				</include>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Strip)" content="StripView_Display">
					<param name="id" value="$PARAM[id]"/>
					<param name="art_icon" value="Widget$PARAM[widget_position]_Thumbnail"/>
					<param name="media_view" value="false"/>
					<param name="widget_view" value="true"/>
					<param name="widget_position" value="$PARAM[widget_position]"/>
				</include>
				<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Grid)" content="GridView_Display">
					<param name="id" value="$PARAM[id]"/>
					<param name="art_icon" value="Widget$PARAM[widget_position]_Thumbnail"/>
					<param name="widget_position" value="$PARAM[widget_position]"/>
					<param name="gridview_details_fade" value="Control.HasFocus(90$PARAM[widget_position]0)"/>
				</include>
			</control>

			<control type="group">
				<visible>!$EXP[TransparentDialog_IsVisible]</visible>
				<include>Delayed_Content_Fade_Animation</include>
				<!-- Details -->
				<control type="group">
					<visible>Control.HasFocus(90$PARAM[widget_position]0)</visible>
					<include>Delayed_Content_Fade_Animation</include>
					<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Billboard)" content="BillboardView_Details">
						<param name="id" value="$PARAM[id]"/>
					</include>
					<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Showcase)" content="ShowcaseView_Details">
						<param name="media_view" value="false"/>
						<param name="id" value="$PARAM[id]"/>
					</include>
					<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Strip)" content="StripView_Details">
						<param name="id" value="$PARAM[id]"/>
					</include>
					<include condition="Skin.HasSetting(Widget$PARAM[widget_position]_View_Grid)" content="GridView_Details">
						<param name="id" value="$PARAM[id]"/>
						<param name="widget_position" value="$PARAM[widget_position]"/>
					</include>
				</control>
				<!-- Breadcrumb -->
				<control type="group">
					<visible>Control.HasFocus(90$PARAM[widget_position]0)</visible>
					<animation effect="fade" start="0" end="100" time="360" delay="540" tween="sine" easing="inout" reversible="false" condition="$EXP[Widget_HasFocus]">Conditional</animation>
					<include content="Breadcrumb_Label">
						<param name="title_label" value="$PARAM[widget_header]"/>
						<param name="info_label" value="$INFO[Container(90$PARAM[widget_position]0).CurrentItem,$LOCALIZE[31116] ,]$INFO[Container(90$PARAM[widget_position]0).NumItems,/]"/>
						<param name="label_color" value="$VAR[Breadcrumb_Label_Color]"/>
					</include>
				</control>
				<!-- Busy spinner if container is updating -->
				<control type="image">
					<visible>Control.HasFocus(90$PARAM[widget_position]0) + Container(90$PARAM[widget_position]0).IsUpdating</visible>
					<include>Content_Fade_Animation</include>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="$VAR[Volume_Focus_Color]">dialogs/busy.png</texture>
					<animation effect="rotate" start="0" end="-360" center="auto" time="1800" loop="true" tween="cubic" easing="out" condition="true">Conditional</animation>
				</control>
			</control>
		</definition>
