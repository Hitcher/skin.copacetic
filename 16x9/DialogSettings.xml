<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- settingdialog -->
	<defaultcontrol always="true">5</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>
		<control type="group">
			<visible>![Window.IsVisible(shutdownmenu) | Window.IsVisible(sliderdialog) | Window.IsVisible(selectdialog) | Window.IsVisible(filebrowser) | Window.IsVisible(subtitlesearch)]</visible>
			<include>Content_Delayed_Fade_Animation</include>

			<include content="Transparent_Dialog_Panel">
					<param name="top" value="210"/>
					<param name="bottom" value="210"/>
			</include>

			<include content="Breadcrumb_Label">
				<param name="visible" value="true"/>
				<param name="title_label_id" value="2"/>
				<param name="label_color" value="$VAR[PrimaryColor]"/>
			</include>

			<!-- Grouplist -->
			<control type="grouplist" id="5">
				<include>DialogGrouplist</include>
			</control>

			<!-- Default button -->
			<control type="button" id="7" />
			<!-- Default radiobutton -->
			<control type="radiobutton" id="8" />
			<!-- Default spincontrolex -->
			<control type="spincontrolex" id="9" />
			<!-- Default divider -->
			<control type="image" id="11">
				<height>2</height>
				<texture colordiffuse="$VAR[MediumGreyColor]">views/white_100.png</texture>
			</control>
			<!-- Default edit -->
			<control type="edit" id="12" />
			<!-- Default slider -->
			<control type="sliderex" id="13" />
			<!-- Default label -->
			<control type="label" id="14" />

			<include content="ButtonGroup">
				<param name="id" value="9000"/>
				<param name="visible" value="String.Contains(Control.GetLabel(2),Filter)"/>
				<param name="onup" value="5"/>
				<param name="onleft" value="5"/>
				<param name="button1id" value="30"/>
				<param name="button1unfocused" value="Cross_Unfocused"/>
				<param name="button1focused" value="Cross_Focused_Large"/>
				<param name="button2id" value="28"/>
				<param name="button2unfocused" value="Check_Unfocused"/>
				<param name="button2focused" value="Check_Focused_Large"/>
				<param name="buttonsvisible" value="true"/>
			</include>

			<include content="ButtonGroup">
				<param name="id" value="9000"/>
				<param name="visible" value="!String.Contains(Control.GetLabel(2),Filter)"/>
				<param name="onup" value="5"/>
				<param name="onleft" value="5"/>
				<param name="button1id" value="30"/>
				<param name="button1unfocused" value="Layout_Unfocused"/>
				<param name="button1focused" value="Layout_Focused_Large"/>
				<param name="button2id" value="29"/>
				<param name="button2unfocused" value="Cross_Unfocused"/>
				<param name="button2focused" value="Cross_Focused_Large"/>
				<param name="button3id" value="28"/>
				<param name="button3unfocused" value="Check_Unfocused"/>
				<param name="button3focused" value="Check_Focused_Large"/>
				<param name="buttonsvisible" value="true"/>
			</include>

		</control>
	</controls>
</window>
