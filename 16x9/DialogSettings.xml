<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- settingdialog -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>Delayed_Dialog_Fade_Animation</include>
	<controls>
		<control type="group">
			<visible>![Window.IsVisible(shutdownmenu) | Window.IsVisible(sliderdialog) | Window.IsVisible(yesnodialog) | Window.IsVisible(selectdialog) | Window.IsVisible(filebrowser) | Window.IsVisible(subtitlesearch) | Window.IsVisible(virtualkeyboard)]</visible>
			<include>Delayed_Content_Fade_Animation</include>

			<!-- Delay content on Load -->
			<include content="Delay_Content_Load">
				<param name="id" value="9001"/>
				<param name="time" value="360"/>
				<param name="target_id" value="SetFocus(5)"/>
			</include>

			<control type="group">
				<visible>!Control.HasFocus(9001)</visible>

				<include content="Transparent_Dialog_Panel"/>

				<!-- Heading label -->
				<include content="Breadcrumb_Label">
					<param name="label_color" value="$VAR[Light_Color]"/>
					<param name="title_label_id" value="2"/>
					<param name="info_label_visible" value="false"/>
				</include>

				<include content="DialogDivider"/>

				<!-- Grouplist -->
				<control type="grouplist" id="5">
					<include>DialogGrouplist</include>
					<pagecontrol>60</pagecontrol>
				</control>

				<!-- Sub list scrollbar -->
				<include content="Settings_Scrollbar">
					<param name="visible" value="ControlGroup(5).HasFocus"/>
					<param name="left" value="356"/>
					<param name="height" value="540"/>
				</include>

				<!-- Default button -->
				<control type="button" id="7"/>
				<!-- Default radiobutton -->
				<control type="radiobutton" id="8"/>
				<!-- Default spincontrolex -->
				<control type="spincontrolex" id="9"/>
				<!-- Default divider -->
				<control type="image" id="11">
					<height>1</height>
					<texture colordiffuse="$VAR[Blank_Color]">views/white_100.png</texture>
				</control>
				<!-- Default edit -->
				<control type="edit" id="12"/>
				<!-- Default slider -->
				<control type="sliderex" id="13"/>
				<!-- Default label -->
				<control type="label" id="14">
					<height>90</height>
					<textoffsetx>20</textoffsetx>
					<font>Default_Settings_Header</font>
					<textcolor>$VAR[Unfocused_Color]</textcolor>
				</control>

				<include content="ButtonGroup">
					<param name="visible" value="!Window.Is(mediafilter)"/>
					<param name="onup" value="5"/>
					<param name="onleft" value="5"/>
					<param name="onright" value="5"/>
					<param name="ondown" value="5"/>
					<param name="icons" value="true"/>
					<param name="button1" value="Control.IsEnabled(30)"/>
					<param name="button1id" value="30"/>
					<param name="button1texture" value="Layout"/>
					<param name="button2" value="Control.IsEnabled(29)"/>
					<param name="button2id" value="29"/>
					<param name="button2texture" value="Cross"/>
					<param name="button3" value="Control.IsEnabled(28)"/>
					<param name="button3id" value="28"/>
					<param name="button3texture" value="Check"/>
				</include>

				<include content="ButtonGroup">
					<param name="visible" value="Window.Is(mediafilter)"/>
					<param name="onup" value="5"/>
					<param name="onleft" value="5"/>
					<param name="onright" value="5"/>
					<param name="ondown" value="5"/>
					<param name="icons" value="true"/>
					<param name="button1" value="true"/>
					<param name="button1id" value="30"/>
					<param name="button1texture" value="Refresh"/>
					<param name="button2" value="true"/>
					<param name="button2id" value="28"/>
					<param name="button2texture" value="Check"/>
				</include>


			</control>
		</control>
	</controls>
</window>
